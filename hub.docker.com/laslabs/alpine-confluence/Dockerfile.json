{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openjdk:8u121-alpine",
      "SourceCode": "FROM openjdk:8u121-alpine",
      "Platform": "",
      "From": {
        "Image": "openjdk:8u121-alpine"
      },
      "Commands": [
        {
          "Key": "CONFLUENCE_VERSION",
          "Name": "arg",
          "Value": "6.7.0"
        },
        {
          "Key": "POSTGRES_DRIVER_VERSION",
          "Name": "arg",
          "Value": "42.1.4"
        },
        {
          "Key": "MYSQL_DRIVER_VERSION",
          "Name": "arg",
          "Value": "5.1.45"
        },
        {
          "Key": "CONFLUENCE_HOME",
          "Name": "arg",
          "Value": "/var/atlassian/confluence"
        },
        {
          "Key": "CONFLUENCE_INSTALL",
          "Name": "arg",
          "Value": "/opt/atlassian/confluence"
        },
        {
          "Key": "CONFLUENCE_DOWNLOAD_URI",
          "Name": "arg",
          "Value": "https://www.atlassian.com/software/confluence/downloads/binary/atlassian-confluence-${CONFLUENCE_VERSION}.tar.gz"
        },
        {
          "Key": "RUN_USER",
          "Name": "arg",
          "Value": "confluence"
        },
        {
          "Key": "RUN_GROUP",
          "Name": "arg",
          "Value": "confluence"
        },
        {
          "Env": [
            {
              "Key": "LC_ALL",
              "Value": "C"
            },
            {
              "Key": "CONFLUENCE_HOME",
              "Value": "$CONFLUENCE_HOME"
            },
            {
              "Key": "CONFLUENCE_INSTALL",
              "Value": "$CONFLUENCE_INSTALL"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "addgroup -S \"${RUN_GROUP}\"     \u0026\u0026 adduser -S -s /bin/false -G \"${RUN_GROUP}\" \"${RUN_USER}\"     \u0026\u0026 mkdir -p \"${CONFLUENCE_HOME}\"                  \"${CONFLUENCE_INSTALL}/conf\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apk add --no-cache --virtual .build-deps         curl         tar     \u0026\u0026 apk add --no-cache         bash         fontconfig         ttf-dejavu"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -Ls \"${CONFLUENCE_DOWNLOAD_URI}\"         | tar -xz --directory \"${CONFLUENCE_INSTALL}\"             --strip-components=1 --no-same-owner     \u0026\u0026 cd \"${CONFLUENCE_INSTALL}/confluence/WEB-INF/lib\"     \u0026\u0026 rm -f \"./postgresql-9.*\"     \u0026\u0026 curl -Os \"https://jdbc.postgresql.org/download/postgresql-${POSTGRES_DRIVER_VERSION}.jar\"     \u0026\u0026 curl -Ls \"https://dev.mysql.com/get/Downloads/Connector-J/mysql-connector-java-${MYSQL_DRIVER_VERSION}.tar.gz\"         | tar -xz --directory \"${CONFLUENCE_INSTALL}/confluence/WEB-INF/lib\"             --strip-components=1 --no-same-owner             \"mysql-connector-java-${MYSQL_DRIVER_VERSION}/mysql-connector-java-${MYSQL_DRIVER_VERSION}-bin.jar\"     \u0026\u0026 chmod -R 700 \"${CONFLUENCE_HOME}\"                      \"${CONFLUENCE_INSTALL}/conf\"                      \"${CONFLUENCE_INSTALL}/temp\"                      \"${CONFLUENCE_INSTALL}/logs\"                      \"${CONFLUENCE_INSTALL}/work\"     \u0026\u0026 chown -R ${RUN_USER}:${RUN_GROUP} \"${CONFLUENCE_HOME}\"                                          \"${CONFLUENCE_INSTALL}/conf\"                                          \"${CONFLUENCE_INSTALL}/temp\"                                          \"${CONFLUENCE_INSTALL}/logs\"                                          \"${CONFLUENCE_INSTALL}/work\"     \u0026\u0026 echo -e \"\\nconfluence.home=${CONFLUENCE_HOME}\"         \u003e\u003e \"${CONFLUENCE_INSTALL}/confluence/WEB-INF/classes/confluence-init.properties\"     \u0026\u0026 touch -d \"@0\" \"${CONFLUENCE_INSTALL}/conf/server.xml\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apk del .build-deps"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "\"${RUN_USER}\":\"${RUN_GROUP}\""
        },
        {
          "Name": "expose",
          "Ports": [
            "8090"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "${CONFLUENCE_INSTALL}/logs",
            "${CONFLUENCE_INSTALL}/conf",
            "${CONFLUENCE_HOME}",
            "${JAVA_HOME}/jre/lib/security/"
          ]
        },
        {
          "Name": "workdir",
          "Path": "\"${CONFLUENCE_INSTALL}\""
        },
        {
          "CmdLine": [
            "./bin/catalina.sh",
            "run"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./docker-entrypoint.sh",
            "/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./entrypoint.d/",
            "/entrypoint.d/"
          ]
        },
        {
          "CmdLine": [
            "/docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "Key": "BUILD_DATE",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "VCS_REF",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "VERSION",
          "Name": "arg",
          "Value": null
        },
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"LasLabs Inc \u003csupport@laslabs.com\u003e\""
            },
            {
              "Key": "org.label-schema.build-date",
              "Value": "$BUILD_DATE"
            },
            {
              "Key": "org.label-schema.name",
              "Value": "\"Confluence - Alpine\""
            },
            {
              "Key": "org.label-schema.description",
              "Value": "\"Provides a Docker image for Confluence on Alpine Linux.\""
            },
            {
              "Key": "org.label-schema.url",
              "Value": "\"https://laslabs.com/\""
            },
            {
              "Key": "org.label-schema.vcs-ref",
              "Value": "$VCS_REF"
            },
            {
              "Key": "org.label-schema.vcs-url",
              "Value": "\"https://github.com/LasLabs/docker-alpine-confluence\""
            },
            {
              "Key": "org.label-schema.vendor",
              "Value": "\"LasLabs Inc.\""
            },
            {
              "Key": "org.label-schema.version",
              "Value": "$VERSION"
            },
            {
              "Key": "org.label-schema.schema-version",
              "Value": "\"1.0\""
            }
          ],
          "Name": "label"
        }
      ]
    }
  ]
}