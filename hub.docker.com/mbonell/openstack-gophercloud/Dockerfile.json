{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:16.04",
      "SourceCode": "FROM ubuntu:16.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:16.04"
      },
      "Commands": [
        {
          "Maintainer": "Marcela Bonell \u003cmarcelabonell@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y   vim   git   curl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -O https://storage.googleapis.com/golang/go1.7.5.linux-amd64.tar.gz     \u0026\u0026 tar -C /usr/local -xzf go1.7.5.linux-amd64.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "GOPATH",
              "Value": "/go-workspace"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:/usr/local/go/bin"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "$GOPATH"
        },
        {
          "CmdLine": [
            "mkdir bin     \u0026\u0026 mkdir pkg     \u0026\u0026 mkdir src"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd src \u0026\u0026 go get github.com/gophercloud/gophercloud"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/farazdagi/vim-go-ide.git ~/.vim_go_runtime \u0026\u0026 sh ~/.vim_go_runtime/bin/install     \u0026\u0026 mkdir -p ~/.vim/autoload ~/.vim/bundle \u0026\u0026 curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim     \u0026\u0026 echo 'alias vimgo=\"vim -u ~/.vimrc.go\"' \u003e\u003e ~/.bashrc     \u0026\u0026 echo 'set t_Co=256' \u003e\u003e ~/.vimrc.go"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}