      "From": {
        "Image": "chriamue/annotator:cpu"
      },
      "Commands": [
        {
          "Maintainer": "chriamue@gmail.com",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SCREEN_DIMENSIONS",
