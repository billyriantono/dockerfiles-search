{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:14.04",
      "SourceCode": "FROM ubuntu:14.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:14.04"
      },
      "Commands": [
        {
          "Maintainer": "Johann Tanzer \u003cmail@johanntanzer.at\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "dpkg-reconfigure locales \u0026\u0026     locale-gen en_US.UTF-8 \u0026\u0026     /usr/sbin/update-locale LANG=en_US.UTF-8"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LC_ALL",
              "Value": "en_US.UTF-8"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get -y install wget vim unzip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "adduser --disabled-password --home /dogecoin --gecos \"\" dogecoin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"dogecoin ALL=(ALL) NOPASSWD: ALL\" \u003e\u003e /etc/sudoers"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/src"
        },
        {
          "CmdLine": [
            "wget https://github.com/dogecoin/dogecoin/releases/download/v1.10.0/dogecoin-1.10.0-linux64.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xzvf dogecoin-1.10.0-linux64.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod +x dogecoin-1.10.0/bin/dogecoind dogecoin-1.10.0/bin/dogecoin-cli"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/local/src/dogecoin-1.10.0/bin/dogecoind /usr/local/bin/dogecoind"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/local/src/dogecoin-1.10.0/bin/dogecoin-cli /usr/local/bin/dogecoin-cli"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "dogecoin.conf",
            "/dogecoin/.dogecoin/dogecoin.conf"
          ]
        },
        {
          "CmdLine": [
            "chown -R dogecoin:dogecoin /dogecoin/.dogecoin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "dogecoin"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/dogecoin"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/dogecoin"
        },
        {
          "CmdLine": [
            "mkdir /dogecoin/data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/dogecoin/data"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "22555",
            "22556"
          ]
        },
        {
          "Env": [
            {
              "Key": "RPCUSER",
              "Value": "user"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "RPCPASS",
              "Value": "pass"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "dogecoind"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}