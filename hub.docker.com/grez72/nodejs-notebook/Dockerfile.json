{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "jupyter/minimal-notebook",
      "SourceCode": "FROM jupyter/minimal-notebook",
      "Platform": "",
      "From": {
        "Image": "jupyter/minimal-notebook"
      },
      "Commands": [
        {
          "Maintainer": "George Alvarez \u003cgrez72@gmail.com, alvarez.wjh.harvard.edu\u003e",
          "Name": "maintainer"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install libtool pkg-config build-essential autoconf automake -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install libzmq-dev -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp"
        },
        {
          "CmdLine": [
            "mkdir -p  $HOME/.ipython/kernels/nodejs"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /usr/local/share/jupyter/kernels/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://github.com/notablemind/jupyter-nodejs/releases/download/v1.1.0/jupyter-nodejs-1.1.0.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar xf jupyter-nodejs-1.1.0.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp/package"
        },
        {
          "CmdLine": [
            "npm install \u0026\u0026 node install.js"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp -R ~/.ipython/kernels/nodejs/ /usr/local/share/jupyter/kernels/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/home/$NB_USER/work"
        },
        {
          "Name": "user",
          "User": "$NB_USER"
        }
      ]
    }
  ]
