{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "timka/fluentd-docker-image:latest",
      "SourceCode": "FROM timka/fluentd-docker-image:latest",
      "Platform": "",
      "From": {
        "Image": "timka/fluentd-docker-image:latest"
      },
      "Commands": [
        {
          "Maintainer": "Timur Izhbulatov \u003ctimur.izhbulatov@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Name": "workdir",
          "Path": "/home/fluent"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/home/fluent/.gem/ruby/2.3.0/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "apk --no-cache --update add sudo build-base ruby-dev \u0026\u0026     sudo -u fluent gem install fluent-plugin-elasticsearch \u0026\u0026     rm -rf /home/fluent/.gem/ruby/2.3.0/cache/*.gem \u0026\u0026 sudo -u fluent gem sources -c \u0026\u0026     apk del sudo build-base ruby-dev \u0026\u0026 rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "fluent"
        },
        {
          "CmdLine": [
            "exec fluentd -c /fluentd/etc/$FLUENTD_CONF -p /fluentd/plugins $FLUENTD_OPT"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}