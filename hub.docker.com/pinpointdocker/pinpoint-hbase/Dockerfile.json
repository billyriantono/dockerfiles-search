{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "java:8-jdk",
      "SourceCode": "FROM java:8-jdk",
      "Platform": "",
      "From": {
        "Image": "java:8-jdk"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"Roy Kim \u003croy.kim@navercorp.com\u003e\""
            }
          ],
          "Name": "label"
        },
        {
          "Key": "PINPOINT_VERSION",
          "Name": "arg",
          "Value": "${PINPOINT_VERSION:-1.8.5}"
        },
        {
          "Env": [
            {
              "Key": "HBASE_REPOSITORY",
              "Value": "http://apache.mirrors.pair.com/hbase"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HBASE_SUB_REPOSITORY",
              "Value": "http://archive.apache.org/dist/hbase"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HBASE_VERSION",
              "Value": "1.2.6"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BASE_DIR",
              "Value": "/opt/hbase"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HBASE_HOME",
              "Value": "${BASE_DIR}/hbase-${HBASE_VERSION}"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "hbase-site.xml",
            "hbase-site.xml"
          ]
        },
        {
          "CmdLine": [
            "mkdir -p ${BASE_DIR}     \u0026\u0026 cd ${BASE_DIR}     \u0026\u0026 curl -fSL \"${HBASE_REPOSITORY}/${HBASE_VERSION}/hbase-${HBASE_VERSION}-bin.tar.gz\" -o hbase.tar.gz || curl -fSL \"${HBASE_SUB_REPOSITORY}/${HBASE_VERSION}/hbase-${HBASE_VERSION}-bin.tar.gz\" -o hbase.tar.gz     \u0026\u0026 tar xfvz hbase.tar.gz     \u0026\u0026 mv ../../hbase-site.xml ../../${HBASE_HOME}/conf/hbase-site.xml     \u0026\u0026 curl -SL \"https://raw.githubusercontent.com/naver/pinpoint/${PINPOINT_VERSION}/hbase/scripts/hbase-create.hbase\" -o ${BASE_DIR}/hbase-create.hbase     \u0026\u0026 ${HBASE_HOME}/bin/start-hbase.sh     \u0026\u0026 sleep 10     \u0026\u0026 ${HBASE_HOME}/bin/hbase shell ${BASE_DIR}/hbase-create.hbase     \u0026\u0026 ${HBASE_HOME}/bin/stop-hbase.sh     \u0026\u0026 rm ${BASE_DIR}/hbase-create.hbase     \u0026\u0026 rm -rf hbase.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/home/pinpoint/hbase",
            "/home/pinpoint/zookeeper"
          ]
        },
        {
          "CmdLine": [
            "${BASE_DIR}/hbase-${HBASE_VERSION}/bin/hbase master start"
          ],
          "Name": "entrypoint",
          "PrependShell": true
        }
      ]
    }
  ]
}