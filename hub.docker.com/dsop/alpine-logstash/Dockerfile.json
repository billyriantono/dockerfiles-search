{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "dsop/alpine-base:3.5",
      "SourceCode": "FROM dsop/alpine-base:3.5",
      "Platform": "",
      "From": {
        "Image": "dsop/alpine-base:3.5"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "LOGSTASH_VERSION",
              "Value": "5.1.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LOGSTASH_UID",
              "Value": "1000"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir /opt \u0026\u0026   cd /opt \u0026\u0026   curl -L https://artifacts.elastic.co/downloads/logstash/logstash-${LOGSTASH_VERSION}.tar.gz -o logstash-${LOGSTASH_VERSION}.tar.gz \u0026\u0026   tar xzf logstash-${LOGSTASH_VERSION}.tar.gz \u0026\u0026   ln -s logstash-${LOGSTASH_VERSION} logstash \u0026\u0026   ln -s /opt/logstash/bin/logstash /usr/local/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apk --update add openjdk8-jre"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /opt/logstash \u0026\u0026 bin/logstash-plugin install logstash-output-amazon_es"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "adduser -u ${LOGSTASH_UID} -D logstash -s /bin/bash"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /root/.bashrc /home/logstash \u0026\u0026     chown -R ${LOGSTASH_UID}:${LOGSTASH_UID} /opt/logstash/data \u0026\u0026   chown -R ${LOGSTASH_UID}:${LOGSTASH_UID} /home/logstash"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "logstash"
        },
        {
          "Name": "workdir",
          "Path": "/home/logstash"
        },
        {
          "Name": "expose",
          "Ports": [
            "5000-5010"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "5000-5010/udp"
          ]
        },
        {
          "CmdLine": [
            "logstash",
            "-f",
            "/etc/logstash.conf",
            "-l",
            "/home/logstash/logstash.log"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}