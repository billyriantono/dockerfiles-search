{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "php:7-fpm",
      "SourceCode": "FROM php:7-fpm",
      "Platform": "",
      "From": {
        "Image": "php:7-fpm"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "TIMEZONE",
              "Value": "Europe/Madrid"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "ln -snf /usr/share/zoneinfo/${TIMEZONE} /etc/localtime     \u0026\u0026 echo ${TIMEZONE} \u003e /etc/timezone     \u0026\u0026 printf '[PHP]\\ndate.timezone = \"%s\"\\n', ${TIMEZONE} \u003e /usr/local/etc/php/conf.d/tzone.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update     \u0026\u0026 apt-get install -y curl wget git unzip openssl zlib1g-dev libicu-dev g++ libpng12-dev libjpeg-dev libmcrypt-dev libxml2-dev nano vim"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "docker-php-ext-configure intl     \u0026\u0026 docker-php-ext-install pdo pdo_mysql zip mysqli pcntl mcrypt soap gd mbstring gettext intl bcmath json iconv session"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PHPREDIS_VERSION",
              "Value": "3.0.0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p /usr/src/php/ext/redis     \u0026\u0026 curl -L https://github.com/phpredis/phpredis/archive/$PHPREDIS_VERSION.tar.gz | tar xvz -C /usr/src/php/ext/redis --strip 1     \u0026\u0026 echo 'redis' \u003e\u003e /usr/src/php-available-exts     \u0026\u0026 docker-php-ext-install redis"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'alias symfony=\"php /var/www/application/bin/console\"' \u003e\u003e ~/.bashrc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/www/application"
        }
      ]
    }
  ]
}