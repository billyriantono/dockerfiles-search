{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openshift/base-centos7",
      "SourceCode": "FROM openshift/base-centos7",
      "Platform": "",
      "From": {
        "Image": "openshift/base-centos7"
      },
      "Commands": [
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "Env": [
            {
              "Key": "JAVA_VERSON",
              "Value": "1.8.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MAVEN_VERSION",
              "Value": "3.3.9"
            }
          ],
          "Name": "env"
        },
        {
          "Labels": [
            {
              "Key": "io.k8s.description",
              "Value": "\"Platform for building and running Spring Boot applications\""
            },
            {
              "Key": "io.k8s.display-name",
              "Value": "\"Spring Boot Maven 3\""
            },
            {
              "Key": "io.openshift.expose-services",
              "Value": "\"8080:http\""
            },
            {
              "Key": "io.openshift.tags",
              "Value": "\"builder,java,java8,maven,maven3,springboot\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "yum update -y \u0026\u0026   yum install -y curl \u0026\u0026   yum install -y java-$JAVA_VERSON-openjdk java-$JAVA_VERSON-openjdk-devel \u0026\u0026   yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -fsSL https://archive.apache.org/dist/maven/maven-3/$MAVEN_VERSION/binaries/apache-maven-$MAVEN_VERSION-bin.tar.gz | tar xzf - -C /usr/share   \u0026\u0026 mv /usr/share/apache-maven-$MAVEN_VERSION /usr/share/maven   \u0026\u0026 ln -s /usr/share/maven/bin/mvn /usr/bin/mvn"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MAVEN_HOME",
              "Value": "/usr/share/maven"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./s2i/bin/",
            "$STI_SCRIPTS_PATH"
          ]
        },
        {
          "CmdLine": [
            "chown -R 1001:0 /opt/app-root"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "1001"
        }
      ]
    }
  ]
}