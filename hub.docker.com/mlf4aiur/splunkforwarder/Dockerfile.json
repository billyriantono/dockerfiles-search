{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:wheezy",
      "SourceCode": "FROM debian:wheezy",
      "Platform": "",
      "From": {
        "Image": "debian:wheezy"
      },
      "Commands": [
        {
          "Maintainer": "Kevin Li \u003cmlf4aiur@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "VERSION",
              "Value": "6.3.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BUILD",
              "Value": "f3e41e4b37b2"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "DEBIAN_FRONTEND=noninteractive apt-get update     \u0026\u0026 apt-get install -y -q --no-install-recommends wget procps     \u0026\u0026 wget -q -O -         http://download.splunk.com/products/splunk/releases/${VERSION}/universalforwarder/linux/splunkforwarder-${VERSION}-${BUILD}-Linux-x86_64.tgz |         tar xz -C /opt     \u0026\u0026 apt-get clean     \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/splunkforwarder/"
        },
        {
          "Name": "expose",
          "Ports": [
            "8089"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "514"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/splunkforwarder/etc",
            "/opt/splunkforwarder/var"
          ]
        },
        {
          "CmdLine": [
            "/opt/splunkforwarder/bin/splunk",
            "start",
            "--accept-license",
            "--answer-yes",
            "--no-prompt",
            "--nodaemon"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}