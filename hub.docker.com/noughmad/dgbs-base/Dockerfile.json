        "Image": "python:3.5"
      },
      "Commands": [
        {
          "Maintainer": "Miha Cancula \u003cmiha@noughmad.eu\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y \t\tcmake \t\tbuild-essential \t\tpkg-config \t\tlibssl-dev \t\tlibz-dev \t\tlibhttp-parser-dev \t\tlibffi-dev         openssh-server         openssl         git \t--no-install-recommends \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LIBGIT2_VERSION",
              "Value": "0.23.4"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "https://github.com/libgit2/libgit2/archive/v${LIBGIT2_VERSION}.tar.gz",
            "."
          ]
        },
        {
          "CmdLine": [
            "tar -xzf v${LIBGIT2_VERSION}.tar.gz \u0026\u0026 cd libgit2-${LIBGIT2_VERSION} \u0026\u0026 mkdir build \u0026\u0026 cd build \u0026\u0026 cmake .. \u0026\u0026 make \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LD_LIBRARY_PATH",
              "Value": "${LD_LIBRARY_PATH}:/usr/local/lib/"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "requirements.txt",
            "requirements.txt"
          ]
        },
        {
          "CmdLine": [
            "pip install -r requirements.txt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "GIT_USER",
              "Value": "\"git\""
            },
            {
              "Key": "GIT_PASSWORD",
              "Value": "\"insecure\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "useradd -m -p $(openssl passwd -1 ${GIT_PASSWORD}) ${GIT_USER}"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
