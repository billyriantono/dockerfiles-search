{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "meedan/ruby",
      "SourceCode": "FROM meedan/ruby",
      "Platform": "",
      "From": {
        "Image": "meedan/ruby"
      },
      "Commands": [
        {
          "Maintainer": "sysops@meedan.com",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEPLOYUSER",
              "Value": "pender"
            },
            {
              "Key": "DEPLOYDIR",
              "Value": "/app/pender"
            },
            {
              "Key": "RAILS_ENV",
              "Value": "production"
            },
            {
              "Key": "PRODUCT",
              "Value": "pender"
            },
            {
              "Key": "APP",
              "Value": "pender"
            },
            {
              "Key": "MIN_INSTANCES",
              "Value": "4"
            },
            {
              "Key": "MAX_POOL_SIZE",
              "Value": "12"
            },
            {
              "Key": "TERM",
              "Value": "xterm"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "production/bin",
            "/opt/bin/"
          ]
        },
        {
          "CmdLine": [
            "chmod 755 /opt/bin/*.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/share/ca-certificates \t\t\u0026\u0026 curl -o gdig2.crt https://certs.godaddy.com/repository/gdig2.crt.pem \t\t\u0026\u0026 update-ca-certificates"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./production/nginx.conf",
            "/etc/nginx/sites-available/${APP}"
          ]
        },
        {
          "CmdLine": [
            "ln -s /etc/nginx/sites-available/pender /etc/nginx/sites-enabled/pender  \u0026\u0026 rm /etc/nginx/sites-enabled/default"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL https://deb.nodesource.com/setup_7.x | sudo -E bash -"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "useradd ${DEPLOYUSER} -s /bin/bash -m"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p ${DEPLOYDIR}/latest \t\u0026\u0026 chown -R ${DEPLOYUSER}:www-data ${DEPLOYDIR} \t\u0026\u0026 chmod 775 ${DEPLOYDIR} \t\u0026\u0026 chmod g+s ${DEPLOYDIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "${DEPLOYUSER}"
        },
        {
          "Name": "workdir",
          "Path": "${DEPLOYDIR}"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./Gemfile",
            "./latest/Gemfile"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./Gemfile.lock",
            "./latest/Gemfile.lock"
          ]
        },
        {
          "CmdLine": [
            "echo \"gem: --no-rdoc --no-ri\" \u003e ~/.gemrc \t\u0026\u0026 cd latest \t\u0026\u0026 bundle install --deployment --without development test"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "./latest"
          ]
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "chown -R ${DEPLOYUSER}:www-data ${DEPLOYDIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "${DEPLOYUSER}"
        },
        {
          "CmdLine": [
            "mv ./latest ./pender-$(date -I) \t\u0026\u0026 ln -s ./pender-$(date -I) ./current"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s ${DEPLOYDIR}/shared/cache/json ${DEPLOYDIR}/current/tmp/cache  \u0026\u0026 ln -s ${DEPLOYDIR}/shared/cache/html ${DEPLOYDIR}/current/public/cache  \u0026\u0026 ln -s ${DEPLOYDIR}/shared/screenshots ${DEPLOYDIR}/current/public/screenshots  \u0026\u0026 /opt/bin/find_and_link_config_files.sh ${DEPLOYDIR}/current"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "Name": "workdir",
          "Path": "${DEPLOYDIR}/current"
        },
        {
          "CmdLine": [
            "/opt/bin/start.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}