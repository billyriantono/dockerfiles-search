{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "php:5-apache",
      "SourceCode": "FROM php:5-apache",
      "Platform": "",
      "From": {
        "Image": "php:5-apache"
      },
      "Commands": [
        {
          "Maintainer": "Tomohito Inoue \u003chypernumbernet@users.noreply.github.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "a2enmod rewrite"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "set -xe     \u0026\u0026 apt-get update     \u0026\u0026 apt-get install -y curl unzip bzip2 libpq-dev libpng-dev libjpeg-dev git     \u0026\u0026 rm -rf /var/lib/apt/lists/*     \u0026\u0026 docker-php-ext-configure gd --with-png-dir=/usr --with-jpeg-dir=/usr     \u0026\u0026 docker-php-ext-install gd mysqli pgsql"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/www/html"
        },
        {
          "Env": [
            {
              "Key": "PHPBB_VERSION",
              "Value": "3.1.12"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PHPBB_URL",
              "Value": "https://www.phpbb.com/files/release/phpBB-${PHPBB_VERSION}.tar.bz2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PHPBB_SHA",
              "Value": "14476397931bc73642a2144430b7ed45db75bcd51369b0115ca34c755602fb65"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PHPBB_FILE",
              "Value": "phpBB.tar.bz2"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "set -xe     \u0026\u0026 curl -fSL ${PHPBB_URL} -o ${PHPBB_FILE}     \u0026\u0026 echo \"${PHPBB_SHA}  ${PHPBB_FILE}\" | sha256sum -c -     \u0026\u0026 tar -xjf ${PHPBB_FILE} --strip-components=1     \u0026\u0026 rm ${PHPBB_FILE}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp"
        },
        {
          "Env": [
            {
              "Key": "PHPBB_LANG_URL",
              "Value": "'https://github.com/ocean0yohsuke/phpBB3_language_ja.git'"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PHPBB_LANG_DIR",
              "Value": "'phpBB3_language_ja/root'"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "git clone ${PHPBB_LANG_URL}     \u0026\u0026 cp -pr ${PHPBB_LANG_DIR}/* /var/www/html     \u0026\u0026 rm -r ${PHPBB_LANG_DIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/www/html"
        },
        {
          "CmdLine": [
            "chown -R www-data:www-data ."
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}