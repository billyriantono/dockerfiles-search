{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:bionic",
      "SourceCode": "FROM ubuntu:bionic",
      "Platform": "",
      "From": {
        "Image": "ubuntu:bionic"
      },
      "Commands": [
        {
          "Maintainer": "tommaso.sotte@gmail.com",
          "Name": "maintainer"
        },
        {
          "Labels": [
            {
              "Key": "Description",
              "Value": "\"Rygel DLNA/uPNP server docker image\""
            },
            {
              "Key": "Vendor",
              "Value": "\"GNOME\""
            },
            {
              "Key": "Version",
              "Value": "\"latest\""
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "RYGEL_CACHE_DIR",
              "Value": "/root/.cache/rygel"
            },
            {
              "Key": "RYGEL_VIDEOS_DIR",
              "Value": "/videos"
            },
            {
              "Key": "RYGEL_MUSIC_DIR",
              "Value": "/music"
            },
            {
              "Key": "RYGEL_PICTURES_DIR",
              "Value": "/pictures"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update; \tapt-get upgrade -y; \tDEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends rygel; \trm -rf /var/lib/apt/lists/*;"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "rygel.conf",
            "/root/.config/"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "1900/udp",
            "8000/tcp"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "${RYGEL_CACHE_DIR}",
            "${RYGEL_VIDEOS_DIR}",
            "${RYGEL_MUSIC_DIR}",
            "${RYGEL_PICTURES_DIR}"
          ]
        },
        {
          "CmdLine": [
            "/usr/bin/rygel"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}