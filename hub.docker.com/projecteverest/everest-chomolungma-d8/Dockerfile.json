{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "projecteverest/everest-chomolungma",
      "SourceCode": "FROM projecteverest/everest-chomolungma",
      "Platform": "",
      "From": {
        "Image": "projecteverest/everest-chomolungma"
      },
      "Commands": [
        {
          "Name": "workdir",
          "Path": "${MYHOME}"
        },
        {
          "CmdLine": [
            "git clone https://chromium.googlesource.com/chromium/tools/depot_tools.git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd depot_tools \u0026\u0026 git reset --hard HEAD"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "DEPOT_TOOLS_UPDATE",
              "Value": "0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "echo \"export PATH=$(pwd)/depot_tools:\\$PATH\" \u003e\u003e ${MYHOME}/.profile"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "gclient"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "fetch v8"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "${MYHOME}/v8"
        },
        {
          "CmdLine": [
            "gclient sync"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tools/dev/v8gen.py x64.release"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ninja -C out.gn/x64.release d8"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"export PATH=$(pwd)/out.gn/x64.release:\\$PATH\" \u003e\u003e ${MYHOME}/.profile"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git ls-files --others | grep -v x64.release | xargs rm -rf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf out.gn/x64.release/obj"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "${MYHOME}/everest"
        }
      ]
    }
  ]
}