          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /opt/geonode/tasks.py /opt/app/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /opt/geonode/entrypoint.sh /opt/app/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod +x /opt/app/tasks.py     \u0026\u0026 chmod +x /opt/app/entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Expression": "RUN cd /opt/geonode/; git pull ; pip install --upgrade --no-cache-dir -r requirements.txt; pip install --upgrade -e .",
          "Name": "onbuild"
        },
        {
          "Expression": "COPY . /opt/app",
          "Name": "onbuild"
