  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "php:7.1-fpm-alpine",
      "SourceCode": "FROM php:7.1-fpm-alpine",
      "Platform": "",
      "From": {
        "Image": "php:7.1-fpm-alpine"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "PHP_EXTENSIONS",
              "Value": "pdo pdo_mysql mbstring curl gd intl json mcrypt soap zip xml gettext bcmath exif"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MEMCACHED_DEPS",
              "Value": "zlib-dev libmemcached-dev cyrus-sasl-dev"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk add --no-cache --update     libmemcached-libs zlib curl-dev zip     libpng-dev icu-dev libmcrypt-dev libzip-dev     libxml2-dev gettext-dev libjpeg-turbo-dev jpeg-dev freetype-dev exiftool"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "set -xe     \u0026\u0026 apk add --no-cache --update --virtual .phpize-deps $PHPIZE_DEPS     \u0026\u0026 apk add --no-cache --update --virtual .memcached-deps $MEMCACHED_DEPS     \u0026\u0026 pecl install memcached xdebug     \u0026\u0026 rm -rf /usr/share/php7     \u0026\u0026 rm -rf /tmp/*     \u0026\u0026 apk del .memcached-deps .phpize-deps"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv \"$PHP_INI_DIR/php.ini-development\" \"/usr/local/etc/php/php.ini\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "docker-php-ext-install ${PHP_EXTENSIONS}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./install-composer.sh",
            "install-composer.sh"
          ]
        },
        {
          "CmdLine": [
            "sh install-composer.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "docker-php-ext-enable memcached xdebug"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "{ \t\techo \"xdebug.remote_enable=1\"; \t\techo \"xdebug.remote_autostart=1\"; \t\techo \"xdebug.remote_port=9001\"; \t\techo \"xdebug.remote_connect_back=0\"; \t\techo \"xdebug.remote_host=10.254.254.254\"; \t} \u003e\u003e /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "\"/var/app/current\""
        }
      ]
