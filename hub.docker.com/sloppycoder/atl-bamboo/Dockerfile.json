{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "sloppycoder/java-base",
      "SourceCode": "FROM sloppycoder/java-base",
      "Platform": "",
      "From": {
        "Image": "sloppycoder/java-base"
      },
      "Commands": [
        {
          "Maintainer": "Li Lin \u003cguru.lin@gmail..com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "BAMBOO_VERSION",
              "Value": "5.9.7"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -Lks http://www.atlassian.com/software/bamboo/downloads/binary/atlassian-bamboo-${BAMBOO_VERSION}.tar.gz          -o /root/bamboo.tar.gz       \u0026\u0026 mkdir /opt/bamboo       \u0026\u0026 tar zxf /root/bamboo.tar.gz --strip=1 -C /opt/bamboo       \u0026\u0026 rm /root/bamboo.tar.gz       \u0026\u0026 sed -i -e \"s/^#!\\/bin\\/sh/#!\\/bin\\/bash/\" /opt/bamboo/bin/catalina.sh       \u0026\u0026 mv /opt/bamboo/conf/server.xml /opt/bamboo/conf/server.xml.orig       \u0026\u0026 echo \"bamboo.home=/opt/atlassian-home/bamboo\" \u003e /opt/bamboo/atlassian-bamboo/WEB-INF/classes/bamboo-init.properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/usr/sbin/groupadd atlassian       \u0026\u0026 /usr/sbin/useradd -M --home-dir /opt/bamboo --groups atlassian --shell /bin/bash bamboo       \u0026\u0026 chown -R bamboo:bamboo /opt/bamboo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./docker-entrypoint.sh",
            "/"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/atlassian-home"
          ]
        },
        {
          "Env": [
            {
              "Key": "BAMBOO_HOME",
              "Value": "/opt/atlassian-home/bamboo"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CONTEXT_PATH",
              "Value": "bamboo"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "54663",
            "8085"
          ]
        },
        {
          "CmdLine": [
            "/docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "start"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}