{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "sapk/php-fpm",
      "SourceCode": "FROM sapk/php-fpm",
      "Platform": "",
      "From": {
        "Image": "sapk/php-fpm"
      },
      "Commands": [
        {
          "Maintainer": "Antoine GIRARD \u003cantoine.girard@sapk.fr\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "WORKDIR",
              "Value": "\"/var/rainloop\""
            },
            {
              "Key": "DOWN_URL",
              "Value": "\"http://repository.rainloop.net/v2/webmail/rainloop-community-latest.zip\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk -U --force --no-progress upgrade  \u0026\u0026 apk -U --force --no-progress add     unzip wget     php-iconv php-pdo_sqlite php-curl php-json php-dom php-openssl php-zlib pcre  \u0026\u0026 wget -q -O /tmp/rainloop-community-latest.zip \"$DOWN_URL\"  \u0026\u0026 mkdir \"$WORKDIR\" \u0026\u0026 cd \"$WORKDIR\" \u0026\u0026 ls /tmp \u0026\u0026 pwd  \u0026\u0026 unzip -q /tmp/rainloop-community-latest.zip  \u0026\u0026 ls -lah  \u0026\u0026 chown -R www-data:www-data . \u0026\u0026 find . -type d -exec chmod 755 {} \\;  \u0026\u0026 find . -type f -exec chmod 644 {} \\;  \u0026\u0026 apk --force --no-progress del unzip wget  \u0026\u0026 rm /var/cache/apk/* /tmp/rainloop-community-latest.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "Name": "workdir",
          "Path": "$WORKDIR"
        },
        {
          "Name": "volume",
          "Volumes": [
            "$WORKDIR/data"
          ]
        },
        {
          "CmdLine": [
            "/usr/sbin/groupmod -g $GID www-data \u0026\u0026 /usr/sbin/usermod -u $UID -g $GID www-data \u0026\u0026 /usr/bin/php -S 0.0.0.0:80 -t $WORKDIR"
          ],
          "Name": "entrypoint",
          "PrependShell": true
        },
        {
          "CmdLine": [],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}