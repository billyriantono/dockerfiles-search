{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "builder",
      "BaseName": "alpine",
      "SourceCode": "FROM alpine AS builder",
      "Platform": "",
      "As": "builder",
      "From": {
        "Image": "alpine"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "VERSION",
              "Value": "\"2019.08.01\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BOOTSTRAP",
              "Value": "\"https://archive.archlinux.org/iso/${VERSION}/archlinux-bootstrap-${VERSION}-x86_64.tar.gz\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PACMAN_MIRRORLIST",
              "Value": "\"Server = https://mirrors.kernel.org/archlinux/\\$repo/os/\\$arch\""
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "$BOOTSTRAP",
            "/bootstrap.tar.gz"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/"
        },
        {
          "CmdLine": [
            "tar xzvf /bootstrap.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/root.x86_64"
        },
        {
          "CmdLine": [
            "echo 'en_US.UTF-8 UTF-8' \u003e ./etc/locale.gen  \u0026\u0026 echo $PACMAN_MIRRORLIST \u003e ./etc/pacman.d/mirrorlist"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "cleaner",
      "BaseName": "scratch",
      "SourceCode": "FROM scratch AS cleaner",
      "Platform": "",
      "As": "cleaner",
      "From": {
        "Scratch": true
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "Antoine GIRARD \u003cantoine.girard@sapk.fr\u003e"
            }
          ],
          "Name": "label"
        },
        {
          "Chown": "",
          "From": "builder",
          "Name": "copy",
          "SourcesAndDest": [
            "/root.x86_64/",
            "/"
          ]
        },
        {
          "CmdLine": [
            "pacman-key --init  \u0026\u0026 pacman-key --populate archlinux  \u0026\u0026 pacman -Sy --noconfirm sed grep  \u0026\u0026 pacman -R --noconfirm arch-install-scripts  \u0026\u0026 pacman -Syu --noconfirm  \u0026\u0026 pacman -Q  \u0026\u0026 pacman -Scc --noconfirm  \u0026\u0026 rm -r /usr/share/man/* /usr/share/doc/*  \u0026\u0026 ls -d /usr/share/locale/* | egrep -v \"en_U|alias\" | xargs rm -rf"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "scratch",
      "SourceCode": "FROM scratch",
      "Platform": "",
      "From": {
        "Scratch": true
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "Antoine GIRARD \u003cantoine.girard@sapk.fr\u003e"
            }
          ],
          "Name": "label"
        },
        {
          "Chown": "",
          "From": "cleaner",
          "Name": "copy",
          "SourcesAndDest": [
            "/",
            "/"
          ]
        },
        {
          "CmdLine": [
            "/bin/bash"
          ],
          "Name": "entrypoint",
          "PrependShell": true
        }
      ]
    }
  ]
}