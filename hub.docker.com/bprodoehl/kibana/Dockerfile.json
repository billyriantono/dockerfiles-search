{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "phusion/baseimage:0.9.12",
      "SourceCode": "FROM phusion/baseimage:0.9.12",
      "Platform": "",
      "From": {
        "Image": "phusion/baseimage:0.9.12"
      },
      "Commands": [
        {
          "Maintainer": "Luis Arias \u003cluis@balsamiq.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/root"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get -y upgrade"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install wget nginx-full apache2-utils supervisor"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt"
        },
        {
          "CmdLine": [
            "wget --no-check-certificate -O- https://download.elasticsearch.org/kibana/kibana/kibana-3.1.0.tar.gz | tar xvfz -"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config/config.js",
            "/opt/kibana-3.1.0/config.js"
          ]
        },
        {
          "CmdLine": [
            "mkdir /etc/kibana # This is where the htpasswd file is placed by the run script"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "nginx_config",
            "/opt/nginx_config"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /opt/nginx_config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config/etc",
            "/etc"
          ]
        },
        {
          "CmdLine": [
            "rm /etc/nginx/sites-enabled/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"daemon off;\" \u003e\u003e /etc/nginx/nginx.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "KIBANA_SECURE",
              "Value": "true"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KIBANA_USER",
              "Value": "kibana"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KIBANA_PASSWORD",
              "Value": "kibana"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir /etc/service/nginx"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "runit/nginx.sh",
            "/etc/service/nginx/run"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "CmdLine": [
            "/sbin/my_init"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}