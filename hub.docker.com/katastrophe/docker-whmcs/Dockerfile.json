        {
          "CmdLine": [
            "rpm -Uvh http://nginx.org/packages/centos/7/noarch/RPMS/nginx-release-centos-7-0.el7.ngx.noarch.rpm \u0026\u0026 yum -y install nginx"
          ],
          "Name": "run",
