        "Image": "ubuntu:14.04"
      },
      "Commands": [
        {
          "Maintainer": "Samuel Warkentin \u003cs.warkentin@mittwald.de\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
