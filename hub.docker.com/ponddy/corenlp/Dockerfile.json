  "Stages": [
    {
      "Name": "",
      "BaseName": "java:jre-alpine",
      "SourceCode": "FROM java:jre-alpine",
      "Platform": "",
      "From": {
        "Image": "java:jre-alpine"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk add --update --no-cache   unzip   wget"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget http://nlp.stanford.edu/software/stanford-corenlp-full-2017-06-09.zip   \u0026\u0026 unzip stanford-corenlp-full-2017-06-09.zip   \u0026\u0026 rm stanford-corenlp-full-2017-06-09.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PORT",
              "Value": "9000"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "stanford-corenlp-full-2017-06-09"
        },
        {
          "CmdLine": [
            "wget http://nlp.stanford.edu/software/stanford-chinese-corenlp-2017-06-09-models.jar   \u0026\u0026 wget http://nlp.stanford.edu/software/stanford-english-corenlp-2017-06-09-models.jar"
