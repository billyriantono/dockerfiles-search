{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "hearstat/alpine-node",
      "SourceCode": "FROM hearstat/alpine-node",
      "Platform": "",
      "From": {
        "Image": "hearstat/alpine-node"
      },
      "Commands": [
        {
          "Maintainer": "Hearst Automation Team \u003catat@hearst.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "HUBOT_HOME",
              "Value": "/opt/hubot"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk update \u0026\u0026 apk add     bash     supervisor     redis     build-base     gcc     g++     gcc-objc     libtool     libc6-compat     make     expat     expat-dev     python     wget     gnupg     tar     git     zip     curl     wget     \u0026\u0026 rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "systemconfig.sh",
            "/tmp/systemconfig.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "redis.conf",
            "$HUBOT_HOME/redis/redis.conf"
          ]
        },
        {
          "CmdLine": [
            "mkdir -p /opt/hubot"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "addgroup hubot \u0026\u0026     adduser -h $HUBOT_HOME -D -s /bin/bash -G hubot hubot"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "hubot.conf",
            "$HUBOT_HOME/config/hubot.conf"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "supervisord.conf",
            "$HUBOT_HOME/prod/supervisord.ini"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "prodmode.sh",
            "$HUBOT_HOME/prod/prodmode.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "supervisord.dev.conf",
            "$HUBOT_HOME/dev/supervisord.ini"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "devmode.sh",
            "$HUBOT_HOME/dev/devmode.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "script-install-dev.py",
            "$HUBOT_HOME/script-install-dev.py"
          ]
        },
        {
          "CmdLine": [
            "bash -c /tmp/systemconfig.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$HUBOT_HOME"
        },
        {
          "CmdLine": [
            "npm install --global coffee-script yo generator-hubot node-inspector"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "hubot"
        },
        {
          "CmdLine": [
            "yo hubot --owner=\"Bot Wrangler \" --name=\"Hubot\" --description=\"Delightfully aware robutt\" --adapter=hipchat --defaults"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "external-scripts.json",
            "$HUBOT_HOME/external-scripts.json"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "script-install.py",
            "$HUBOT_HOME/script-install.py"
          ]
        },
        {
          "CmdLine": [
            "python script-install.py"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/lib/redis"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "$HUBOT_HOME/scripts"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "$HUBOT_HOME/config"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8123"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "5858"
          ]
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/opt/hubot/node_modules/.bin:/opt/hubot/node_modules/hubot/node_modules/.bin:${PATH}"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/usr/bin/prodmode"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}