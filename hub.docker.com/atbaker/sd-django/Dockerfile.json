{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "phusion/baseimage:0.9.8",
      "SourceCode": "FROM phusion/baseimage:0.9.8",
      "Platform": "",
      "From": {
        "Image": "phusion/baseimage:0.9.8"
      },
      "Commands": [
        {
          "Maintainer": "Andrew T. Baker \u003candrew@andrewtorkbaker.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/root"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/usr/sbin/enable_insecure_key"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "sd_sample_project",
            "/var/www/django"
          ]
        },
        {
          "CmdLine": [
            "DEBIAN_FRONTEND=noninteractive apt-get install -y python-pip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip install virtualenv"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "virtualenv /var/www/venv"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/var/www/venv/bin/pip install -r /var/www/django/requirements/production.txt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PYTHONPATH",
              "Value": "$PYTHONPATH:/var/www/django/sd_sample_project"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DJANGO_SETTINGS_MODULE",
              "Value": "sd_sample_project.settings.production"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SECRET_KEY",
              "Value": "no-so-secret # Fix for your own site!"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/var/www/venv/bin/django-admin.py syncdb --migrate --noinput"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/var/www/venv/bin/django-admin.py collectstatic --noinput"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /var/log/gunicorn"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "touch /var/log/gunicorn/access.log"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "touch /var/log/gunicorn/error.log"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /etc/service/gunicorn"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "run_gunicorn.sh",
            "/etc/service/gunicorn/run"
          ]
        },
        {
          "CmdLine": [
            "chown root /etc/service/gunicorn/run"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "sd_gunicorn_client.py",
            "/opt/sd_client.py"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "sd_client_crontab",
            "/var/spool/cron/crontabs/root"
          ]
        },
        {
          "CmdLine": [
            "chown root /opt/sd_client.py /var/spool/cron/crontabs/root"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get clean \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "22",
            "80"
          ]
        },
        {
          "CmdLine": [
            "/sbin/my_init"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}