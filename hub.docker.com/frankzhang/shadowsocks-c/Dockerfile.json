{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:16.04",
      "SourceCode": "FROM       ubuntu:16.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:16.04"
      },
      "Commands": [
        {
          "Maintainer": "FrankZhang \"zjufrankzhang@gmail.com\"",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEPENDENCIES",
              "Value": "git-core gettext automake build-essential autoconf libtool libssl-dev libpcre3-dev asciidoc xmlto zlib1g-dev libsodium-dev libmbedtls-dev libev-dev libudns-dev ca-certificates wget"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BASEDIR",
              "Value": "/tmp/shadowsocks-libev"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LIBDIR",
              "Value": "/tmp/ss-libs"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VERSION",
              "Value": "v3.0.2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LIBSODIUM_VER",
              "Value": "1.0.11"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MBEDTLS_VER",
              "Value": "2.4.0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update  \u0026\u0026 apt-get install -y --no-install-recommends $DEPENDENCIES"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$LIBDIR"
        },
        {
          "CmdLine": [
            "wget https://github.com/jedisct1/libsodium/releases/download/1.0.11/libsodium-$LIBSODIUM_VER.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar xvf libsodium-$LIBSODIUM_VER.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$LIBDIR/libsodium-$LIBSODIUM_VER"
        },
        {
          "CmdLine": [
            "./configure --prefix=/usr \u0026\u0026 make \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$LIBDIR"
        },
        {
          "CmdLine": [
            "wget https://tls.mbed.org/download/mbedtls-$MBEDTLS_VER-gpl.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar xvf mbedtls-$MBEDTLS_VER-gpl.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$LIBDIR/mbedtls-$MBEDTLS_VER"
        },
        {
          "CmdLine": [
            "make SHARED=1 CFLAGS=-fPIC"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make DESTDIR=/usr install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/shadowsocks/shadowsocks-libev.git $BASEDIR"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$BASEDIR"
        },
        {
          "CmdLine": [
            "git submodule init \u0026\u0026 git submodule update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git checkout $VERSION  \u0026\u0026 ./autogen.sh  \u0026\u0026 ./configure  \u0026\u0026 make  \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/"
        },
        {
          "CmdLine": [
            "rm -rf $BASEDIR \u0026\u0026 rm -rf $LIBDIR"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config.json",
            "/etc/shadowsocks-libev/config.json"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/shadowsocks-libev/"
          ]
        },
        {
          "CmdLine": [
            "/usr/local/bin/ss-server"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "-c",
            "/etc/shadowsocks-libev/config.json",
            "-u"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}