{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "java:7",
      "SourceCode": "FROM java:7",
      "Platform": "",
      "From": {
        "Image": "java:7"
      },
      "Commands": [
        {
          "Maintainer": "Gleison Silva \"geison.silva@gmail.com\"",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "MAYOR_VERSION",
              "Value": "5.4"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MINOR_VERSION",
              "Value": "5.4.0.1-130"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "URL",
              "Value": "http://downloads.sourceforge.net/project/pentaho/Business%20Intelligence%20Server/$MAYOR_VERSION"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "useradd -m pentaho"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /opt/pentaho"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown pentaho:pentaho /opt/pentaho"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "su -c \"curl -L -s $URL/biserver-ce-$MINOR_VERSION.zip   -o /opt/pentaho/biserver-ce.zip \u0026\u0026   unzip -q /opt/pentaho/biserver-ce.zip   -d /opt/pentaho/ \u0026\u0026   rm -f /opt/pentaho/biserver-ce.zip\" pentaho"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm /opt/pentaho/biserver-ce/promptuser.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i -e 's/\\(exec \".*\"\\) start/\\1 run/' /opt/pentaho/biserver-ce/tomcat/bin/startup.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -c -nv --no-check-certificate https://googledrive.com/host/0B4pi-CIMz3h1YmgyYmRlVGJVUkE/vertica-jdbc-7.1.1-0.jar          -O /opt/pentaho/biserver-ce/tomcat/lib/vertica.jar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -c -nv --no-check-certificate https://googledrive.com/host/0B4pi-CIMz3h1YmgyYmRlVGJVUkE/jaybird-full-2.1.6.jar          -O /opt/pentaho/biserver-ce/tomcat/lib/jaybird.jar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "assets",
            "/assets"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "${PENTAHO_FOLDER}/tomcat/logs"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "${PENTAHO_FOLDER}/pentaho-solutions/system/repository"
          ]
        },
        {
          "CmdLine": [
            "/assets/init"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}