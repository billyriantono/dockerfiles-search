          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /opt \u0026\u0026     wget -nv --output-document=/opt/$SOLR.tgz http://archive.apache.org/dist/lucene/solr/$SOLR_VERSION/$SOLR.tgz \u0026\u0026     wget -nv --output-document=/opt/v$FME_VERSION.tar.gz https://github.com/matthias-samwald/find-me-evidence/archive/v$FME_VERSION.tar.gz \u0026\u0026     tar -C /opt --extract --file /opt/$SOLR.tgz \u0026\u0026     tar -C /opt --extract --file /opt/v$FME_VERSION.tar.gz \u0026\u0026     rm /opt/$SOLR.tgz \u0026\u0026     rm /opt/v$FME_VERSION.tar.gz \u0026\u0026     cp -r /opt/$FME/www/* /var/www/html/ \u0026\u0026    rm /var/www/html/index.html \u0026\u0026    ln -s /opt/$SOLR /opt/solr \u0026\u0026     ln -s /opt/solr/dist/$SOLR.war /opt/solr/dist/solr.war"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "start.sh",
            "/opt/start.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod 777 /opt/start.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /opt/solr/example/lib/ext/*.jar /usr/share/tomcat7/lib"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "solr.xml",
            "/etc/tomcat7/Catalina/localhost/solr.xml"
          ]
        },
        {
          "CmdLine": [
            "cp /opt/$FME/solr_configuration/collection1/conf/solrconfig.xml /opt/solr/example/solr/collection1/conf/ \u0026\u0026     cp /opt/$FME/solr_configuration/collection1/conf/schema.xml /opt/solr/example/solr/collection1/conf/ \u0026\u0026     cp /opt/$FME/solr_configuration/collection1/conf/synonyms.txt  /opt/solr/example/solr/collection1/conf/ \u0026\u0026     cp -r /opt/$FME/solr_configuration/collection2  /opt/solr/example/solr/ \u0026\u0026     chmod -R 777 /opt/$SOLR/example"
          ],
          "Name": "run",
          "PrependShell": true
