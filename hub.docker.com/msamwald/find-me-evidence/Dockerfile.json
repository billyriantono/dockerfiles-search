      "SourceCode": "FROM    ubuntu:trusty",
      "Platform": "",
      "From": {
        "Image": "ubuntu:trusty"
      },
      "Commands": [
        {
          "Maintainer": "Georg",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "SOLR_VERSION",
              "Value": "4.10.4"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
