          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            ".",
            "/src"
          ]
        },
        {
          "CmdLine": [
            "npm config set strict-ssl false"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /src \u0026\u0026 npm install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm install forever -g"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
