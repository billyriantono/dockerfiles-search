{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu",
      "SourceCode": "FROM ubuntu",
      "Platform": "",
      "From": {
        "Image": "ubuntu"
      },
      "Commands": [
        {
          "Maintainer": "Hauke Mettendorf \u003chauke.mettendorf@proum.de\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "TERM",
              "Value": "xterm"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y apache2 nano \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"ServerName localhost\" \u003e\u003e /etc/apache2/conf-enabled/hostname.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "a2enmod ssl proxy proxy_http proxy_html xml2enc rewrite usertrack"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "a2dissite 000-default default-ssl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "mods-available/proxy_html.conf",
            "/etc/apache2/mods-available/proxy_html.conf"
          ]
        },
        {
          "CmdLine": [
            "ln -s /etc/apache2/mods-available/proxy_html.conf /etc/apache2/mods-enabled/proxy_html.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "sites-available/https-only-example.conf",
            "/etc/apache2/sites-available/https-only-example.conf"
          ]
        },
        {
          "CmdLine": [
            "mkdir -p /etc/ssl/apache/keys \u0026\u0026 mkdir -p /etc/ssl/apache/certs \u0026\u0026 mkdir -p /etc/ssl/apache/intermediates"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /var/run/apache2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod -R 700 /etc/ssl/apache"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/ssl/apache2",
            "/etc/apache2/sites-enabled",
            "/var/log/apache2",
            "/etc/apache2/authentication"
          ]
        },
        {
          "CmdLine": [
            "apache2ctl",
            "-D",
            "FOREGROUND"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Name": "expose",
          "Ports": [
            "443",
            "80"
          ]
        }
      ]
    }
  ]
}