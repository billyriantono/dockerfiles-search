{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "travix/base-debian-jre8",
      "SourceCode": "FROM travix/base-debian-jre8",
      "Platform": "",
      "From": {
        "Image": "travix/base-debian-jre8"
      },
      "Commands": [
        {
          "CmdLine": [
            "echo \"deb http://http.debian.net/debian jessie-backports main\" | tee /etc/apt/sources.list.d/jessie-backports.list   \u0026\u0026 apt-get update   \u0026\u0026 apt-get install -y --no-install-recommends -t jessie-backports     openjdk-8-jdk-headless     openjdk-8-jdk     maven   \u0026\u0026 apt-get install -y --no-install-recommends     ant     libgconf-2-4     libqt5widgets5"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ANDROID_SDK_VERSION",
              "Value": "\"r24.4.1\""
            },
            {
              "Key": "ANDROID_API_LEVEL",
              "Value": "\"android-22\""
            },
            {
              "Key": "ANDROID_BUILD_TOOLS_VERSION",
              "Value": "\"22.0.1\""
            },
            {
              "Key": "ANDROID_DEVICE_ABI",
              "Value": "\"armeabi-v7a\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -fSL \"https://dl.google.com/android/repository/tools_${ANDROID_SDK_VERSION}-linux.zip\" -o android.zip   \u0026\u0026 mkdir /root/.android   \u0026\u0026 unzip android.zip -d /root/.android   \u0026\u0026 rm -rf android.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ANDROID_HOME",
              "Value": "\"/root/.android\""
            },
            {
              "Key": "PATH",
              "Value": "$PATH:/root/.android/tools:/root/.android/platform-tools:/root/.android/tools/bin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "echo \"y\" | android update sdk --no-ui --all --force --filter platform-tools,${ANDROID_API_LEVEL},sys-img-${ANDROID_DEVICE_ABI}-${ANDROID_API_LEVEL},build-tools-${ANDROID_BUILD_TOOLS_VERSION}   \u0026\u0026 echo \"y\" | android update adb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL https://deb.nodesource.com/setup_7.x | bash -   \u0026\u0026 apt-get update   \u0026\u0026 apt-get install -y --no-install-recommends nodejs   \u0026\u0026 apt-get clean   \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm install -g   gulp   appium@1.6.3 --chromedriver_version=\"2.16\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ANDROID_DEVICE_TYPE",
              "Value": "\"14\""
            },
            {
              "Key": "ANDROID_DEVICE_NAME",
              "Value": "\"Nexus\""
            },
            {
              "Key": "ANDROID_DEVICE_SKIN",
              "Value": "\"WVGA800\""
            },
            {
              "Key": "HUB_PORT_4444_TCP_PORT",
              "Value": "\"4444\""
            },
            {
              "Key": "HUB_PORT_4444_TCP_ADDR",
              "Value": "\"127.0.0.1\""
            },
            {
              "Key": "DBUS_SESSION_BUS_ADDRESS",
              "Value": "\"/dev/null\""
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "config.sh",
            "/opt"
          ]
        },
        {
          "CmdLine": [
            "/opt/config.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "Name": "expose",
          "Ports": [
            "2252",
            "4444",
            "4723",
            "8000"
          ]
        },
        {
          "CmdLine": [
            "emulator64-arm -verbose -avd ${ANDROID_DEVICE_NAME} -no-boot-anim -no-window -noaudio -gpu off \u0026 (adb wait-for-device \u0026\u0026 appium --nodeconfig /opt/config.json)"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}