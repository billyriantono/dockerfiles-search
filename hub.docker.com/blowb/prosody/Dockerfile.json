{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:jessie",
      "SourceCode": "FROM debian:jessie",
      "Platform": "",
      "From": {
        "Image": "debian:jessie"
      },
      "Commands": [
        {
          "Maintainer": "Hong Xu \u003chong@topbug.net\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y prosody"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y --no-install-recommends                     ca-certificates                     lua-dbi-mysql                     lua-dbi-postgresql                     lua-dbi-sqlite3                     lua-ldap                     lua-zlib                     mercurial"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -vp /var/run/prosody \u0026\u0026 chown -vR prosody.prosody /var/run/prosody"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -sv /dev/stdout /var/log/prosody/prosody.log \u0026\u0026     ln -sv /dev/stderr /var/log/prosody/prosody.err \u0026\u0026     chown -vR prosody.prosody /var/log/prosody"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "hg clone https://hg.prosody.im/prosody-modules/ /usr/lib/prosody/additional_modules"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -ri     -e 's/daemonize = true/daemonize = false/'     -e '1s/^/prosody_user = \"prosody\"\\nplugin_paths = \\{ \"\\/usr\\/lib\\/prosody\\/additional_modules\" \\}/'     -e 's/\\/var\\/log\\/prosody\\/prosody.log/\\*console/'     -e 's/\\/var\\/log\\/prosody\\/prosody.err/\\*console/'     /etc/prosody/prosody.cfg.lua"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "5222",
            "5223",
            "5269",
            "5298"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "run.sh",
            "/usr/local/bin/run.sh"
          ]
        },
        {
          "CmdLine": [
            "/usr/local/bin/run.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}