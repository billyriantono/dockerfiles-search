{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:jessie",
      "SourceCode": "FROM debian:jessie",
      "Platform": "",
      "From": {
        "Image": "debian:jessie"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "POSTGREST_VERSION",
              "Value": "0.3.2.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "POSTGREST_SCHEMA",
              "Value": "ui"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "POSTGREST_ANONYMOUS",
              "Value": "spades"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "POSTGREST_JWT_SECRET",
              "Value": "thisisnotarealsecret"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "POSTGREST_MAX_ROWS",
              "Value": "1000000"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "POSTGREST_POOL",
              "Value": "200"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y tar xz-utils wget libpq-dev \u0026\u0026     apt-get clean \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget http://github.com/begriffs/postgrest/releases/download/v${POSTGREST_VERSION}/postgrest-${POSTGREST_VERSION}-ubuntu.tar.xz \u0026\u0026     tar --xz -xvf postgrest-${POSTGREST_VERSION}-ubuntu.tar.xz \u0026\u0026     mv postgrest /usr/local/bin/postgrest \u0026\u0026     rm postgrest-${POSTGREST_VERSION}-ubuntu.tar.xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "exec postgrest postgres://${PG_ENV_POSTGRES_USER}:${PG_ENV_POSTGRES_PASSWORD}@${PG_PORT_5432_TCP_ADDR}:${PG_PORT_5432_TCP_PORT}/${PG_ENV_POSTGRES_DB}               --port 3000               --schema ${POSTGREST_SCHEMA}               --anonymous ${POSTGREST_ANONYMOUS}               --pool ${POSTGREST_POOL}               --jwt-secret ${POSTGREST_JWT_SECRET}               --max-rows ${POSTGREST_MAX_ROWS}"
          ],
          "Name": "cmd",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "3000"
          ]
        }
      ]
    }
  ]
}