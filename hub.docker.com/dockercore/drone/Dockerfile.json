{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:13.10",
      "SourceCode": "FROM ubuntu:13.10",
      "Platform": "",
      "From": {
        "Image": "ubuntu:13.10"
      },
      "Commands": [
        {
          "Maintainer": "Drone.io Team",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y wget gcc make g++ build-essential ca-certificates mercurial git bzr libsqlite3-dev sqlite3"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://go.googlecode.com/files/go1.2.src.tar.gz \u0026\u0026 tar zxvf go1.2.src.tar.gz \u0026\u0026 cd go/src \u0026\u0026 ./make.bash"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:/go/bin:/gocode/bin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GOPATH",
              "Value": "/gocode"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "go get github.com/tools/godep"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /gocode/src/github.com/drone"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            ".",
            "/gocode/src/github.com/drone/drone"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/gocode/src/github.com/drone/drone"
        },
        {
          "CmdLine": [
            "godep restore"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "CmdLine": [
            "/usr/local/bin/droned"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "--port=:80",
            "--datasource=/var/lib/drone/drone.sqlite"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}