{
  "MetaArgs": [
    {
      "Key": "osversion",
      "DefaultValue": "v1.0.0",
      "ProvidedValue": null,
      "Value": "v1.0.0"
    }
  ],
  "Stages": [
    {
      "Name": "",
      "BaseName": "chloroextractorteam/chloroextractor-dockerbase:${osversion}",
      "SourceCode": "FROM chloroextractorteam/chloroextractor-dockerbase:${osversion}",
      "Platform": "",
      "From": {
        "Image": "chloroextractorteam/chloroextractor-dockerbase:${osversion}"
      },
      "Commands": [
        {
          "Key": "VERSION",
          "Name": "arg",
          "Value": "master"
        },
        {
          "Key": "VCS_REF",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "BUILD_DATE",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "CHLOROEXTRACTORVERSION",
          "Name": "arg",
          "Value": "v1.0.5"
        },
        {
          "CmdLine": [
            "echo \"VCS_REF: \"${VCS_REF}\", BUILD_DATE: \"${BUILD_DATE}\", VERSION: \"${VERSION}\", chloroExtractor version:\"${CHLOROEXTRACTORVERSION}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"frank.foerster@ime.fraunhofer.de\""
            },
            {
              "Key": "description",
              "Value": "\"Dockerfile providing our screening tools for new chloroplasts\""
            },
            {
              "Key": "version",
              "Value": "${VERSION}"
            },
            {
              "Key": "org.label-schema.vcs-ref",
              "Value": "${VCS_REF}"
            },
            {
              "Key": "org.label-schema.build-date",
              "Value": "${BUILD_DATE}"
            },
            {
              "Key": "org.label-schema.vcs-url",
              "Value": "\"https://github.com/chloroExtractorTeam/screening_container.git\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "apt update \u0026\u0026     apt --yes install        wget        git        python        parallel        bzip2 \u0026\u0026     apt --yes autoremove     \u0026\u0026 apt autoclean     \u0026\u0026 rm -rf /var/lib/apt/lists/* /var/log/dpkg.log"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/"
        },
        {
          "CmdLine": [
            "wget -O - https://ftp-trace.ncbi.nlm.nih.gov/sra/sdk/current/sratoolkit.current-ubuntu64.tar.gz |     tar xzf - \u0026\u0026     ln -s sratoolkit* sratoolkit"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "\"/opt/sratoolkit/bin/:${PATH}\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt update \u0026\u0026     apt --yes install        wget        git        python        default-jre        unzip        build-essential        libz-dev        ncbi-blast+ \u0026\u0026     apt --yes autoremove     \u0026\u0026 apt autoclean     \u0026\u0026 rm -rf /var/lib/apt/lists/* /var/log/dpkg.log"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/"
        },
        {
          "CmdLine": [
            "git clone https://github.com/mrmckain/fast-plast.git \u0026\u0026     cd fast-plast \u0026\u0026     git checkout fefdf462cab66d9de39023ee7d04ca13ed637950 \u0026\u0026     echo -e \"n\\nall\" |     perl INSTALL.pl \u0026\u0026     chmod +x fast-plast.pl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "\"/opt/fast-plast/:${PATH}\""
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/opt/"
        },
        {
          "CmdLine": [
            "wget -O - https://github.com/chloroExtractorTeam/fastq-shuffle/archive/v0.9.1.tar.gz |     tar xzf - \u0026\u0026     ln -s fastq-shuffle-0.9.1 fastq-shuffle"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "\"/opt/fastq-shuffle/:${PATH}\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "git clone --recursive               --branch ${CHLOROEXTRACTORVERSION}         https://github.com/chloroExtractorTeam/chloroExtractor.git         /opt/chloroExtractor/ \u0026\u0026     rm -rf /opt/chloroExtractor/.git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "\"/opt/chloroExtractor/bin/:$PATH\""
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "run.sh",
            "/usr/local/bin/run.sh"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/data"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/data"
        },
        {
          "CmdLine": [
            "/usr/local/bin/run.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}