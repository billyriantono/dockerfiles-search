{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "nginx:alpine",
      "SourceCode": "FROM nginx:alpine",
      "Platform": "",
      "From": {
        "Image": "nginx:alpine"
      },
      "Commands": [
        {
          "Maintainer": "Octoblu \u003cdocker@octoblu.com\u003e",
          "Name": "maintainer"
        },
        {
          "Health": {
            "Test": [
              "CMD-SHELL",
              "curl --fail http://localhost:80/healthcheck || exit 1"
            ]
          },
          "Name": "healthcheck"
        },
        {
          "Name": "workdir",
          "Path": "/opt/app"
        },
        {
          "CmdLine": [
            "apk add --no-cache   bash   ca-certificates   curl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "."
          ]
        },
        {
          "CmdLine": [
            "cat package.json       | grep version       | head -1       | awk -F: '{ print $2 }'       | sed 's/[\",]//g'       | tr -d '[[:space:]]' \u003e .PKG_VERSION"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -e   \"s/PKG_VERSION/$(cat .PKG_VERSION)/\"   ./templates/default.template \u003e   /etc/nginx/conf.d/default.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp ./templates/*.conf /etc/nginx/conf.d/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "./scripts/run-nginx.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}