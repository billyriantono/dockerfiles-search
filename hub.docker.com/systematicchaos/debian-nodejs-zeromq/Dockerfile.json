{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:jessie-slim",
      "SourceCode": "FROM debian:jessie-slim",
      "Platform": "",
      "From": {
        "Image": "debian:jessie-slim"
      },
      "Commands": [
        {
          "Maintainer": "Javier Fernández-Bravo Peñuela \u003cfraferp9@posgrado.upv.es\u003e",
          "Name": "maintainer"
        },
        {
          "Labels": [
            {
              "Key": "description",
              "Value": "\"Docker image of Debian + NodeJS and ZeroMQ\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "echo \"deb http://ftp.es.debian.org/debian/ testing main contrib non-free\" \u003e\u003e /etc/apt/sources.list"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"deb-src http://ftp.es.debian.org/debian/ testing main contrib non-free\" \u003e\u003e /etc/apt/sources.list"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y --no-install-recommends apt-utils debconf-utils dialog"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y  --no-install-recommends wget build-essential python gnutls-bin aptitude vim libtool pkg-config autoconf automake uuid-dev libsodium-dev gcc libc6-dev make ca-certificates"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get purge -y --auto-remove \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "NODEJS_VERSION",
              "Value": "8.9.3"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ZEROMQ_VERSION",
              "Value": "4.1.6"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/tmp"
        },
        {
          "CmdLine": [
            "wget https://nodejs.org/dist/v${NODEJS_VERSION}/node-v${NODEJS_VERSION}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xvzf node-v${NODEJS_VERSION}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp/node-v${NODEJS_VERSION}"
        },
        {
          "CmdLine": [
            "./configure"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make -j `nproc`"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp"
        },
        {
          "CmdLine": [
            "wget https://github.com/zeromq/zeromq4-1/releases/download/v${ZEROMQ_VERSION}/zeromq-${ZEROMQ_VERSION}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xvzf zeromq-${ZEROMQ_VERSION}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp/zeromq-${ZEROMQ_VERSION}"
        },
        {
          "CmdLine": [
            "./configure"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make -j `nproc`"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ldconfig"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp"
        },
        {
          "CmdLine": [
            "rm -Rf node-v${NODEJS_VERSION}.tar.gz node-v${NODEJS_VERSION}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -Rf zeromq-${ZEROMQ_VERSION}.tar.gz zeromq-${ZEROMQ_VERSION}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/"
        }
      ]
    }
  ]
}