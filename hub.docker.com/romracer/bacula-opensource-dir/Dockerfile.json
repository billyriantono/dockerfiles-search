{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:7",
      "SourceCode": "FROM centos:7",
      "Platform": "",
      "From": {
        "Image": "centos:7"
      },
      "Commands": [
        {
          "Maintainer": "\"romracer\" \u003cromracer@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "BACULA_VERSION",
              "Value": "\"7.4.3\""
            }
          ],
          "Name": "env"
        },
        {
          "Labels": [
            {
              "Key": "com.baculasystems.bacula.version",
              "Value": "\"${BACULA_VERSION}\""
            },
            {
              "Key": "com.redcoolbeans.image.version",
              "Value": "\"1.0.1\""
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "BACULA_COMPONENTS",
              "Value": "\"bacula-libs bacula-common bacula-libs-sql bacula-client bacula-director bacula-console\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p /tmp/bacula"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "bacula-common/configs/",
            "/tmp/bacula"
          ]
        },
        {
          "CmdLine": [
            "rpm -Uvh https://download.postgresql.org/pub/repos/yum/9.6/redhat/rhel-7-x86_64/pgdg-centos96-9.6-3.noarch.rpm"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum -q -y update \u0026\u0026     yum -q -y install postgresql96 sudo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "for b in ${BACULA_COMPONENTS}; do yum -y --nogpgcheck localinstall /tmp/bacula/$b-${BACULA_VERSION}*.rpm; done"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i -e \"s/Defaults    requiretty.*/ #Defaults    requiretty/g\" /etc/sudoers"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum clean all; rm -rf /tmp/bacula"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "bacula-fd/configs/bacula-fd.conf",
            "/root/bacula-fd.conf.orig"
          ]
        },
        {
          "CmdLine": [
            "rm -f /etc/bacula/bacula-fd.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:/usr/sbin"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "bacula-dir/scripts/run.sh",
            "/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /run.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/run.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "Name": "expose",
          "Ports": [
            "9101"
          ]
        }
      ]
    }
  ]
}