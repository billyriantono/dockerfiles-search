{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:jessie",
      "SourceCode": "FROM debian:jessie",
      "Platform": "",
      "From": {
        "Image": "debian:jessie"
      },
      "Commands": [
        {
          "Maintainer": "Jean-François Lépine \u003cjeanfrancois@qualiboo.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y -q libicu52 wget php5-cli curl php5-curl git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/work"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/work"
          ]
        },
        {
          "CmdLine": [
            "wget https://getcomposer.org/composer.phar -O /usr/local/bin/composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod +x /usr/local/bin/composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /var/tools"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /var/tools \u0026\u0026 composer require \"phpunit/phpunit:~5.0.3\" \"behat/mink-extension:~1.3\" \"behat/mink-selenium2-driver\" \"behat/behat:~2.4\" \"behat/mink\" \"behat/mink-goutte-driver\" \"behat/symfony2-extension:~1.1\" \"behat/mink-browserkit-driver:~1.2\" \"fabpot/goutte:~1.0\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /var/tools/vendor/bin/phpunit /usr/bin/phpunit"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /var/tools/vendor/bin/behat /usr/bin/behat"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "behat.yml",
            "/var/tools/"
          ]
        },
        {
          "CmdLine": [
            "/var/tools/vendor/bin/behat",
            "-c",
            "/var/tools/behat.yml"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}