{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "jetty:9-jre8",
      "SourceCode": "FROM jetty:9-jre8",
      "Platform": "",
      "From": {
        "Image": "jetty:9-jre8"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "JETTY_WEBAPPS",
              "Value": "/var/lib/jetty/webapps"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BLAZEGRAPH_NAME",
              "Value": "bigdata"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BLAZEGRAPH_PF_PARAM",
              "Value": "com.bigdata.rdf.sail.webapp.ConfigParams.propertyFile"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BLAZEGRAPH_WEB_PARAM",
              "Value": "jetty.overrideDescriptor"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BLAZEGRAPH_RW_PATH",
              "Value": "/RWStore.properties"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BLAZEGRAPH_WEBXML_PATH",
              "Value": "/web.xml"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BLAZEGRAPH_VERSION",
              "Value": "1.5.3"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BLAZEGRAPH_VERSION_URL",
              "Value": "http://sourceforge.net/projects/bigdata/files/bigdata/${BLAZEGRAPH_VERSION}/bigdata.war/download"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "RWStore.properties",
            "$BLAZEGRAPH_RW_PATH"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "web.xml",
            "$BLAZEGRAPH_WEBXML_PATH"
          ]
        },
        {
          "CmdLine": [
            "wget -O ${JETTY_WEBAPPS}/${BLAZEGRAPH_NAME}.war $BLAZEGRAPH_VERSION_URL"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"JAVA_OPTIONS='${JAVA_OPTIONS} -D${BLAZEGRAPH_PF_PARAM}=${BLAZEGRAPH_RW_PATH} -D{BLAZEGRAPH_WEB_PARAM}=${BLAZEGRAPH_WEBXML_PATH}'\" \u003e\u003e /etc/default/jetty"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown jetty:jetty $BLAZEGRAPH_RW_PATH $BLAZEGRAPH_WEBXML_PATH"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "jetty.sh",
            "run"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}