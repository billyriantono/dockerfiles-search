{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:16.04",
      "SourceCode": "FROM ubuntu:16.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:16.04"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "image",
              "Value": "opnfv/yardstick"
            }
          ],
          "Name": "label"
        },
        {
          "Key": "BRANCH",
          "Name": "arg",
          "Value": "master"
        },
        {
          "Env": [
            {
              "Key": "REPOS_DIR",
              "Value": "\"/home/opnfv/repos\""
            },
            {
              "Key": "IMAGE_DIR",
              "Value": "\"/home/opnfv/images/\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "YARDSTICK_REPO_DIR",
              "Value": "\"${REPOS_DIR}/yardstick/\""
            },
            {
              "Key": "RELENG_REPO_DIR",
              "Value": "\"${REPOS_DIR}/releng\""
            },
            {
              "Key": "STORPERF_REPO_DIR",
              "Value": "\"${REPOS_DIR}/storperf\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y git python python-setuptools python-pip iputils-ping \u0026\u0026 apt-get -y autoremove \u0026\u0026 apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "easy_install -U setuptools==30.0.0"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip install appdirs==1.4.0 pyopenssl==17.5.0 python-openstackclient==3.12.0 python-heatclient==1.11.0 ansible==2.5.5"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p ${REPOS_DIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git config --global http.sslVerify false"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone --depth 1 -b $BRANCH https://gerrit.opnfv.org/gerrit/yardstick ${YARDSTICK_REPO_DIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone --depth 1 https://gerrit.opnfv.org/gerrit/releng ${RELENG_REPO_DIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone --depth 1 -b $BRANCH https://gerrit.opnfv.org/gerrit/storperf ${STORPERF_REPO_DIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ansible-playbook -i ${YARDSTICK_REPO_DIR}/ansible/install-inventory.ini -c local -vvv -e INSTALLATION_MODE=\"container\" ${YARDSTICK_REPO_DIR}/ansible/install.yaml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "${YARDSTICK_REPO_DIR}/docker/supervisor.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"daemon off;\" \u003e\u003e /etc/nginx/nginx.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "5000",
            "5672"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "http://download.cirros-cloud.net/0.3.5/cirros-0.3.5-x86_64-disk.img",
            "${IMAGE_DIR}"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "http://cloud-images.ubuntu.com/xenial/current/xenial-server-cloudimg-amd64-disk1.img",
            "${IMAGE_DIR}"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./exec_tests.sh",
            "/usr/local/bin/"
          ]
        },
        {
          "Env": [
            {
              "Key": "NSB_DIR",
              "Value": "\"/opt/nsb_bin\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PYTHONPATH",
              "Value": "\"${PYTHONPATH}:${NSB_DIR}/trex_client:${NSB_DIR}/trex_client/stl\""
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "${REPOS_DIR}"
        },
        {
          "CmdLine": [
            "/usr/bin/supervisord"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}