{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:14.04",
      "SourceCode": "FROM ubuntu:14.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:14.04"
      },
      "Commands": [
        {
          "Maintainer": "Dave MacFarlane \u003cdavid.macfarlane2@mcgill.ca\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get -qqq update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install php5 php5-json curl git php5-mysql mysql-client"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "/var/www/loris"
          ]
        },
        {
          "CmdLine": [
            "curl -sS https://getcomposer.org/installer | php"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv composer.phar /usr/local/bin/composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "COMPOSER_HOME=/var/www/loris"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /var/www/loris \u0026\u0026 composer install --no-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/www/loris"
        },
        {
          "CmdLine": [
            "mkdir project"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -e \"s#%LORISROOT%#/var/www/loris/#g\"         -e \"s#%PROJECTNAME%#loris#g\"         -e \"s#%LOGDIRECTORY%#/var/log/apache2/#g\"         \u003c docs/config/apache2-site \u003e /etc/apache2/sites-available/loris.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "a2dissite 000-default"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ls /etc/apache2/sites-available"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ls /etc/apache2/sites-enabled"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "a2ensite loris"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir smarty/templates_c"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod 777 smarty/templates_c"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LORIS_SQL_DB",
              "Value": "LorisDB"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LORIS_SQL_HOST",
              "Value": "mysql"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LORIS_SQL_USER",
              "Value": "loris"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LORIS_SQL_PASSWORD",
              "Value": ""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LORIS_BASEURL",
              "Value": ""
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/www/loris/project",
            "/var/log/apache2",
            "/var/lib/php5"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "docs/Docker/LorisWeb-EntryPoint.sh",
            "/entrypoint.sh"
          ]
        },
        {
          "CmdLine": [
            "apache2ctl",
            "-D",
            "FOREGROUND"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "/entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}