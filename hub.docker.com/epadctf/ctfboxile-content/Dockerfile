############################################################
# Dockerfile
############################################################

# Set the base image
FROM node:11-alpine

############################################################
# Configuration
############################################################
ENV VERSION "2.1.0"

############################################################
# Installation
############################################################

RUN apk --no-cache add bash curl &&\
    npm install -g get-graphql-schema@${VERSION}

############################################################
# Execution
############################################################
CMD [ "get-graphql-schema" ]
