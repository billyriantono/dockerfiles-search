{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "builder",
      "BaseName": "microsoft/dotnet:2.1.401-sdk",
      "SourceCode": "FROM microsoft/dotnet:2.1.401-sdk AS builder",
      "Platform": "",
      "As": "builder",
      "From": {
        "Image": "microsoft/dotnet:2.1.401-sdk"
      },
      "Commands": [
        {
          "Name": "workdir",
          "Path": "/sln"
        },
        {
          "Expression": "COPY ./*.sln ./NuGet.config ./*.props ./*.targets  ./",
          "Name": "onbuild"
        },
        {
          "Expression": "COPY src/*/*.csproj ./",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN for file in $(ls *.csproj); do mkdir -p src/${file%.*}/ \u0026\u0026 mv $file src/${file%.*}/; done",
          "Name": "onbuild"
        },
        {
          "Expression": "COPY test/*/*.csproj ./",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN for file in $(ls *.csproj); do mkdir -p test/${file%.*}/ \u0026\u0026 mv $file test/${file%.*}/; done ",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN dotnet restore",
          "Name": "onbuild"
        },
        {
          "Expression": "COPY ./test ./test",
          "Name": "onbuild"
        },
        {
          "Expression": "COPY ./src ./src",
          "Name": "onbuild"
        },
        {
          "Expression": "ARG BUILD_VERSION",
          "Name": "onbuild"
        },
        {
          "Expression": "ARG VERSION=${BUILD_VERSION:-1.0.0}",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN dotnet build /p:Version=$VERSION -c Release --no-restore",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN find ./test -name '*.csproj' -print0 | xargs -L1 -0 dotnet test /p:Version=$VERSION -c Release --no-build --no-restore",
          "Name": "onbuild"
        }
      ]
    }
  ]
}