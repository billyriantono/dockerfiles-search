          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "default.conf",
            "/etc/nginx/conf.d/default.conf"
          ]
        },
        {
          "CmdLine": [
            "adduser www-data www-data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /var/www"
          ],
          "Name": "run",
          "PrependShell": true
