{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "codelovers/hhvm",
      "SourceCode": "FROM codelovers/hhvm",
      "Platform": "",
      "From": {
        "Image": "codelovers/hhvm"
      },
      "Commands": [
        {
          "Maintainer": "Daniel Holzmann \u003cdaniel@codelovers.at\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/root"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update -qq"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get upgrade -y -qq"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y -qq nano curl sudo hhvm-dev git-core automake autoconf libtool gcc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl 'https://raw.githubusercontent.com/facebook/hhvm/573d6fc0d2745e96ee9775f31dc993919086fc7a/hphp/runtime/version.h' \u003e /tmp/version.h"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sudo cp /tmp/version.h /usr/include/hphp/runtime/version.h"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone git://github.com/mongodb/libbson.git /tmp/libbson"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp/libbson"
        },
        {
          "CmdLine": [
            "./autogen.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make \u0026\u0026 sudo make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/mongofill/mongofill-hhvm /tmp/mongofill-hhvm"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp/mongofill-hhvm"
        },
        {
          "CmdLine": [
            "./build.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /etc/hhvm/extensions"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /tmp/mongofill-hhvm/mongo.so /etc/hhvm/extensions/mongo.so"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'hhvm.dynamic_extension_path = /etc/hhvm/extensions' \u003e\u003e /etc/hhvm/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'hhvm.dynamic_extensions[mongo] = mongo.so' \u003e\u003e /etc/hhvm/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'hhvm.dynamic_extension_path = /etc/hhvm/extensions' \u003e\u003e /etc/hhvm/server.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'hhvm.dynamic_extensions[mongo] = mongo.so' \u003e\u003e /etc/hhvm/server.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -Rf /tmp/libbson"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -Rf /tmp/mongofill-hhvm"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -f /tmp/version.h"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/srv"
        }
      ]
    }
  ]
}