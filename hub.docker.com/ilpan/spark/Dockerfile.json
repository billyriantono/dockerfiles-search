{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ilpan/jdk:8-alpine3.8",
      "SourceCode": "FROM ilpan/jdk:8-alpine3.8",
      "Platform": "",
      "From": {
        "Image": "ilpan/jdk:8-alpine3.8"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "ilpan:\u003cpna.dev@outlook.com\u003e"
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "SPARK_HOME",
              "Value": "/spark"
            },
            {
              "Key": "SPARK_VERSION",
              "Value": "spark-2.3.2"
            },
            {
              "Key": "HADOOP_VERSION",
              "Value": "without-hadoop"
            },
            {
              "Key": "MIRROR",
              "Value": "https://archive.apache.org/dist/"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "${PATH}:${SPARK_HOME}/bin:${SPARK_HOME}/sbin"
            },
            {
              "Key": "SPARK_DOWURL",
              "Value": "${MIRROR}/spark/${SPARK_VERSION}/${SPARK_VERSION}-bin-${HADOOP_VERSION}.tgz"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "cd /tmp     \u0026\u0026 wget -qc ${SPARK_DOWURL} -O spark.tgz     \u0026\u0026 mkdir -p ${SPARK_HOME}     \u0026\u0026 tar -xzf spark.tgz -C ${SPARK_HOME} --strip-components=1     \u0026\u0026 rm -rf /tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "${SPARK_HOME}"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./spark-standalone-env.sh",
            "./conf/spark-env.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./docker-entrypoint.sh",
            "./"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "7077",
            "8080",
            "8081"
          ]
        },
        {
          "CmdLine": [
            "./docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}