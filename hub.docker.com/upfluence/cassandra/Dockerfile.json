{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.3",
      "SourceCode": "FROM alpine:3.3",
      "Platform": "",
      "From": {
        "Image": "alpine:3.3"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "ENVTMPL_VERSION",
              "Value": "0.0.1"
            },
            {
              "Key": "CASSANDRA_VERSION",
              "Value": "3.0.15"
            },
            {
              "Key": "PROMETHEUS_EXPORTER",
              "Value": "0.8"
            },
            {
              "Key": "CASSANDRA_HOME",
              "Value": "/usr/share/cassandra"
            },
            {
              "Key": "COMMUNITY_REPO",
              "Value": "http://nl.alpinelinux.org/alpine/edge/community"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ENVTPL_REPO",
              "Value": "https://github.com/upfluence/envtmpl/releases/download/v${ENVTMPL_VERSION}/envtmpl-linux-amd64-${ENVTMPL_VERSION}"
            },
            {
              "Key": "CASSANDRA_REPO",
              "Value": "http://apache.claz.org/cassandra/${CASSANDRA_VERSION}/apache-cassandra-${CASSANDRA_VERSION}-bin.tar.gz"
            },
            {
              "Key": "EXPORTER_REPO",
              "Value": "https://repo1.maven.org/maven2/io/prometheus/jmx/jmx_prometheus_javaagent/${PROMETHEUS_EXPORTER}/jmx_prometheus_javaagent-${PROMETHEUS_EXPORTER}.jar"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "echo \"@community ${COMMUNITY_REPO}\" \u003e\u003e /etc/apk/repositories \u0026\u0026     apk add --update openjdk8@community curl su-exec \u0026\u0026     rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL ${ENVTPL_REPO} \u003e /usr/bin/envtmpl \u0026\u0026     chmod +x /usr/bin/envtmpl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -s ${CASSANDRA_REPO} | tar xz -C /usr/share \u0026\u0026 ln -s     /usr/share/apache-cassandra-${CASSANDRA_VERSION} /usr/share/cassandra"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL ${EXPORTER_REPO} \u003e ${CASSANDRA_HOME}/lib/exporter.jar \u0026\u0026     rm  ${CASSANDRA_HOME}/conf/cassandra.yaml \u0026\u0026 mkdir /hints"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "run.sh",
            "/usr/share/cassandra/run.sh"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config/logback.xml",
            "${CASSANDRA_HOME}/conf/logback.xml"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "config/*",
            "${CASSANDRA_HOME}/config/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x ${CASSANDRA_HOME}/run.sh \u0026\u0026    sed -i -e \"s/com.sun.management.jmxremote.authenticate=true/com.sun.management.jmxremote.authenticate=false/\" ${CASSANDRA_HOME}/conf/cassandra-env.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/usr/share/cassandra/data"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "7000",
            "7001",
            "7199",
            "7777",
            "9042",
            "9160"
          ]
        },
        {
          "CmdLine": [
            "/usr/share/cassandra/run.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}