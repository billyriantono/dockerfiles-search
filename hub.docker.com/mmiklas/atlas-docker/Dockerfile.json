{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openjdk:8-jdk-alpine",
      "SourceCode": "FROM openjdk:8-jdk-alpine",
      "Platform": "",
      "From": {
        "Image": "openjdk:8-jdk-alpine"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk add --no-cache     bash     su-exec     python"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "https://github.com/michalmiklas/atlas-docker/releases/download/v2.0.0/apache-atlas-2.0.0-bin.tar.gz",
            "/"
          ]
        },
        {
          "CmdLine": [
            "set -x     \u0026\u0026 cd /     \u0026\u0026 tar -xzvf apache-atlas-2.0.0-bin.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/apache-atlas-2.0.0"
        },
        {
          "Name": "expose",
          "Ports": [
            "21000"
          ]
        },
        {
          "Env": [
