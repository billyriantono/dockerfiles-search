        "Image": "alpine:3.8"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk add --no-cache bash build-base curl findutils git ninja python                        bsd-compat-headers linux-headers libexecinfo-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
