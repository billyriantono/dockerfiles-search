          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "sed -i     '/malloc_usable_size/a \\\\nstruct mallinfo {\\n  int arena;\\n  int hblkhd;\\n  int uordblks;\\n};'     /usr/include/malloc.h"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "GYP_DEFINES",
              "Value": "'clang=0 use_experimental_allocator_shim=0 use_allocator=none musl=1'"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "shaka_packager"
        },
        {
          "CmdLine": [
            "gclient config https://www.github.com/google/shaka-packager.git --name=src --unmanaged"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "src"
          ]
        },
        {
          "CmdLine": [
            "gclient sync"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd src \u0026\u0026 ninja -C out/Release"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
