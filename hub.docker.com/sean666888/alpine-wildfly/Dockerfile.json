{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openjdk:alpine",
      "SourceCode": "FROM openjdk:alpine",
      "Platform": "",
      "From": {
        "Image": "openjdk:alpine"
      },
      "Commands": [
        {
          "Maintainer": "Nils JÃ¸rgen Mittet \u003cnjmittet@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "WILDFLY_VERSION",
              "Value": "10.1.0.Final"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JBOSS_HOME",
              "Value": "/opt/jboss/wildfly"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "STANDALONE",
              "Value": "standalone"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "mkdir -p /opt/jboss \u0026\u0026 adduser -D -h /opt/jboss jboss \u0026\u0026 apk update \u0026\u0026 apk add curl \u0026\u0026 rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "RUN",
            "/usr/bin/"
          ]
        },
        {
          "CmdLine": [
            "chmod 0755 /usr/bin/RUN"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "jboss"
        },
        {
          "Name": "workdir",
          "Path": "/opt/jboss"
        },
        {
          "CmdLine": [
            "curl -O http://download.jboss.org/wildfly/$WILDFLY_VERSION/wildfly-$WILDFLY_VERSION.zip \u0026\u0026 unzip wildfly-$WILDFLY_VERSION.zip \u0026\u0026 mv $HOME/wildfly-$WILDFLY_VERSION $HOME/wildfly \u0026\u0026 rm wildfly-$WILDFLY_VERSION.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8080",
            "9990"
          ]
        },
        {
          "CmdLine": [
            "/opt/jboss/wildfly/bin/standalone.sh --server-config=$STANDALONE.xml -b 0.0.0.0"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}