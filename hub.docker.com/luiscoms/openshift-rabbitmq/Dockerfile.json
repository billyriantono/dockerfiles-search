{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openshift/base-centos7",
      "SourceCode": "FROM openshift/base-centos7",
      "Platform": "",
      "From": {
        "Image": "openshift/base-centos7"
      },
      "Commands": [
        {
          "Maintainer": "Luis Fernando Gomes \u003cyour@luiscoms.com.br\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "ERLANG_SOLUTIONS_VERSION",
              "Value": "1.0-1"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum update -y \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y wget \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y http://packages.erlang-solutions.com/erlang-solutions-${ERLANG_SOLUTIONS_VERSION}.noarch.rpm \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y erlang \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "RABBITMQ_VERSION",
              "Value": "3.6.5"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum install -y http://www.rabbitmq.com/releases/rabbitmq-server/v${RABBITMQ_VERSION}/rabbitmq-server-${RABBITMQ_VERSION}-1.noarch.rpm \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"[{rabbit,[{loopback_users,[]}]}].\" \u003e /etc/rabbitmq/rabbitmq.config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /var/lib/rabbitmq/mnesia"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "25672",
            "4369",
            "5671",
            "5672"
          ]
        },
        {
          "Env": [
            {
              "Key": "RABBITMQ_LOGS",
              "Value": "-"
            },
            {
              "Key": "RABBITMQ_SASL_LOGS",
              "Value": "-"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/var/lib/rabbitmq"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p /var/lib/rabbitmq /etc/rabbitmq \t\u0026\u0026 chown -R rabbitmq:rabbitmq /var/lib/rabbitmq /etc/rabbitmq \t\u0026\u0026 chmod 777 /var/lib/rabbitmq /etc/rabbitmq"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown -R rabbitmq:rabbitmq /opt/app-root"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/lib/rabbitmq/"
          ]
        },
        {
          "CmdLine": [
            "ls -la /var/lib/rabbitmq/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./docker-entrypoint.sh",
            "/usr/local/bin/"
          ]
        },
        {
          "Name": "user",
          "User": "\"rabbitmq\""
        },
        {
          "CmdLine": [
            "docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "rabbitmq-server"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}