FROM ubuntu:16.04
MAINTAINER Sean Jensen-Grey "seanj@xyke.com"

RUN apt-get update && apt-get install -y \
    autoconf \
    build-essential \
    libncurses5-dev \
    libsqlite3-dev sqlite \
    libssh-dev \
    libssl-dev \
    linux-headers-generic \
    m4


RUN apt-get install -y \
    apt-utils \
    curl \
    dnsutils \
    git \
    htop \
    jq \
    silversearcher-ag \
    tmux \
    vim \
    wget


RUN apt-get install -y \
    python-dev \
    python-pip \
    python3-dev \
    python3-pip \
    virtualenv \
    virtualenvwrapper
