{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "php:7.1-apache",
      "SourceCode": "FROM php:7.1-apache",
      "Platform": "",
      "From": {
        "Image": "php:7.1-apache"
      },
      "Commands": [
        {
          "Maintainer": "broadiq \u003cinfo@broadiq.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "SCRM_VERSION",
              "Value": "v7.10.10"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update     \u0026\u0026 DEBIAN_FRONTEND=noninteractive apt-get         install -y --no-install-recommends             libfreetype6-dev             libjpeg62-turbo-dev             libmcrypt-dev             libcurl4-openssl-dev             libssl-dev             libpng-dev             libpq-dev             libxml2-dev             zlib1g-dev             libc-client-dev             libkrb5-dev             libldap2-dev             cron             git             busybox"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "busybox --install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/     \u0026\u0026 docker-php-ext-configure imap --with-kerberos --with-imap-ssl     \u0026\u0026 docker-php-ext-configure ldap --with-libdir=lib/x86_64-linux-gnu/     \u0026\u0026 docker-php-ext-install -j$(nproc) iconv \t\t    mcrypt \t\t\t\tpdo_mysql         curl         mbstring         mysqli         zip         ftp         pdo_pgsql         gd         fileinfo         soap         zip         imap         ldap"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/www/html"
        },
        {
          "CmdLine": [
            "curl https://codeload.github.com/salesagility/SuiteCRM/tar.gz/${SCRM_VERSION} | tar xzv --strip 1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir conf.d     \u0026\u0026 touch conf.d/config.php conf.d/config_override.php     \u0026\u0026 ln -s conf.d/config.php     \u0026\u0026 ln -s conf.d/config_override.php"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "(crontab -l 2\u003e/dev/null; echo \"* * * * *  php -f /var/www/html/cron.php \u003e /dev/null 2\u003e\u00261 \") | crontab -"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "php -r \"copy('https://getcomposer.org/installer', '/tmp/composer-setup.php');\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "php /tmp/composer-setup.php --install-dir=/usr/local/bin --filename=composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "composer install --no-plugins --no-scripts"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /bootstrap"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "php.custom.ini",
            "/usr/local/etc/php/conf.d/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "init.sh",
            "/bootstrap/init.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "config.php",
            "./conf.d"
          ]
        },
        {
          "CmdLine": [
            "apt-get clean \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown -R www-data:www-data . \u0026\u0026 chmod -R 755 ."
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/www/html/upload",
            "/var/www/html/conf.d"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "CmdLine": [
            "/bootstrap/init.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}