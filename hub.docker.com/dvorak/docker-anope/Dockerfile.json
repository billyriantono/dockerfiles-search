  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.3",
      "SourceCode": "FROM alpine:3.3",
      "Platform": "",
      "From": {
        "Image": "alpine:3.3"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "ANOPE_VERSION",
              "Value": "2.0.3"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "adduser -D ircd -s /bin/false ircd"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apk --update add   ca-certificates cmake gcc g++ libc-dev make openssl-dev tar wget   \u0026\u0026 rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "config.cache",
            "/"
          ]
        },
        {
          "CmdLine": [
            "wget https://github.com/anope/anope/releases/download/$ANOPE_VERSION/anope-$ANOPE_VERSION-source.tar.gz   \u0026\u0026 tar xvf anope*.tar.gz   \u0026\u0026 rm -f anope*.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd anope*   \u0026\u0026 cp /config.cache .   \u0026\u0026 ./Config -quick   \u0026\u0026 cd build   \u0026\u0026 make"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd anope*/build   \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
