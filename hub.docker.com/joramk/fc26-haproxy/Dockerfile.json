{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "joramk/fc26-base",
      "SourceCode": "FROM    joramk/fc26-base",
      "Platform": "",
      "From": {
        "Image": "joramk/fc26-base"
      },
      "Commands": [
        {
          "Maintainer": "joramk@gmail.com",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "container",
              "Value": "docker"
            }
          ],
          "Name": "env"
        },
        {
          "Labels": [
            {
              "Key": "name",
              "Value": "\"Fedora - HAproxy stable with Lets Encrypt\""
            },
            {
              "Key": "vendor",
              "Value": "\"https://github.com/joramk/fc26-haproxy\""
            },
            {
              "Key": "license",
              "Value": "\"none\""
            },
            {
              "Key": "build-date",
              "Value": "\"20180304\""
            },
            {
              "Key": "maintainer",
              "Value": "\"joramk\""
            },
            {
              "Key": "issues",
              "Value": "\"https://github.com/joramk/fc26-haproxy/issues\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "{\tyum update -y; \tyum install openssl haproxy certbot cronie procps-ng iputils socat yum-cron -y;         yum clean all \u0026\u0026 rm -rf /var/cache/yum; }"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker-entrypoint.sh",
            "/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "scripts/certbot-*",
            "/usr/local/sbin/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "haproxy.cron",
            "/etc/cron.daily/"
          ]
        },
        {
          "CmdLine": [
            "{\tsystemctl enable haproxy crond; \tsystemctl disable auditd; \ttouch /firstrun; \tchmod +rx /docker-entrypoint.sh /etc/cron.daily/haproxy.cron; \tchmod 700 /usr/local/sbin/certbot-*; \tmkdir -p /etc/letsencrypt/live; }"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Health": {
            "Test": [
              "CMD-SHELL",
              "systemctl -q is-active haproxy || exit 1"
            ]
          },
          "Name": "healthcheck"
        },
        {
          "Name": "stopsignal",
          "Signal": "SIGRTMIN+3"
        },
        {
          "Name": "expose",
          "Ports": [
            "443",
            "80"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "[",
            "“/sys/fs/cgroup”,",
            "\"/etc/haproxy\",",
            "\"/etc/letsencrypt\"",
            "]"
          ]
        },
        {
          "CmdLine": [
            "/docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "/sbin/init"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}