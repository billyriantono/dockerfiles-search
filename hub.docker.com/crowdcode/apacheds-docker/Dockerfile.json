{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:14.04",
      "SourceCode": "FROM ubuntu:14.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:14.04"
      },
      "Commands": [
        {
          "Maintainer": "ome-devel@lists.openmicroscopy.org.uk",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_VERSION",
              "Value": "2.0.0-M24"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_ARCH",
              "Value": "amd64"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_ARCHIVE",
              "Value": "apacheds-${APACHEDS_VERSION}-${APACHEDS_ARCH}.deb"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_DATA",
              "Value": "/var/lib/apacheds-${APACHEDS_VERSION}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_CERT",
              "Value": "/etc/apacheds"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_USER",
              "Value": "apacheds"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_GROUP",
              "Value": "apacheds"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "volume",
          "Volumes": [
            "${APACHEDS_DATA}"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "${APACHEDS_CERT}"
          ]
        },
        {
          "CmdLine": [
            "echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections     \u0026\u0026 apt-get update     \u0026\u0026 apt-get install -y ldap-utils procps openjdk-7-jre-headless curl jq     \u0026\u0026 curl http://www.eu.apache.org/dist//directory/apacheds/dist/${APACHEDS_VERSION}/${APACHEDS_ARCHIVE} \u003e ${APACHEDS_ARCHIVE}     \u0026\u0026 dpkg -i ${APACHEDS_ARCHIVE}     \u0026\u0026 rm ${APACHEDS_ARCHIVE}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "10389",
            "10636",
            "60088",
            "60464",
            "8080",
            "8443"
          ]
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_INSTANCE",
              "Value": "default"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_BOOTSTRAP",
              "Value": "/bootstrap"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_DOMAIN",
              "Value": "openmicroscopy"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_TOP_DOMAIN",
              "Value": "org"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_SCRIPT",
              "Value": "run.sh"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHEDS_CMD",
              "Value": "/${APACHEDS_SCRIPT}"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "scripts/${APACHEDS_SCRIPT}",
            "${APACHEDS_CMD}"
          ]
        },
        {
          "CmdLine": [
            "chown ${APACHEDS_USER}:${APACHEDS_GROUP} ${APACHEDS_CMD}     \u0026\u0026 chmod u+rx ${APACHEDS_CMD}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "instance/*",
            "${APACHEDS_BOOTSTRAP}/conf/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "ome.ldif",
            "${APACHEDS_BOOTSTRAP}/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "contextentry.template",
            "/"
          ]
        },
        {
          "CmdLine": [
            "mkdir ${APACHEDS_BOOTSTRAP}/cache     \u0026\u0026 mkdir ${APACHEDS_BOOTSTRAP}/run     \u0026\u0026 mkdir ${APACHEDS_BOOTSTRAP}/log     \u0026\u0026 mkdir ${APACHEDS_BOOTSTRAP}/partitions     \u0026\u0026 chown -R ${APACHEDS_USER}:${APACHEDS_GROUP} ${APACHEDS_BOOTSTRAP}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "${APACHEDS_CMD}"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}