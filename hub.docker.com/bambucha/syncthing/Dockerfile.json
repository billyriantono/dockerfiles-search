{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.5",
      "SourceCode": "FROM alpine:3.5",
      "Platform": "",
      "From": {
        "Image": "alpine:3.5"
      },
      "Commands": [
        {
          "Maintainer": "Dmitry Prazdnichnov \u003cdp@bambucha.org\u003e",
          "Name": "maintainer"
        },
        {
          "Key": "BUILD_DATE",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "VERSION",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "VCS_REF",
          "Name": "arg",
          "Value": null
        },
        {
          "Labels": [
            {
              "Key": "org.label-schema.build-date",
              "Value": "$BUILD_DATE"
            },
            {
              "Key": "org.label-schema.version",
              "Value": "$VERSION"
            },
            {
              "Key": "org.label-schema.vcs-ref",
              "Value": "$VCS_REF"
            },
            {
              "Key": "org.label-schema.vcs-url",
              "Value": "https://github.com/bambocher/docker-syncthing"
            },
            {
              "Key": "org.label-schema.license",
              "Value": "MIT"
            },
            {
              "Key": "org.label-schema.schema-version",
              "Value": "1.0"
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "URL",
              "Value": "https://github.com/syncthing/syncthing/releases/download"
            },
            {
              "Key": "XDG_CONFIG_HOME",
              "Value": "/"
            },
            {
              "Key": "HOME",
              "Value": "/mnt"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk --no-cache add ca-certificates     \u0026\u0026 apk --no-cache --virtual build-dependencies add curl tar     \u0026\u0026 curl -sL $URL/v$VERSION/syncthing-linux-amd64-v$VERSION.tar.gz         | tar xz --no-anchored -C /usr/bin --strip-components=1 syncthing     \u0026\u0026 apk del build-dependencies"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$HOME"
        },
        {
          "Name": "user",
          "User": "1000:1000"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/syncthing",
            "/mnt"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "21025/udp",
            "21026/udp",
            "21027/udp",
            "22000",
            "8384"
          ]
        },
        {
          "CmdLine": [
            "syncthing"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "-gui-address=:8384",
            "-no-browser",
            "-no-restart",
            "-logflags=0"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}