{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.4",
      "SourceCode": "FROM alpine:3.4",
      "Platform": "",
      "From": {
        "Image": "alpine:3.4"
      },
      "Commands": [
        {
          "Maintainer": "UmVnaXN0ZXIgcmVnaXN0ZXJkZWRpY2F0ZWQrZG9ja2VyKGF0KWdtYWlsLmNvbQo=",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "SS_VER",
              "Value": "2.4.8"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SS_URL",
              "Value": "https://github.com/shadowsocks/shadowsocks-libev/archive/v$SS_VER.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SS_DIR",
              "Value": "shadowsocks-libev-$SS_VER"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SS_DEP",
              "Value": "autoconf build-base curl libtool linux-headers openssl-dev asciidoc xmlto"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "set -ex \u0026\u0026     apk add -U --no-cache $SS_DEP \u0026\u0026     curl -sSL $SS_URL | tar xz \u0026\u0026     cd $SS_DIR \u0026\u0026     ./configure \u0026\u0026     make \u0026\u0026 make install \u0026\u0026     cd .. \u0026\u0026     rm -rf $SS_DIR \u0026\u0026     apk del --purge $SS_DEP \u0026\u0026     rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SERVER_ADDR",
              "Value": "0.0.0.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SERVER_PORT",
              "Value": "8443"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PASSWORD",
              "Value": ""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "METHOD",
              "Value": "aes-256-cfb"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "TIMEOUT",
              "Value": "300"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DNS_ADDR",
              "Value": "8.8.8.8"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DNS_ADDR_2",
              "Value": "8.8.4.4"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "OTHER_ARGS",
              "Value": ""
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "$SERVER_PORT"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "$SERVER_PORT/udp"
          ]
        },
        {
          "CmdLine": [
            "ss-server -s $SERVER_ADDR               -p $SERVER_PORT               -k $PASSWORD               -m $METHOD               -t $TIMEOUT               --fast-open               -d $DNS_ADDR               -d $DNS_ADDR_2               -u               $OTHER_ARGS"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
