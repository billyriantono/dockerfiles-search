      "Name": "",
      "BaseName": "solutionsoft/time-machine-for-centos7:latest",
      "SourceCode": "FROM solutionsoft/time-machine-for-centos7:latest",
      "Platform": "",
      "From": {
        "Image": "solutionsoft/time-machine-for-centos7:latest"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "vendor",
              "Value": "\"SolutionSoft Systems, Inc\""
            }
          ],
          "Name": "label"
        },
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"kzhao@solution-soft.com\""
            }
          ],
          "Name": "label"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "yum update -y \u0026\u0026  yum -y install xmlstarlet saxon augeas bsdtar unzip \u0026\u0026  yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "groupadd -r jboss -g 1000 \u0026\u0026  useradd -u 1000 -r -g jboss -m -d /opt/jboss -s /sbin/nologin -c \"JBoss user\" jboss \u0026\u0026  chmod 755 /opt/jboss"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/jboss"
        },
        {
          "CmdLine": [
            "yum -y install java-1.8.0-openjdk-devel \u0026\u0026  yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "WILDFLY_VERSION",
              "Value": "18.0.0.Final"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "WILDFLY_SHA1",
              "Value": "2d4778b14fda6257458a26943ea82988e3ae6a66"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JBOSS_HOME",
              "Value": "/opt/jboss/wildfly"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "cd $HOME     \u0026\u0026 curl -O https://download.jboss.org/wildfly/$WILDFLY_VERSION/wildfly-$WILDFLY_VERSION.tar.gz     \u0026\u0026 sha1sum wildfly-$WILDFLY_VERSION.tar.gz | grep $WILDFLY_SHA1     \u0026\u0026 tar xf wildfly-$WILDFLY_VERSION.tar.gz     \u0026\u0026 mv $HOME/wildfly-$WILDFLY_VERSION $JBOSS_HOME     \u0026\u0026 rm wildfly-$WILDFLY_VERSION.tar.gz     \u0026\u0026 chown -R jboss:0 ${JBOSS_HOME}     \u0026\u0026 chmod -R g+rw ${JBOSS_HOME}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "config",
            "/"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        }
      ]
    }
  ]
