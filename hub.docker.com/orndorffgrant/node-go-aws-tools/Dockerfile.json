  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:18.04",
      "SourceCode": "FROM ubuntu:18.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:18.04"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "NODE_URL",
              "Value": "https://nodejs.org/dist/v13.5.0/node-v13.5.0-linux-x64.tar.xz"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GO_URL",
