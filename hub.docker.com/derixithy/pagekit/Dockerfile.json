          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "nginx.conf",
            "/etc/nginx/nginx.conf"
          ]
        },
        {
          "CmdLine": [
            "chown -R www-data: /pagekit \u0026\u0026     apt-get autoremove wget unzip -y \u0026\u0026     apt-get autoclean -y \u0026\u0026     apt-get clean -y \u0026\u0026     rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sh",
            "-c",
            "service php5-fpm start \u0026\u0026 nginx"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
