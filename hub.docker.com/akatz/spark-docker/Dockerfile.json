{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "java:openjdk-8",
      "SourceCode": "FROM java:openjdk-8",
      "Platform": "",
      "From": {
        "Image": "java:openjdk-8"
      },
      "Commands": [
        {
          "CmdLine": [
            "mkdir /opt/spark"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/spark"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "http://d3kbcqa49mib13.cloudfront.net/spark-1.4.0-bin-hadoop2.6.tgz",
            "/tmp/"
          ]
        },
        {
          "CmdLine": [
            "tar -zxf /tmp/spark-1.4.0-bin-hadoop2.6.tgz -C /opt/spark --strip-components=1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y build-essential python-dev python-boto libcurl4-nss-dev libsasl2-dev maven libapr1-dev libsvn-dev zlib1g-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "update-alternatives --set java /usr/lib/jvm/java-8-openjdk-amd64/jre/bin/java"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget http://www.apache.org/dist/mesos/0.22.1/mesos-0.22.1.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -zxf mesos-0.22.1.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd mesos-0.22.1 \u0026\u0026 ./configure \u0026\u0026 make"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget http://supergsego.com/apache/hadoop/common/hadoop-2.6.0/hadoop-2.6.0.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -zxf hadoop-2.6.0.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "MESOS_NATIVE_LIBRARY",
              "Value": "/opt/spark/mesos-0.22.1/src/.libs/libmesos.so"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HADOOP_HOME",
              "Value": "/opt/spark/hadoop-2.6.0"
            }
          ],
          "Name": "env"
        }
      ]
    }
  ]
}