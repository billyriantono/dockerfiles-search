{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:16.04",
      "SourceCode": "FROM ubuntu:16.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:16.04"
      },
      "Commands": [
        {
          "Maintainer": "Jimmy Song \u003chttp://github.com/jimmysong\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update  \u0026\u0026 DEBIAN_FRONTEND=noninteractive apt-get install -y openssh-server x11-apps lxde-core lxterminal curl gnupg g++ libcrypto++-dev swig python-dev python-twisted libqtcore4 libqt4-dev python-qt4 pyqt4-dev-tools python-psutil xdg-utils pkg-config build-essential autoconf libtool rsync"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /bitcoin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/bitcoin"
        },
        {
          "Env": [
            {
              "Key": "BITCOIN_VERSION",
              "Value": "0.15.0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -SLO \"https://bitcoin.org/bin/bitcoin-core-${BITCOIN_VERSION}/bitcoin-${BITCOIN_VERSION}-x86_64-linux-gnu.tar.gz\"  \u0026\u0026 curl -SLO \"https://bitcoin.org/bin/bitcoin-core-${BITCOIN_VERSION}/SHA256SUMS.asc\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "laanwj-releases.asc",
            "/bitcoin"
          ]
        },
        {
          "CmdLine": [
            "gpg --import laanwj-releases.asc  \u0026\u0026 gpg --verify --trust-model=always SHA256SUMS.asc  \u0026\u0026 gpg --decrypt --output SHA256SUMS SHA256SUMS.asc  \u0026\u0026 grep \"bitcoin-${BITCOIN_VERSION}-x86_64-linux-gnu.tar.gz\" SHA256SUMS | sha256sum -c -  \u0026\u0026 tar -xzf \"bitcoin-${BITCOIN_VERSION}-x86_64-linux-gnu.tar.gz\" -C /usr --strip-components=1  \u0026\u0026 rm \"bitcoin-${BITCOIN_VERSION}-x86_64-linux-gnu.tar.gz\" SHA256SUMS.asc SHA256SUMS"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /bitcoin /root/.bitcoin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /armory"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/armory"
        },
        {
          "Env": [
            {
              "Key": "ARMORY_VERSION",
              "Value": "0.96.2"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -SLO \"https://github.com/goatpig/BitcoinArmory/releases/download/v${ARMORY_VERSION}/armory_${ARMORY_VERSION}-src.tar.gz\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -SLO \"https://github.com/goatpig/BitcoinArmory/releases/download/v${ARMORY_VERSION}/sha256sum.txt.asc\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "goatpig-signing-key.asc",
            "/armory"
          ]
        },
        {
          "CmdLine": [
            "gpg --import goatpig-signing-key.asc  \u0026\u0026 gpg --verify --trust-model=always sha256sum.txt.asc  \u0026\u0026 gpg --decrypt --output sha256sum.txt sha256sum.txt.asc  \u0026\u0026 grep \"armory_${ARMORY_VERSION}-src.tar.gz\" sha256sum.txt | sha256sum -c -  \u0026\u0026 tar xzf \"armory_${ARMORY_VERSION}-src.tar.gz\"  \u0026\u0026 rm \"armory_${ARMORY_VERSION}-src.tar.gz\" sha256sum.txt.asc sha256sum.txt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/armory/Armory1"
        },
        {
          "CmdLine": [
            "./autogen.sh \u0026\u0026 ./configure \u0026\u0026 make \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/armory"
        },
        {
          "CmdLine": [
            "rm -rf Armory1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /armory /root/.armory"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /root/.ssh  \u0026\u0026 chmod 700 /root/.ssh  \u0026\u0026 mkdir /var/run/sshd  \u0026\u0026 perl -p -i -e \"s/\\#PasswordAuthentication yes/PasswordAuthentication no/\" /etc/ssh/sshd_config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "DISPLAY",
              "Value": ":0"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "22"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "run.sh",
            "/opt"
          ]
        },
        {
          "CmdLine": [
            "/opt/run.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}