{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "java:8-jdk",
      "SourceCode": "FROM java:8-jdk",
      "Platform": "",
      "From": {
        "Image": "java:8-jdk"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "NIFI_HOME",
              "Value": "/opt/nifi"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$NIFI_HOME/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p \"$NIFI_HOME\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$NIFI_HOME"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "NIFI_VERSION",
              "Value": "0.7.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "NIFI_TGZ_URL",
              "Value": "http://www.gtlib.gatech.edu/pub/apache/nifi/$NIFI_VERSION/nifi-$NIFI_VERSION-bin.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget -O nifi.tar.gz \"$NIFI_TGZ_URL\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xvf nifi.tar.gz --strip-components=1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "CmdLine": [
            "nifi.sh",
            "run"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}