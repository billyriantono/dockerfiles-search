{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:stable",
      "SourceCode": "FROM debian:stable",
      "Platform": "",
      "From": {
        "Image": "debian:stable"
      },
      "Commands": [
        {
          "Maintainer": "Dogstudio \u003cdevs@dogstudio.be\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "REMOTE_HOST",
              "Value": "sample.com"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "REMOTE_USER",
              "Value": "root"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "REMOTE_PORT",
              "Value": "22"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "REMOTE_SERVICE",
              "Value": "3306"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "useradd docker \t\u0026\u0026 mkdir /home/docker \t\u0026\u0026 chown docker:docker /home/docker \t\u0026\u0026 addgroup docker staff"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update   \u0026\u0026 apt-get install -y --no-install-recommends openssh-client bindfs kmod mysql-client  \u0026\u0026 apt-get clean   \u0026\u0026 rm -rf /var/lib/apt/lists/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /home/docker/.ssh   \u0026\u0026 mkdir /home/docker/.ssh-external   \u0026\u0026 echo \"bindfs#/home/docker/.ssh-external /home/docker/.ssh fuse force-user=docker,force-group=docker,perms=0700 0 0\" \u003e\u003e /etc/fstab"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown -R docker:docker /home/docker/.ssh-external"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ssh -o ServerAliveInterval=30 -o ServerAliveCountMax=1 -o StrictHostKeyChecking=no -o BatchMode=yes -i /home/docker/.ssh-external/id_rsa -p $REMOTE_PORT -L *:$REMOTE_SERVICE:127.0.0.1:$REMOTE_SERVICE -N $REMOTE_USER@$REMOTE_HOST"
          ],
          "Name": "cmd",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "$REMOTE_SERVICE"
          ]
        }
      ]
    }
  ]
}