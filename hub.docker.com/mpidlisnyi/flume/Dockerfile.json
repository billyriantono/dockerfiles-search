{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "java:openjdk-8-jdk",
      "SourceCode": "FROM java:openjdk-8-jdk",
      "Platform": "",
      "From": {
        "Image": "java:openjdk-8-jdk"
      },
      "Commands": [
        {
          "Maintainer": "Maksim Podlesnyi \u003cmpodlesnyi@smartling.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "FLUME_VERSION",
              "Value": "1.7.0"
            },
            {
              "Key": "FLUME_CONF_DIR",
              "Value": "/conf"
            },
            {
              "Key": "FLUME_AGENT_NAME",
              "Value": "test"
            },
            {
              "Key": "MAVEN_VERSION",
              "Value": "3.5.0"
            },
            {
              "Key": "LOG4J_PROPERTIES",
              "Value": "/opt/flume/log4j.properties"
            },
            {
              "Key": "PATH",
              "Value": "${PATH}:/opt/flume/bin"
            },
            {
              "Key": "HADOOP_COMMON_LIB_NATIVE_DIR",
              "Value": "/usr/local/hadoop/lib/native"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install --no-install-recommends --no-install-suggests  -y \twget \t\u0026\u0026 apt-get clean \t\u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /opt/flume ${FLUME_CONF_DIR} /opt/maven ${HADOOP_COMMON_LIB_NATIVE_DIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -qO- http://archive.apache.org/dist/flume/${FLUME_VERSION}/apache-flume-${FLUME_VERSION}-bin.tar.gz   | tar zxvf - -C /opt/flume --strip 1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "pom.xml",
            "/opt/flume/pom.xml"
          ]
        },
        {
          "CmdLine": [
            "wget -qO- http://apache.ip-connect.vn.ua/maven/maven-3/${MAVEN_VERSION}/binaries/apache-maven-${MAVEN_VERSION}-bin.tar.gz   | tar zxvf - -C /opt/maven --strip 1   \u0026\u0026 cd /opt/flume/   \u0026\u0026 /opt/maven/bin/mvn process-sources   \u0026\u0026 rm -rf /opt/maven/   \u0026\u0026 rm -f /opt/flume/pom.xml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "log4j.properties",
            "${LOG4J_PROPERTIES}"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "entrypoint.sh",
            "/entrypoint"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/flume/"
        },
        {
          "CmdLine": [
            "chmod +x /entrypoint"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i 's/FLUME_CLASSPATH=\\\"\\\"/FLUME_CLASSPATH=\\\"\\/usr\\/local\\/hadoop\\/lib\\/native\\/*\\\"/g' bin/flume-ng"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i 's/FLUME_JAVA_LIBRARY_PATH=\\\"\\\"/FLUME_JAVA_LIBRARY_PATH=\\\"\\/usr\\/local\\/hadoop\\/lib\\/native\\\"/g' bin/flume-ng"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/entrypoint"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}