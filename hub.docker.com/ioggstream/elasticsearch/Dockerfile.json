{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openshift/base-centos7",
      "SourceCode": "FROM openshift/base-centos7",
      "Platform": "",
      "From": {
        "Image": "openshift/base-centos7"
      },
      "Commands": [
        {
          "Maintainer": "Mateus Caruccio \u003cmateus.caruccio@getupcoud.com.br\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/opt/app-root/src"
            },
            {
              "Key": "JAVA_VER",
              "Value": "1.8.0"
            },
            {
              "Key": "ES_CONF",
              "Value": "/usr/share/elasticsearch/config/elasticsearch.yml"
            },
            {
              "Key": "ELASTICSEARCH_CLUSTER_NAME",
              "Value": "default-cluster"
            },
            {
              "Key": "ELASTICSEARCH_MAX_MEMORY",
              "Value": "1G"
            },
            {
              "Key": "ELASTICSEARCH_LOG_LEVEL",
              "Value": "INFO"
            }
          ],
          "Name": "env"
        },
        {
          "Labels": [
            {
              "Key": "io.k8s.description",
              "Value": "\"Elasticsearch container for allowing indexing and searching of aggregated logs\""
            },
            {
              "Key": "io.k8s.display-name",
              "Value": "\"Elasticsearch 2.3\""
            },
            {
              "Key": "io.openshift.expose-services",
              "Value": "\"9200:https, 9300:https\""
            },
            {
              "Key": "io.openshift.tags",
              "Value": "\"cache,database,search,elasticsearch\""
            }
          ],
          "Name": "label"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "elasticsearch.repo",
            "/etc/yum.repos.d/elasticsearch.repo"
          ]
        },
        {
          "CmdLine": [
            "rpm --import https://packages.elastic.co/GPG-KEY-elasticsearch \u0026\u0026     yum install -y --setopt=tsflags=nodocs elasticsearch java-1.8.0-openjdk \u0026\u0026     yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /elasticsearch/persistent \u0026\u0026     chown -R 1001:0 /elasticsearch /usr/share/elasticsearch /etc/elasticsearch /var/log/elasticsearch \u0026\u0026     chmod -R og+rwx /elasticsearch"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "container-entrypoint",
            "/usr/bin/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "elasticsearch.yml",
            "logging.yml",
            "/etc/elasticsearch/"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "9200"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "9300"
          ]
        },
        {
          "Name": "user",
          "User": "1001"
        },
        {
          "CmdLine": [
            "container-entrypoint"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "/usr/share/elasticsearch/bin/elasticsearch"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}