          "CmdLine": [
            "apk add --update-cache         mysql         mysql-client \u0026\u0026     rm -rf /var/cache/apk/* \u0026\u0026     mkdir -p /etc/services.d/mysql \u0026\u0026     mv /run_mysql /etc/services.d/mysql/run \u0026\u0026     mkdir -p /etc/fix-attrs.d \u0026\u0026     cp /fix_data_dir /etc/fix-attrs.d/01-fix-data-dir \u0026\u0026     cp /fix_logs_dir /etc/fix-attrs.d/02-fix-logs-dir \u0026\u0026     cp /fix_tmp_dir  /etc/fix-attrs.d/03-fix-tmp-dir"
