{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:16.04",
      "SourceCode": "FROM ubuntu:16.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:16.04"
      },
      "Commands": [
        {
          "Maintainer": "Diana Rojas, Exood \u003cdianacarolinarojas@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "LANG",
              "Value": "C.UTF-8"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VERSION_ODOO",
              "Value": "11"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "WKHTMLTOX_X64",
              "Value": "https://github.com/wkhtmltopdf/wkhtmltopdf/releases/download/0.12.2.1/wkhtmltox-0.12.2.1_linux-trusty-amd64.deb"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "set -x;         apt-get update         \u0026\u0026 apt-get install -y --no-install-recommends             ca-certificates             curl \t\t\tnpm \t\t\tpostgresql-client \t\t\tpostgresql-client-common             node-less \t\t\tpython3 \t\t\tpython3-dev             python3-pip             python3-setuptools \t\t\tpython3-pyinotify             python3-renderpm \t\t\tbuild-essential \t\t\tlibsasl2-dev \t\t\tlibldap2-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "set -x;         curl -o wkhtmltox.deb -SL ${WKHTMLTOX_X64}         \u0026\u0026 dpkg --force-depends -i wkhtmltox.deb         \u0026\u0026 apt-get -y install -f --no-install-recommends         \u0026\u0026 apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false -o APT::AutoRemove::SuggestsImportant=false npm         \u0026\u0026 rm -rf /var/lib/apt/lists/* wkhtmltox.deb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "adduser --system --quiet --shell=/bin/bash --home=/home/odoo --gecos 'ODOO' --group odoo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /home/odoo/odoo${VERSION_ODOO}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /home/odoo/share"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/home/odoo/share",
            "/home/odoo/odoo${VERSION_ODOO}"
          ]
        },
        {
          "CmdLine": [
            "chown -R odoo:odoo /home/odoo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip3 install wheel"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip3 install ptvsd==3.0.0"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./requirements.txt",
            "/home/odoo"
          ]
        },
        {
          "CmdLine": [
            "chown odoo:odoo /home/odoo/requirements.txt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip3 install -r /home/odoo/requirements.txt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ODOO_EXEC",
              "Value": "/home/odoo/odoo${VERSION_ODOO}/odoo/odoo-bin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ODOO_CONF",
              "Value": "/home/odoo/odoo${VERSION_ODOO}/config/odoo${VERSION_ODOO}.conf"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./entrypoint.sh",
            "/"
          ]
        },
        {
          "CmdLine": [
            "chmod 777 /entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "odoo"
        },
        {
          "Name": "expose",
          "Ports": [
            "8060",
            "8061"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "4000"
          ]
        },
        {
          "CmdLine": [
            "/entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "odoo"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}