{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "roberthutto/centos-jdk",
      "SourceCode": "FROM roberthutto/centos-jdk",
      "Platform": "",
      "From": {
        "Image": "roberthutto/centos-jdk"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "WILDFLY_VERSION",
              "Value": "10.0.0.Final"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JBOSS_HOME",
              "Value": "/opt/wildfly"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "cd $HOME     \u0026\u0026 curl -O https://download.jboss.org/wildfly/$WILDFLY_VERSION/wildfly-$WILDFLY_VERSION.tar.gz     \u0026\u0026 tar -xf wildfly-$WILDFLY_VERSION.tar.gz     \u0026\u0026 mv $HOME/wildfly-$WILDFLY_VERSION $JBOSS_HOME     \u0026\u0026 rm wildfly-$WILDFLY_VERSION.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LAUNCH_JBOSS_IN_BACKGROUND",
              "Value": "true"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "CmdLine": [
            "/opt/wildfly/bin/standalone.sh",
            "-b",
            "0.0.0.0"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}