{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:14.04",
      "SourceCode": "FROM ubuntu:14.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:14.04"
      },
      "Commands": [
        {
          "CmdLine": [
            "echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update     \u0026\u0026 apt-get install -y wget ipython build-essential python-dev python-pip openjdk-7-jdk     \u0026\u0026 apt-get clean     \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip install pymongo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SPARK_VERSION",
              "Value": "1.5.2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HADOOP_VERSION",
              "Value": "2.6"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGO_HADOOP_VERSION",
              "Value": "1.5.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGO_HADOOP_COMMIT",
              "Value": "9905150ec5f8f7b74bc998cc36f53d0a6f83ee49"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java-7-openjdk-amd64"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SPARK_HOME",
              "Value": "/usr/local/spark"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHE_MIRROR",
              "Value": "http://ftp.ps.pl/pub/apache"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SPARK_URL",
              "Value": "${APACHE_MIRROR}/spark/spark-${SPARK_VERSION}/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION}.tgz"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SPARK_DIR",
              "Value": "spark-${SPARK_VERSION}-bin-hadoop2.6"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGO_HADOOP_URL",
              "Value": "https://github.com/mongodb/mongo-hadoop/archive/${MONGO_HADOOP_COMMIT}.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGO_HADOOP_LIB_PATH",
              "Value": "/usr/local/mongo-hadoop/build/libs"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGO_HADOOP_JAR",
              "Value": "${MONGO_HADOOP_LIB_PATH}/mongo-hadoop-${MONGO_HADOOP_VERSION}-SNAPSHOT.jar"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGO_HADOOP_SPARK_PATH",
              "Value": "/usr/local/mongo-hadoop/spark"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGO_HADOOP_SPARK_JAR",
              "Value": "${MONGO_HADOOP_SPARK_PATH}/build/libs/mongo-hadoop-spark-${MONGO_HADOOP_VERSION}-SNAPSHOT.jar"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PYTHONPATH",
              "Value": "${MONGO_HADOOP_SPARK_PATH}/src/main/python"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SPARK_DRIVER_EXTRA_CLASSPATH",
              "Value": "${MONGO_HADOOP_JAR}:${MONGO_HADOOP_SPARK_JAR}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CLASSPATH",
              "Value": "${SPARK_DRIVER_EXTRA_CLASSPATH}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JARS",
              "Value": "${MONGO_HADOOP_JAR},${MONGO_HADOOP_SPARK_JAR}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PYSPARK_DRIVER_PYTHON",
              "Value": "/usr/bin/ipython"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:$SPARK_HOME/bin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget -qO - ${SPARK_URL} | tar -xz -C /usr/local/     \u0026\u0026 cd /usr/local \u0026\u0026 ln -s ${SPARK_DIR} spark"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -qO - ${MONGO_HADOOP_URL} | tar -xz -C /usr/local/     \u0026\u0026 mv /usr/local/mongo-hadoop-${MONGO_HADOOP_COMMIT} /usr/local/mongo-hadoop     \u0026\u0026 cd /usr/local/mongo-hadoop     \u0026\u0026 ./gradlew jar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"spark.driver.extraClassPath   ${CLASSPATH}\" \u003e $SPARK_HOME/conf/spark-defaults.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/bin/bash"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}