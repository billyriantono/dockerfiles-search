{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "frolvlad/alpine-java:jdk8-slim",
      "SourceCode": "FROM frolvlad/alpine-java:jdk8-slim",
      "Platform": "",
      "From": {
        "Image": "frolvlad/alpine-java:jdk8-slim"
      },
      "Commands": [
        {
          "Maintainer": "Elliot Tormey \u003celliot.tormey@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DOCKER",
              "Value": "true"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_HOME",
              "Value": "/opt/android"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk add --update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apk add --no-cache bash unzip wget git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p $ANDROID_HOME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd $ANDROID_HOME \u0026\u0026 wget -q https://dl.google.com/android/repository/sdk-tools-linux-4333796.zip -O android-sdk.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd $ANDROID_HOME \u0026\u0026 unzip android-sdk.zip \u0026\u0026 rm -f android-sdk.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "${PATH}:${ANDROID_HOME}/tools:${ANDROID_HOME}/tools/bin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "echo y | sdkmanager \"platform-tools\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yes | sdkmanager --licenses \u0026\u0026 sdkmanager --update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}