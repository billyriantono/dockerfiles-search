{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openjdk:8-stretch",
      "SourceCode": "FROM openjdk:8-stretch",
      "Platform": "",
      "From": {
        "Image": "openjdk:8-stretch"
      },
      "Commands": [
        {
          "Maintainer": "Michael J. Stealey \u003cstealey@unc.edu\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get -y install   libssl-dev   libpam0g-dev   python-crypto"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/root/"
        },
        {
          "Env": [
            {
              "Key": "SBT_VERSION",
              "Value": "1.2.8"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget https://github.com/sbt/sbt/releases/download/v${SBT_VERSION}/sbt-${SBT_VERSION}.tgz   \u0026\u0026 tar -zxvf sbt-${SBT_VERSION}.tgz   \u0026\u0026 rm -f sbt-${SBT_VERSION}.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/RENCI-NRIG/SAFE.git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/root/SAFE"
        },
        {
          "CmdLine": [
            "/root/sbt/bin/sbt \"project safe-server\" \"compile\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /root/SAFE/utility/safe_keygen.sh /root/   \u0026\u0026 cp /root/SAFE/utility/hash_gen.py /root/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd safe-apps     \u0026\u0026 tar -czvf /safe-impact-app.tar.gz safe.slang impact/     \u0026\u0026 cd -"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SAFE_PORT",
              "Value": "7777"
            },
            {
              "Key": "RIAK_IP",
              "Value": "riak"
            },
            {
              "Key": "SLANG_SCRIPT",
              "Value": "impact/mvp.slang"
            },
            {
              "Key": "AKKA_LOG_LEVEL",
              "Value": "error"
            },
            {
              "Key": "IMPACT_APP",
              "Value": "safe-impact-app.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker-entrypoint.sh",
            "/root/"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/imports",
            "/principalkeys"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "${SAFE_PORT}"
          ]
        },
        {
          "CmdLine": [
            "/bin/bash",
            "/root/docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}