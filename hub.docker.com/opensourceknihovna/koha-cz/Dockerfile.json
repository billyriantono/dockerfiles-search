{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:wheezy",
      "SourceCode": "FROM debian:wheezy",
      "Platform": "",
      "From": {
        "Image": "debian:wheezy"
      },
      "Commands": [
        {
          "Maintainer": "opensource.knihovna.cz",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "REFRESHED_AT",
              "Value": "2014-09-26"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/usr/bin:/bin:/usr/sbin:/sbin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get -y update \u0026\u0026 apt-get -y install vim mc wget mysql-server gcc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "koha.list",
            "/etc/apt/sources.list.d/koha.list"
          ]
        },
        {
          "CmdLine": [
            "wget -O- http://debian.koha-community.org/koha/gpg.asc | apt-key add -"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y update \u0026\u0026 apt-get -y install koha-common \u0026\u0026 /etc/init.d/koha-common stop"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "a2enmod rewrite"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed 's/INTRAPORT=\"80\"/INTRAPORT=\"8080\"/' /etc/koha/koha-sites.conf \u003e koha-sites.conf \u0026\u0026     mv koha-sites.conf /etc/koha/koha-sites.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Listen 8080 \" \u003e\u003e /etc/apache2/ports.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/etc/init.d/mysql start; sleep 10; koha-create --create-db knihovna; /etc/init.d/koha-common stop; /etc/init.d/apache2 stop; /etc/init.d/mysql stop; sleep 10"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "koha-translate --install cs-CZ;"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm /etc/apache2/sites-enabled/000-default"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed 's/ServerName .*//' /etc/apache2/sites-enabled/knihovna.conf \u003e knihovna.conf \u0026\u0026     mv knihovna.conf /etc/apache2/sites-enabled/knihovna.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install make"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "perl -MCPAN -e 'install Data::Pagination' \u0026\u0026      perl -MCPAN -e 'upgrade Archive::Extract' \u0026\u0026     perl -MCPAN -e 'upgrade Test::WWW::Mechanize' \u0026\u0026     perl -MCPAN -e 'install HTTPD::Bench::ApacheBench'"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /etc/koha /etc/kohaDefault \u0026\u0026 ln -s /koha-data/etc-koha /etc/koha"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /var/lib/mysql /var/lib/mysqlDefault \u0026\u0026 ln -s /koha-data/mysql-data /var/lib/mysql"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "etc-koha.tar",
            "/tmp/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "mysql-data.tar",
            "/tmp/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "init.sh",
            "/init.sh"
          ]
        }
      ]
    }
  ]
}