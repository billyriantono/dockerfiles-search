{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:stretch",
      "SourceCode": "FROM debian:stretch",
      "Platform": "",
      "From": {
        "Image": "debian:stretch"
      },
      "Commands": [
        {
          "Maintainer": "Calum Hunter \u003ccalum.h@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "MR_VERS",
              "Value": "v3.2.2.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "TERM",
              "Value": "xterm"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "TZ",
              "Value": "Australia/Melbourne"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "COMPOSER_ALLOW_SUPERUSER",
              "Value": "1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "COMPOSER_HOME",
              "Value": "/tmp"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 \tapt-get -y install \tapt-transport-https \tlsb-release \tca-certificates \twget \u0026\u0026 \twget -O /etc/apt/trusted.gpg.d/php.gpg https://packages.sury.org/php/apt.gpg \u0026\u0026 \techo \"deb https://packages.sury.org/php/ $(lsb_release -sc) main\" | tee /etc/apt/sources.list.d/php.list \u0026\u0026 \tapt-get update \u0026\u0026 \tapt-get -y install \tnginx \tnano \tcurl \tvim \tgit \tzip \tunzip \tphp-pear \tlibmcrypt-dev \tlibreadline-dev \tphp7.2 \tphp7.2-dev \tphp7.2-cli \tphp7.2-common \tphp7.2-curl \tphp7.2-fpm \tphp7.2-gd \tphp7.2-json \tphp7.2-ldap \tphp7.2-mbstring \tphp7.2-mysql \tphp7.2-opcache \tphp7.2-readline \tphp7.2-soap \tphp7.2-xml \tphp7.2-zip \tlibcurl4-openssl-dev \tzlib1g-dev \tlibxml2-dev \tlibcurl3-dev \u0026\u0026 \tcurl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer \u0026\u0026 \tapt-get clean \u0026\u0026 \trm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pecl channel-update pecl.php.net \u0026\u0026 \tpecl install mcrypt-1.0.1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /www/munkireport \u0026\u0026 \tmkdir -p /etc/nginx/sites-enabled/ \u0026\u0026 \trm -rf /etc/nginx/sites-enabled/* \u0026\u0026 \trm -rf /etc/nginx/nginx.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "https://github.com/munkireport/munkireport-php/archive/$MR_VERS",
            "/www/munkireport/$MR_VERS"
          ]
        },
        {
          "CmdLine": [
            "tar -zxvf /www/munkireport/$MR_VERS --strip-components=1 -C /www/munkireport \u0026\u0026 \trm /www/munkireport/$MR_VERS"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /www/munkireport \u0026\u0026 \t/usr/local/bin/composer install --no-plugins --no-scripts"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "munki-report.conf",
            "/etc/nginx/sites-enabled/munki-report.conf"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "nginx.conf",
            "/etc/nginx/nginx.conf"
          ]
        },
        {
          "CmdLine": [
            "ln -sf /dev/stdout /var/log/nginx/access.log \u0026\u0026 \tln -sf /dev/stderr /var/log/nginx/error.log"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "start.sh",
            "/start.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /start.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "443",
            "80"
          ]
        },
        {
          "CmdLine": [
            "/start.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}