{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:18.10",
      "SourceCode": "FROM ubuntu:18.10",
      "Platform": "",
      "From": {
        "Image": "ubuntu:18.10"
      },
      "Commands": [
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y --no-install-recommends curl rsync tar openjdk-8-jdk openssh-server openssh-client vim \u0026\u0026     apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java-8-openjdk-amd64"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:$JAVA_HOME/bin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "rm /usr/bin/java \u0026\u0026 ln -s $JAVA_HOME/bin/java /usr/bin/java"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -L http://www.eu.apache.org/dist/hadoop/common/hadoop-2.9.2/hadoop-2.9.2.tar.gz | tar -xz -C /usr/local/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local \u0026\u0026 ln -s ./hadoop-2.9.2 hadoop"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "HADOOP_PREFIX",
              "Value": "/usr/local/hadoop"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HADOOP_COMMON_HOME",
              "Value": "/usr/local/hadoop"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HADOOP_HDFS_HOME",
              "Value": "/usr/local/hadoop"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HADOOP_CONF_DIR",
              "Value": "/usr/local/hadoop/etc/hadoop"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HADOOP_CLASSPATH",
              "Value": "$JAVA_HOME/lib/tools.jar"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "sed -i '/^export JAVA_HOME/ s:.*:export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64\\nexport HADOOP_PREFIX=/usr/local/hadoop\\nexport HADOOP_HOME=/usr/local/hadoop\\n:' $HADOOP_PREFIX/etc/hadoop/hadoop-env.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i '/^export HADOOP_CONF_DIR/ s:.*:export HADOOP_CONF_DIR=/usr/local/hadoop/etc/hadoop/:' $HADOOP_PREFIX/etc/hadoop/hadoop-env.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod +x /usr/local/hadoop/etc/hadoop/*-env.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "core-site.xml",
            "$HADOOP_PREFIX/etc/hadoop/core-site.xml"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "hdfs-site.xml",
            "$HADOOP_PREFIX/etc/hadoop/hdfs-site.xml"
          ]
        },
        {
          "CmdLine": [
            "$HADOOP_PREFIX/bin/hdfs namenode -format"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ssh-keygen -q -N \"\" -t rsa -f /root/.ssh/id_rsa"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /root/.ssh/id_rsa.pub /root/.ssh/authorized_keys"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "ssh_config",
            "/root/.ssh/config"
          ]
        },
        {
          "CmdLine": [
            "chmod 600 /root/.ssh/config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown root:root /root/.ssh/config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed  -i \"/^[^#]*UsePAM/ s/.*/#\u0026/\" /etc/ssh/sshd_config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"UsePAM no\" \u003e\u003e /etc/ssh/sshd_config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Port 2122\" \u003e\u003e /etc/ssh/sshd_config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "bootstrap.sh",
            "/etc/bootstrap.sh"
          ]
        },
        {
          "CmdLine": [
            "chown root:root /etc/bootstrap.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod 700 /etc/bootstrap.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "BOOTSTRAP",
              "Value": "/etc/bootstrap.sh"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/etc/bootstrap.sh",
            "-d"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "service ssh start \u0026\u0026 $HADOOP_PREFIX/etc/hadoop/hadoop-env.sh \u0026\u0026 $HADOOP_PREFIX/sbin/start-dfs.sh \u0026\u0026 $HADOOP_PREFIX/bin/hdfs dfs -mkdir -p /user/root/input"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "50010",
            "50020",
            "50070",
            "50075",
            "50090",
            "8020",
            "9000"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "10020",
            "19888"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "2122",
            "49707"
          ]
        }
      ]
    }
  ]
}