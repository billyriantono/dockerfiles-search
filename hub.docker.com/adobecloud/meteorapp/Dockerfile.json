{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "google/debian:wheezy",
      "SourceCode": "FROM google/debian:wheezy",
      "Platform": "",
      "From": {
        "Image": "google/debian:wheezy"
      },
      "Commands": [
        {
          "Name": "volume",
          "Volumes": [
            "/storage/mongodb_data"
          ]
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y curl nginx mongodb-server supervisor"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -v /etc/nginx/nginx.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "nginx.conf",
            "/etc/nginx/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "supervisord.conf",
            "/etc/supervisor/conf.d/supervisord.conf"
          ]
        },
        {
          "Env": [
            {
              "Key": "MONGO_URL",
              "Value": "mongodb://localhost:27017/meteor"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl  https://install.meteor.com/ | sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "meteor create --example todos"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/todos"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Name": "expose",
          "Ports": [
            "3000",
            "80"
          ]
        },
        {
          "CmdLine": [
            "/usr/bin/supervisord",
            "-c",
            "/etc/supervisor/conf.d/supervisord.conf"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}