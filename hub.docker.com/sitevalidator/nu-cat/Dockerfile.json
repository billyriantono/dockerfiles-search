{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "tomcat:8.0.43-jre8",
      "SourceCode": "FROM tomcat:8.0.43-jre8",
      "Platform": "",
      "From": {
        "Image": "tomcat:8.0.43-jre8"
      },
      "Commands": [
        {
          "Maintainer": "Jaime Iniesta \u003cjaimeiniesta@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "WEBAPPS_DIR",
              "Value": "/usr/local/tomcat/webapps"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "rm -rf ${WEBAPPS_DIR}/ROOT  \u0026\u0026 rm -rf ${WEBAPPS_DIR}/docs  \u0026\u0026 rm -rf ${WEBAPPS_DIR}/examples  \u0026\u0026 rm -rf ${WEBAPPS_DIR}/host-manager  \u0026\u0026 rm -rf ${WEBAPPS_DIR}/manager"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_OPTS",
              "Value": "\"-Djava.security.egd=file:/dev/urandom\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VALIDATOR_NU_VERSION",
              "Value": "17.11.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VALIDATOR_NU_ZIP",
              "Value": "vnu.war_${VALIDATOR_NU_VERSION}.zip"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VALIDATOR_NU_URL",
              "Value": "https://github.com/validator/validator/releases/download/${VALIDATOR_NU_VERSION}/${VALIDATOR_NU_ZIP}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VALIDATOR_NU_SHA1",
              "Value": "fd02af604d279ebb3c756c5cbd7212ca76949e7a"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "${VALIDATOR_NU_URL}",
            "/tmp"
          ]
        },
        {
          "CmdLine": [
            "echo \"${VALIDATOR_NU_SHA1} /tmp/${VALIDATOR_NU_ZIP}\" | sha1sum -c -  \u0026\u0026 unzip -d /tmp /tmp/${VALIDATOR_NU_ZIP}  \u0026\u0026 mv /tmp/dist/vnu.war ${WEBAPPS_DIR}/ROOT.war  \u0026\u0026 rm -rf /tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo nu.validator.servlet.connection-timeout=10000 \u003e\u003e /usr/local/tomcat/conf/catalina.properties  \u0026\u0026 echo nu.validator.servlet.socket-timeout=10000 \u003e\u003e /usr/local/tomcat/conf/catalina.properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        }
      ]
    }
  ]
}