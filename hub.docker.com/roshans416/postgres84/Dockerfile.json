{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:centos6",
      "SourceCode": "FROM centos:centos6",
      "Platform": "",
      "From": {
        "Image": "centos:centos6"
      },
      "Commands": [
        {
          "Maintainer": "Ganesh Ravi \"ganesh.reddy.22@gmail.com\"",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "rpm -Uvh http://yum.pgrpms.org/reporpms/8.4/pgdg-centos-8.4-2.noarch.rpm"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum -y install postgresql84-server postgresql84-contrib postgresql84"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum -y install sudo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i 's/.*requiretty$/#Defaults requiretty/' /etc/sudoers"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/etc/init.d/postgresql-8.4 initdb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "postgresql.conf",
            "/var/lib/pgsql/8.4/data/postgresql.conf"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "pg_hba.conf",
            "/var/lib/pgsql/8.4/data/pg_hba.conf"
          ]
        },
        {
          "CmdLine": [
            "chown postgres:postgres /var/lib/pgsql/8.4/data/*.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "run",
            "/usr/local/bin/run"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /usr/local/bin/run"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /var/run/postgresql"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown -R postgres:postgres /var/run/postgresql/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "TERM",
              "Value": "xterm"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/lib/psql"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "5432"
          ]
        },
        {
          "CmdLine": [
            "/usr/local/bin/run"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}