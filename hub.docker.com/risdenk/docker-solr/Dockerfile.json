  "Stages": [
    {
      "Name": "",
      "BaseName": "openjdk:8-jre",
      "SourceCode": "FROM    openjdk:8-jre",
      "Platform": "",
      "From": {
        "Image": "openjdk:8-jre"
      },
      "Commands": [
        {
          "Maintainer": "Kevin Risden \"risdenk@avalonconsult.com\"",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026   apt-get -y install lsof procps \u0026\u0026   rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SOLR_USER",
              "Value": "solr"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SOLR_UID",
              "Value": "8983"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "\"/opt/solr/bin:/opt/docker-solr/scripts:$PATH\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "groupadd -r $SOLR_USER \u0026\u0026   useradd -r -u $SOLR_UID -g $SOLR_USER $SOLR_USER"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SOLR_VERSION",
              "Value": "9.0.0-3628"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p /opt/solr \u0026\u0026   wget -nv --output-document=/opt/solr.tgz https://builds.apache.org/job/Solr-Artifacts-master/lastSuccessfulBuild/artifact/solr/package/solr-$SOLR_VERSION.tgz \u0026\u0026   tar -C /opt/solr --extract --file /opt/solr.tgz --strip-components=1 \u0026\u0026   rm /opt/solr.tgz* \u0026\u0026   mkdir -p /opt/solr/server/solr/lib \u0026\u0026   sed -i -e 's/#SOLR_PORT=8983/SOLR_PORT=8983/' /opt/solr/bin/solr.in.sh \u0026\u0026   sed -i -e '/-Dsolr.clustering.enabled=true/ a SOLR_OPTS=\"$SOLR_OPTS -Dsun.net.inetaddr.ttl=60 -Dsun.net.inetaddr.negative.ttl=60\"' /opt/solr/bin/solr.in.sh \u0026\u0026   chown -R $SOLR_USER:$SOLR_USER /opt/solr \u0026\u0026   mkdir /docker-entrypoint-initdb.d /opt/docker-solr/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "scripts",
            "/opt/docker-solr/scripts"
          ]
        },
        {
          "CmdLine": [
            "chmod -R a+x /opt/docker-solr/scripts/docker-entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown -R $SOLR_USER:$SOLR_USER /opt/docker-solr"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8983"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/solr"
        },
        {
          "Name": "user",
          "User": "$SOLR_USER"
        },
        {
          "CmdLine": [
            "/opt/docker-solr/scripts/docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "solr-foreground"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
