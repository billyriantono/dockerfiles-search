{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "node:latest",
      "SourceCode": "FROM node:latest",
      "Platform": "",
      "From": {
        "Image": "node:latest"
      },
      "Commands": [
        {
          "Maintainer": "Tim Brandin \"tim.brandin@studiointeract.se\"",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y dist-upgrade"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install --no-install-recommends -y -q sudo curl python build-essential git ca-certificates"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PHANTOM_JS_VERSION",
              "Value": "1.9.7-linux-x86_64"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get install -y curl bzip2 libfreetype6 libfontconfig"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sSL https://bitbucket.org/ariya/phantomjs/downloads/phantomjs-$PHANTOM_JS_VERSION.tar.bz2 | tar xjC /"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s phantomjs-$PHANTOM_JS_VERSION /phantomjs"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 DEBIAN_FRONTEND=noninteractive apt-get install -y locales"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i -e 's/# en_US.UTF-8 UTF-8/en_US.UTF-8 UTF-8/' /etc/locale.gen \u0026\u0026     echo 'LANG=\"en_US.UTF-8\"'\u003e/etc/default/locale \u0026\u0026     dpkg-reconfigure --frontend=noninteractive locales \u0026\u0026     update-locale LANG=en_US.UTF-8"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "export LANG=en_US.UTF-8"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "adduser --disabled-password --gecos '' builder"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "usermod -aG sudo builder"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo '%sudo ALL=(ALL) NOPASSWD:ALL' \u003e\u003e /etc/sudoers"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install unicode-data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "s3-upload.sh",
            "/usr/local/bin/s3-upload"
          ]
        },
        {
          "Name": "user",
          "User": "builder"
        },
        {
          "CmdLine": [
            "curl -sL https://install.meteor.com | sh"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}