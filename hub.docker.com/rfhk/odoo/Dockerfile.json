{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:18.04",
      "SourceCode": "FROM ubuntu:18.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:18.04"
      },
      "Commands": [
        {
          "Maintainer": "Quartile Limited \u003cinfo@quartile.co\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y gnupg"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-key adv --keyserver keyserver.ubuntu.com --recv-keys B97B0AFCAA1A47F044F244A07FCC7D46ACCC4CF8     \u0026\u0026 echo \"deb http://apt.postgresql.org/pub/repos/apt/ xenial-pgdg main\" \u003e /etc/apt/sources.list.d/pgdg.list     \u0026\u0026 apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LC_ALL",
              "Value": "C.UTF-8"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "set -x;   apt-get install -yq --no-install-recommends     curl     python3-pip     python3-dev     libffi-dev     libxml2-dev     libxslt1-dev     libldap2-dev     libsasl2-dev     libssl-dev     python3-setuptools     build-essential     postgresql-client-10     libgeoip-dev     git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "requirements.txt",
            "/opt/requirements.txt"
          ]
        },
        {
          "CmdLine": [
            "python3 -m pip install --upgrade pip   \u0026\u0026 pip3 install -r /opt/requirements.txt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "set -x;   apt-get install -y --no-install-recommends     node-less"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y software-properties-common     \u0026\u0026 apt-add-repository -y \"deb http://security.ubuntu.com/ubuntu xenial-security main\"     \u0026\u0026 apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "https://downloads.wkhtmltopdf.org/0.12/0.12.5/wkhtmltox_0.12.5-1.xenial_amd64.deb",
            "/opt/sources/wkhtmltox.deb"
          ]
        },
        {
          "CmdLine": [
            "set -x;   apt-get install -y --no-install-recommends     libxrender1     libfontconfig1     libx11-dev     libjpeg62     libxtst6     fontconfig     xfonts-75dpi     xfonts-base     libpng12-0     libjpeg-turbo8   \u0026\u0026 dpkg -i /opt/sources/wkhtmltox.deb   \u0026\u0026 rm -rf /opt/sources/wkhtmltox.deb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "addgroup --gid=300 odoo \u0026\u0026 adduser --system --uid=300 --gid=300 --home /odoo --shell /bin/bash odoo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./odooboot",
            "/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /odooboot"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "odoo"
        },
        {
          "CmdLine": [
            "bin/bash -c \"mkdir /odoo/{custom,data,etc,log}\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./odoo.conf",
            "/odoo/etc/"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/odoo"
        },
        {
          "CmdLine": [
            "set -x;   git clone --depth 1 https://github.com/odoo/odoo.git -b 13.0   \u0026\u0026 rm -rf odoo/.git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "0"
        },
        {
          "CmdLine": [
            "apt-get install -y supervisor"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./supervisord.conf",
            "/etc/supervisor/conf.d/"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/odoo/custom",
            "/odoo/data",
            "/odoo/etc",
            "/odoo/log",
            "/usr/share/fonts"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8069",
            "8072"
          ]
        },
        {
          "CmdLine": [
            "/usr/bin/supervisord"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}