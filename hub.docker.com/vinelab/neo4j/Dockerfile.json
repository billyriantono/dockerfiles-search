{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "vinelab/base",
      "SourceCode": "FROM vinelab/base",
      "Platform": "",
      "From": {
        "Image": "vinelab/base"
      },
      "Commands": [
        {
          "Maintainer": "Abed Halawi \u003cabed.halawi@vinelab.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "NEO4J_VERSION",
              "Value": "2.2.1"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum install -y java-1.7.0-openjdk"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y tar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /var/lib/neo4j"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget http://dist.neo4j.org/neo4j-community-$NEO4J_VERSION-unix.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar zxf neo4j-community-$NEO4J_VERSION-unix.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp -r neo4j-community-$NEO4J_VERSION/* /var/lib/neo4j"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "export NEO4J_HOME=/var/lib/neo4j"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s|#node_auto_indexing|node_auto_indexing|g\" /var/lib/neo4j/conf/neo4j.properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s|#node_keys_indexable|node_keys_indexable|g\" /var/lib/neo4j/conf/neo4j.properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "neo4j.ini",
            "/etc/supervisord.d/"
          ]
        },
        {
          "CmdLine": [
            "sed -i 's|;environment=KEY=\"value\"|environment=JAVA_HOME=\"/usr/lib/jvm/jre-openjdk/\"|g' /etc/supervisord.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "launch.sh",
            "/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /launch.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm neo4j-community-$NEO4J_VERSION-unix.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf neo4j-community-$NEO4J_VERSION"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/bin/bash",
            "-c",
            "/launch.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}