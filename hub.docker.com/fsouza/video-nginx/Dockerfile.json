{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "build",
      "BaseName": "alpine:3.8",
      "SourceCode": "FROM alpine:3.8 as build",
      "Platform": "",
      "As": "build",
      "From": {
        "Image": "alpine:3.8"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk add --no-cache curl build-base openssl openssl-dev zlib-dev linux-headers pcre-dev luajit luajit-dev ffmpeg ffmpeg-dev libjpeg-turbo libjpeg-turbo-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir nginx nginx-vod-module nginx-lua-module ngx_devel_kit nginx-rtmp-module nginx-thumb-module"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "NGINX_VERSION",
              "Value": "1.14.2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VOD_MODULE_VERSION",
              "Value": "1.23"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LUA_MODULE_VERSION",
              "Value": "v0.10.13"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DEV_MODULE_VERSION",
              "Value": "v0.3.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "RTMP_MODULE_VERSION",
              "Value": "v1.2.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "THUMB_MODULE_VERSION",
              "Value": "0.9.0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -sL https://nginx.org/download/nginx-${NGINX_VERSION}.tar.gz | tar -C nginx --strip 1 -xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL https://github.com/kaltura/nginx-vod-module/archive/${VOD_MODULE_VERSION}.tar.gz | tar -C nginx-vod-module --strip 1 -xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL https://github.com/openresty/lua-nginx-module/archive/${LUA_MODULE_VERSION}.tar.gz | tar -C nginx-lua-module --strip 1 -xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL https://github.com/simpl/ngx_devel_kit/archive/${DEV_MODULE_VERSION}.tar.gz | tar -C ngx_devel_kit --strip 1 -xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL https://github.com/arut/nginx-rtmp-module/archive/${RTMP_MODULE_VERSION}.tar.gz | tar -C nginx-rtmp-module --strip 1 -xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL https://github.com/wandenberg/nginx-video-thumbextractor-module/archive/${THUMB_MODULE_VERSION}.tar.gz | tar -C nginx-thumb-module --strip 1 -xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LUAJIT_INC",
              "Value": "/usr/include/luajit-2.1/"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LUAJIT_LIB",
              "Value": "/usr/lib"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/nginx"
        },
        {
          "CmdLine": [
            "./configure --prefix=/usr/local/nginx \t--with-ld-opt=\"-Wl,-rpath,/usr/lib/libluajit-5.1.so\" \t--add-module=../nginx-vod-module \t--add-module=../ngx_devel_kit \t--add-module=../nginx-lua-module \t--add-module=../nginx-thumb-module \t--add-module=../nginx-rtmp-module \t--with-file-aio \t--with-threads \t--with-cc-opt=\"-O3\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make install"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "alpine:3.8",
      "SourceCode": "FROM alpine:3.8",
      "Platform": "",
      "From": {
        "Image": "alpine:3.8"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk add --no-cache ca-certificates openssl pcre zlib luajit ffmpeg libjpeg-turbo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "build",
          "Name": "copy",
          "SourcesAndDest": [
            "/usr/local/nginx",
            "/usr/local/nginx"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "nginx.conf",
            "/usr/local/nginx/conf/nginx.conf"
          ]
        },
        {
          "CmdLine": [
            "rm -rf /usr/local/nginx/html /usr/loca/nginx/conf/*.default"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/usr/local/nginx/sbin/nginx"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "-g",
            "daemon off;"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}