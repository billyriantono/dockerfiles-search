{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "node:8",
      "SourceCode": "FROM node:8",
      "Platform": "",
      "From": {
        "Image": "node:8"
      },
      "Commands": [
        {
          "Maintainer": "Michael Williams \u003cmichael.williams@enspiral.com\u003e",
          "Name": "maintainer"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "https://github.com/krallin/tini/releases/download/v0.18.0/tini",
            "/tini"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /tini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /home/node/.npm-global ;     chown -R node:node /home/node/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/home/node/.npm-global/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "NPM_CONFIG_PREFIX",
              "Value": "/home/node/.npm-global"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "node"
        },
        {
          "CmdLine": [
            "npm install -g ssb-server@14.1.7"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8008"
          ]
        },
        {
          "Health": {
            "Interval": 30000000000,
            "Retries": 10,
            "StartPeriod": 10000000000,
            "Test": [
              "CMD-SHELL",
              "ssb-server whoami || exit 1"
            ],
            "Timeout": 30000000000
          },
          "Name": "healthcheck"
        },
        {
          "Env": [
            {
              "Key": "HEALING_ACTION",
              "Value": "RESTART"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/tini",
            "--",
            "ssb-server"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "start"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}