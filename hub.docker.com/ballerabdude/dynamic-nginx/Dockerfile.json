{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "nginx:1.11.8",
      "SourceCode": "FROM nginx:1.11.8",
      "Platform": "",
      "From": {
        "Image": "nginx:1.11.8"
      },
      "Commands": [
        {
          "Maintainer": "Abdul Hagi \u003cabdul.hagi@turner.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get upgrade -y \u0026\u0026 apt-get install -y                                                   curl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm /bin/sh \u0026\u0026 ln -s /bin/bash /bin/sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "NVM_DIR",
              "Value": "/usr/local/nvm"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "NODE_VERSION",
              "Value": "6.3.1"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl https://raw.githubusercontent.com/creationix/nvm/v0.32.1/install.sh | bash     \u0026\u0026 source $NVM_DIR/nvm.sh     \u0026\u0026 nvm install $NODE_VERSION     \u0026\u0026 nvm alias default $NODE_VERSION     \u0026\u0026 nvm use default"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "NODE_PATH",
              "Value": "$NVM_DIR/versions/node/v$NODE_VERSION/lib/node_modules"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$NVM_DIR/versions/node/v$NODE_VERSION/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "nginx.tmp.conf",
            "/opt/dynamic-nginx/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "nginx-conf.js",
            "/opt/dynamic-nginx/"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/dynamic-nginx"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./package.json",
            "package.json"
          ]
        },
        {
          "CmdLine": [
            "npm install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "CmdLine": [
            "rm /etc/nginx/conf.d/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "bash",
            "-c",
            "node nginx-conf.js --listen 80 --location / --proxy_pass http://gateway:8080/ --nginx_location /etc/nginx/nginx.conf \u0026\u0026 nginx -g 'daemon off;'"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
