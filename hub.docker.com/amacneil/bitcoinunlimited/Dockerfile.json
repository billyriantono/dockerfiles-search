        },
        {
          "CmdLine": [
            "set -ex \t\u0026\u0026 apt-get update \t\u0026\u0026 apt-get install -qq --no-install-recommends ca-certificates dirmngr gosu gpg wget \t\u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
