        "Image": "debian:stretch-slim"
      },
      "Commands": [
        {
          "CmdLine": [
            "groupadd -r bitcoin \u0026\u0026 useradd -r -m -g bitcoin bitcoin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "set -ex \t\u0026\u0026 apt-get update \t\u0026\u0026 apt-get install -qq --no-install-recommends ca-certificates dirmngr gosu gpg wget \t\u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "BITCOIN_VERSION",
              "Value": "1.3.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BITCOIN_URL",
              "Value": "https://github.com/bitcoinclassic/bitcoinclassic/releases/download/v1.3.1/bitcoin-1.3.1-linux64.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BITCOIN_SHA256",
              "Value": "2c5e9db69bed718a7a26108e17fd4fbc8a86e0fc69d7c4467115d5b45159a3fa"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BITCOIN_ASC_URL",
              "Value": "https://github.com/bitcoinclassic/bitcoinclassic/releases/download/v1.3.1/SHA256SUMS.asc"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
