{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:centos6",
      "SourceCode": "FROM centos:centos6",
      "Platform": "",
      "From": {
        "Image": "centos:centos6"
      },
      "Commands": [
        {
          "Maintainer": "fabric8.io \u003cfabric8@googlegroups.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "yum -y install java-1.7.0-openjdk mysql-server mysql install git ant wget; yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JBPM_VERSION",
              "Value": "6.2.0.Final"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JBPM_HOME",
              "Value": "/opt/jbpm"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget -nv http://ufpr.dl.sourceforge.net/project/jbpm/jBPM%206/jbpm-${JBPM_VERSION}/jbpm-${JBPM_VERSION}-installer-full.zip -O /tmp/jbpm-${JBPM_VERSION}-installer-full.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y unzip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "unzip -q /tmp/jbpm-${JBPM_VERSION}-installer-full.zip -d ${JBPM_HOME} \u0026\u0026 rm /tmp/jbpm-${JBPM_VERSION}-installer-full.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config/standalone-full-wildfly-8.1.0.Final.xml",
            "/opt/jbpm/jbpm-installer/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config/build.properties",
            "/opt/jbpm/jbpm-installer/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config/jbpm-persistence-JPA2.xml",
            "/opt/jbpm/jbpm-installer/db/"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/jbpm/jbpm-installer/"
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/jre-1.7.0-openjdk.x86_64/"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "ant install.demo.noeclipse"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "configure_mysql.sh",
            "/tmp/"
          ]
        },
        {
          "CmdLine": [
            "/tmp/configure_mysql.sh \u0026\u0026 rm /tmp/configure_mysql.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "CmdLine": [
            "mv /opt/jbpm/jbpm-installer/wildfly-8.1.0.Final/standalone/deployments/jbpm-console.war /opt/jbpm/jbpm-installer/wildfly-8.1.0.Final/standalone/deployments/ROOT.war"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "start.sh",
            "/"
          ]
        },
        {
          "CmdLine": [
            "mv /opt/jbpm/jbpm-installer/wildfly-8.1.0.Final/modules/com/mysql/main/mysql-connector-java-5.1.18.jar /opt/jbpm/jbpm-installer/wildfly-8.1.0.Final/modules/com/mysql/main/mysql-connector-java.jar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "workflows",
            "/opt/jbpm/examples/workflows"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/jbpm/examples/workflows"
        },
        {
          "CmdLine": [
            "git config --global user.name \"fabric8\" \u0026\u0026 git config --global user.email fabric8@googlegroups.com \u0026\u0026     git init \u0026\u0026 git add * */.gitignore \u0026\u0026 git commit -m \"Initial import\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/start.sh"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}