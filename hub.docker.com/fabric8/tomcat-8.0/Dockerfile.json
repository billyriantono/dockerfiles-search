{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "fabric8/base-sti",
      "SourceCode": "FROM fabric8/base-sti",
      "Platform": "",
      "From": {
        "Image": "fabric8/base-sti"
      },
      "Commands": [
        {
          "Maintainer": "fabric8@googlegroups.com",
          "Name": "maintainer"
        },
        {
          "Name": "expose",
          "Ports": [
            "8080",
            "8778"
          ]
        },
        {
          "Env": [
            {
              "Key": "TOMCAT_VERSION",
              "Value": "8.0.23"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DEPLOY_DIR",
              "Value": "/maven"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "wget http://archive.apache.org/dist/tomcat/tomcat-8/v${TOMCAT_VERSION}/bin/apache-tomcat-${TOMCAT_VERSION}.tar.gz -O /tmp/catalina.tar.gz \u0026\u0026 tar xzf /tmp/catalina.tar.gz -C /opt \u0026\u0026 ln -s /opt/apache-tomcat-${TOMCAT_VERSION} /opt/tomcat \u0026\u0026 rm /tmp/catalina.tar.gz \u0026\u0026 chown -R jboss:jboss /opt/tomcat/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "jboss"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "tomcat-users.xml",
            "/opt/apache-tomcat-${TOMCAT_VERSION}/conf/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "deploy-and-run.sh",
            "/opt/apache-tomcat-${TOMCAT_VERSION}/bin/"
          ]
        },
        {
          "CmdLine": [
            "wget http://central.maven.org/maven2/org/jolokia/jolokia-jvm/1.3.1/jolokia-jvm-1.3.1-agent.jar -O /opt/tomcat/jolokia-agent.jar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /opt/tomcat/webapps/examples /opt/tomcat/webapps/docs /opt/tomcat/webapps/ROOT"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "CATALINA_OPTS",
              "Value": "-javaagent:/opt/tomcat/jolokia-agent.jar=host=0.0.0.0,port=8778"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CATALINA_HOME",
              "Value": "/opt/tomcat"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:$CATALINA_HOME/bin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/opt/tomcat/bin/deploy-and-run.sh"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}