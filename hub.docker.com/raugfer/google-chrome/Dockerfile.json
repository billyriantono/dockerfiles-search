{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:18.04",
      "SourceCode": "FROM ubuntu:18.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:18.04"
      },
      "Commands": [
        {
          "Maintainer": "\"Rodrigo Ferreira https://hub.docker.com/u/raugfer/\"",
          "Name": "maintainer"
        },
        {
          "Labels": [
            {
              "Key": "Description",
              "Value": "\"Google Chrome\""
            }
          ],
          "Name": "label"
        },
        {
          "Key": "URL",
          "Name": "arg",
          "Value": "https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb"
        },
        {
          "Key": "USER",
          "Name": "arg",
          "Value": "ubuntu"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get upgrade -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y wget gdebi-core"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -q -O /tmp/google-chrome-stable_current_amd64.deb ${URL}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "gdebi --n /tmp/google-chrome-stable_current_amd64.deb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y libcanberra-gtk3-module fonts-ubuntu light-themes"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "DISPLAY",
              "Value": ":0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "useradd -U -G audio -m -s /bin/bash ${USER}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "${USER}"
        },
        {
          "Env": [
            {
              "Key": "USER",
              "Value": "${USER}"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/home/${USER}/"
        },
        {
          "CmdLine": [
            "google-chrome"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}