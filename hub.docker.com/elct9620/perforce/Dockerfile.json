{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:precise",
      "SourceCode": "FROM ubuntu:precise",
      "Platform": "",
      "From": {
        "Image": "ubuntu:precise"
      },
      "Commands": [
        {
          "Maintainer": "蒼時弦也 \"docker@frost.tw\"",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "P4JOURNAL",
              "Value": "/perforce/journal"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "P4PORT",
              "Value": "1666"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "P4ROOT",
              "Value": "/perforce"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/home/perforce"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install wget curl -y \u0026\u0026     wget -q http://package.perforce.com/perforce.pubkey -O - | apt-key add - \u0026\u0026     echo \"deb http://package.perforce.com/apt/ubuntu precise release\" \u003e\u003e /etc/apt/sources.list \u0026\u0026     apt-get update \u0026\u0026     apt-get install perforce-server -y \u0026\u0026     apt-get clean \u0026\u0026     rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p $P4ROOT \u0026\u0026     mkdir -p $HOME/Perforce \u0026\u0026     mkdir -p /var/log/perforce"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "addgroup p4admin \u0026\u0026     chown -R perforce:p4admin $P4ROOT \u0026\u0026     chown -R perforce:p4admin $HOME \u0026\u0026     chown -R perforce:p4admin /var/log/perforce"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "1666"
          ]
        },
        {
          "CmdLine": [
            "p4d"
          ],
          "Name": "entrypoint",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "[\"p4d\", \"-r\", $P4DROOT]"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}