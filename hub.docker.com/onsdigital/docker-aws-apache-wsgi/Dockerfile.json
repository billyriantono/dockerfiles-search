{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "amazonlinux:2016.09",
      "SourceCode": "FROM amazonlinux:2016.09",
      "Platform": "",
      "From": {
        "Image": "amazonlinux:2016.09"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "LANG",
              "Value": "en_GB.UTF-8"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/tmp"
        },
        {
          "Env": [
            {
              "Key": "RUNTIME_PACKAGES",
              "Value": "\"wget bzip2 git httpd httpd-devel\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PYTHON_BUILD_PACKAGES",
              "Value": "\"gcc zlib-devel bzip2-devel sqlite sqlite-devel openssl-devel postgresql94-devel libffi-dev readline-devel\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum update -y \u0026\u0026 yum install -y $RUNTIME_PACKAGES $PYTHON_BUILD_PACKAGES"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://dl.yarnpkg.com/rpm/yarn.repo -O /etc/yum.repos.d/yarn.repo \u0026\u0026     curl --location https://rpm.nodesource.com/setup_6.x | bash - \u0026\u0026     yum install -y nodejs yarn \u0026\u0026     yarn global add gulp-cli"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LD_LIBRARY_PATH",
              "Value": "\"/usr/local/lib\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget https://www.python.org/ftp/python/3.4.2/Python-3.4.2.tar.xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar xvf Python-3.4.2.tar.xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "Python-3.4.2"
        },
        {
          "CmdLine": [
            "./configure --enable-shared \u0026\u0026     make \u0026\u0026     make install \u0026\u0026     ln -s /usr/local/bin/python3 /usr/local/bin/python \u0026\u0026     ln -s /usr/local/bin/pip3 /usr/local/bin/pip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip install -U pip setuptools wheel"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip install mod_wsgi"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp/application"
        },
        {
          "Expression": "COPY requirements.txt /tmp/application/requirements.txt",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN pip install --no-cache-dir -r requirements.txt",
          "Name": "onbuild"
        },
        {
          "Expression": "COPY . /tmp/application",
          "Name": "onbuild"
        },
        {
          "Health": {
            "Test": [
              "CMD-SHELL",
              "curl -f http://localhost:80/healthcheck || exit 1"
            ]
          },
          "Name": "healthcheck"
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "CmdLine": [
            "start-server",
            "--port=80",
            "--user=apache",
            "--group=apache",
            "--log-to-terminal",
            "--log-level=info",
            "--access-log",
            "--startup-log",
            "/tmp/application/application.py"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "mod_wsgi-express"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}