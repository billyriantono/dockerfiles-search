{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "voidbridge/java:latest",
      "SourceCode": "FROM voidbridge/java:latest",
      "Platform": "",
      "From": {
        "Image": "voidbridge/java:latest"
      },
      "Commands": [
        {
          "Maintainer": "Tom Dearman \u003ctom.dearman@voidbridge.com\u003e",
          "Name": "maintainer"
        },
        {
          "Key": "SCALA_VERSION",
          "Name": "arg",
          "Value": "2.11"
        },
        {
          "Key": "KAFKA_VERSION",
          "Name": "arg",
          "Value": "0.9.0.1"
        },
        {
          "CmdLine": [
            "yum install -y --enablerepo=centosplus gettext epel-release \u0026\u0026     yum install -y hostname bind-utils python-pip \u0026\u0026     pip install j2cli \u0026\u0026     yum clean all -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /opt/kafka \u0026\u0026     curl -fL http://apache.mirror.anlx.net/kafka/${KAFKA_VERSION}/kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz |       tar -zxf - -C /opt/kafka --strip-components 1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "files",
            "/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "templates",
            "/tmp/templates"
          ]
        },
        {
          "CmdLine": [
            "chmod 755 /usr/bin/run-kafka"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "HEAP_FRACTION",
              "Value": "0.5"
            },
            {
              "Key": "DEFAULT_PARTITIONS",
              "Value": "1"
            },
            {
              "Key": "LOG_RETENTION_HOURS",
              "Value": "168"
            },
            {
              "Key": "DEFAULT_REPLICATION_FACTOR",
              "Value": "1"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "1001"
        },
        {
          "Name": "expose",
          "Ports": [
            "9092"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/mnt/data"
          ]
        },
        {
          "CmdLine": [
            "run-kafka"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}