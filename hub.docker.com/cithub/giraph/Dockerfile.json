{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "cithub/hadoop",
      "SourceCode": "FROM cithub/hadoop",
      "Platform": "",
      "From": {
        "Image": "cithub/hadoop"
      },
      "Commands": [
        {
          "Maintainer": "Channel IT Services, LLC",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "GIRAPH_VER",
              "Value": "1.2.0-hadoop2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GIRAPH_HOME",
              "Value": "/home/hadoop/giraph"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HADOOP_VER",
              "Value": "2.5.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HADOOP_HOME",
              "Value": "/home/hadoop/hadoop"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ZOOKEEPER_VER",
              "Value": "3.4.10"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ZOOKEEPER_HOME",
              "Value": "/home/hadoop/zookeeper"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get install -y git maven \u0026\u0026\tapt-get update \u0026\u0026\tapt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget http://mirrors.advancedhosters.com/apache/giraph/giraph-1.2.0/giraph-dist-$GIRAPH_VER-bin.tar.gz \u0026\u0026\ttar xzvf giraph-dist-$GIRAPH_VER-bin.tar.gz \u0026\u0026\tmv giraph-1.2.0-hadoop2-for-hadoop-2.5.1 $GIRAPH_HOME \u0026\u0026\trm giraph-dist-$GIRAPH_VER-bin.tar.gz \u0026\u0026\tcd $GIRAPH_HOME \u0026\u0026\tgit clone https://github.com/apache/giraph.git \u0026\u0026\tcd giraph \u0026\u0026\tmvn -Phadoop_2 -DskipTests package"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget http://mirrors.koehn.com/apache/zookeeper/stable/zookeeper-$ZOOKEEPER_VER.tar.gz \u0026\u0026\ttar xzvf zookeeper-$ZOOKEEPER_VER.tar.gz \u0026\u0026\tmv zookeeper-$ZOOKEEPER_VER $ZOOKEEPER_HOME \u0026\u0026\trm zookeeper-$ZOOKEEPER_VER.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /data/giraph \u0026\u0026\tmkdir /data/zookeeper"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "50030"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/data"
          ]
        }
      ]
    }
  ]
}