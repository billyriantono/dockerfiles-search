{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openjdk:11-slim",
      "SourceCode": "FROM openjdk:11-slim",
      "Platform": "",
      "From": {
        "Image": "openjdk:11-slim"
      },
      "Commands": [
        {
          "CmdLine": [
            "groupadd -r --gid 7474 neo4j \u0026\u0026     useradd -r --uid 7474 --gid 7474 neo4j"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get -y install lsof procps wget gpg \u0026\u0026     rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "NEO4J_TARBALL",
              "Value": "neo4j-community-3.5.1-unix.tar.gz"
            },
            {
              "Key": "NEO4J_EDITION",
              "Value": "community"
            },
            {
              "Key": "NEO4J_URI",
              "Value": "http://dist.neo4j.org/neo4j-community-3.5.1-unix.tar.gz"
            },
            {
              "Key": "NEO4J_ACCEPT_LICENSE_AGREEMENT",
              "Value": "yes"
            },
            {
              "Key": "NEO4J_dbms_tx__log_rotation_retention__policy",
              "Value": "100M"
            },
            {
              "Key": "NEO4J_dbms_memory_pagecache_size",
              "Value": "512M"
            },
            {
              "Key": "NEO4J_dbms_memory_heap_initial__size",
              "Value": "512M"
            },
            {
              "Key": "NEO4J_dbms_memory_heap_max__size",
              "Value": "512M"
            },
            {
              "Key": "NEO4J_wrapper_java_additional",
              "Value": "\"-Dneo4j.ext.udc.source=docker\""
            },
            {
              "Key": "NEO4J_dbms_connectors_default__listen__address",
              "Value": "0.0.0.0"
            },
            {
              "Key": "NEO4J_dbms_connector_http_listen__address",
              "Value": "0.0.0.0:7474"
            },
            {
              "Key": "NEO4J_dbms_connector_https_listen__address",
              "Value": "0.0.0.0:7473"
            },
            {
              "Key": "NEO4J_dbms_connector_bolt_listen__address",
              "Value": "0.0.0.0:7687"
            },
            {
              "Key": "NEO4J_ha_host_coordination",
              "Value": "0.0.0.0:5001"
            },
            {
              "Key": "NEO4J_ha_host_data",
              "Value": "0.0.0.0:6001"
            },
            {
              "Key": "NEO4J_causal__clustering_discovery__listen__address",
              "Value": "0.0.0.0:5000"
            },
            {
              "Key": "NEO4J_causal__clustering_discovery__advertised__address",
              "Value": "0.0.0.0:5000"
            },
            {
              "Key": "NEO4J_causal__clustering_transaction__listen__address",
              "Value": "0.0.0.0:6000"
            },
            {
              "Key": "NEO4J_causal__clustering_transaction__advertised__address",
              "Value": "0.0.0.0:6000"
            },
            {
              "Key": "NEO4J_causal__clustering_raft__listen__address",
              "Value": "0.0.0.0:7000"
            },
            {
              "Key": "NEO4J_causal__clustering_raft__advertised__address",
              "Value": "0.0.0.0:7000"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get install -y wget     \u0026\u0026 wget -q ${NEO4J_URI}     \u0026\u0026 tar --extract --file ${NEO4J_TARBALL} --directory /var/lib     \u0026\u0026 mv /var/lib/neo4j-* /var/lib/neo4j     \u0026\u0026 rm ${NEO4J_TARBALL}     \u0026\u0026 mv /var/lib/neo4j/data /data     \u0026\u0026 chown -R neo4j:neo4j /data     \u0026\u0026 chmod -R 777 /data     \u0026\u0026 chown -R neo4j:neo4j /var/lib/neo4j     \u0026\u0026 chmod -R 777 /var/lib/neo4j     \u0026\u0026 ln -s /data /var/lib/neo4j/data     \u0026\u0026 wget -q https://raw.githubusercontent.com/channelit/docker-images/master/neo4j/neo4j-entrypoint.sh -O /neo4j-entrypoint.sh     \u0026\u0026 chmod 755 /neo4j-entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/var/lib/neo4j/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/var/lib/neo4j"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/data"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "7473",
            "7474",
            "7687"
          ]
        },
        {
          "CmdLine": [
            "/neo4j-entrypoint.sh",
            "neo4j",
            "console"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "neo4j"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}