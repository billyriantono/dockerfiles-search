{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "btooncall/centos7:devel",
      "SourceCode": "FROM btooncall/centos7:devel",
      "Platform": "",
      "From": {
        "Image": "btooncall/centos7:devel"
      },
      "Commands": [
        {
          "CmdLine": [
            "mkdir -p /opt/ 2\u003e/dev/null;"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/"
        },
        {
          "CmdLine": [
            "wget -q https://download.elastic.co/elasticsearch/release/org/elasticsearch/distribution/rpm/elasticsearch/2.3.2/elasticsearch-2.3.2.rpm       \u0026\u0026 yum -y install /opt/elasticsearch-2.3.2.rpm       \u0026\u0026 rm -f /opt/elasticsearch-2.3.2.rpm       \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i 's/^.*cluster.name:.*$/cluster.name: live-elasticsearch-cluster/g' /etc/elasticsearch/elasticsearch.yml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i 's/^.*path.data:.*$/path.data: \\/opt\\/elasticsearch-data\\//g' /etc/elasticsearch/elasticsearch.yml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i 's/^.*path.logs:.*$/path.logs: \\/opt\\/elasticsearch-logs\\//g' /etc/elasticsearch/elasticsearch.yml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i 's/^.*network.host:.*$/network.host: 0.0.0.0/g' /etc/elasticsearch/elasticsearch.yml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /opt/elasticsearch-data ; chown -R elasticsearch:elasticsearch /opt/elasticsearch-data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /opt/elasticsearch-logs ; chown -R elasticsearch:elasticsearch /opt/elasticsearch-logs"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/elasticsearch-data",
            "/opt/elasticsearch-logs"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/usr/share/elasticsearch"
        },
        {
          "Name": "expose",
          "Ports": [
            "9200",
            "9300"
          ]
        },
        {
          "Name": "user",
          "User": "elasticsearch"
        },
        {
          "CmdLine": [
            "bin/elasticsearch",
            "-Des.path.conf=/etc/elasticsearch/"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}