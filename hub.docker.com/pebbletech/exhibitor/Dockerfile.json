{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "netflixoss/java:7",
      "SourceCode": "FROM netflixoss/java:7",
      "Platform": "",
      "From": {
        "Image": "netflixoss/java:7"
      },
      "Commands": [
        {
          "Maintainer": "Mike Babineau michael.babineau@gmail.com",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "ZK_RELEASE",
              "Value": "\"http://www.apache.org/dist/zookeeper/zookeeper-3.4.8/zookeeper-3.4.8.tar.gz\""
            },
            {
              "Key": "EXHIBITOR_POM",
              "Value": "\"https://raw.githubusercontent.com/Netflix/exhibitor/d911a16d704bbe790d84bbacc655ef050c1f5806/exhibitor-standalone/src/main/resources/buildscripts/standalone/maven/pom.xml\""
            },
            {
              "Key": "BUILD_DEPS",
              "Value": "\"ca-certificates+ maven\""
            },
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "\"noninteractive\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update     \u0026\u0026 apt-get install -y --allow-unauthenticated --no-install-recommends $BUILD_DEPS     \u0026\u0026 grep '^networkaddress.cache.ttl=' /usr/lib/jvm/java-7-oracle/jre/lib/security/java.security || echo 'networkaddress.cache.ttl=60' \u003e\u003e /usr/lib/jvm/java-7-oracle/jre/lib/security/java.security     \u0026\u0026 wget -O /tmp/zookeeper.tgz $ZK_RELEASE     \u0026\u0026 mkdir -p /opt/zookeeper/transactions /opt/zookeeper/snapshots     \u0026\u0026 tar -xzf /tmp/zookeeper.tgz -C /opt/zookeeper --strip=1     \u0026\u0026 rm /tmp/zookeeper.tgz     \u0026\u0026 mkdir -p /opt/exhibitor     \u0026\u0026 wget -O /opt/exhibitor/pom.xml $EXHIBITOR_POM     \u0026\u0026 mvn -f /opt/exhibitor/pom.xml package     \u0026\u0026 ln -s /opt/exhibitor/target/exhibitor*jar /opt/exhibitor/exhibitor.jar     \u0026\u0026 apt-get purge -y --auto-remove $BUILD_DEPS     \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "include/wrapper.sh",
            "/opt/exhibitor/wrapper.sh"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "include/web.xml",
            "/opt/exhibitor/web.xml"
          ]
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Name": "workdir",
          "Path": "/opt/exhibitor"
        },
        {
          "Name": "expose",
          "Ports": [
            "2181",
            "2888",
            "3888",
            "7203",
            "8181"
          ]
        },
        {
          "Env": [
            {
              "Key": "JMXPORT",
              "Value": "7203"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SERVER_JVMFLAGS",
              "Value": "\"-Dcom.sun.management.jmxremote.rmi.port=7203\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "bash",
            "-ex",
            "/opt/exhibitor/wrapper.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}