{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "rxvc/kafka-base:1.0.0",
      "SourceCode": "FROM rxvc/kafka-base:1.0.0",
      "Platform": "",
      "From": {
        "Image": "rxvc/kafka-base:1.0.0"
      },
      "Commands": [
        {
          "Maintainer": "Rodrigo Vallejo  \u003crxvallejocj@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "COMPONENT",
              "Value": "kafka"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KAFKA_VERSION",
              "Value": "2.1.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SCALA_VERSION",
              "Value": "2.12"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget http://www-eu.apache.org/dist/kafka/${KAFKA_VERSION}/kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz     \u0026\u0026 tar -xvzf kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz     \u0026\u0026 rm -rf kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz     \u0026\u0026 mv kafka_${SCALA_VERSION}-${KAFKA_VERSION} /usr/lib/${COMPONENT}     \u0026\u0026 echo \"===\u003e Setting up ${COMPONENT} dirs...\"     \u0026\u0026 mkdir -p /var/lib/${COMPONENT}/data /etc/${COMPONENT}/secrets     \u0026\u0026 chmod -R ag+w /etc/${COMPONENT} /var/lib/${COMPONENT}/data /etc/${COMPONENT}/secrets"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "KAFKA_HOME",
              "Value": "/usr/lib/${COMPONENT}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "${PATH}:${KAFKA_HOME}/bin"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker/config_templates",
            "/etc/${COMPONENT}/docker/config"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker/scripts",
            "/usr/lib/${COMPONENT}/docker/bin/"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "9092"
          ]
        },
        {
          "CmdLine": [
            "/usr/lib/kafka/docker/bin/run"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}