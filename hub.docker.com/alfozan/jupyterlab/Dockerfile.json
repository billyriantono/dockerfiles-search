{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alfozan/spark:latest",
      "SourceCode": "FROM alfozan/spark:latest",
      "Platform": "",
      "From": {
        "Image": "alfozan/spark:latest"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"Abdul Alfozan https://github.com/alfozan\""
            }
          ],
          "Name": "label"
        },
        {
          "Labels": [
            {
              "Key": "description",
              "Value": "\"JupyterLab with JupyterHub integration and PySpark 2.3 kernel\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "pip3 install jupyterlab"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip3 install pandas matplotlib numpy scipy boto3"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y git curl wget zip iputils-ping dnsutils netcat-openbsd nano bash-completion sudo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip3 install jupyterhub"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y nodejs npm"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "jupyter labextension install @jupyterlab/hub-extension"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get remove --purge -y nodejs npm \u0026\u0026 apt-get autoremove -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "pyspark",
            "/usr/local/share/jupyter/kernels/pyspark"
          ]
        },
        {
          "CmdLine": [
            "pip3 install bash_kernel \u0026\u0026 python3 -m bash_kernel.install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SPARK_HOME",
              "Value": "/spark"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "\"${PATH}:${SPARK_HOME}/bin:/usr/local/bin\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PYSPARK_PYTHON",
              "Value": "python3"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PYTHONIOENCODING",
              "Value": "UTF-8"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "jupyter",
            "lab",
            "--ip=0.0.0.0",
            "--port=8888",
            "--no-browser",
            "--allow-root",
            "--LabApp.token=''"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}