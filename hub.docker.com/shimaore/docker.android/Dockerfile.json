          "CmdLine": [
            "apt-get update \u0026\u0026   apt-get install -y --no-install-recommends     openjdk-8-jdk-headless     lib32stdc++6 lib32z1     ca-certificates     curl     git     make     unzip     zip   \u0026\u0026   rm -rf /var/lib/apt/lists/*"
