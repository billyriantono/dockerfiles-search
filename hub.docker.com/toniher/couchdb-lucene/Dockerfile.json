{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "maven:3-jdk-11",
      "SourceCode": "FROM maven:3-jdk-11",
      "Platform": "",
      "From": {
        "Image": "maven:3-jdk-11"
      },
      "Commands": [
        {
          "Maintainer": "Toni Hermoso Pulido \u003ctoniher@cau.cat\u003e",
          "Name": "maintainer"
        },
        {
          "Key": "COUCHDB_LUCENE_VERSION",
          "Name": "arg",
          "Value": "2.1.0"
        },
        {
          "Env": [
            {
              "Key": "COUCHDB_PORT",
              "Value": "5984"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "COUCHDB_SERVER",
              "Value": "couchdb"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "groupadd -r couchdb \u0026\u0026 useradd -d /opt/couchdb-lucene -g couchdb couchdb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /usr/src; cd /usr/src   \u0026\u0026 curl -L https://github.com/rnewson/couchdb-lucene/archive/v$COUCHDB_LUCENE_VERSION.tar.gz | tar -xz   \u0026\u0026 cd couchdb-lucene-$COUCHDB_LUCENE_VERSION   \u0026\u0026 mvn"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/src/couchdb-lucene-$COUCHDB_LUCENE_VERSION/target   \u0026\u0026 unzip couchdb-lucene-$COUCHDB_LUCENE_VERSION-dist.zip   \u0026\u0026 mv couchdb-lucene-$COUCHDB_LUCENE_VERSION /opt/couchdb-lucene   \u0026\u0026 rm -rf /usr/src/couchdb-lucene-*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "run-lucene.sh",
            "/opt/couchdb-lucene/run-lucene.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /opt/couchdb-lucene/run-lucene.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/couchdb-lucene"
        },
        {
          "Name": "expose",
          "Ports": [
            "5985"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/couchdb-lucene/indexes"
          ]
        },
        {
          "CmdLine": [
            "./run-lucene.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}