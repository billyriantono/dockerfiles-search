{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "nginx:1.9",
      "SourceCode": "FROM nginx:1.9",
      "Platform": "",
      "From": {
        "Image": "nginx:1.9"
      },
      "Commands": [
        {
          "Maintainer": "Adrian Moreno Martinez adrian@morenomartinez.com",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026    apt-get install -y -q --no-install-recommends       ca-certificates       wget \u0026\u0026    apt-get clean \u0026\u0026    rm -r /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "CONFD_VERSION",
              "Value": "0.11.0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget https://github.com/kelseyhightower/confd/releases/download/v$CONFD_VERSION/confd-$CONFD_VERSION-linux-amd64 -O /usr/local/bin/confd"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod 0755 /usr/local/bin/confd"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /etc/confd/{conf.d,templates}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./confd/nginx.conf.tmpl",
            "/etc/confd/templates/nginx.conf.tmpl"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./confd/nginx.toml",
            "/etc/confd/conf.d/nginx.toml"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./bootstrap.sh",
            "/opt/bootstrap.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /opt/bootstrap.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/opt/bootstrap.sh"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}