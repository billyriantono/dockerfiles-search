          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pecl install apcu"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pecl install redis"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "docker-php-ext-install pdo pdo_mysql zip bcmath gd sockets"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "docker-php-ext-enable apcu opcache xdebug redis"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "composer global require friendsofphp/php-cs-fixer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y autoremove \u0026\u0026 apt-get clean \u0026\u0026 apt-get autoclean \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config/zz-docker.conf",
            "/usr/local/etc/php-fpm.d/"
          ]
        },
        {
          "CmdLine": [
            "echo \"[PHP]\\n\"    \"short_open_tag=off\\n\"    \"error_reporting=E_ALL\\n\"    \"display_startup_errors=On\\n\"    \"memory_limit=512M\\n\"     \u003e\u003e $PHPINI"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"[Date]\\n\"    \"date.timezone=\\\"Europe/Rome\\\"\\n\"     \u003e\u003e $PHPINI"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"\\n[SESSION]\\n\"    \"session.save_handler=\\\"redis\\\"\\n\"    \"session.save_path=\\\"tcp://redis-session:6379\\\"\\n\"     \u003e\u003e $PHPINI"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"\\n[XDEBUG]\\n\"    \"xdebug.idekey=$XDEBUG_KEY\\n\"    \"xdebug.default_enable=1\\n\"    \"xdebug.remote_enable=1\\n\"    \"xdebug.remote_autostart=0\\n\"    \"xdebug.remote_connect_back=0\\n\"    \"xdebug.remote_handler=dbgp\\n\"    \"xdebug.profiler_enable=0\\n\"    \"xdebug.remote_host=$XDEBUG_REMOTE_IP\\n\"    \"xdebug.remote_port=$XDEBUG_REMOTE_PORT\\n\"    \u003e\u003e $PHPINI"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm /etc/localtime"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/share/zoneinfo/Europe/Rome /etc/localtime"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "\"date\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "bash -c \"$(wget https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh -q -O -)\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chsh -s /bin/zsh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config/rcsource",
            "/root/rcsource"
          ]
        },
        {
          "CmdLine": [
            "cat /root/rcsource \u003e\u003e /root/.bashrc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cat /root/rcsource \u003e\u003e /root/.zshrc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
