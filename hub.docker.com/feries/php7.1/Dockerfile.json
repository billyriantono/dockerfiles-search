        {
          "CmdLine": [
            "apt-get clean \u0026\u0026 apt-get update \u0026\u0026 apt-get install -y git-core vim wget zsh libicu-dev net-tools zlib1g-dev zip unzip libpng-dev"
          ],
          "Name": "run",
          "PrependShell": true
