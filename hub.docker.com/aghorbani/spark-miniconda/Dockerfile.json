          "PrependShell": true
        },
        {
          "CmdLine": [
            "conda install --yes     'r-base=3.3.1 1'      'r-irkernel=0.6*'     'r-plyr=1.8*'    'r-devtools=1.11*'     'r-dplyr=0.4*'        'r-ggplot2=2.1*'      'r-tidyr=0.5*'   'r-shiny=0.13*'        'r-rmarkdown=0.9*'    'r-forecast=7.1*'     'r-stringr=1.0*' 'r-rsqlite=1.0*'       'r-reshape2=1.4*'     'r-nycflights13=0.2*' 'r-caret=6.0*'   'r-rcurl=1.95*'        'r-randomforest=4.6*' 'r-crayon=1.3*' \u0026\u0026     conda clean -tipsy"
          ],
          "Name": "run",
