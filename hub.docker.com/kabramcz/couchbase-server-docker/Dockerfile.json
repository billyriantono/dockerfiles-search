{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:6",
      "SourceCode": "FROM centos:6",
      "Platform": "",
      "From": {
        "Image": "centos:6"
      },
      "Commands": [
        {
          "Maintainer": "Couchbase Docker Team \u003cdocker@couchbase.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "yum install -y tar     \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "gpg --keyserver ha.pool.sks-keyservers.net --recv-keys B42F6819007F00F88E364FD4036A9C25BF357DD4     \u0026\u0026 curl -o /usr/local/bin/gosu -sSL \"https://github.com/tianon/gosu/releases/download/1.4/gosu-amd64\"     \u0026\u0026 curl -o /usr/local/bin/gosu.asc -sSL \"https://github.com/tianon/gosu/releases/download/1.4/gosu-amd64.asc\"     \u0026\u0026 gpg --verify /usr/local/bin/gosu.asc     \u0026\u0026 rm /usr/local/bin/gosu.asc     \u0026\u0026 chmod +x /usr/local/bin/gosu"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "CB_VERSION",
              "Value": "2.5.2"
            },
            {
              "Key": "CB_RELEASE_URL",
              "Value": "http://packages.couchbase.com/releases"
            },
            {
              "Key": "CB_PACKAGE",
              "Value": "couchbase-server-enterprise_2.5.2_x86_64.rpm"
            },
            {
              "Key": "CB_USERNAME",
              "Value": "Administrator"
            },
            {
              "Key": "CB_PASSWORD",
              "Value": "password"
            },
            {
              "Key": "CB_NODE_RAMSIZE",
              "Value": "256"
            },
            {
              "Key": "PATH",
              "Value": "$PATH:/opt/couchbase/bin:/opt/couchbase/bin/tools:/opt/couchbase/bin/install"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "rpm --install $CB_RELEASE_URL/$CB_VERSION/$CB_PACKAGE"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /opt/couchbase/bin/couchbase-cli /usr/local/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "scripts/couchbase-start",
            "/usr/local/bin/"
          ]
        },
        {
          "CmdLine": [
            "couchbase-start"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "couchbase-server",
            "--",
            "-noinput"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Name": "expose",
          "Ports": [
            "11207",
            "11210",
            "11211",
            "18091",
            "18092",
            "8091",
            "8092"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/couchbase/var"
          ]
        }
      ]
    }
  ]
}