          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install --no-install-recommends -y supervisor curl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y nano vim"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-key adv --keyserver pool.sks-keyservers.net --recv-keys 46095ACC8548582C1A2699A9D27D666CD88E42B4 \u0026\u0026     if ! grep \"elasticsearch\" /etc/apt/sources.list; then echo \"deb http://packages.elasticsearch.org/elasticsearch/1.4/debian stable main\" \u003e\u003e /etc/apt/sources.list;fi \u0026\u0026     if ! grep \"logstash\" /etc/apt/sources.list; then echo \"deb http://packages.elasticsearch.org/logstash/1.5/debian stable main\" \u003e\u003e /etc/apt/sources.list;fi \u0026\u0026     apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install --no-install-recommends -y elasticsearch \u0026\u0026     apt-get clean \u0026\u0026     sed -i '/#cluster.name:.*/a cluster.name: docker.logstash' /etc/elasticsearch/elasticsearch.yml \u0026\u0026     sed -i '/#discovery.zen.ping.multicast.enabled:.*/a discovery.zen.ping.multicast.enabled: false' /etc/elasticsearch/elasticsearch.yml \u0026\u0026     sed -i '/#discovery.zen.ping.unicast.hosts:.*/a discovery.zen.ping.unicast.hosts: [\"127.0.0.1\"]' /etc/elasticsearch/elasticsearch.yml \u0026\u0026     sed -i '/#path.data: \\/path\\/to\\/data/a path.data: /data' /etc/elasticsearch/elasticsearch.yml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./etc/supervisor/conf.d/elasticsearch.conf",
            "/etc/supervisor/conf.d/elasticsearch.conf"
          ]
        },
        {
          "CmdLine": [
            "apt-get install --no-install-recommends -y logstash \u0026\u0026     apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./etc/supervisor/conf.d/logstash.conf",
            "/etc/supervisor/conf.d/logstash.conf"
          ]
        },
        {
          "CmdLine": [
            "/opt/logstash/bin/plugin install logstash-filter-translate"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -s https://download.elasticsearch.org/kibana/kibana/kibana-4.1.2-linux-x64.tar.gz | tar -C /opt -xz \u0026\u0026     ln -s /opt/kibana-4.1.2-linux-x64 /opt/kibana \u0026\u0026     sed -i 's/port: 5601/port: 80/' /opt/kibana/config/kibana.yml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./etc/supervisor/conf.d/kibana.conf",
            "/etc/supervisor/conf.d/kibana.conf"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/opt/logstash/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/usr/bin/supervisord",
            "-n",
            "-c",
            "/etc/supervisor/supervisord.conf"
