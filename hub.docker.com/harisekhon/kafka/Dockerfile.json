{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:latest",
      "SourceCode": "FROM alpine:latest",
      "Platform": "",
      "From": {
        "Image": "alpine:latest"
      },
      "Commands": [
        {
          "Maintainer": "Hari Sekhon (https://www.linkedin.com/in/harisekhon)",
          "Name": "maintainer"
        },
        {
          "Key": "SCALA_VERSION",
          "Name": "arg",
          "Value": "2.11"
        },
        {
          "Key": "KAFKA_VERSION",
          "Name": "arg",
          "Value": "0.11.0.2"
        },
        {
          "Env": [
            {
              "Key": "ADVERTISED_HOSTNAME",
              "Value": "127.0.0.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:/kafka/bin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "TAR",
              "Value": "\"kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz\""
            }
          ],
          "Name": "env"
        },
        {
          "Labels": [
            {
              "Key": "Description",
              "Value": "\"Apache Kafka by LinkedIn\""
            },
            {
              "Key": "\"Scala Version\"",
              "Value": "\"$SCALA_VERSION\""
            },
            {
              "Key": "\"Kafka Version\"",
              "Value": "\"$KAFKA_VERSION\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "set -eux \u0026\u0026     apk add --no-cache bash perl openjdk8-jre-base"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "set -eux \u0026\u0026     apk add --no-cache tar wget \u0026\u0026     wget -t 10 --retry-connrefused -O \"$TAR\" \"https://www.apache.org/dyn/closer.cgi?filename=/kafka/${KAFKA_VERSION}/kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz\u0026action=download\" ||     wget -t 10 --retry-connrefused -O \"$TAR\" \"http://archive.apache.org/dist/kafka/${KAFKA_VERSION}/kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz\" \u0026\u0026     tar zxf \"kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz\" \u0026\u0026     rm -fv \"kafka_${SCALA_VERSION}-${KAFKA_VERSION}.tgz\" \u0026\u0026     ln -sv \"kafka_${SCALA_VERSION}-${KAFKA_VERSION}\" kafka \u0026\u0026     apk del tar wget"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "entrypoint.sh",
            "/"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "2181",
            "9092"
          ]
        },
        {
          "CmdLine": [
            "/entrypoint.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}