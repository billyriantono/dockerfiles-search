{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:7",
      "SourceCode": "FROM centos:7",
      "Platform": "",
      "From": {
        "Image": "centos:7"
      },
      "Commands": [
        {
          "Maintainer": "Eduardo Fraga \u003ceduardo.fraga@fametec.com.br\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "BACULA_VERSION",
              "Value": "9.4.4"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "BACULA_KEY",
              "Value": "5cee4d079821e"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "EMAIL",
              "Value": "suporte@fametec.com.br"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "rpm --import https://www.bacula.org/downloads/Bacula-4096-Distribution-Verification-key.asc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "bacula-community.repo",
            "/etc/yum.repos.d/bacula-community.repo"
          ]
        },
        {
          "CmdLine": [
            "sed -i s/BACULA_VERSION/$(echo $BACULA_VERSION)/g /etc/yum.repos.d/bacula-community.repo   \u0026\u0026 sed -i s/BACULA_KEY/$(echo $BACULA_KEY)/g /etc/yum.repos.d/bacula-community.repo"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rpm -i https://download.postgresql.org/pub/repos/yum/reporpms/EL-7-x86_64/pgdg-redhat-repo-latest.noarch.rpm"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum -y install postgresql94 \tzip \tbzip2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y bacula-postgresql --exclude=bacula-mysql"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum -y clean all \u0026\u0026 rm -rf /var/cache/yum"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "for i in `ls /opt/bacula/bin`; do ln -s /opt/bacula/bin/$i /usr/sbin/$i; done"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}