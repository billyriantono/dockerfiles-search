{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:yakkety",
      "SourceCode": "FROM       ubuntu:yakkety",
      "Platform": "",
      "From": {
        "Image": "ubuntu:yakkety"
      },
      "Commands": [
        {
          "Maintainer": "Jeffry Hesse \u003cjeffryxtron+docker@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Key": "NEXUS_VERSION",
          "Name": "arg",
          "Value": "3.3.0-01"
        },
        {
          "Key": "NEXUS_DOWNLOAD_URL",
          "Name": "arg",
          "Value": "https://download.sonatype.com/nexus/3/nexus-${NEXUS_VERSION}-unix.tar.gz"
        },
        {
          "Key": "BUILD_DEPENDENCIES",
          "Name": "arg",
          "Value": "\"curl tar\""
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y   ${BUILD_DEPENDENCIES}   \u0026\u0026 apt-get clean ${BUILD_DEPENDENCIES}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/opt/java"
            },
            {
              "Key": "JAVA_VERSION_MAJOR",
              "Value": "8"
            },
            {
              "Key": "JAVA_VERSION_MINOR",
              "Value": "112"
            },
            {
              "Key": "JAVA_VERSION_BUILD",
              "Value": "15"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SONATYPE_DIR",
              "Value": "/opt/sonatype"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "NEXUS_HOME",
              "Value": "${SONATYPE_DIR}/nexus"
            },
            {
              "Key": "NEXUS_DATA",
              "Value": "/nexus-data"
            },
            {
              "Key": "NEXUS_CONTEXT",
              "Value": "''"
            },
            {
              "Key": "SONATYPE_WORK",
              "Value": "${SONATYPE_DIR}/sonatype-work"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p /opt   \u0026\u0026 curl --fail --silent --location --retry 3   --header \"Cookie: oraclelicense=accept-securebackup-cookie; \"   http://download.oracle.com/otn-pub/java/jdk/${JAVA_VERSION_MAJOR}u${JAVA_VERSION_MINOR}-b${JAVA_VERSION_BUILD}/server-jre-${JAVA_VERSION_MAJOR}u${JAVA_VERSION_MINOR}-linux-x64.tar.gz   | gunzip   | tar -x -C /opt   \u0026\u0026 ln -s /opt/jdk1.${JAVA_VERSION_MAJOR}.0_${JAVA_VERSION_MINOR} ${JAVA_HOME}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p ${NEXUS_HOME}   \u0026\u0026 curl --fail --silent --location --retry 3     ${NEXUS_DOWNLOAD_URL}   | gunzip   | tar x -C ${NEXUS_HOME} --strip-components=1 nexus-${NEXUS_VERSION}   \u0026\u0026 chown -R root:root ${NEXUS_HOME}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed     -e '/^nexus-context/ s:$:${NEXUS_CONTEXT}:'     -i ${NEXUS_HOME}/etc/nexus-default.properties   \u0026\u0026 sed     -e '/^-Xms/d'     -e '/^-Xmx/d'     -i ${NEXUS_HOME}/bin/nexus.vmoptions"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "useradd -r -u 200 -m -c \"nexus role account\" -d ${NEXUS_DATA} -s /bin/false nexus   \u0026\u0026 mkdir -p ${NEXUS_DATA}/etc ${NEXUS_DATA}/log ${NEXUS_DATA}/tmp ${SONATYPE_WORK}   \u0026\u0026 ln -s ${NEXUS_DATA} ${SONATYPE_WORK}/nexus3   \u0026\u0026 chown -R nexus:nexus ${NEXUS_DATA}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "${NEXUS_DATA}"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8081"
          ]
        },
        {
          "Name": "user",
          "User": "nexus"
        },
        {
          "Name": "workdir",
          "Path": "${NEXUS_HOME}"
        },
        {
          "CmdLine": [
            "bin/nexus",
            "run"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}