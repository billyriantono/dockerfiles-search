{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "java:8",
      "SourceCode": "FROM java:8",
      "Platform": "",
      "From": {
        "Image": "java:8"
      },
      "Commands": [
        {
          "Maintainer": "Cloud Fabric \u003ccloud-fabric@medallia.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y openjdk-8-jdk wget \tpython2.7 libsvn-dev libapr1-dev # Aurora dependencies"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -q -O - http://apache.mirrors.pair.com/zookeeper/zookeeper-3.4.8/zookeeper-3.4.8.tar.gz | tar -xzf - -C /usr/share     \u0026\u0026 mv /usr/share/zookeeper-3.4.8 /usr/share/zookeeper"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ZOO_LOG4J_PROP",
              "Value": "INFO,CONSOLE"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DATADIR",
              "Value": "/opt/zookeeper/data"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LOGDIR",
              "Value": "/opt/zookeeper/log"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CONFDIR",
              "Value": "/opt/zookeeper/conf"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CLIENTPORT",
              "Value": "2181"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "INITLIMIT",
              "Value": "5"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SYNCLIMIT",
              "Value": "2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CNXTIMEOUT",
              "Value": "5000"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "2181",
            "2888",
            "3888"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/zookeeper"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/zookeeper"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "run.sh",
            "/"
          ]
        },
        {
          "CmdLine": [
            "/run.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "start-foreground",
            "/opt/zookeeper/conf/zoo.cfg"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}