{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:bionic",
      "SourceCode": "FROM ubuntu:bionic",
      "Platform": "",
      "From": {
        "Image": "ubuntu:bionic"
      },
      "Commands": [
        {
          "Maintainer": "Scott Fu \u003cscott.fu@oulook.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "TZ",
              "Value": "Etc/UTC"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "ln -snf /usr/share/zoneinfo/$TZ /etc/localtime \u0026\u0026 echo $TZ \u003e /etc/timezone"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y --no-install-recommends dialog apt-utils"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y locales curl vim git software-properties-common \u0026\u0026 \tlocale-gen en_US.UTF-8"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y \tphp-apcu \tphp-ast \tphp-bcmath \tphp-bz2 \tphp-calendar \tphp-cgi \tphp-cli \tphp-common \tphp-curl \tphp-date \tphp-db \tphp-deepcopy \tphp-directory-scanner \tphp-dompdf \tphp-email-validator \tphp-enchant \tphp-fdomdocument \tphp-fpdf \tphp-fpm \tphp-gd \tphp-geoip \tphp-imagick \tphp-gmp \tphp-imap \tphp-intl \tphp-json \tphp-ldap \tphp-mbstring \tphp-mysql \tphp-odbc \tphp-opcache \tphp-pgsql \tphp-phpdbg \tphp-pspell \tphp-readline \tphp-redis \tphp-recode \tphp-soap \tphp-sqlite3 \tphp-tidy \tphp-xml \tphp-xmlrpc \tphp-xsl \tphp-zip \tphp-mongodb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s/;date.timezone =.*/date.timezone = UTC/\" /etc/php/7.2/cli/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s/;date.timezone =.*/date.timezone = UTC/\" /etc/php/7.2/fpm/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s/display_errors = Off/display_errors = On/\" /etc/php/7.2/fpm/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s/upload_max_filesize = .*/upload_max_filesize = 10M/\" /etc/php/7.2/fpm/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s/post_max_size = .*/post_max_size = 10M/\" /etc/php/7.2/fpm/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s/;cgi.fix_pathinfo=1/cgi.fix_pathinfo=0/\" /etc/php/7.2/fpm/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i -e \"s/pid =.*/pid = \\/var\\/run\\/php7.2-fpm.pid/\" /etc/php/7.2/fpm/php-fpm.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i -e \"s/error_log =.*/error_log = \\/proc\\/self\\/fd\\/2/\" /etc/php/7.2/fpm/php-fpm.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i -e \"s/;daemonize\\s*=\\s*yes/daemonize = no/g\" /etc/php/7.2/fpm/php-fpm.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s/listen = .*/listen = 9000/\" /etc/php/7.2/fpm/pool.d/www.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i \"s/;catch_workers_output = .*/catch_workers_output = yes/\" /etc/php/7.2/fpm/pool.d/www.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl https://getcomposer.org/installer \u003e composer-setup.php \u0026\u0026 php composer-setup.php \u0026\u0026 mv composer.phar /usr/local/bin/composer \u0026\u0026 rm composer-setup.php"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get clean \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* \u0026\u0026 apt-get autoremove"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /var/www/html \u0026\u0026 chown -R www-data:www-data /var/www/html"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/www/html"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/var/www/html"
        },
        {
          "Name": "expose",
          "Ports": [
            "9000"
          ]
        },
        {
          "CmdLine": [
            "php-fpm7.2"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}