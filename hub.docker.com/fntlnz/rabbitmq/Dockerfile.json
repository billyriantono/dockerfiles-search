{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:centos7",
      "SourceCode": "FROM centos:centos7",
      "Platform": "",
      "From": {
        "Image": "centos:centos7"
      },
      "Commands": [
        {
          "Maintainer": "Lorenzo Fontana, fontanalorenzo@me.com",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "su -c 'rpm -Uvh http://download.fedoraproject.org/pub/epel/7/x86_64/e/epel-release-7-5.noarch.rpm'"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y install wget telnet tar erlang"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -nv -O - http://www.rabbitmq.com/releases/rabbitmq-server/v3.4.1/rabbitmq-server-generic-unix-3.4.1.tar.gz | tar zx"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv rabbitmq_server-3.4.1 /usr/local/rabbitmq"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/local/rabbitmq/sbin/* /usr/local/sbin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"[{rabbit, [{loopback_users, []}]}].\" \u003e /usr/local/rabbitmq/etc/rabbitmq/rabbitmq.config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rabbitmq-plugins enable rabbitmq_management"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rabbitmq-plugins enable rabbitmq_stomp"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /etc/rabbitmq"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/usr/local/rabbitmq/etc/rabbitmq"
          ]
        },
        {
          "CmdLine": [
            "rabbitmq-server"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "Name": "expose",
          "Ports": [
            "15672",
            "1883",
            "5671",
            "5672",
            "61613",
            "61614",
            "8883"
          ]
        }
      ]
    }
  ]
}