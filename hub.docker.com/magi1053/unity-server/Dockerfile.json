{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:latest",
      "SourceCode": "FROM alpine:latest",
      "Platform": "",
      "From": {
        "Image": "alpine:latest"
      },
      "Commands": [
        {
          "Key": "GLIBC_BASE_URL",
          "Name": "arg",
          "Value": "\"https://github.com/sgerrand/alpine-pkg-glibc/releases/download\""
        },
        {
          "Key": "GLIBC_PACKAGE_VERSION",
          "Name": "arg",
          "Value": "\"2.28-r0\""
        },
        {
          "Key": "GLIBC_BASE_PACKAGE_FILENAME",
          "Name": "arg",
          "Value": "\"glibc-$GLIBC_PACKAGE_VERSION.apk\""
        },
        {
          "Key": "GLIBC_BIN_PACKAGE_FILENAME",
          "Name": "arg",
          "Value": "\"glibc-bin-$GLIBC_PACKAGE_VERSION.apk\""
        },
        {
          "Key": "GLIBC_I18N_PACKAGE_FILENAME",
          "Name": "arg",
          "Value": "\"glibc-i18n-$GLIBC_PACKAGE_VERSION.apk\""
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "https://alpine-pkgs.sgerrand.com/sgerrand.rsa.pub",
            "/etc/apk/keys/sgerrand.rsa.pub"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "$GLIBC_BASE_URL/$GLIBC_PACKAGE_VERSION/$GLIBC_BASE_PACKAGE_FILENAME",
            "$GLIBC_BASE_PACKAGE_FILENAME"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "$GLIBC_BASE_URL/$GLIBC_PACKAGE_VERSION/$GLIBC_BIN_PACKAGE_FILENAME",
            "$GLIBC_BIN_PACKAGE_FILENAME"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "$GLIBC_BASE_URL/$GLIBC_PACKAGE_VERSION/$GLIBC_I18N_PACKAGE_FILENAME",
            "$GLIBC_I18N_PACKAGE_FILENAME"
          ]
        },
        {
          "CmdLine": [
            "apk add --update --no-cache curl bash libstdc++"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apk add $GLIBC_BASE_PACKAGE_FILENAME $GLIBC_BIN_PACKAGE_FILENAME $GLIBC_I18N_PACKAGE_FILENAME     \u0026\u0026 rm \"/etc/apk/keys/sgerrand.rsa.pub\" $GLIBC_BASE_PACKAGE_FILENAME $GLIBC_BIN_PACKAGE_FILENAME $GLIBC_I18N_PACKAGE_FILENAME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/usr/glibc-compat/bin/localedef -i en_US -f UTF-8 en_US.UTF-8"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "1001"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/game",
            "/.config"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/game"
        }
      ]
    }
  ]
}