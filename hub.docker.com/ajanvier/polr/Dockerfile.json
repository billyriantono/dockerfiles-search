          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "seeders/AdminSeeder.php",
            "AdminSeeder_withoutEnv.php"
          ]
        },
        {
          "CmdLine": [
            "apk del git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "CmdLine": [
            "/wait-for-it.sh $DB_HOST:$DB_PORT --strict --timeout=120 -- /start.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": true
        }
