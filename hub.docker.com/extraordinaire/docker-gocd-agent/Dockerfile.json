{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:13.10",
      "SourceCode": "FROM ubuntu:13.10",
      "Platform": "",
      "From": {
        "Image": "ubuntu:13.10"
      },
      "Commands": [
        {
          "Maintainer": "Andrei Serdeliuc, andrei@apikot.com",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "echo \"deb http://archive.ubuntu.com/ubuntu saucy main universe\" \u003e /etc/apt/sources.list"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y update \u0026\u0026 apt-get -y upgrade"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y wget openjdk-7-jre-headless curl unzip git subversion mercurial"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java-7-openjdk-amd64"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget -O /tmp/go-agent.deb http://download01.thoughtworks.com/go/13.4.1/ga/go-agent-13.4.1-18342.deb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "dpkg -i /tmp/go-agent.deb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm /tmp/go-agent.deb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -r -i \"s/^(GO_SERVER)=(.*)/\\1=\\$SERVER_PORT_8153_TCP_ADDR/g\" /etc/default/go-agent"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/lib/go-agent"
          ]
        },
        {
          "CmdLine": [
            "/usr/lib/jvm/java-7-openjdk-amd64/bin/java -jar /usr/share/go-agent/agent-bootstrapper.jar $SERVER_PORT_8153_TCP_ADDR $SERVER_PORT_8153_TCP_PORT"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}