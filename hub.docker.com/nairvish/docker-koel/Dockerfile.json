      "SourceCode": "FROM php:7.2.0-apache-stretch as builder",
      "Platform": "",
      "As": "builder",
      "From": {
        "Image": "php:7.2.0-apache-stretch"
      },
      "Commands": [
        {
          "Key": "KOEL_CLONE_SOURCE",
          "Name": "arg",
          "Value": "https://github.com/phanan/koel.git"
        },
        {
          "Key": "KOEL_VERSION_REF",
          "Name": "arg",
          "Value": "v3.7.2"
        },
        {
          "Key": "COMPOSER_VERSION",
          "Name": "arg",
          "Value": "1.1.2"
        },
        {
          "Key": "NODE_VERSION",
          "Name": "arg",
          "Value": "node_8.x"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install --yes   gnupg2   apt-transport-https"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl --silent https://deb.nodesource.com/gpgkey/nodesource.gpg.key     | apt-key add - \u0026\u0026   echo \"deb https://deb.nodesource.com/${NODE_VERSION} stretch main\"     | tee /etc/apt/sources.list.d/nodesource.list \u0026\u0026   echo \"deb-src https://deb.nodesource.com/${NODE_VERSION} stretch main\"     | tee --append /etc/apt/sources.list.d/nodesource.list"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl --silent --show-error https://dl.yarnpkg.com/debian/pubkey.gpg     | apt-key add - \u0026\u0026   echo \"deb https://dl.yarnpkg.com/debian/ stable main\"     | tee /etc/apt/sources.list.d/yarn.list"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Key": "RUNTIME_DEPS",
          "Name": "arg",
          "Value": "\"  libxml2-dev   zlib1g-dev   libcurl4-openssl-dev\""
        },
        {
          "CmdLine": [
