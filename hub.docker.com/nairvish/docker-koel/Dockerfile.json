          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sS https://getcomposer.org/installer     | php --           --install-dir=/usr/local/bin           --filename=composer           --version=${COMPOSER_VERSION} \u0026\u0026 \tchmod +x /usr/local/bin/composer \u0026\u0026   composer --version"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Key": "PHP_BUILD_DEPS",
          "Name": "arg",
          "Value": "\"zip mbstring curl xml\""
        },
        {
          "CmdLine": [
            "docker-php-ext-install ${PHP_BUILD_DEPS}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "www-data"
        },
        {
          "CmdLine": [
            "git clone ${KOEL_CLONE_SOURCE} -b ${KOEL_VERSION_REF} /tmp/koel"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp/koel"
        },
        {
          "CmdLine": [
            "composer install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yarn install"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
