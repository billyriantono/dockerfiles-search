{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "python",
      "SourceCode": "FROM python",
      "Platform": "",
      "From": {
        "Image": "python"
      },
      "Commands": [
        {
          "Maintainer": "Angus Lees \u003cgus@inodes.org\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "adduser --disabled-login --home /user  --gecos 'Generic unprivileged user' user"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "install -d -m 01777 /pipcache"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PIP_DOWNLOAD_CACHE",
              "Value": "/pipcache"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "pip install tox"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -q update \u0026\u0026 apt-get -qy install  git-core  graphviz  libffi-dev  libmysqlclient-dev  libpq-dev  libsqlite3-dev  libssl-dev  libvirt-dev  libxml2-dev  libxslt-dev  pkg-config  python-dev  python-pip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/user"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/app"
        },
        {
          "CmdLine": [
            "chown user:user /app"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "user"
        },
        {
          "Expression": "COPY tox.ini setup.py *requirements.txt /app/",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN tox --notest -c /app/tox.ini --installpkg /dev/null",
          "Name": "onbuild"
        },
        {
          "Expression": "COPY sdist.zip /tmp/",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN  unzip -q /tmp/sdist.zip -d /tmp/exdir \u0026\u0026  find /tmp/exdir -mindepth 2 -maxdepth 2 -print0 | xargs -0 mv -t /app \u0026\u0026  rmdir /tmp/exdir/* /tmp/exdir",
          "Name": "onbuild"
        },
        {
          "CmdLine": [
            "tox",
            "--develop"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}