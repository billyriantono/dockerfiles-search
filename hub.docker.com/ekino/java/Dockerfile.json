{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ekino/base",
      "SourceCode": "FROM ekino/base",
      "Platform": "",
      "From": {
        "Image": "ekino/base"
      },
      "Commands": [
        {
          "Maintainer": "Matthieu Fronton \u003cfronton@ekino.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JAVA_VERSION",
              "Value": "7"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y software-properties-common python-software-properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo oracle-java${JAVA_VERSION}-installer shared/accepted-oracle-license-v1-1 select true | debconf-set-selections"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "add-apt-repository -y ppa:webupd8team/java"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y oracle-java${JAVA_VERSION}-installer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java-${JAVA_VERSION}-oracle"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "groupadd -g 42311 java \u0026\u0026 useradd -g 42311 -u 42311 -d /home/java -m -s /bin/bash java"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "java"
        },
        {
          "Name": "workdir",
          "Path": "/home/java"
        },
        {
          "CmdLine": [
            "curl -s get.sdkman.io | bash"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /var/cache/oracle-jdk${JAVA_VERSION}-installer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "java.sh",
            "/start.d/05-java"
          ]
        }
      ]
    }
  ]
}