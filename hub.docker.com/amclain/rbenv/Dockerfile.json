{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:14.04",
      "SourceCode": "FROM ubuntu:14.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:14.04"
      },
      "Commands": [
        {
          "Maintainer": "Alex McLain \u003calex@alexmclain.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get -qq update \u0026\u0026     apt-get -y install git wget autoconf bison build-essential libssl-dev     libyaml-dev libreadline6-dev zlib1g-dev libncurses5-dev libffi-dev libgdbm3     libgdbm-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "RBENV_PATH",
              "Value": "/root/.rbenv"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "git clone https://github.com/sstephenson/rbenv.git $RBENV_PATH"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/sstephenson/ruby-build.git ${RBENV_PATH}/plugins/ruby-build"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/root/.rbenv/bin:/root/.rbenv/shims:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Expression": "RUN cd $RBENV_PATH; git pull",
          "Name": "onbuild"
        },
        {
          "Expression": "RUN cd ${RBENV_PATH}/plugins/ruby-build; git pull",
          "Name": "onbuild"
        }
      ]
    }
  ]
}