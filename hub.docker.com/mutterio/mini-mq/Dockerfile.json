{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.5",
      "SourceCode": "FROM alpine:3.5",
      "Platform": "",
      "From": {
        "Image": "alpine:3.5"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk add openjdk8-jre-base ca-certificates --update \u0026\u0026  rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAR_URL",
              "Value": "https://s3-eu-west-1.amazonaws.com/softwaremill-public/elasticmq-server-0.13.2.jar"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/elasticmq"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "$JAR_URL",
            "elasticmq-server.jar"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "custom.conf",
            "/elasticmq/custom.conf"
          ]
        },
        {
          "CmdLine": [
            "java",
            "-Dconfig.file=/elasticmq/custom.conf",
            "-jar",
            "/elasticmq/elasticmq-server.jar"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        }
      ]
    }
  ]
}