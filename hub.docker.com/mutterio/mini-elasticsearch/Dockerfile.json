{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "mutterio/mini-java",
      "SourceCode": "FROM mutterio/mini-java",
      "Platform": "",
      "From": {
        "Image": "mutterio/mini-java"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "ELASTICSEARCH_VERSION",
              "Value": "1.5.2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APP_DIR",
              "Value": "/opt/elasticsearch"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p /opt \u0026\u0026   cd /tmp \u0026\u0026   wget --progress=dot:mega https://download.elasticsearch.org/elasticsearch/elasticsearch/elasticsearch-$ELASTICSEARCH_VERSION.tar.gz \u0026\u0026   tar -xzf elasticsearch-$ELASTICSEARCH_VERSION.tar.gz \u0026\u0026   rm -rf elasticsearch-$ELASTICSEARCH_VERSION.tar.gz \u0026\u0026   mv elasticsearch-$ELASTICSEARCH_VERSION $APP_DIR \u0026\u0026  mkdir -p /data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./config/elasticsearch.yml",
            "$APP_DIR/config/elasticsearch.yml"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./scripts/start.sh",
            "/start.sh"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/data"
          ]
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java-1.7-openjdk"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "9200",
            "9300"
          ]
        },
        {
          "Env": [
            {
              "Key": "CLUSTER_NAME",
              "Value": "mini-docker"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DATA_PATH",
              "Value": "/data/data"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DATA_LOGS",
              "Value": "/data/log"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ES_HEAP_SIZE",
              "Value": "512m"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/start.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}