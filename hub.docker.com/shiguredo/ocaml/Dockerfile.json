{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:14.04",
      "SourceCode": "FROM ubuntu:14.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:14.04"
      },
      "Commands": [
        {
          "Maintainer": "NAKAI Ryosuke \u003cnakai@shiguredo.jp\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "OCAML_VERSION",
              "Value": "4.03.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "OPAM_VERSION",
              "Value": "1.2.2"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "sources.list",
            "/etc/apt/sources.list"
          ]
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get upgrade -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install build-essential git unzip bzip2 tar curl m4 -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get clean \u0026\u0026 rm -rf /var/cache/apt/archives/* /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sSL \"http://caml.inria.fr/pub/distrib/ocaml-4.03/ocaml-4.03.0.tar.gz\"     | tar -v -C /usr/local/src -xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/src/ocaml-4.03.0     \u0026\u0026 ./configure     \u0026\u0026 make world.opt     \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sSL \"https://github.com/ocaml/opam/releases/download/${OPAM_VERSION}/opam-full-${OPAM_VERSION}.tar.gz\"     | tar -v -C /usr/local/src -xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/src/opam-full-1.2.2     \u0026\u0026 ./configure     \u0026\u0026 make lib-ext     \u0026\u0026 make     \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "opam init"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "opam install core.113.33.02+4.03 -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "opam install menhir.20160504 -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "opam install omake.0.9.8.6-0.rc1 -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "opam install ucorelib.0.0.2 -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/root/.opam/system/bin:$PATH"
            }
          ],
          "Name": "env"
        }
      ]
    }
  ]
}