{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:7",
      "SourceCode": "FROM centos:7",
      "Platform": "",
      "From": {
        "Image": "centos:7"
      },
      "Commands": [
        {
          "Maintainer": "Tommy Hughes \u003ctchughesiv@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "user_setup",
            "systemd_setup",
            "/tmp/"
          ]
        },
        {
          "CmdLine": [
            "yum -y update-minimal --security --sec-severity=Important --sec-severity=Critical --setopt=tsflags=nodocs \u0026\u0026     yum -y install cronie \u0026\u0026     yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "APP_ROOT",
              "Value": "/opt/app-root"
            },
            {
              "Key": "USER_NAME",
              "Value": "default"
            },
            {
              "Key": "USER_UID",
              "Value": "10001"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APP_HOME",
              "Value": "${APP_ROOT}/src"
            },
            {
              "Key": "PATH",
              "Value": "$PATH:${APP_ROOT}/bin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p ${APP_HOME} ${APP_ROOT}/etc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "bin/",
            "${APP_ROOT}/bin/"
          ]
        },
        {
          "CmdLine": [
            "chmod -R ug+x ${APP_ROOT}/bin ${APP_ROOT}/etc /tmp/user_setup /tmp/systemd_setup \u0026\u0026     /tmp/user_setup"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "stopsignal",
          "Signal": "SIGRTMIN+3"
        },
        {
          "Env": [
            {
              "Key": "container",
              "Value": "docker"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "systemctl set-default multi-user.target \u0026\u0026     systemctl enable crond \u0026\u0026     /tmp/systemd_setup"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "${USER_UID}"
        },
        {
          "Name": "workdir",
          "Path": "${APP_ROOT}"
        },
        {
          "CmdLine": [
            "sed \"s@${USER_NAME}:x:${USER_UID}:@${USER_NAME}:x:\\${USER_ID}:@g\" /etc/passwd \u003e ${APP_ROOT}/etc/passwd.template"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/sbin/init"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}