{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos/httpd-24-centos7",
      "SourceCode": "FROM centos/httpd-24-centos7",
      "Platform": "",
      "From": {
        "Image": "centos/httpd-24-centos7"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "SUMMARY",
              "Value": "\"Repmgr Documentation\""
            },
            {
              "Key": "DESCRIPTION",
              "Value": "\"Repmgr Documentation as it seen in https://repmgr.org/docs/ The image is based on centos/httpd-24-centos7 to run unprivileged httpd container.\""
            }
          ],
          "Name": "env"
        },
        {
          "Labels": [
            {
              "Key": "summary",
              "Value": "\"$SUMMARY\""
            },
            {
              "Key": "description",
              "Value": "\"$DESCRIPTION\""
            },
            {
              "Key": "io.k8s.description",
              "Value": "\"$DESCRIPTION\""
            },
            {
              "Key": "io.k8s.display-name",
              "Value": "\"Repmgr Documentation\""
            },
            {
              "Key": "io.openshift.expose-services",
              "Value": "\"8080:http,8443:https\""
            },
            {
              "Key": "io.openshift.tags",
              "Value": "\"documentation,docs,postgresql,repmgr\""
            },
            {
              "Key": "name",
              "Value": "\"dockerized-docs/repmgr\""
            },
            {
              "Key": "maintainer",
              "Value": "\"Genadi Postrilko \u003cgenadipost@gmail.com\u003e\""
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "PG_VERSION",
              "Value": "9.6.8"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "REPMGR_VERSION",
              "Value": "4.0.4"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PG_CONFIG",
              "Value": "/usr/local/pgsql/bin/pg_config"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/usr/local/pgsql/bin/:\"$PATH\""
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Name": "workdir",
          "Path": "/opt/app-root/src/"
        },
        {
          "CmdLine": [
            "yum -y groupinstall \"Development Tools\" \u0026\u0026     yum -y install yum-utils openjade docbook-dtds docbook-style-dsssl docbook-style-xsl                    readline-devel zlib-devel texlive-jadetex texlive-jadetex-doc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -L https://github.com/2ndQuadrant/repmgr/archive/v$REPMGR_VERSION.tar.gz -o repmgr-v$REPMGR_VERSION.tar.gz \u0026\u0026     curl -L https://ftp.postgresql.org/pub/source/v$PG_VERSION/postgresql-$PG_VERSION.tar.gz -o postgresql-$PG_VERSION.tar.gz \u0026\u0026     tar -xvf repmgr-v$REPMGR_VERSION.tar.gz -C . \u0026\u0026     tar -xvf postgresql-$PG_VERSION.tar.gz -C ."
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/app-root/src/postgresql-$PG_VERSION"
        },
        {
          "CmdLine": [
            "./configure \u0026\u0026     make \u0026\u0026     make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/app-root/src/repmgr-$REPMGR_VERSION"
        },
        {
          "CmdLine": [
            "./configure \u0026\u0026     make install-doc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp -r /usr/local/pgsql/share/doc/contrib/repmgr/* /var/www/html/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /opt/app-root/src/{repmgr-v$REPMGR_VERSION.tar.gz, postgresql-$PG_VERSION.tar.gz, postgresql-$PG_VERSION, repmgr-$REPMGR_VERSION}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "default"
        },
        {
          "CmdLine": [
            "/usr/bin/run-httpd"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}