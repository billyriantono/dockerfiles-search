{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ysaotome/ubuntu",
      "SourceCode": "FROM ysaotome/ubuntu",
      "Platform": "",
      "From": {
        "Image": "ysaotome/ubuntu"
      },
      "Commands": [
        {
          "Maintainer": "Yuichi Saotome \u003cy@sotm.jp\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget -qO- https://deb.nodesource.com/setup | bash -"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y supervisor redis-server openssh-server nodejs"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm install -g hubot@2.6.0 coffee-script"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/"
        },
        {
          "CmdLine": [
            "hubot --create Hubot-DevHub"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/Hubot-DevHub"
        },
        {
          "CmdLine": [
            "npm install hubot-devhub --save"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm install ."
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "useradd -m -d /Hubot-DevHub -s /bin/bash hubot"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'hubot:hubot' | chpasswd"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'hubot ALL=(ALL) NOPASSWD:ALL' \u003e /etc/sudoers.d/hubot"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /var/run/sshd"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "HUBOT_DEVHUB_NAME",
              "Value": "hubot"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HUBOT_DEVHUB_URL",
              "Value": "http://localhost:3000/"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "supervisord.conf",
            "/etc/supervisor/conf.d/hubot-devhub.conf"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "22"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/Hubot-DevHub",
            "/var/lib/redis"
          ]
        },
        {
          "CmdLine": [
            "/usr/bin/supervisord",
            "-n"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}