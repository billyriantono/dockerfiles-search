FROM linuxbrew/linuxbrew:1.3.1

# Install homebrew files
RUN brew tap homebrew/science \
    && brew install \
            bcftools \
            beagle \
            bedtools \
            datamash \
            delly \
            fastqc \
            muscle \
            nextflow \
            igv \
            jq \
            imagemagick \
            sambamba \
            snpeff \
            vcflib \
            vcftools