{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.4",
      "SourceCode": "FROM alpine:3.4",
      "Platform": "",
      "From": {
        "Image": "alpine:3.4"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "SSR_URL",
              "Value": "https://github.com/shadowsocksr/shadowsocksr/archive/manyuser.zip"
            }
          ],
          "Name": "env"
        },
        {
          "Key": "KCP_VER",
          "Name": "arg",
          "Value": "20170329"
        },
        {
          "Key": "KCP_URL",
          "Name": "arg",
          "Value": "https://github.com/xtaci/kcptun/releases/download/v$KCP_VER/kcptun-linux-amd64-$KCP_VER.tar.gz"
        },
        {
          "CmdLine": [
            "set -ex     \u0026\u0026 apk --update add --no-cache libsodium py-pip curl tar     \u0026\u0026 pip --no-cache-dir install $SSR_URL     \u0026\u0026 rm -rf /var/cache/apk     \u0026\u0026 cd /tmp     \u0026\u0026 curl -sSL $KCP_URL | tar xz server_linux_amd64     \u0026\u0026 mv server_linux_amd64 /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SERVER_ADDR",
              "Value": "0.0.0.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SERVER_PORT",
              "Value": "8388"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PASSWORD",
              "Value": "sakura"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "METHOD",
              "Value": "chacha20"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PROTOCOL",
              "Value": "auth_sha1_v4_compatible"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "OBFS",
              "Value": "tls1.2_ticket_auth_compatible"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "TIMEOUT",
              "Value": "300"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KCP_LISTEN",
              "Value": "1024"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KCP_PASS",
              "Value": "kcptun"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KCP_ENCRYPT",
              "Value": "aes"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KCP_MODE",
              "Value": "fast"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KCP_MUT",
              "Value": "1350"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "$SERVER_PORT/tcp"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "$SERVER_PORT/udp"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "$KCP_LISTEN/udp"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/usr/bin/"
        },
        {
          "CmdLine": [
            "ssserver -s $SERVER_ADDR              -p $SERVER_PORT              -k $PASSWORD                 -m $METHOD                   -O $PROTOCOL                 -o $OBFS                     -t $TIMEOUT                  \u0026\u0026 server_linux_amd64 -t \"127.0.0.1:$SERVER_PORT\"              -l \":$KCP_LISTEN\"              -key $KCP_PASS              --mode $KCP_MODE              --crypt $KCP_ENCRYPT              --mtu $KCP_MUT"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}