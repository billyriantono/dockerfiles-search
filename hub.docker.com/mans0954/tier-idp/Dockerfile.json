{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "tomcat",
      "SourceCode": "FROM   tomcat",
      "Platform": "",
      "From": {
        "Image": "tomcat"
      },
      "Commands": [
        {
          "Maintainer": "Christopher Hoskin \"christopher.hoskin@gmail.com\"",
          "Name": "maintainer"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Env": [
            {
              "Key": "version",
              "Value": "3.3.1"
            }
          ],
          "Name": "env"
        },
        {
          "Key": "DEBIAN_FRONTEND",
          "Name": "arg",
          "Value": "noninteractive"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y wget unzip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /opt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "set -e ;     mkdir /usr/local/dist ;     cd /usr/local/dist ;     wget http://shibboleth.net/downloads/identity-provider/${version}/shibboleth-identity-provider-${version}.tar.gz ;     wget http://shibboleth.net/downloads/identity-provider/${version}/shibboleth-identity-provider-${version}.tar.gz.asc ;     wget http://shibboleth.net/downloads/identity-provider/${version}/shibboleth-identity-provider-${version}.tar.gz.sha256 ;     wget https://shibboleth.net/downloads/PGP_KEYS ;     gpg --import PGP_KEYS ;     sha256sum --check shibboleth-identity-provider-${version}.tar.gz.sha256 ;     gpg shibboleth-identity-provider-${version}.tar.gz.asc ;     tar -xvzf shibboleth-identity-provider-${version}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./configs",
            "/build-configs"
          ]
        },
        {
          "CmdLine": [
            "wget https://build.shibboleth.net/nexus/service/local/repositories/thirdparty/content/javax/servlet/jstl/1.2/jstl-1.2.jar           -P /usr/share/tomcat/lib/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /usr/local/tomcat/conf/Catalina/localhost/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /etc/shibboleth-idp/authn"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "relying-party.xml",
            "/etc/shibboleth-idp/relying-party.xml"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "password-authn-config.xml",
            "/etc/shibboleth-idp/authn/password-authn-config.xml"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "kerberos/krb5.conf",
            "/etc/krb5.conf"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "install-shib.sh",
            "/install-shib.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "start.sh",
            "/start.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod a+x /install-shib.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chmod a+x /start.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java-8-openjdk-amd64"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DIST",
              "Value": "/usr/local/dist/shibboleth-identity-provider-${version}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "IDP_HOME",
              "Value": "/opt/shibboleth-idp"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "CmdLine": [
            "/start.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}