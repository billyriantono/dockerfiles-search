            "-Djava.awt.headless=true",
            "-Dfile.encoding=UTF-8",
            "-server",
            "-Xms1536m",
            "-Xmx1536m",
            "-XX:NewSize=256m",
            "-XX:MaxNewSize=256m",
            "-XX:PermSize=256m",
