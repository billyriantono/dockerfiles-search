{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "node",
      "SourceCode": "FROM node",
      "Platform": "",
      "From": {
        "Image": "node"
      },
      "Commands": [
        {
          "Maintainer": "Tim Hartmann \u003ctfhartmann@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install wget python-dev g++ make libicu-dev redis-server python-pip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install build-essential chrpath libssl-dev libxft-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install libfreetype6 libfreetype6-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install libfontconfig1 libfontconfig1-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "~"
        },
        {
          "Env": [
            {
              "Key": "PHANTOM_JS",
              "Value": "\"phantomjs-2.1.1-linux-x86_64\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget https://bitbucket.org/ariya/phantomjs/downloads/$PHANTOM_JS.tar.bz2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar xvjf $PHANTOM_JS.tar.bz2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv $PHANTOM_JS /usr/local/share"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -sf /usr/local/share/$PHANTOM_JS/bin/phantomjs /usr/local/bin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm install --global coffee-script hubot@v2.7.5"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "hubot --create /opt/hubot"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/hubot"
        },
        {
          "CmdLine": [
            "npm install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "add-hubot-scripts.sh",
            "/tmp/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "add-external-scripts.py",
            "/tmp/"
          ]
        },
        {
          "CmdLine": [
            "npm install hubot-skype-web --save"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "redis-server /etc/redis/redis.conf \u0026\u0026 /tmp/add-hubot-scripts.sh \u0026\u0026 /tmp/add-external-scripts.py \u0026\u0026 bin/hubot --adapter skype-web"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}