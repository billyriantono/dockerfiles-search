        {
          "Maintainer": "Thiago Menezes \u003cthimico@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "TOMCAT_MAJOR",
              "Value": "7"
            },
            {
              "Key": "TOMCAT_VERSION",
              "Value": "7.0.68"
            },
            {
              "Key": "TOMCAT_HOME",
