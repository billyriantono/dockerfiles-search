{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "node",
      "SourceCode": "FROM node",
      "Platform": "",
      "From": {
        "Image": "node"
      },
      "Commands": [
        {
          "Maintainer": "Tim Hartmann \u003ctfhartmann@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install wget python-dev g++ make libicu-dev redis-server python-pip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm install --global coffee-script hubot@v2.7.5"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "hubot --create /opt/hubot"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/hubot"
        },
        {
          "CmdLine": [
            "npm install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm install --save git+https://github.com/groundnuty/hubot-hipchat.git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "add-hubot-scripts.sh",
            "/tmp/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "add-external-scripts.py",
            "/tmp/"
          ]
        },
        {
          "Env": [
            {
              "Key": "HUBOT_HIPCHAT_JID",
              "Value": "[asdfID]@chat.hipchat.com"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HUBOT_HIPCHAT_PASSWORD",
              "Value": "[your-password]"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HUBOT_AUTH_ADMIN",
              "Value": "[your name]"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "redis-server /etc/redis/redis.conf \u0026\u0026 /tmp/add-hubot-scripts.sh \u0026\u0026 /tmp/add-external-scripts.py \u0026\u0026 bin/hubot --adapter hipchat"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}