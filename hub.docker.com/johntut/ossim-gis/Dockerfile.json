{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:16.04",
      "SourceCode": "FROM ubuntu:16.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:16.04"
      },
      "Commands": [
        {
          "Maintainer": "Johnny T. \u003cjohn@exogenesis.solutions\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update     \u0026\u0026 apt-get install -y --install-recommends     build-essential     cmake     git     libtiff5-dev     libgeotiff-dev     libpng-dev     libjpeg-dev     zlib1g-dev      libopenthreads-dev     libgeos++-dev     libgeos-dev     libpotrace-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "OSSIM_DEV_HOME",
              "Value": "/usr/local/src/ossim"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "OSSIM_BUILD_DIR",
              "Value": "$OSSIM_DEV_HOME/build"
            },
            {
              "Key": "OSSIM_DEPENDENCIES",
              "Value": "/usr"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "git clone https://github.com/ossimlabs/ossim.git $OSSIM_DEV_HOME \u0026\u0026     cd $OSSIM_DEV_HOME \u0026\u0026     git checkout master"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/ossimlabs/ossim-plugins.git $OSSIM_DEV_HOME/ossim-plugins \u0026\u0026     cd $OSSIM_DEV_HOME/ossim-plugins \u0026\u0026     git checkout master"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir $OSSIM_BUILD_DIR"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$OSSIM_BUILD_DIR"
        },
        {
          "CmdLine": [
            "cmake ..     -DOSSIM_LIBRARY=$OSSIM_BUILD_DIR/lib/libossim.so     -DOSSIM_INCLUDE_DIR=$OSSIM_DEV_HOME/include     -DBUILD_OSSIM_TESTS=OFF"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make \u0026\u0026 make install \u0026\u0026 ldconfig"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir $OSSIM_DEV_HOME/ossim-plugins/build"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$OSSIM_DEV_HOME/ossim-plugins/build"
        },
        {
          "CmdLine": [
            "cmake ..     -DOSSIM_INSTALL_PREFIX=/usr/local/     -DCMAKE_MODULE_PATH=$OSSIM_DEV_HOME/cmake/CMakeModules/     -DBUILD_GDAL_PLUGIN=OFF     -DBUILD_MRSID_PLUGIN=OFF     -DBUILD_PDAL_PLUGIN=OFF     -DBUILD_KAKADU_PLUGIN=OFF     -DBUILD_CNES_PLUGIN=OFF     -DBUILD_POTRACE_PLUGIN=ON"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "useradd -ms /bin/bash ossimuser"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "ossimuser"
        },
        {
          "Name": "workdir",
          "Path": "/home/ossimuser"
        },
        {
          "CmdLine": [
            "echo 'plugin.file1: /usr/local/lib/ossim/plugins/libossim_potrace_plugin.so' \u003e ~/ossim_preferences"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "OSSIM_PREFS_FILE",
              "Value": "/home/ossimuser/ossim_preferences"
            }
          ],
          "Name": "env"
        }
      ]
    }
  ]
}