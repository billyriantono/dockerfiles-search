{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:wheezy",
      "SourceCode": "FROM debian:wheezy",
      "Platform": "",
      "From": {
        "Image": "debian:wheezy"
      },
      "Commands": [
        {
          "Maintainer": "crazycode",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "bin/rabbitmq-start",
            "/usr/local/bin/"
          ]
        },
        {
          "CmdLine": [
            "apt-get update    \u0026\u0026 apt-get install -y wget"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -qO - http://www.rabbitmq.com/rabbitmq-signing-key-public.asc | apt-key add -"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"deb http://www.rabbitmq.com/debian/ testing main\" \u003e /etc/apt/sources.list.d/rabbitmq.list"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026   apt-get install -y rabbitmq-server \u0026\u0026   apt-get -qq clean \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rabbitmq-plugins enable rabbitmq_management \u0026\u0026   echo \"[{rabbit, [{loopback_users, []}]}].\" \u003e /etc/rabbitmq/rabbitmq.config \u0026\u0026   chmod +x /usr/local/bin/rabbitmq-start"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "RABBITMQ_LOG_BASE",
              "Value": "/data/log"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "RABBITMQ_MNESIA_BASE",
              "Value": "/data/mnesia"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/data/log",
            "/data/mnesia"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/data"
        },
        {
          "Name": "expose",
          "Ports": [
            "5672"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "15672"
          ]
        },
        {
          "CmdLine": [
            "rabbitmq-start"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}