{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "builder",
      "BaseName": "debian:buster",
      "SourceCode": "FROM debian:buster as builder",
      "Platform": "",
      "As": "builder",
      "From": {
        "Image": "debian:buster"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get dist-upgrade -y -q --no-install-recommends"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "preinstall.sh",
            "/app/src/github.com/die-net/fotomat/"
          ]
        },
        {
          "CmdLine": [
            "VIPS_OPTIONS=\"--prefix=/usr\"     /app/src/github.com/die-net/fotomat/preinstall.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y -q --no-install-recommends busybox"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            ".",
            "/app/src/github.com/die-net/fotomat/"
          ]
        },
        {
          "CmdLine": [
            "GOPATH=/app /usr/local/go/bin/go get -ldflags=\"-s -w\" -t github.com/die-net/fotomat/..."
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "GOPATH=/app /usr/local/go/bin/go test -v github.com/die-net/fotomat/..."
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -m 0755 -p /export/etc /export/home /export/bin /export/usr/bin /export/sbin /export/usr/sbin \u0026\u0026     mkdir -m 0700 -p /export/root /export/proc /export/dev \u0026\u0026     mkdir -p -m 1777 /export/tmp"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "useradd -r fotomat"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp -a --parents     /etc/nsswitch.conf     /etc/passwd     /etc/group     /etc/shadow     /etc/localtime     /usr/share/zoneinfo/UTC     /etc/ssl/certs/ca-certificates.crt     /export/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "for file in         /bin/busybox         /app/bin/fotomat         /lib/x86_64-linux-gnu/libnss_files.so.2         /lib/x86_64-linux-gnu/libnss_dns.so.2         /lib/x86_64-linux-gnu/libnss_compat.so.2; do         echo $file;         ldd $file;     done |     awk '($2==\"=\u003e\"){print $3};(substr($1,1,1)==\"/\"){print $1}' |     sort -u |     xargs -I{} install -D {} /export{}"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "scratch",
      "SourceCode": "FROM scratch",
      "Platform": "",
      "From": {
        "Scratch": true
      },
      "Commands": [
        {
          "CmdLine": [
            "/app/bin/fotomat"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "-listen=:3520"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Name": "expose",
          "Ports": [
            "3520"
          ]
        },
        {
          "Chown": "",
          "From": "builder",
          "Name": "copy",
          "SourcesAndDest": [
            "/export/",
            "/"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/tmp"
          ]
        },
        {
          "CmdLine": [
            "/bin/busybox",
            "--install"
          ],
          "Name": "run",
          "PrependShell": false
        },
        {
          "Name": "user",
          "User": "fotomat"
        },
        {
          "CmdLine": [
            "/app/bin/fotomat",
            "--version"
          ],
          "Name": "run",
          "PrependShell": false
        }
      ]
    }
  ]
}