FROM alpine:3.4
#FROM debian:jessie

# persistent / runtime deps
RUN apk add --no-cache ca-certificates curl git pcre-dev recode-dev sqlite-dev libxml2-dev gnupg tar bash

# phpize deps
RUN apk add --no-cache autoconf file g++ gcc libc-dev make re2c build-base findutils

# PHP deps
RUN apk add --no-cache bzip2 curl-dev readline-dev zlib openssl-dev libssl1.0

ENV PHP_INI_DIR /usr/local/etc/php
RUN mkdir -p $PHP_INI_DIR/conf.d

##<autogenerated>##
##</autogenerated>##

ENV GPG_KEYS 0E604491 0A95E9A026542D53835E3F3A7DEC4E69FC9C83D7
RUN set -xe \
	&& for key in $GPG_KEYS; do \
		gpg --keyserver ha.pool.sks-keyservers.net --recv-keys "$key"; \
	done

# compile openssl, otherwise --with-openssl won't work
