{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine",
      "SourceCode": "FROM alpine",
      "Platform": "",
      "From": {
        "Image": "alpine"
      },
      "Commands": [
        {
          "Maintainer": "Jenda Mudron",
          "Name": "maintainer"
        },
        {
          "Labels": [
            {
              "Key": "Description",
              "Value": "\"Graph visualization for behave features, scenarios, and steps.\""
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "PYTHON_VERSION",
              "Value": "2.7.11"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PIP_INDEX_URL",
              "Value": "https://pypi.python.org/simple/"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk --no-cache add py-pip python git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://www.github.com/jenmud/behave-graph.git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip install --upgrade pip setuptools wheel \u0026\u0026 pip install /behave-graph/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /my-share"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/my-share"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/my-share"
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "CmdLine": [
            "behave-graph",
            "--runserver"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "--port",
            "80"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}