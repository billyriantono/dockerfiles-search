{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "trafficwagon/aeon-daemon",
      "SourceCode": "FROM trafficwagon/aeon-daemon",
      "Platform": "",
      "From": {
        "Image": "trafficwagon/aeon-daemon"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "AEON_DIR",
              "Value": "\"/aeon\""
            },
            {
              "Key": "BUILD_DIR",
              "Value": "\"/aeon-source\""
            },
            {
              "Key": "WALLET_DIR",
              "Value": "\"/wallet\""
            },
            {
              "Key": "WALLET_NAME",
              "Value": "\"wallet.bin\""
            },
            {
              "Key": "WALLET_PASS",
              "Value": "\"notsecure\""
            },
            {
              "Key": "RPC_BIND_IP",
              "Value": "\"0.0.0.0\""
            },
            {
              "Key": "RPC_BIND_PORT",
              "Value": "\"11180\""
            },
            {
              "Key": "DAEMON_ADDRESS",
              "Value": "\"127.0.0.1:11181\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "cp $BUILD_DIR/build/release/src/simplewallet $AEON_DIR/simplewallet \u0026\u0026     rm $AEON_DIR/aeond"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "start.sh",
            "$AEON_DIR"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/wallet"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "$RPC_BIND_PORT"
          ]
        },
        {
          "Name": "workdir",
          "Path": "$AEON_DIR"
        },
        {
          "CmdLine": [
            "./start.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}