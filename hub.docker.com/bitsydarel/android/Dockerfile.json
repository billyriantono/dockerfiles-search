{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:bionic",
      "SourceCode": "FROM ubuntu:bionic",
      "Platform": "",
      "From": {
        "Image": "ubuntu:bionic"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"Darel Bitsy \u003cbitsydarel@gmail.com\u003e\""
            }
          ],
          "Name": "label"
        },
        {
          "Labels": [
            {
              "Key": "description",
              "Value": "\"A docker image for android development on linux\""
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/home/sandbox"
            }
          ],
          "Name": "env"
        },
        {
          "Key": "DEBIAN_FRONTEND",
          "Name": "arg",
          "Value": "noninteractive"
        },
        {
          "Key": "with_emulator",
          "Name": "arg",
          "Value": "true"
        },
        {
          "Key": "vnc_password",
          "Name": "arg",
          "Value": "1234"
        },
        {
          "Env": [
            {
              "Key": "WITH_EMULATOR",
              "Value": "$with_emulator"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VNC_PASSWORD",
              "Value": "$vnc_password"
            }
          ],
          "Name": "env"
        },
        {
          "Key": "android_sdk_version",
          "Name": "arg",
          "Value": "4333796"
        },
        {
          "Key": "android_platform_version",
          "Name": "arg",
          "Value": "28"
        },
        {
          "Key": "android_build_tools_version",
          "Name": "arg",
          "Value": "29.0.2"
        },
        {
          "Key": "android_emulator_arch",
          "Name": "arg",
          "Value": "x86_64"
        },
        {
          "Key": "android_emulator_type",
          "Name": "arg",
          "Value": "google_apis_playstore"
        },
        {
          "Key": "android_emulator_accel",
          "Name": "arg",
          "Value": "off"
        },
        {
          "Env": [
            {
              "Key": "TOOLS_HOME",
              "Value": "$HOME/tools"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_SDK_HOME",
              "Value": "$TOOLS_HOME/android-sdk"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_SDK_ROOT",
              "Value": "$ANDROID_SDK_HOME"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_HOME",
              "Value": "$ANDROID_SDK_HOME"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_SDK",
              "Value": "$ANDROID_SDK_HOME"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_SDK_TOOLS_VERSION",
              "Value": "$android_sdk_version"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_PLATFORM_VERSION",
              "Value": "$android_platform_version"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_BUILD_TOOLS_VERSION",
              "Value": "$android_build_tools_version"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_EMULATOR_ARCH",
              "Value": "$android_emulator_arch"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_EMULATOR_TYPE",
              "Value": "$android_emulator_type"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_EMULATOR_ACCEL",
              "Value": "$android_emulator_accel"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "QT_DEBUG_PLUGINS",
              "Value": "1"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "dpkg --add-architecture i386     \u0026\u0026 apt-get update     \u0026\u0026 apt-get install -y --no-install-recommends apt-utils apt-transport-https apt-config-auto-update locales multiarch-support     \u0026\u0026 apt-get autoclean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y --no-install-recommends --allow-unauthenticated software-properties-common curl netbase wget git gdb unzip ruby ruby-dev tar unzip x11vnc xvfb mesa-utils xorg openbox qt5-default \u0026\u0026 apt-get autoclean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "add-apt-repository ppa:openjdk-r/ppa     \u0026\u0026 apt-get update \u0026\u0026 apt-get install -y --no-install-recommends openjdk-8-jdk openjdk-8-jre     \u0026\u0026 add-apt-repository --remove ppa:openjdk-r/ppa     \u0026\u0026 apt-get install -y --no-install-recommends qemu-kvm libvirt-daemon-system libvirt-clients bridge-utils xvfb lib32z1 lib32stdc++6 libstdc++6 build-essential libcurl4-openssl-dev libglu1-mesa libxi-dev libxmu-dev libglu1-mesa-dev lcov"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get autoclean \u0026\u0026 rm -rf /var/lib/apt/lists/* \u0026\u0026 ln -sf /usr/share/zoneinfo/Etc/UTC /etc/localtime \u0026\u0026 locale-gen en_US.UTF-8 || true"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LANG",
              "Value": "en_US.UTF-8"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LC_ALL",
              "Value": "en_US.UTF-8"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LANGUAGE",
              "Value": "en_US:en"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DISPLAY",
              "Value": ":1"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p $TOOLS_HOME \u0026\u0026 cd $TOOLS_HOME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "${PATH}:${TOOLS_HOME}"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget -q https://dl.google.com/android/repository/sdk-tools-linux-$ANDROID_SDK_TOOLS_VERSION.zip -O android-sdk-tools.zip     \u0026\u0026 unzip -q android-sdk-tools.zip -d ${ANDROID_HOME}     \u0026\u0026 rm android-sdk-tools.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "${PATH}:${ANDROID_SDK_HOME}/emulator:${ANDROID_SDK_HOME}/tools/bin:${ANDROID_SDK_HOME}/platform-tools"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "sdkmanager --update \u0026\u0026 yes | sdkmanager --licenses"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sdkmanager tools platform-tools emulator \"patcher;v4\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yes | sdkmanager \"platforms;android-$ANDROID_PLATFORM_VERSION\" \"build-tools;$ANDROID_BUILD_TOOLS_VERSION\" \"extras;google;m2repository\" \"extras;android;m2repository\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -O /tmp/setup_for_emulator.sh https://raw.githubusercontent.com/bitsydarel/flutter-ci/master/scripts/setup_for_emulator.sh     \u0026\u0026 chmod +x /tmp/setup_for_emulator.sh     \u0026\u0026 sh /tmp/setup_for_emulator.sh     \u0026\u0026 rm -rf /tmp/setup_for_emulator.sh;"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p $HOME/projects \u0026\u0026 cd $HOME/projects \u0026\u0026 mkdir -p $HOME/.vnc     \u0026\u0026 x11vnc -storepasswd $VNC_PASSWORD $HOME/.vnc/passwd \u0026\u0026 x11vnc -forever -usepw -create \u0026"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "touch /etc/ld.so.conf.d/android_libs.conf     \u0026\u0026 echo \"$ANDROID_SDK_HOME/emulator/lib64/qt/lib\" \u003e\u003e /etc/ld.so.conf.d/android_libs.conf     \u0026\u0026 echo \"$ANDROID_SDK_HOME/emulator/lib64\" \u003e\u003e /etc/ld.so.conf.d/android_libs.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$HOME/projects"
        },
        {
          "CmdLine": [
            "groupadd -g 1000 sandbox \u0026\u0026 useradd -u 1000 -g 1000 -G root -s /bin/bash -o -m -d $HOME sandbox         \u0026\u0026 usermod -aG root sandbox         \u0026\u0026 chown --recursive 1000:1000 ${HOME}         \u0026\u0026 chmod -R 777 $HOME         \u0026\u0026 chmod -R 777 $TOOLS_HOME         \u0026\u0026 chmod -R 777 ."
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "[sandbox]"
        }
      ]
    }
  ]
}