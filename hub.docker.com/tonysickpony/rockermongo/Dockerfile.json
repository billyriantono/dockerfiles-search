        "Image": "debian:jessie"
      },
      "Commands": [
        {
          "Maintainer": "tony fu",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update -yq              \u0026\u0026     apt-get install -yq                        apache2                                php5-dev                               libapache2-mod-php5                    wget                                   unzip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "APACHE_RUN_USER",
              "Value": "www-data"
            },
            {
              "Key": "APACHE_RUN_GROUP",
              "Value": "www-data"
            },
            {
              "Key": "APACHE_LOG_DIR",
              "Value": "/var/log/apache2"
            },
            {
              "Key": "APACHE_LOCK_DIR",
              "Value": "/var/lock/apache2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGO_HOST",
              "Value": "localhost"
            },
            {
              "Key": "MONGO_PORT",
              "Value": "27017"
            },
            {
              "Key": "MONGO_ADMIN_PASSWORD",
              "Value": "password"
            },
            {
              "Key": "RM_URL",
              "Value": "https://github.com/gilacode/rockmongo/archive/master.zip"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "pecl install mongo              \u0026\u0026     echo \"extension=mongo.so\" \u003e\u003e /etc/php5/apache2/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm /var/www/html/*"
