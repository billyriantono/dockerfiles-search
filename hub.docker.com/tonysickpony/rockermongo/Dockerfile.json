          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/www/html"
        },
        {
          "CmdLine": [
            "wget ${RM_URL} -O rockmongo.zip \u0026\u0026     unzip rockmongo.zip -d .        \u0026\u0026     mv ./rockmongo-master/* ."
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
