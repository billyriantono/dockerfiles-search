{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "fedorza/alpine_36_onb",
      "SourceCode": "FROM fedorza/alpine_36_onb",
      "Platform": "",
      "From": {
        "Image": "fedorza/alpine_36_onb"
      },
      "Commands": [
        {
          "Maintainer": "Clint Beacock \u003cclint@therefore.ca\u003e/Fedor Zakharov \u003cfedor@therefore.ca\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "HENCE_APP_DIR",
              "Value": "$HENCE_PREFIX/php5"
            },
            {
              "Key": "HENCE_APP_NAME",
              "Value": "php"
            },
            {
              "Key": "HENCE_APP_USER",
              "Value": "hence"
            },
            {
              "Key": "HENCE_APP_VERSION",
              "Value": "3.6"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HENCE_APP_VOL_PREFIX",
              "Value": "/hence/$HENCE_APP_NAME"
            },
            {
              "Key": "PATH",
              "Value": "$HENCE_APP_DIR/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "COMPOSER_HOME",
              "Value": "/root/.composer"
            },
            {
              "Key": "TERM",
              "Value": "xterm"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk --update add     php5-fpm     php5-cli     php5-ctype     php5-curl     php5-dom     php5-gd     php5-iconv     php5-intl@edge     php5-json     php5-ldap     php5-mcrypt     php5-memcache     php5-mysql     php5-mysqli     php5-openssl     php5-opcache     php5-pdo     php5-pdo_mysql     php5-pdo_pgsql     php5-pdo_sqlite     php5-pear     php5-pgsql     php5-phar     php5-sockets     php5-sqlite3     php5-xml     php5-zip     php5-zlib     git     pdftk@edge     mariadb-common     mariadb-client \u0026\u0026     rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "rootfs",
            "/"
          ]
        },
        {
          "CmdLine": [
            "curl -sS https://getcomposer.org/installer   | php -- --install-dir=/usr/bin --filename=composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sh $HENCE_PREFIX/install.sh \u0026\u0026     s6-rmrf /etc/s6/services/s6-fdholderd/down"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo nameserver 8.8.8.8 \u003e /etc/resolve.conf \u0026\u0026 composer global require drush/drush:8.1.2 \u0026\u0026     composer global require fillup/phpmyadmin-minimal:4.4.13.1 \u0026\u0026     ln -sf $COMPOSER_HOME/vendor/bin/drush.php /usr/bin/drush \u0026\u0026     curl https://drupalconsole.com/installer -L -o drupal.phar \u0026\u0026     mv drupal.phar /usr/bin/drupal \u0026\u0026     chmod +x /usr/bin/drupal \u0026\u0026     drupal init --destination /etc/console -q"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "9000"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "22"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/php5/custom.d",
            "/app",
            "$HENCE_APP_VOL_PREFIX/conf",
            "$HENCE_APP_VOL_PREFIX/logs/php-general-logs",
            "$HENCE_APP_VOL_PREFIX/logs/php-error-logs",
            "/vendor",
            "/config"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/app"
        }
      ]
    }
  ]
}