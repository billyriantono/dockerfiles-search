{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "builder",
      "BaseName": "node:12-alpine",
      "SourceCode": "FROM node:12-alpine as builder",
      "Platform": "",
      "As": "builder",
      "From": {
        "Image": "node:12-alpine"
      },
      "Commands": [
        {
          "Maintainer": "faq@cryptic-game.net",
          "Name": "maintainer"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "package*.json",
            "./"
          ]
        },
        {
          "CmdLine": [
            "npm set progress=false \u0026\u0026 npm config set depth 0 \u0026\u0026 npm cache clean --force"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "npm i \u0026\u0026 mkdir /ng-app \u0026\u0026 cp -R ./node_modules ./ng-app"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/ng-app"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "."
          ]
        },
        {
          "CmdLine": [
            "$(npm bin)/ng build --prod --build-optimizer"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "nginx:stable-alpine",
      "SourceCode": "FROM nginx:stable-alpine",
      "Platform": "",
      "From": {
        "Image": "nginx:stable-alpine"
      },
      "Commands": [
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "nginx/nginx.conf",
            "/etc/nginx/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "nginx/default.conf",
            "/etc/nginx/conf.d/"
          ]
        },
        {
          "CmdLine": [
            "rm -rf /usr/share/nginx/html/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "builder",
          "Name": "copy",
          "SourcesAndDest": [
            "/ng-app/dist/frontend/",
            "/usr/share/nginx/html"
          ]
        },
        {
          "CmdLine": [
            "chown -R nginx:nginx /usr/share/nginx/html/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "nginx",
            "-g",
            "daemon off;"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}