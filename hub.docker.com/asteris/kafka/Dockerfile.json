{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "asteris/java:centos7_java7",
      "SourceCode": "FROM asteris/java:centos7_java7",
      "Platform": "",
      "From": {
        "Image": "asteris/java:centos7_java7"
      },
      "Commands": [
        {
          "Maintainer": "Steven Borrelli \u003csteve@aster.is\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "KAFKA_VERSION",
              "Value": "0.8.1.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SCALA_VERSION",
              "Value": "2.10"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KAFKA_RELEASE",
              "Value": "kafka_$SCALA_VERSION-$KAFKA_VERSION"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KAFKA_URL",
              "Value": "https://archive.apache.org/dist/kafka/$KAFKA_VERSION/$KAFKA_RELEASE.tgz"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KAFKA_HOME",
              "Value": "/opt/$KAFKA_RELEASE"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum -y install wget tar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -nv $KAFKA_URL -O /tmp/$KAFKA_RELEASE.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar xfz /tmp/$KAFKA_RELEASE.tgz -C /opt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "7203",
            "9092"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/data",
            "/logs"
          ]
        }
      ]
    }
  ]
}