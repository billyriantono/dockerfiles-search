{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:16.04",
      "SourceCode": "FROM ubuntu:16.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:16.04"
      },
      "Commands": [
        {
          "Maintainer": "Fabian Wenzelmann \u003cfabianwen@posteo.eu\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y cron curl tar bzip2 build-essential python3 expect"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PYTHONUNBUFFERED",
              "Value": "0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MLMMJ_VERSION",
              "Value": "1.3.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MLMMJ_PREFIX",
              "Value": "mlmmj-"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -SLO \"http://mlmmj.org/releases/mlmmj-$MLMMJ_VERSION.tar.bz2\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar jxf mlmmj-$MLMMJ_VERSION.tar.bz2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/$MLMMJ_PREFIX$MLMMJ_VERSION"
        },
        {
          "CmdLine": [
            "./configure \u0026\u0026 make \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "mlmmj_listener.py",
            "/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /mlmmj_listener.py"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker_entrypoint.sh",
            "/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /docker_entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "renew_text.sh",
            "/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /renew_text.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "mk_ml",
            "/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /mk_ml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /mlmmj_conf/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/spool/mlmmj"
        },
        {
          "CmdLine": [
            "rm -rf /mlmmj-$MLMMJ_VERSION.tar.bz2 /$MLMMJ_PREFIX$MLMMJ_VERSION"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "crontab",
            "/etc/cron.d/mlmmj-maintd-cron"
          ]
        },
        {
          "CmdLine": [
            "chmod 0644 /etc/cron.d/mlmmj-maintd-cron"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/usr/bin/crontab /etc/cron.d/mlmmj-maintd-cron"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "7777"
          ]
        },
        {
          "CmdLine": [
            "/docker_entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "/mlmmj_listener.py"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}