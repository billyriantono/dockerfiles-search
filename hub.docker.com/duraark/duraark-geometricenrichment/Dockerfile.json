        {
          "CmdLine": [
            "mkdir -p /opt/orthogen/build"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./orthogen",
            "/opt/orthogen"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/orthogen/build"
