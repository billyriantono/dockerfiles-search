        {
          "CmdLine": [
            "cmake ../ \u0026\u0026 make -j6"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /opt/elecdetect/build/bin/ElecDetec /usr/local/bin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/duraark-geometricenrichment/src"
