          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /opt/orthogen/build/orthogen /usr/local/bin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install wget unzip -y \u0026\u0026 add-apt-repository \"deb http://archive.ubuntu.com/ubuntu $(lsb_release -sc) multiverse\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /tmp/opencv \u0026\u0026 cd /tmp/opencv \u0026\u0026 wget https://github.com/Itseez/opencv/archive/3.0.0.zip -O /tmp/opencv/opencv-3.0.0.zip \u0026\u0026 unzip opencv-3.0.0.zip \u0026\u0026 mkdir /tmp/opencv/opencv-3.0.0/build"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/tmp/opencv/opencv-3.0.0/build"
        },
        {
          "CmdLine": [
            "cmake -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=/usr/local -D ITH_TBB=OFF -D WITH_V4L=OFF -D WITH_QT=OFF ../"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make -j $(nproc)"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /opt/elecdetect/build"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
