{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "robtimmer/alpine-base:3.4",
      "SourceCode": "FROM robtimmer/alpine-base:3.4",
      "Platform": "",
      "From": {
        "Image": "robtimmer/alpine-base:3.4"
      },
      "Commands": [
        {
          "Maintainer": "Rob Timmer \u003crob@robtimmer.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "SERVICE_VOLUME",
              "Value": "/opt/tools"
            },
            {
              "Key": "SERVICE_ARCHIVE",
              "Value": "/opt/tools.tgz"
            },
            {
              "Key": "KEEP_ALIVE",
              "Value": "0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CONFD_VERSION",
              "Value": "v0.11.0"
            },
            {
              "Key": "CONFD_HOME",
              "Value": "${SERVICE_VOLUME}/confd"
            },
            {
              "Key": "GOMAXPROCS",
              "Value": "2"
            },
            {
              "Key": "GOROOT",
              "Value": "/usr/lib/go"
            },
            {
              "Key": "GOPATH",
              "Value": "/opt/src"
            },
            {
              "Key": "GOBIN",
              "Value": "/gopath/bin"
            },
            {
              "Key": "PATH",
              "Value": "$PATH:${SERVICE_VOLUME}/confd/bin:${SERVICE_VOLUME}/scripts"
            },
            {
              "Key": "JQ_URL",
              "Value": "https://github.com/stedolan/jq/releases/download"
            },
            {
              "Key": "JQ_VERSION",
              "Value": "1.5"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk add --update go git gcc musl-dev make openssl-dev \u0026\u0026     mkdir -p /opt/src; cd /opt/src \u0026\u0026     mkdir -p ${SERVICE_VOLUME}/monit/conf.d ${SERVICE_VOLUME}/scripts ${CONFD_HOME}/etc/templates ${CONFD_HOME}/etc/conf.d ${CONFD_HOME}/bin ${CONFD_HOME}/log \u0026\u0026     git clone -b \"$CONFD_VERSION\" https://github.com/kelseyhightower/confd.git \u0026\u0026     cd $GOPATH/confd/src/github.com/kelseyhightower/confd \u0026\u0026     GOPATH=$GOPATH/confd/vendor:$GOPATH/confd CGO_ENABLED=0 go build -v -installsuffix cgo -ldflags '-extld ld -extldflags -static' -a -x . \u0026\u0026     mv ./confd ${CONFD_HOME}/bin/ \u0026\u0026     chmod +x ${CONFD_HOME}/bin/confd \u0026\u0026     curl -L $JQ_URL/jq-${JQ_VERSION}/jq-linux64 -o ${SERVICE_VOLUME}/scripts/jq \u0026\u0026     chmod 755 ${SERVICE_VOLUME}/scripts/jq \u0026\u0026     cd ${SERVICE_VOLUME} \u0026\u0026     tar czvf ${SERVICE_ARCHIVE} * \u0026\u0026     apk del go git gcc musl-dev make openssl-dev \u0026\u0026     rm -rf /var/cache/apk/* /opt/src ${SERVICE_VOLUME}/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "root",
            "/"
          ]
        },
        {
          "Name": "workdir",
          "Path": "\"${SERVICE_VOLUME}\""
        },
        {
          "CmdLine": [
            "bash",
            "/start.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}