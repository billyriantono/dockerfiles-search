{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "registry.centos.org/centos/centos",
      "SourceCode": "FROM registry.centos.org/centos/centos",
      "Platform": "",
      "From": {
        "Image": "registry.centos.org/centos/centos"
      },
      "Commands": [
        {
          "Maintainer": "Clement Escoffier",
          "Name": "maintainer"
        },
        {
          "Key": "JAVA_VERSION",
          "Name": "arg",
          "Value": "1.8.0"
        },
        {
          "Key": "VERTX_VERSION",
          "Name": "arg",
          "Value": "3.4.2"
        },
        {
          "Env": [
            {
              "Key": "VERTX_GROUPID",
              "Value": "io.vertx"
            },
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java-${JAVA_VERSION}"
            },
            {
              "Key": "M2_HOME",
              "Value": "/opt/rh/rh-maven33/root/usr/share/maven"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum -y update \u0026\u0026     yum -y install sudo openssh-server centos-release-scl \u0026\u0026     yum -y install rh-maven33 java-${JAVA_VERSION}-openjdk-devel \u0026\u0026     yum clean all \u0026\u0026     sed -ri 's/UsePAM yes/#UsePAM yes/g' /etc/ssh/sshd_config \u0026\u0026     sed -ri 's/#UsePAM no/UsePAM no/g' /etc/ssh/sshd_config \u0026\u0026     echo \"%wheel ALL=(ALL) NOPASSWD: ALL\" \u003e\u003e /etc/sudoers \u0026\u0026     useradd -u 1000 -G users,wheel -d /home/user --shell /bin/bash -m user \u0026\u0026     usermod -p \"*\" user \u0026\u0026     sed -i 's/requiretty/!requiretty/g' /etc/sudoers"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "install-vertx-dependencies.sh",
            "/tmp/"
          ]
        },
        {
          "CmdLine": [
            "chown user:user /tmp/install-vertx-dependencies.sh \u0026\u0026 chmod a+x /tmp/install-vertx-dependencies.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "user"
        },
        {
          "CmdLine": [
            "scl enable rh-maven33 /tmp/install-vertx-dependencies.sh \u0026\u0026     sudo rm -f /tmp/install-vertx-dependencies.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "CmdLine": [
            "tail -f /dev/null"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}