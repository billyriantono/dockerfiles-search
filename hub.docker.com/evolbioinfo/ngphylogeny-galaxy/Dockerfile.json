{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "bgruening/galaxy-stable:18.09",
      "SourceCode": "FROM bgruening/galaxy-stable:18.09",
      "Platform": "",
      "From": {
        "Image": "bgruening/galaxy-stable:18.09"
      },
      "Commands": [
        {
          "Maintainer": "Frederic Lemoine \u003cfrederic.lemoine@pasteur.fr\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "MODULE_PACKAGES",
              "Value": "\"/packages\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GALAXY_CONFIG_TOOL_CONFIG_FILE",
              "Value": "config/tool_conf.xml.sample,config/shed_tool_conf.xml.sample,/local_tools/tool_conf.xml"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GALAXY_DOCKER_ENABLED",
              "Value": "True"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update --fix-missing     \u0026\u0026 apt-get install -y wget libssl-dev libssl1.0.0     \u0026\u0026 sudo apt-get update     \u0026\u0026 apt-get install -y environment-modules squashfs-tools libtool libarchive-dev     \u0026\u0026 git clone https://github.com/singularityware/singularity.git     \u0026\u0026 cd singularity     \u0026\u0026 git checkout 2.6.0     \u0026\u0026 ./autogen.sh     \u0026\u0026 ./configure --prefix=/usr/local     \u0026\u0026 make     \u0026\u0026 make install     \u0026\u0026 cd ..     \u0026\u0026 rm -rf singularity     \u0026\u0026 apt-get remove -y libssl-dev     \u0026\u0026 apt-get autoremove -y     \u0026\u0026 apt-get clean     \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker/init_modules.sh",
            "$GALAXY_HOME/docker/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker/package_list.txt",
            "$GALAXY_HOME/docker/"
          ]
        },
        {
          "CmdLine": [
            "mkdir /packages     \u0026\u0026 cd $GALAXY_HOME/docker/     \u0026\u0026 ./init_modules.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"source /usr/share/modules/init/bash\" \u003e\u003e /etc/bash.bashrc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"source /usr/share/modules/init/sh\" \u003e\u003e /etc/profile"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker/dependency_resolvers_conf.xml",
            "/galaxy-central/config/dependency_resolvers_conf.xml"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "docker/environment_modules_mapping.yml",
            "/galaxy-central/config/environment_modules_mapping.yml"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "tools",
            "/local_tools/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "workflows/*",
            "$GALAXY_HOME/workflows/"
          ]
        },
        {
          "CmdLine": [
            "echo \"bind path = /export:/export\" \u003e\u003e /usr/local/etc/singularity/singularity.conf     \u0026\u0026 echo \"bind path = /data:/data\" \u003e\u003e /usr/local/etc/singularity/singularity.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "startup_lite \u0026\u0026     galaxy-wait \u0026\u0026     workflow-install --workflow_path $GALAXY_HOME/workflows/ -g http://localhost:8080 -u $GALAXY_DEFAULT_ADMIN_USER -p $GALAXY_DEFAULT_ADMIN_PASSWORD"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /galaxy-central/config/datatypes_conf.xml.sample /galaxy-central/config/datatypes_conf.xml"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}