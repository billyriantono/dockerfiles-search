{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "node:8-alpine",
      "SourceCode": "FROM node:8-alpine",
      "Platform": "",
      "From": {
        "Image": "node:8-alpine"
      },
      "Commands": [
        {
          "Maintainer": "Mike Engel \u003cmike@mike-engel.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "NODE_ENV",
              "Value": "production"
            },
            {
              "Key": "APP_DIR",
              "Value": "/app/bkmrkd"
            },
            {
              "Key": "PORT",
              "Value": "3000"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p ${APP_DIR}     \u0026\u0026 npm config set spin=false"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "${APP_DIR}"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "package.json",
            "package-lock.json",
            "elm-package.json",
            "${APP_DIR}/"
          ]
        },
        {
          "CmdLine": [
            "npm install --production --no-progress"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "${APP_DIR}/"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "${PORT}"
          ]
        },
        {
          "CmdLine": [
            "npm",
            "-s",
            "start"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
