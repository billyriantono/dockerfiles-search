{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "dockette/alpine:edge",
      "SourceCode": "FROM dockette/alpine:edge",
      "Platform": "",
      "From": {
        "Image": "dockette/alpine:edge"
      },
      "Commands": [
        {
          "Maintainer": "Milan Sulc \u003csulcmil@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "ADMINER_VERSION",
              "Value": "4.7.5"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MEMORY",
              "Value": "256M"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "UPLOAD",
              "Value": "2048M"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "echo '@community http://nl.alpinelinux.org/alpine/edge/community' \u003e\u003e /etc/apk/repositories \u0026\u0026     echo '@testing http://nl.alpinelinux.org/alpine/edge/testing' \u003e\u003e /etc/apk/repositories \u0026\u0026     apk update \u0026\u0026 apk upgrade \u0026\u0026     apk add         wget         ca-certificates         php7@community         php7-session@community         php7-pgsql@community \u0026\u0026     wget https://github.com/vrana/adminer/releases/download/v$ADMINER_VERSION/adminer-$ADMINER_VERSION.php -O /srv/index.php \u0026\u0026     apk del wget ca-certificates \u0026\u0026     rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "srv"
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "CmdLine": [
            "/usr/bin/php     -d memory_limit=$MEMORY     -d upload_max_filesize=$UPLOAD     -d post_max_size=$UPLOAD     -S 0.0.0.0:80"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}