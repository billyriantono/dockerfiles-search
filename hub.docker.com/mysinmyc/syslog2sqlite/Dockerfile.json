{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "build",
      "BaseName": "golang",
      "SourceCode": "FROM golang as build",
      "Platform": "",
      "As": "build",
      "From": {
        "Image": "golang"
      },
      "Commands": [
        {
          "CmdLine": [
            "go get github.com/mysinmyc/syslog2sqlite/cmd/syslog2sqlited"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "alpine",
      "SourceCode": "FROM alpine",
      "Platform": "",
      "From": {
        "Image": "alpine"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk update         \u0026\u0026 apk add libc6-compat"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "adduser -D syslog2sqlite"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "build",
          "Name": "copy",
          "SourcesAndDest": [
            "/go/bin/syslog2sqlited",
            "/usr/local/bin"
          ]
        },
        {
          "CmdLine": [
            "mkdir /var/opt/syslog2sqlite /var/opt/syslog2sqlite_archive"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown syslog2sqlite /var/opt/syslog2sqlite /var/opt/syslog2sqlite_archive /usr/local/bin/syslog2sqlited"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "syslog2sqlite"
        },
        {
          "Name": "expose",
          "Ports": [
            "41514"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/opt/syslog2sqlite"
          ]
        },
        {
          "CmdLine": [
            "/usr/local/bin/syslog2sqlited --listen 0.0.0.0:41514 --db_path /var/opt/syslog2sqlite/syslog2sqlite.db --archive_dir /var/opt/syslog2sqlite_archive --archive_maxSizeMB 200 --archive_maxAgeMinutes 1440"
          ],
          "Name": "entrypoint",
          "PrependShell": true
        }
      ]
    }
  ]
}