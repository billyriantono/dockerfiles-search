{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "phusion/baseimage:latest",
      "SourceCode": "FROM phusion/baseimage:latest",
      "Platform": "",
      "From": {
        "Image": "phusion/baseimage:latest"
      },
      "Commands": [
        {
          "Maintainer": "flurdy",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026   apt-get install -yq mysql-server \u0026\u0026   apt-get autoremove -yq \u0026\u0026   apt-get clean -yq \u0026\u0026   rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i -e\"s/^bind-address\\s*=\\s*127.0.0.1/bind-address = 0.0.0.0/\" /etc/mysql/my.cnf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "MYSQL_USER",
              "Value": "root"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MYSQL_PASSWORD",
              "Value": "changeme"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "/usr/sbin/mysqld \u0026   sleep 10s \u0026\u0026   echo \"GRANT ALL ON *.* TO $MYSQL_USER@'%' IDENTIFIED BY '$MYSQL_PASSWORD' WITH GRANT OPTION; FLUSH PRIVILEGES\" | mysql"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "3306"
          ]
        },
        {
          "CmdLine": [
            "/usr/bin/mysqld_safe"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}