{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "replikation/debian_basic",
      "SourceCode": "FROM replikation/debian_basic",
      "Platform": "",
      "From": {
        "Image": "replikation/debian_basic"
      },
      "Commands": [
        {
          "Maintainer": "Christian Brandt \u003cchristian.jena@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "bash Miniconda3-latest-Linux-x86_64.sh -b -p /conda"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -f Miniconda3-latest-Linux-x86_64.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/conda/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "conda install -c conda-forge git-lfs"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git lfs install --force"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/nanoporetech/ont_tutorial_basicqc.git QCTutorial"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "QCTutorial"
        },
        {
          "CmdLine": [
            "rm -rf RawData/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'inputFile:   \"RawData/sequencing_summary.txt\"' \u003e config.yaml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'basecaller:  \"Guppy\"' \u003e\u003e config.yaml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'flowcellId:  \"unknown\"' \u003e\u003e config.yaml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo 'tutorialText: FALSE' \u003e\u003e config.yaml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "conda env create --name BasicQC --file environment.yaml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/conda/envs/BasicQC/bin/:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "echo \"source activate BasicQC\" \u003e ~/.bashrc"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}