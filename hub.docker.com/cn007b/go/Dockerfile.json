{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "cn007b/ubuntu:18.04",
      "SourceCode": "FROM cn007b/ubuntu:18.04",
      "Platform": "",
      "From": {
        "Image": "cn007b/ubuntu:18.04"
      },
      "Commands": [
        {
          "Maintainer": "Vladimir Kovpak \u003ccn007b@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Key": "GOLANG_ARCHIVE",
          "Name": "arg",
          "Value": "go1.13.linux-amd64.tar.gz"
        },
        {
          "Env": [
            {
              "Key": "GOROOT",
              "Value": "/usr/local/go/"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GOPATH",
              "Value": "/opt/cn007b/go/"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p $GOPATH"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -O https://storage.googleapis.com/golang/$GOLANG_ARCHIVE     \u0026\u0026 tar zxf $GOLANG_ARCHIVE     \u0026\u0026 rm $GOLANG_ARCHIVE     \u0026\u0026 mv go /usr/local     \u0026\u0026 ln -s /usr/local/go/bin/go /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install go-dep"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "go get -u golang.org/x/lint/golint \u0026\u0026 ln -s $GOPATH/bin/golint /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "go get -u github.com/golangci/golangci-lint/cmd/golangci-lint   \u0026\u0026 ln -s $GOPATH/bin/golangci-lint /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "go get -u golang.org/x/tools/cmd/cover"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "go get -u github.com/mattn/goveralls \u0026\u0026 ln -s $GOPATH/bin/goveralls /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "go get -u github.com/derekparker/delve/cmd/dlv \u0026\u0026 ln -s $GOPATH/bin/dlv /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "go get -u github.com/codegangsta/gin \u0026\u0026 ln -s $GOPATH/bin/gin /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sfL https://raw.githubusercontent.com/securego/gosec/master/install.sh   | sh -s -- -b $GOPATH/bin v2.1.0 \u0026\u0026 ln -s $GOPATH/bin/gosec /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "go get -u github.com/google/pprof \u0026\u0026 ln -s $GOPATH/bin/pprof /usr/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt install -y python-pydot python-pydot-ng graphviz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/usr/bin/go"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}