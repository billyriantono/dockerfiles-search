      "Commands": [
        {
          "Maintainer": "ototadana@gmail.com",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "yum install -y git tar which"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/"
        },
        {
          "CmdLine": [
            "git clone https://github.com/alminium/alminium.git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/alminium"
        },
        {
          "CmdLine": [
            "sed -i \"s/redmine_code_review,default/redmine_code_review,0.6.5/g\" /alminium/config/redmine-plugins.lst     \u0026\u0026 sed -i \"s,PASSENGER_VERSION=.*$,PASSENGER_VERSION=\\$(echo \\`passenger-config --version\\` |sed -e 's/Phusion Passenger //g'),g\" /alminium/inst-script/rhel6/post-install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "export ALM_HOSTNAME=\"localhost\"     \u0026\u0026 export SSL=\"N\"     \u0026\u0026 export ENABLE_JENKINS=\"n\"     \u0026\u0026 bash -l -c ./smelt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget http://www.torutk.com/attachments/download/226/perl-Authen-Simple-LDAP-0.3-1.el6.noarch.rpm     \u0026\u0026 yum install -y perl-LDAP perl-Params-Validate        perl-Module-Runtime perl-Module-Implementation perl-Class-Accessor        perl-Class-Data-Inheritable perl-Crypt-PasswordMD5 perl-Test-Simple     \u0026\u0026 yum --enablerepo=epel-testing install -y perl-Authen-Simple     \u0026\u0026 rpm -ivh perl-Authen-Simple-LDAP-0.3-1.el6.noarch.rpm"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo PerlLoadModule Authen::Simple::LDAP \u003e\u003e/etc/httpd/conf.d/vcs.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
