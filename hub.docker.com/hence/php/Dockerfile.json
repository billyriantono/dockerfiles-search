{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "hence/base:3.2-onbuild",
      "SourceCode": "FROM hence/base:3.2-onbuild",
      "Platform": "",
      "From": {
        "Image": "hence/base:3.2-onbuild"
      },
      "Commands": [
        {
          "Maintainer": "Clint Beacock \u003cclint@therefore.ca\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "HENCE_APP_DIR",
              "Value": "$HENCE_PREFIX/php"
            },
            {
              "Key": "HENCE_APP_NAME",
              "Value": "php"
            },
            {
              "Key": "HENCE_APP_USER",
              "Value": "hence"
            },
            {
              "Key": "HENCE_APP_VERSION",
              "Value": "3.2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HENCE_APP_VOL_PREFIX",
              "Value": "/hence/$HENCE_APP_NAME"
            },
            {
              "Key": "PATH",
              "Value": "$HENCE_APP_DIR/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk --update add     php-fpm     php-cli     php-ctype     php-curl     php-dom     php-gd     php-iconv     php-intl     php-json     php-ldap     php-mcrypt     php-memcache     php-mysql     php-mysqli     php-openssl     php-opcache     php-pdo     php-pdo_mysql     php-pdo_pgsql     php-pdo_sqlite     php-pear     php-pgsql     php-phar     php-sockets     php-sqlite3     php-xml     php-zip     php-zlib \u0026\u0026     rm -rf /var/cache/apk/* \u0026\u0026     rm -rf /etc/php/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "rootfs",
            "/"
          ]
        },
        {
          "CmdLine": [
            "curl -sS https://getcomposer.org/installer   | php -- --install-dir=/usr/bin --filename=composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sh $HENCE_PREFIX/install.sh \u0026\u0026     s6-rmrf /etc/s6/services/s6-fdholderd/down"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "9000"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/php/custom.d",
            "/app",
            "$HENCE_APP_VOL_PREFIX/conf",
            "$HENCE_APP_VOL_PREFIX/logs/php-general-logs",
            "$HENCE_APP_VOL_PREFIX/logs/php-error-logs"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/app"
        }
      ]
    }
  ]
}