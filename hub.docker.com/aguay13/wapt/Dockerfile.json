{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "eboraas/apache",
      "SourceCode": "FROM eboraas/apache",
      "Platform": "",
      "From": {
        "Image": "eboraas/apache"
      },
      "Commands": [
        {
          "Maintainer": "Aguay",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "echo \"deb http://wapt.tranquil.it/debian/ ./ \" \u003e /etc/apt/sources.list.d/wapt.list"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt -o Acquire::AllowInsecureRepositories=true -o Acquire::AllowDowngradeToInsecureRepositories=true update     \u0026\u0026 apt install -y --force-yes tis-waptserver tis-waptrepo tis-waptsetup"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "useradd -d /opt/wapt/waptserver waptserver"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown waptserver  -R /opt/wapt/waptserver"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /opt/wapt/waptserver/scripts/waptserver-init /etc/init.d/waptserver"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "wapt.ini",
            "/opt/wapt/conf/waptserver.ini"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "apache-wapt.conf",
            "/etc/apache2/sites-available/wapt.conf"
          ]
        },
        {
          "CmdLine": [
            "a2ensite wapt \u0026\u0026 a2dissite default-ssl.conf 000-default.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "a2enmod proxy proxy_http rewrite deflate headers  proxy_html"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "443"
          ]
        },
        {
          "CmdLine": [
            "service mongodb start \u0026\u0026 sleep 5 \u0026\u0026 /etc/init.d/waptserver start \u0026\u0026 apache2ctl -D FOREGROUND"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
