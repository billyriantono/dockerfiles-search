{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:7",
      "SourceCode": "FROM centos:7",
      "Platform": "",
      "From": {
        "Image": "centos:7"
      },
      "Commands": [
        {
          "Maintainer": "The DevOpsLab Project \u003cDevOpsLab@telekom.de\u003e",
          "Name": "maintainer"
        },
        {
          "Labels": [
            {
              "Key": "name",
              "Value": "\"DevOpsLab Nginx Reverse Proxy Base Image\""
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "DOL_BASE_DIR",
              "Value": "/opt/dol"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DOL_TMPL_DIR",
              "Value": "${DOL_BASE_DIR}/nginx"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum -y install epel-release     \u0026\u0026 yum -y install nginx     \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "for dir in /etc/nginx/conf.d /etc/nginx/default.d /etc/nginx/certs /var/lib/nginx /var/run /var/log/nginx ; do     mkdir -p ${dir} \u0026\u0026 chmod -cR g+rwx ${dir} \u0026\u0026 chgrp -cR root ${dir} ;     done     \u0026\u0026 chmod -cR g+rw /etc/nginx/nginx.conf     \u0026\u0026 chgrp -cR root /etc/nginx/nginx.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkfifo -m 666 /var/log/nginx/access.log     \u0026\u0026 mkfifo -m 666 /var/log/nginx/error.log"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p ${DOL_TMPL_DIR}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "config/nginx.*.in",
            "${DOL_TMPL_DIR}/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "entrypoint.sh",
            "/entrypoint.sh"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8080",
            "8443"
          ]
        },
        {
          "CmdLine": [
            "/entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}