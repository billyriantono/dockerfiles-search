        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./contrib/",
            "/opt/app-root"
          ]
        },
        {
          "CmdLine": [
            "chown -R 1001:0 /opt/app-root \u0026\u0026 chmod -R og+rwX /opt/app-root"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "1001"
        },
        {
