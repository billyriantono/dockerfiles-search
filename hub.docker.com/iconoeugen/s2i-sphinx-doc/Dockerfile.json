        "Image": "openshift/base-centos7"
      },
      "Commands": [
        {
          "Maintainer": "Horatiu Vlad \u003choratiu@vlad.eu\u003e",
          "Name": "maintainer"
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "Env": [
            {
              "Key": "PATH",
