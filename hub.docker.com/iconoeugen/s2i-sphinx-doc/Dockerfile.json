        {
          "CmdLine": [
            "yum install -y centos-release-scl-rh \u0026\u0026     yum-config-manager --enable centos-sclo-rh-testing \u0026\u0026     INSTALL_PKGS=\"rh-python36 rh-python36-python-devel rh-python36-python-setuptools rh-python36-python-pip rh-python36-python-sphinx.noarch nss_wrapper atlas-devel gcc-gfortran\" \u0026\u0026     yum install -y --setopt=tsflags=nodocs --enablerepo=centosplus ${INSTALL_PKGS} \u0026\u0026     rpm -V ${INSTALL_PKGS} \u0026\u0026     yum clean all -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
