{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "builder",
      "BaseName": "maven:3.5-jdk-8",
      "SourceCode": "FROM maven:3.5-jdk-8 as builder",
      "Platform": "",
      "As": "builder",
      "From": {
        "Image": "maven:3.5-jdk-8"
      },
      "Commands": [
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            ".",
            "/usr/src/daisy-pipeline2"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/usr/src/daisy-pipeline2"
        },
        {
          "CmdLine": [
            "mvn clean package"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd target \u0026\u0026 unzip assembly-*-linux.zip"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "openjdk:9-jre",
      "SourceCode": "FROM openjdk:9-jre",
      "Platform": "",
      "From": {
        "Image": "openjdk:9-jre"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"DAISY Consortium (http://www.daisy.org/)\""
            }
          ],
          "Name": "label"
        },
        {
          "Chown": "",
          "From": "builder",
          "Name": "copy",
          "SourcesAndDest": [
            "/usr/src/daisy-pipeline2/target/daisy-pipeline",
            "/opt/daisy-pipeline2"
          ]
        },
        {
          "Env": [
            {
              "Key": "PIPELINE2_WS_LOCALFS",
              "Value": "false"
            },
            {
              "Key": "PIPELINE2_WS_AUTHENTICATION",
              "Value": "true"
            },
            {
              "Key": "PIPELINE2_WS_AUTHENTICATION_KEY",
              "Value": "clientid"
            },
            {
              "Key": "PIPELINE2_WS_AUTHENTICATION_SECRET",
              "Value": "sekret"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "8181"
          ]
        },
        {
          "Health": {
            "Interval": 30000000000,
            "StartPeriod": 60000000000,
            "Test": [
              "CMD-SHELL",
              "curl --fail http://${PIPELINE2_WS_HOST-localhost}:${PIPELINE2_WS_PORT:-8181}/${PIPELINE2_WS_PATH:-ws}/alive || exit 1"
            ],
            "Timeout": 10000000000
          },
          "Name": "healthcheck"
        },
        {
          "CmdLine": [
            "/opt/daisy-pipeline2/bin/pipeline2"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}