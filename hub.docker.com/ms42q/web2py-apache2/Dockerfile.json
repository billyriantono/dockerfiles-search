{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:stable",
      "SourceCode": "FROM debian:stable",
      "Platform": "",
      "From": {
        "Image": "debian:stable"
      },
      "Commands": [
        {
          "Maintainer": "Mark Swillus \"mark.swillus@alumni.fh-aachen.de\"",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "PW",
              "Value": "\"admin\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CERT_SUBJECT",
              "Value": "\"/CN=monitutor.example.com\""
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/var/www"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install  python-dev python-pip git apache2 libapache2-mod-wsgi -y \u0026\u0026     apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /var/www/ \u0026\u0026 git clone https://github.com/web2py/web2py.git \u0026\u0026     cd web2py \u0026\u0026     git submodule update --init --recursive \u0026\u0026     git checkout 285013a64a12d5fcb353c8a8587d9ad4e806cac7 \u0026\u0026     cd .. \u0026\u0026 \tmv web2py/handlers/wsgihandler.py web2py/wsgihandler.py \u0026\u0026     chown -R www-data:www-data web2py"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "apache-web2py.conf",
            "/etc/apache2/sites-available/"
          ]
        },
        {
          "CmdLine": [
            "a2ensite apache-web2py \u0026\u0026     a2dissite 000-default \u0026\u0026     a2enmod wsgi \u0026\u0026 a2enmod ssl \u0026\u0026 a2enmod proxy \u0026\u0026 a2enmod rewrite"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "docker_entrypoint.sh",
            "/var/www/"
          ]
        },
        {
          "CmdLine": [
            "chmod u+x /var/www/docker_entrypoint.sh \u0026\u0026     mkdir /etc/apache2/ssl \u0026\u0026     chown -R www-data:www-data /var/www/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/var/www/web2py"
        },
        {
          "CmdLine": [
            "bash",
            "/var/www/docker_entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "apache2ctl start \u0026\u0026 tail -F /var/log/apache2/*.log"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}