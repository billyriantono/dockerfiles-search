{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:latest",
      "SourceCode": "FROM alpine:latest",
      "Platform": "",
      "From": {
        "Image": "alpine:latest"
      },
      "Commands": [
        {
          "Maintainer": "Ian Neubert \u003cian@ianneubert.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "BRANCH",
              "Value": "master"
            },
            {
              "Key": "FRAPPE_USER",
              "Value": "frappe"
            },
            {
              "Key": "ERPNEXT_BRANCH",
              "Value": "master"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk add --update     alpine-sdk     linux-headers     py-pip     python-dev     mariadb-client     mariadb-dev     zlib-dev     jpeg-dev     libffi-dev     xvfb     ttf-freefont     fontconfig     dbus     nodejs \u0026\u0026     apk add wkhtmltopdf --update-cache         --repository http://dl-3.alpinelinux.org/alpine/edge/testing/         --allow-untrusted \u0026\u0026     mv /usr/bin/wkhtmltopdf /usr/bin/wkhtmltopdf-origin \u0026\u0026     rm -rf /var/cache/apk/* \u0026\u0026     pip install --upgrade pip \u0026\u0026     addgroup -S $FRAPPE_USER \u0026\u0026     adduser -D -G $FRAPPE_USER $FRAPPE_USER \u0026\u0026     echo 'frappe ALL=(ALL) NOPASSWD: ALL' \u003e /etc/sudoers"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "$FRAPPE_USER"
        },
        {
          "Name": "workdir",
          "Path": "/home/$FRAPPE_USER"
        },
        {
          "CmdLine": [
            "git clone -b $BRANCH --depth 1 https://github.com/$FRAPPE_USER/bench bench-repo \u0026\u0026     sudo pip install -e /home/$FRAPPE_USER/bench-repo --no-cache-dir \u0026\u0026     mkdir -p frappe-bench \u0026\u0026 cd frappe-bench \u0026\u0026     mkdir -p apps logs sites/localhost config \u0026\u0026     bench setup env \u0026\u0026     sudo bench setup sudoers $FRAPPE_USER \u0026\u0026     bench setup socketio \u0026\u0026     bench get-app frappe https://github.com/frappe/frappe --branch $BRANCH"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "DOCKERIZE_VERSION",
              "Value": "v0.2.0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget https://github.com/jwilder/dockerize/releases/download/$DOCKERIZE_VERSION/dockerize-linux-amd64-$DOCKERIZE_VERSION.tar.gz     \u0026\u0026 sudo tar -C /usr/local/bin -xzvf dockerize-linux-amd64-$DOCKERIZE_VERSION.tar.gz \u0026\u0026 rm *.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./config/",
            "/tmp/config"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./docker-entrypoint.sh",
            "/usr/local/bin/docker-entrypoint.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./wkhtmltopdf",
            "/usr/bin/wkhtmltopdf"
          ]
        },
        {
          "CmdLine": [
            "cp /tmp/config/apps.txt /home/$FRAPPE_USER/frappe-bench/sites/apps.txt \u0026\u0026     sudo chmod +x /usr/local/bin/docker-entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ADMIN_PASSWORD",
              "Value": "frappe"
            },
            {
              "Key": "DB_HOST",
              "Value": "db"
            },
            {
              "Key": "DB_NAME",
              "Value": "frappe"
            },
            {
              "Key": "DB_PASSWORD",
              "Value": "frappe"
            },
            {
              "Key": "DB_USER",
              "Value": "frappe"
            },
            {
              "Key": "MAIL_LOGIN",
              "Value": ""
            },
            {
              "Key": "MAIL_PASSWORD",
              "Value": ""
            },
            {
              "Key": "MAIL_PORT",
              "Value": ""
            },
            {
              "Key": "MAIL_SERVER",
              "Value": ""
            },
            {
              "Key": "REDIS_CACHE_URL",
              "Value": "redis-cache"
            },
            {
              "Key": "REDIS_QUEUE_URL",
              "Value": "redis-queue"
            },
            {
              "Key": "REDIS_SOCKETIO_URL",
              "Value": "redis-socketio"
            },
            {
              "Key": "ROOT_PASSWORD",
              "Value": "root"
            },
            {
              "Key": "USE_SSL",
              "Value": "false"
            },
            {
              "Key": "DEVELOPER_MODE",
              "Value": "false"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/home/$FRAPPE_USER/frappe-bench"
        },
        {
          "CmdLine": [
            "bench get-app erpnext https://github.com/frappe/erpnext --branch $ERPNEXT_BRANCH"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/home/$FRAPPE_USER/frappe-bench/logs",
            "/home/$FRAPPE_USER/frappe-bench/sites/localhost",
            "/home/$FRAPPE_USER/frappe-bench/sites/assets",
            "/home/$FRAPPE_USER/frappe-bench/apps/erpnext/erpnext/public",
            "/home/$FRAPPE_USER/frappe-bench/apps/frappe/frappe/public"
          ]
        },
        {
          "CmdLine": [
            "/usr/local/bin/docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "app"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}