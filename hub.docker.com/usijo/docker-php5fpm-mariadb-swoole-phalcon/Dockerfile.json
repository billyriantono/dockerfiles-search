{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "usijo/docker-php5fpm",
      "SourceCode": "FROM usijo/docker-php5fpm",
      "Platform": "",
      "From": {
        "Image": "usijo/docker-php5fpm"
      },
      "Commands": [
        {
          "Maintainer": "Hongshun Yang\u003cojisucom@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "echo \"@testing http://dl-4.alpinelinux.org/alpine/edge/testing\" \u003e\u003e /etc/apk/repositories"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"@community http://dl-4.alpinelinux.org/alpine/edge/community\" \u003e\u003e /etc/apk/repositories"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apk -U add php5-json php5-opcache php5-gd php5-mcrypt php5-mysqli php5-pdo_mysql php5-apcu php5-ctype                php5-geoip@testing php5-imagick php5-memcached@testing php5-redis@testing php5-xdebug@community                php5-curl php5-soap  php5-openssl  php5-gmp php5-dom php5-zip php5-bcmath php5-xcache php5-gettext                php5-xmlreader php5-xmlrpc php5-bz2 php5-memcache php5-iconv php5-phar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SWOOLE_VERSION",
              "Value": "2.0.7"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CPHALCON_VERSION",
              "Value": "3.0.4"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CPHALCON_DOWNLOAD_URL",
              "Value": "https://github.com/phalcon/cphalcon/archive/v$CPHALCON_VERSION.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk add -U --virtual build-deps autoconf build-base php5-dev linux-headers git \u0026\u0026 pecl install swoole-$SWOOLE_VERSION \u0026\u0026 cd /tmp/ \u0026\u0026 wget -qO- $CPHALCON_DOWNLOAD_URL | tar xvz \u0026\u0026 cd cphalcon-$CPHALCON_VERSION/build/ \u0026\u0026 ./install \u0026\u0026 cd ~ \u0026\u0026 rm -rf /tmp/* \u0026\u0026 apk del -U build-deps \u0026\u0026 rm -rf /var/cache/apk/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"extension=swoole.so\" \u003e /etc/php5/conf.d/swoole.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"extension=phalcon.so\" \u003e /etc/php5/conf.d/phalcon.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "tmpl/_etc_php5_php-fpm.conf.tmpl",
            "/etc/php5/php-fpm.conf.tmpl"
          ]
        },
        {
          "CmdLine": [
            "dockerize -template \"/etc/php5/php-fpm.conf.tmpl:/etc/php5/php-fpm.conf\""
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}