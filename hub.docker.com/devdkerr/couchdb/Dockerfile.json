          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update -y  \u0026\u0026 apt-get install -qq -y curl monit python-software-properties software-properties-common supervisor  \u0026\u0026 add-apt-repository -y ppa:couchdb/stable  \u0026\u0026 apt-get update -y  \u0026\u0026 apt-get install -qq -y couchdb  \u0026\u0026 apt-get clean  \u0026\u0026 rm -rf /tmp/* /var/lib/apt/lists/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "update_couchdb_cfg.py",
            "/tmp/update_couchdb_cfg.py"
          ]
        },
        {
          "CmdLine": [
            "mkdir /var/run/couchdb  \u0026\u0026 python /tmp/update_couchdb_cfg.py /etc/couchdb/default.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "monitrc",
            "/etc/monit/monitrc"
          ]
        },
        {
          "CmdLine": [
            "chmod 700 /etc/monit/monitrc  \u0026\u0026 chown root:root /etc/monit/monitrc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/usr/local/var/lib/couchdb"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "2812",
            "5984"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
