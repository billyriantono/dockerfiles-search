{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "tools",
      "BaseName": "ubuntu",
      "SourceCode": "FROM ubuntu as tools",
      "Platform": "",
      "As": "tools",
      "From": {
        "Image": "ubuntu"
      },
      "Commands": [
        {
          "Maintainer": "pandazwb",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026   apt-get install -y wget unzip \u0026\u0026   apt-get install -y curl vim-tiny less \u0026\u0026   rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "QTUM_RELEASE",
              "Value": "0.15.2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "QTUM_RELEASE_TAR",
              "Value": "qtum-${QTUM_RELEASE}-x86_64-linux-gnu.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget https://github.com/qtumproject/qtum/releases/download/mainnet-ignition-v${QTUM_RELEASE}/${QTUM_RELEASE_TAR} \u0026\u0026   tar -xf $QTUM_RELEASE_TAR -C /usr/local --strip-components=1 --exclude=*-qt --exclude=test_qtum --exclude=qtum-tx \u0026\u0026   rm $QTUM_RELEASE_TAR"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://github.com/ethereum/solidity/releases/download/v0.4.24/solc-static-linux -O /usr/local/bin/solc \u0026\u0026    chmod 0755 /usr/local/bin/solc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -v https://github.com/qtumproject/solar/releases/download/0.0.14/solar-linux-amd64 -O /usr/local/bin/solar \u0026\u0026 chmod 0755 /usr/local/bin/solar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://github.com/qtumproject/qtumportal/releases/download/0.0.8/qtumportal-linux -O /usr/local/bin/qtumportal \u0026\u0026 chmod 0755 /usr/local/bin/qtumportal"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -v https://github.com/dcb9/janus/releases/download/0.0.6/janus-linux-amd64 -O /usr/local/bin/janus \u0026\u0026 chmod 0755 /usr/local/bin/janus"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "jeanblanchard/alpine-glibc",
      "SourceCode": "FROM jeanblanchard/alpine-glibc",
      "Platform": "",
      "From": {
        "Image": "jeanblanchard/alpine-glibc"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk --no-cache add supervisor"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "QTUM_DATADIR",
              "Value": "/dapp/.qtum"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "QTUM_RPC_USER",
              "Value": "qtum"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "QTUM_RPC_PASS",
              "Value": "test"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "QTUM_RPC",
              "Value": "http://$QTUM_RPC_USER:$QTUM_RPC_PASS@localhost:3889"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "QTUM_NETWORK",
              "Value": "regtest"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/dapp"
          ]
        },
        {
          "Chown": "",
          "From": "tools",
          "Name": "copy",
          "SourcesAndDest": [
            "/usr/local/bin",
            "/usr/local/bin"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "qcli",
            "/usr/local/bin"
          ]
        },
        {
          "Chown": "",
          "From": "",
