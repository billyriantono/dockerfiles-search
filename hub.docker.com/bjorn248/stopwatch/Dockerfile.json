{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:7",
      "SourceCode": "FROM centos:7",
      "Platform": "",
      "From": {
        "Image": "centos:7"
      },
      "Commands": [
        {
          "Maintainer": "Bjorn Stange \u003cbjorn248@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "yum -y install wget git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://storage.googleapis.com/golang/go1.5.1.linux-amd64.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -C /usr/local -xzf go1.5.1.linux-amd64.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -f go1.5.1.linux-amd64.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "GOPATH",
              "Value": "/go"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$GOPATH/bin:/usr/local/go/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "go get github.com/tools/godep"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Cloning Stopwatch Repo...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/Bjorn248/ec2-stopwatch.git /opt/stopwatch"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/stopwatch"
        },
        {
          "CmdLine": [
            "which godep"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "godep restore"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "./build.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "start.sh",
            "/opt/stopwatch/start.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /opt/stopwatch/start.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "4000"
          ]
        },
        {
          "CmdLine": [
            "./start.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}