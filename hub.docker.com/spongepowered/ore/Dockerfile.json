{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "spongepowered/ore-base",
      "SourceCode": "FROM spongepowered/ore-base",
      "Platform": "",
      "From": {
        "Image": "spongepowered/ore-base"
      },
      "Commands": [
        {
          "Maintainer": "Sponge Web Team \u003cweb@spongepowered.org\u003e",
          "Name": "maintainer"
        },
        {
          "Name": "expose",
          "Ports": [
            "3000"
          ]
        },
        {
          "CmdLine": [
            "gunicorn",
            "-w",
            "3",
            "-b",
            "0.0.0.0:3000",
            "ore.wsgi",
            "--log-file",
            "-",
            "--preload"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Name": "workdir",
          "Path": "/app"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "requirements/",
            "/app/requirements/"
          ]
        },
        {
          "CmdLine": [
            "pip3 install --find-links https://repo.spongepowered.org/wheels/ -r requirements/docker.txt"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "/app"
          ]
        },
        {
          "Env": [
            {
              "Key": "DJANGO_SETTINGS_MODULE",
              "Value": "ore.settings.docker"
            },
            {
              "Key": "SECRET_KEY",
              "Value": "lemons"
            },
            {
              "Key": "DB_NAME",
              "Value": "lemons"
            },
            {
              "Key": "DB_USER",
              "Value": "lemons"
            },
            {
              "Key": "DB_PASSWORD",
              "Value": "lemons"
            },
            {
              "Key": "DB_HOST",
              "Value": "lemons"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "npm install -g npm \u0026\u0026 /usr/local/bin/npm install \u0026\u0026 make clean all \u0026\u0026 cd /app \u0026\u0026 git describe --always \u003e build_stamp.txt"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}