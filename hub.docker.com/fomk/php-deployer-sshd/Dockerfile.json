{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "php:7.1-alpine",
      "SourceCode": "FROM php:7.1-alpine",
      "Platform": "",
      "From": {
        "Image": "php:7.1-alpine"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "DEPLOYER_VERSION",
              "Value": "6.0.5"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "TZ",
              "Value": "Europe/Riga"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PHPIZE_DEPS",
              "Value": "autoconf                 dpkg-dev dpkg                 file                 g++                 gcc                 libc-dev                 make                 pkgconf                 re2c"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "set -xe     \u0026\u0026 apk update --no-cache     \u0026\u0026 apk add --no-cache         openssh-client         openssh         bash         git         ${PHPIZE_DEPS}         postgresql-dev         zlib-dev     \u0026\u0026 docker-php-ext-install pdo pdo_pgsql opcache zip     \u0026\u0026 docker-php-ext-enable pdo pdo_pgsql opcache zip     \u0026\u0026 apk del         postgresql-libs         libsasl         db         ${PHPIZE_DEPS}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "set -xe     \u0026\u0026 apk add --update tzdata     \u0026\u0026 cp /usr/share/zoneinfo/${TZ} /etc/localtime     \u0026\u0026 echo \"${TZ}\" \u003e /etc/timezone     \u0026\u0026 echo \"date.timezone=${TZ}\" \u003e /usr/local/etc/php/conf.d/timezone.ini     \u0026\u0026 apk del tzdata"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -L https://deployer.org/releases/v${DEPLOYER_VERSION}/deployer.phar \u003e /usr/local/bin/deployer         \u0026\u0026 chmod +x /usr/local/bin/deployer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sS https://getcomposer.org/installer | php     \u0026\u0026 mv composer.phar /usr/local/bin/composer     \u0026\u0026 chmod +x /usr/local/bin/composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/project",
            "$HOME/.ssh",
            "/app"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/project"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "entrypoint",
            "/entrypoint"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /entrypoint"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/entrypoint"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "Name": "expose",
          "Ports": [
            "22"
          ]
        },
        {
          "CmdLine": [
            "/usr/sbin/sshd",
            "-D"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
