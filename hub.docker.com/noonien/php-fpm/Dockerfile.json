{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:latest",
      "SourceCode": "FROM ubuntu:latest",
      "Platform": "",
      "From": {
        "Image": "ubuntu:latest"
      },
      "Commands": [
        {
          "Maintainer": "George Jiglau \u003cgeorge@mux.ro\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y $(apt-cache pkgnames php5 | grep -Pv '(apcu|mysqlnd|xdebug|snmp)')"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -i '/daemonize /c daemonize = no' /etc/php5/fpm/php-fpm.conf \u0026\u0026     sed -e '/^listen /c listen = 0.0.0.0:9000'         -e 's/^listen.allowed_clients/;listen.allowed_clients/'         -e '/catch_workers_output/s/^;//'         -i /etc/php5/fpm/pool.d/www.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /etc/php5/cli/php.ini \u0026\u0026     ln -s /etc/php5/fpm/php.ini /etc/php5/cli/php.ini"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "9000"
          ]
        },
        {
          "CmdLine": [
            "php5-fpm"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}