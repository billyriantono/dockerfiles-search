{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openjdk:11-jre",
      "SourceCode": "FROM openjdk:11-jre",
      "Platform": "",
      "From": {
        "Image": "openjdk:11-jre"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SCALA_VERSION",
              "Value": "2.12"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KAFKA_VERSION",
              "Value": "2.2.2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KAFKA_HOME",
              "Value": "/opt/kafka_\"$SCALA_VERSION\"-\"$KAFKA_VERSION\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "\"${KAFKA_HOME}/bin:${PATH}\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y zookeeper wget supervisor dnsutils vim nano \u0026\u0026     rm -rf /var/lib/apt/lists/* \u0026\u0026     apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -q http://www-eu.apache.org/dist/kafka/\"$KAFKA_VERSION\"/kafka_\"$SCALA_VERSION\"-\"$KAFKA_VERSION\".tgz -O /tmp/kafka_\"$SCALA_VERSION\"-\"$KAFKA_VERSION\".tgz \u0026\u0026     tar xfz /tmp/kafka_\"$SCALA_VERSION\"-\"$KAFKA_VERSION\".tgz -C /opt \u0026\u0026     rm /tmp/kafka_\"$SCALA_VERSION\"-\"$KAFKA_VERSION\".tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "scripts/start-kafka.sh",
            "/usr/bin/start-kafka.sh"
          ]
        },
        {
          "CmdLine": [
            "sed -i \"s|#delete.topic.enable|delete.topic.enable|g\" \"$KAFKA_HOME\"/config/server.properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "supervisor/kafka.conf",
            "supervisor/zookeeper.conf",
            "/etc/supervisor/conf.d/"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "2181",
            "9092"
          ]
        },
        {
          "CmdLine": [
            "supervisord",
            "-n"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Name": "workdir",
          "Path": "$KAFKA_HOME"
        }
      ]
    }
  ]
}