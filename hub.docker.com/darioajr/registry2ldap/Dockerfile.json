              "Key": "SERVER_NAME",
              "Value": "localhost"
            },
            {
              "Key": "SSL_CERTIFICATE_FILE",
              "Value": "/etc/ssl/certs/reg-proxy-cert.pem"
            },
            {
              "Key": "SSL_CERTIFICATE_KEY_FILE",
              "Value": "/etc/ssl/private/reg-proxy-key.pem"
            },
            {
              "Key": "LDAP_TRUSTED_MODE",
              "Value": "NONE"
            },
            {
              "Key": "REQUIRE_AUTHZ_TYPE",
