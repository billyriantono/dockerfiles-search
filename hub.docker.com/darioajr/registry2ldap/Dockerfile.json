  "Stages": [
    {
      "Name": "",
      "BaseName": "centos",
      "SourceCode": "FROM centos",
      "Platform": "",
      "From": {
        "Image": "centos"
      },
      "Commands": [
        {
          "Maintainer": "Dario Alves Junior \u003cdarioajr@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "yum --setopt=tsflags=nodocs -y install httpd mod_ssl mod_ldap openssl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /var/cache/yum/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "apache/reg2proxy.conf",
            "/etc/httpd/conf/reg2proxy.conf"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "docker_entrypoint.sh",
            "/docker_entrypoint.sh"
          ]
        },
        {
          "CmdLine": [
            "cat /etc/httpd/conf/reg2proxy.conf \u003e\u003e /etc/httpd/conf/httpd.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/httpd/ssl"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/log/httpd"
          ]
        },
        {
          "CmdLine": [
            "chmod a+x /docker_entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/bin/bash",
            "/docker_entrypoint.sh"
