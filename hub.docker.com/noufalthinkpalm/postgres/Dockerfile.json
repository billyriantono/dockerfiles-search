          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get -y install postgresql-9.6 postgresql-client-9.6 postgresql-contrib-9.6"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "postgres"
        },
        {
          "CmdLine": [
            "/etc/init.d/postgresql start \u0026\u0026 psql --command \"ALTER USER postgres WITH PASSWORD 'postgres';\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"host all  all    0.0.0.0/0  md5\" \u003e\u003e /etc/postgresql/9.6/main/pg_hba.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"listen_addresses='*'\" \u003e\u003e /etc/postgresql/9.6/main/postgresql.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/postgresql",
            "/var/log/postgresql",
            "/var/lib/postgresql"
