{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "appcontainers/centos66",
      "SourceCode": "FROM       appcontainers/centos66",
      "Platform": "",
      "From": {
        "Image": "appcontainers/centos66"
      },
      "Commands": [
        {
          "Maintainer": "Jaime Valero \u003cjaimevalero78@yahoo.es\u003e",
          "Name": "maintainer"
        },
        {
          "Labels": [
            {
              "Key": "Description",
              "Value": "\"Synchronize user data from LDAP to Itop\""
            },
            {
              "Key": "Version",
              "Value": "\"0.4.32\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "yum install    -y mysql-server nc openldap-clients php php-common php-pdo php-cli php-mysql"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/etc/init.d/mysqld start"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /root/scripts/itop-docker/config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /root/scripts \u0026\u0026  git clone \"https://github.com/jaimevalero78/itop-utilities\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/bin/bash",
            "/root/scripts/itop-docker/startup.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./startup.sh",
            "/root/scripts/itop-docker/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./root/scripts/itop-docker/",
            "/root/scripts/itop-docker/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /root/scripts/itop-docker/*.{php,sh}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "find root/scripts/itop-docker/ -type f"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "touch /root/scripts/itop-utilities/.credentials"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /root/scripts/itop-utilities/.credentials /root/scripts/itop-docker/.credentials"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "3306"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/tmp/"
          ]
        }
      ]
    }
  ]
