{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:latest",
      "SourceCode": "FROM ubuntu:latest",
      "Platform": "",
      "From": {
        "Image": "ubuntu:latest"
      },
      "Commands": [
        {
          "Maintainer": "Kevin Sapp \u003cksapp@codeduet.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "echo \"Install all package dependencies for OPENCV4 ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update -y \u0026\u0026 apt-get install -y \twget \tbuild-essential \tcmake \tunzip \tpkg-config \tlibjpeg-dev \tlibpng-dev \tlibtiff-dev \tlibavcodec-dev \tlibavformat-dev \tlibswscale-dev \tlibv4l-dev \tlibxvidcore-dev \tlibx264-dev \tlibgtk-3-dev \tlibatlas-base-dev \tgfortran \tpython3-distutils \tpython3-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Create a new directory ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /install_opencv"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/install_opencv"
        },
        {
          "CmdLine": [
            "echo \"Download source file for PIP install\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://bootstrap.pypa.io/get-pip.py"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "python3 get-pip.py"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf get-pip.py .cache/pip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Install numpy using PIP ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip install numpy"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Install imutils (Optional) helper library using PIP ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip install imutils"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Download source files for OpenCV4 ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -O opencv.zip https://github.com/opencv/opencv/archive/4.0.0.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -O opencv_contrib.zip https://github.com/opencv/opencv_contrib/archive/4.0.0.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "unzip opencv.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "unzip opencv_contrib.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv opencv-4.0.0 opencv"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv opencv_contrib-4.0.0 opencv_contrib"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /install_opencv/opencv/build"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/install_opencv/opencv/build"
        },
        {
          "CmdLine": [
            "echo \"Compile OPENCV4 from source build ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cmake -D CMAKE_BUILD_TYPE=RELEASE \t-D CMAKE_INSTALL_PREFIX=/usr/local \t-D INSTALL_PYTHON_EXAMPLES=ON \t-D INSTALL_C_EXAMPLES=OFF \t-D OPENCV_ENABLE_NONFREE=ON \t-D OPENCV_EXTRA_MODULES_PATH=/install_opencv/opencv_contrib/modules \t-D BUILD_EXAMPLES=ON .."
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Change CPU Cores to 2 cores to speed up installation ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make -j2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Install OpenCV4 ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ldconfig"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "shell",
          "Shell": [
            "/bin/bash",
            "-c"
          ]
        },
        {
          "CmdLine": [
            "cv_python_path=\"$(find /usr/local/python/cv2/ -name \"python*\")\" \u0026\u0026 \tcv_python_file=\"$(ls $cv_python_path)\" \u0026\u0026 \tmv $cv_python_path/$cv_python_file $cv_python_path/cv2.opencv4.0.0.so \u0026\u0026 \tpython_version=$(find /usr/local/lib -name \"python3*\") \u0026\u0026 \tdist_pkg_path=\"/usr/local/lib/$(basename $python_version)/dist-packages\" \u0026\u0026 \tln -s $cv_python_path/cv2.opencv4.0.0.so $dist_pkg_path/cv2.so"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/"
        },
        {
          "CmdLine": [
            "echo \"Cleanup files and folders ...\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -rf /install_opencv"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"Installation Completed Successfully!\""
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}