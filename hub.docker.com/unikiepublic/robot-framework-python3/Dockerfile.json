{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "fedora:29",
      "SourceCode": "FROM fedora:29",
      "Platform": "",
      "From": {
        "Image": "fedora:29"
      },
      "Commands": [
        {
          "Maintainer": "Erno Lahtinen \u003ccontact@aino.io\u003e",
          "Name": "maintainer"
        },
        {
          "Labels": [
            {
              "Key": "description",
              "Value": "Robot Framework in Docker using Python3. Fork from Paul Podgorsek https://github.com/ppodgorsek/docker-robot-framework"
            }
          ],
          "Name": "label"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/robotframework/reports"
          ]
        },
        {
          "Env": [
            {
              "Key": "SCREEN_COLOUR_DEPTH",
              "Value": "24"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SCREEN_HEIGHT",
              "Value": "1080"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SCREEN_WIDTH",
              "Value": "1920"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ROBOT_THREADS",
              "Value": "1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CHROMIUM_VERSION",
              "Value": "73.0.*"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "FAKER_VERSION",
              "Value": "4.2.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "FIREFOX_VERSION",
              "Value": "66.0*"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GECKO_DRIVER_VERSION",
              "Value": "v0.22.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PABOT_VERSION",
              "Value": "0.53"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PYTHON_PIP_VERSION",
              "Value": "18.0*"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "REQUESTS_VERSION",
              "Value": "0.5.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ROBOT_FRAMEWORK_VERSION",
              "Value": "3.1.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SELENIUM_LIBRARY_VERSION",
              "Value": "3.3.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "XVFB_VERSION",
              "Value": "1.20.*"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "dnf upgrade -y   \u0026\u0026 dnf install -y     chromedriver-$CHROMIUM_VERSION     chromium-$CHROMIUM_VERSION     firefox-$FIREFOX_VERSION     python3-pip-$PYTHON_PIP_VERSION     xauth     xorg-x11-server-Xvfb-$XVFB_VERSION     which     wget   \u0026\u0026 dnf clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "pip3 install   robotframework==$ROBOT_FRAMEWORK_VERSION   robotframework-faker==$FAKER_VERSION   robotframework-pabot==$PABOT_VERSION   robotframework-requests==$REQUESTS_VERSION   robotframework-seleniumlibrary==$SELENIUM_LIBRARY_VERSION"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -q \"https://github.com/mozilla/geckodriver/releases/download/$GECKO_DRIVER_VERSION/geckodriver-$GECKO_DRIVER_VERSION-linux64.tar.gz\"       \u0026\u0026 tar xzf geckodriver-$GECKO_DRIVER_VERSION-linux64.tar.gz       \u0026\u0026 mkdir -p /opt/robotframework/drivers/       \u0026\u0026 mv geckodriver /opt/robotframework/drivers/geckodriver       \u0026\u0026 rm geckodriver-$GECKO_DRIVER_VERSION-linux64.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "bin/chromedriver.sh",
            "/opt/robotframework/bin/chromedriver"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "bin/chromium-browser.sh",
            "/opt/robotframework/bin/chromium-browser"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "bin/run-tests-in-virtual-screen.sh",
            "/opt/robotframework/bin/"
          ]
        },
        {
          "CmdLine": [
            "mv /usr/lib64/chromium-browser/chromium-browser /usr/lib64/chromium-browser/chromium-browser-original   \u0026\u0026 ln -sfv /opt/robotframework/bin/chromium-browser /usr/lib64/chromium-browser/chromium-browser"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/opt/robotframework/bin:/opt/robotframework/drivers:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "run-tests-in-virtual-screen.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}