{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "java:openjdk-7-jdk",
      "SourceCode": "FROM java:openjdk-7-jdk",
      "Platform": "",
      "From": {
        "Image": "java:openjdk-7-jdk"
      },
      "Commands": [
        {
          "Maintainer": "Dezső BICZÓ \"mxr576@gmail.com\"",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "export DEBIAN_FRONTEND=noninteractive \u0026\u0026   apt-get update \u0026\u0026   apt-get -y install git lsof supervisor \u0026\u0026   apt-get clean \u0026\u0026   rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SOLR_VERSION",
              "Value": "5.3.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SOLR",
              "Value": "solr-$SOLR_VERSION"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SOLR_MEM_SIZE",
              "Value": "512m"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PARTIAL_SEARCH_ENABLED",
              "Value": "false"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p /opt \u0026\u0026   wget -nv --output-document=/opt/$SOLR.tgz http://archive.apache.org/dist/lucene/solr/$SOLR_VERSION/$SOLR.tgz \u0026\u0026   tar -C /opt --extract --file /opt/$SOLR.tgz \u0026\u0026   rm /opt/$SOLR.tgz \u0026\u0026   mv /opt/$SOLR /opt/solr"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone --branch 7.x-1.x http://git.drupal.org/project/search_api_solr.git \u0026\u0026   mkdir -p /srv/solr/schemas/default \u0026\u0026   mkdir -p /srv/solr/schemas/partial_search \u0026\u0026   cp search_api_solr/solr-conf/5.x/* /srv/solr/schemas/default \u0026\u0026   cp search_api_solr/solr-conf/5.x/* /srv/solr/schemas/partial_search \u0026\u0026   rm -f /srv/solr/schemas/partial_search/schema.xml \u0026\u0026   rm -rf ./search_api_solr*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./partial_search/schema.xml",
            "/srv/solr/schemas/partial_search/schema.xml"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "supervisord.conf",
            "/etc/supervisor/conf.d/supervisord.conf"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "run.sh",
            "/run.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /run.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/solr/server/solr/drupal/data",
            "/opt/solr/server/solr/drupal/conf",
            "/var/log/supervisor"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8983"
          ]
        },
        {
          "CmdLine": [
            "/bin/bash",
            "-c",
            "/run.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}