{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "comics/samtools",
      "SourceCode": "FROM comics/samtools",
      "Platform": "",
      "From": {
        "Image": "comics/samtools"
      },
      "Commands": [
        {
          "Maintainer": "Ian Merrick \u003cMerrickI@Cardiff.ac.uk\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "APP_NAME",
              "Value": "bowtie2"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VERSION",
              "Value": "v2.3.4.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GIT",
              "Value": "https://github.com/BenLangmead/bowtie2.git"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DEST",
              "Value": "/software/applications/$APP_NAME/"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$DEST/$VERSION/:$DEST/$VERSION/scripts/:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum install -y       perl-devel       tbb-devel       zlib-devel ;     yum clean all ;     rm -rf /var/cache/yum ;     git clone $GIT ;     cd $APP_NAME ;     git checkout tags/$VERSION ;     sed -i \"s#^prefix.*#prefix = $DEST#\" Makefile ;     make -j ;     mkdir -p /usr/share/licenses/$APP_NAME-$VERSION ;     cp LICENSE /usr/share/licenses/$APP_NAME-$VERSION/ ;     rm -rf .git ;     cd ../ ;      mkdir -p $DEST ;     mv $APP_NAME $DEST/$VERSION"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/bin/bash"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}