{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "comics/centos",
      "SourceCode": "FROM comics/centos",
      "Platform": "",
      "From": {
        "Image": "comics/centos"
      },
      "Commands": [
        {
          "Maintainer": "Ian Merrick \u003cMerrickI@Cardiff.ac.uk\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "APP_NAME",
              "Value": "Trinotate"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "VERSION",
              "Value": "Trinotate-v3.1.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GIT",
              "Value": "https://github.com/Trinotate/Trinotate.git"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DEST",
              "Value": "/software/applications/${APP_NAME}/"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "${DEST}/${VERSION}/:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum install -y             lighttpd            perl-CGI            perl-DBI            perl-DBD-SQLite            perl-HTML-Template            perl-URI            ;     yum clean all ;     git clone $GIT ;     cd ${APP_NAME} ;     git checkout tags/${VERSION} ;     rm -rf .git ;     mkdir -p /usr/share/licenses/${APP_NAME}-${VERSION} ;     cp LICENSE.txt /usr/share/licenses/${APP_NAME}-${VERSION}/ ;     cd ../         ;     mkdir -p ${DEST} ;     mv $APP_NAME ${DEST}/${VERSION}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/bin/bash"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}