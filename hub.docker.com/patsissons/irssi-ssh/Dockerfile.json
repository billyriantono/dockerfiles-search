{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "irssi",
      "SourceCode": "FROM irssi",
      "Platform": "",
      "From": {
        "Image": "irssi"
      },
      "Commands": [
        {
          "Maintainer": "Pat Sissons patricksissons@gmail.com",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "SCREEN_NAME",
              "Value": "irc"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SCREEN_FLAGS",
              "Value": "-x"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "AUTHORIZED_KEYS",
              "Value": ""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "AUTHORIZED_KEYS_OPTS",
              "Value": "'no-port-forwarding,no-X11-forwarding'"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "AUTHORIZED_KEYS_CMD",
              "Value": "\"screen $SCREEN_FLAGS $SCREEN_NAME\""
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "root/",
            "/"
          ]
        },
        {
          "CmdLine": [
            "apt-get update   \u0026\u0026 apt-get install -y -q --no-install-recommends     openssh-server     screen   \u0026\u0026 apt-get clean   \u0026\u0026 rm -r /var/lib/apt/lists/*   \u0026\u0026 sed -i     -e 's~^#AuthorizedKeysFile~AuthorizedKeysFile~g'     -e 's~^#?PubkeyAuthentication.*~PubkeyAuthentication yes~g'     -e 's~^#?PasswordAuthentication.*~PasswordAuthentication no~g'     -e 's~^#?ChallengeResponseAuthentication.*~ChallengeResponseAuthentication no~g'     -e 's~^#?UsePAM.*~UsePAM no~g'     /etc/ssh/sshd_config   \u0026\u0026 chmod a+x /app/entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "22"
          ]
        },
        {
          "CmdLine": [
            "/app/entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}