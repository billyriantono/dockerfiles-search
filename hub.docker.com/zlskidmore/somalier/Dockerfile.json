{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:18.04",
      "SourceCode": "FROM ubuntu:18.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:18.04"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "somalier_version",
              "Value": "0.1.4"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "htslib_version",
              "Value": "1.9"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "nim_version",
              "Value": "0.19.4"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update -y \u0026\u0026 apt-get install -y     build-essential     git     curl     wget     vim     zlib1g-dev     xz-utils     libbz2-dev     libssl-dev     libcurl4-openssl-dev     libnss-sss     autoconf     bzip2     libncurses5-dev     libncursesw5-dev     liblzma-dev     gzip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin"
        },
        {
          "CmdLine": [
            "curl -SL https://nim-lang.org/download/nim-${nim_version}.tar.xz \u003e nim-${nim_version}.tar.xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xvf nim-${nim_version}.tar.xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin/nim-${nim_version}"
        },
        {
          "CmdLine": [
            "sh build.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "bin/nim c koch"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "./koch nimble"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/local/bin/nim-0.19.4/bin/nim /usr/local/bin/nim"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/local/bin/nim-0.19.4/bin/nimble /usr/local/bin/nimble"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin/"
        },
        {
          "CmdLine": [
            "curl -SL https://github.com/samtools/htslib/releases/download/${htslib_version}/htslib-${htslib_version}.tar.bz2     \u003e /usr/local/bin/htslib-${htslib_version}.tar.bz2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xjf /usr/local/bin/htslib-${htslib_version}.tar.bz2 -C /usr/local/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/bin/htslib-${htslib_version}/ \u0026\u0026 ./configure"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/bin/htslib-${htslib_version}/ \u0026\u0026 make"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/bin/htslib-${htslib_version}/ \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LD_LIBRARY_PATH",
              "Value": "/usr/local/bin/htslib-${htslib_version}/"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin"
        },
        {
          "CmdLine": [
            "nimble install -y hts binaryheap https://github.com/brentp/bpbio"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin"
        },
        {
          "CmdLine": [
            "curl -SL https://github.com/brentp/somalier/archive/v${somalier_version}.tar.gz      \u003e v${somalier_version}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xzvf v${somalier_version}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin/somalier-${somalier_version}"
        },
        {
          "CmdLine": [
            "nim c -d:release -o:/usr/local/bin/somalier --passC:-flto src/somalier"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt"
        },
        {
          "CmdLine": [
            "wget https://github.com/brentp/somalier/files/2866407/sites.hg38.vcf.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "gunzip sites.hg38.vcf.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://github.com/brentp/somalier/files/2866408/sites.chr.hg38.vcf.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv sites.chr.hg38.vcf.gz sites.chr.hg38.vcf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -O sites.hg37.vcf.gz https://github.com/brentp/somalier/files/2774846/sites.vcf.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "gunzip sites.hg37.vcf.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "somalier"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}