{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:18.04",
      "SourceCode": "FROM ubuntu:18.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:18.04"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "mosdepth_version",
              "Value": "0.2.5"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "htslib_version",
              "Value": "1.9"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "nim_version",
              "Value": "0.19.6"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update -y \u0026\u0026 apt-get install -y     libnss-sss     curl     less     vim      wget     unzip     build-essential     libpcre3     libpcre3-dev     zlib1g-dev     libncurses5-dev     libncursesw5-dev     libnss-sss     libbz2-dev     liblzma-dev     bzip2     libcurl4-openssl-dev     git     bwa     cmake"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin/"
        },
        {
          "CmdLine": [
            "curl -SL https://github.com/samtools/htslib/releases/download/${htslib_version}/htslib-${htslib_version}.tar.bz2     \u003e /usr/local/bin/htslib-${htslib_version}.tar.bz2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xjf /usr/local/bin/htslib-${htslib_version}.tar.bz2 -C /usr/local/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/bin/htslib-${htslib_version}/ \u0026\u0026 ./configure"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/bin/htslib-${htslib_version}/ \u0026\u0026 make"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/local/bin/htslib-${htslib_version}/ \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LD_LIBRARY_PATH",
              "Value": "/usr/local/bin/htslib-${htslib_version}/"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin"
        },
        {
          "CmdLine": [
            "curl -SL https://nim-lang.org/download/nim-${nim_version}.tar.xz \u003e nim-${nim_version}.tar.xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xvf nim-${nim_version}.tar.xz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin/nim-${nim_version}"
        },
        {
          "CmdLine": [
            "sh build.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "bin/nim c koch"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "./koch nimble"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/local/bin/nim-${nim_version}/bin/nim /usr/local/bin/nim"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/local/bin/nim-${nim_version}/bin/nimble /usr/local/bin/nimble"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin"
        },
        {
          "CmdLine": [
            "wget https://github.com/brentp/mosdepth/archive/v${mosdepth_version}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar -xzvf v${mosdepth_version}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin/mosdepth-${mosdepth_version}"
        },
        {
          "CmdLine": [
            "nimble refresh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "nimble install -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "nimble test"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "bash functional-tests.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "nim c -d:release --cc:gcc mosdepth.nim"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /usr/local/bin/mosdepth-${mosdepth_version}/mosdepth /usr/local/bin/mosdepth"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/usr/local/bin"
        },
        {
          "CmdLine": [
            "mosdepth --help"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}