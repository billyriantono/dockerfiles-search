{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:18.04",
      "SourceCode": "FROM ubuntu:18.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:18.04"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "fgbio_version",
              "Value": "1.0.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "FGBIO",
              "Value": "/usr/local/bin/fgbio.jar"
            }
