{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "jokke/ubuntu-mate-x2go-desktop",
      "SourceCode": "FROM jokke/ubuntu-mate-x2go-desktop",
      "Platform": "",
      "From": {
        "Image": "jokke/ubuntu-mate-x2go-desktop"
      },
      "Commands": [
        {
          "Maintainer": "Joachim Wickman \u003cjoachim@wickman.in\u003e",
          "Name": "maintainer"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "echo oracle-java8-installer shared/accepted-oracle-license-v1-1 select true | sudo /usr/bin/debconf-set-selections"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-add-repository ppa:webupd8team/java -y \u0026\u0026     apt-get update -qq \u0026\u0026     apt-get install -y oracle-java8-installer oracle-java8-set-default wget nano xdg-utils libnss-mdns \u0026\u0026     apt-get clean \u0026\u0026 apt-get autoremove \u0026\u0026     rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ARDUINO_IDE_VERSION",
              "Value": "1.8.3"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "(wget -q -O- https://downloads.arduino.cc/arduino-${ARDUINO_IDE_VERSION}-linux64.tar.xz \t| tar xJC /opt \t\u0026\u0026 ln -s /opt/arduino-${ARDUINO_IDE_VERSION} /opt/arduino \t\u0026\u0026 ln -s /opt/arduino-${ARDUINO_IDE_VERSION}/arduino /usr/local/bin/arduino)"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget -q -O- https://github.com/esp8266/arduino-esp8266fs-plugin/releases/download/0.3.0/ESP8266FS-0.3.0.zip \u003e /tmp/spiffs-tools.zip \u0026\u0026 \tunzip /tmp/spiffs-tools.zip -d /opt/arduino/tools/ \u0026\u0026 \trm -f /tmp/spiffs-tools.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "useradd -m desktop"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "Aurdino.desktop",
            "/home/desktop/Desktop/"
          ]
        },
        {
          "CmdLine": [
            "chown -R desktop:desktop /home/desktop"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "local-entrypoint.sh",
            "/"
          ]
        }
      ]
    }
  ]
