{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:7",
      "SourceCode": "FROM centos:7",
      "Platform": "",
      "From": {
        "Image": "centos:7"
      },
      "Commands": [
        {
          "Maintainer": "Simon Hofmann \"simon.hofmann@consol.de\"",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "REFRESHED_AT",
              "Value": "2018-10-29"
            }
          ],
          "Name": "env"
        },
        {
          "Labels": [
            {
              "Key": "io.k8s.description",
              "Value": "\"Headless VNC Container with IceWM window manager, firefox and chromium\""
            },
            {
              "Key": "io.k8s.display-name",
              "Value": "\"Headless VNC Container based on Centos\""
            },
            {
              "Key": "io.openshift.expose-services",
              "Value": "\"6901:http,5901:xvnc\""
            },
            {
              "Key": "io.openshift.tags",
              "Value": "\"vnc, centos, icewm\""
            },
            {
              "Key": "io.openshift.non-scalable",
              "Value": "true"
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "DISPLAY",
              "Value": ":1"
            },
            {
              "Key": "VNC_PORT",
              "Value": "5901"
            },
            {
              "Key": "NO_VNC_PORT",
              "Value": "6901"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "$NO_VNC_PORT",
            "$VNC_PORT"
          ]
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/headless"
            },
            {
              "Key": "TERM",
              "Value": "xterm"
            },
            {
              "Key": "STARTUPDIR",
              "Value": "/dockerstartup"
            },
            {
              "Key": "INST_SCRIPTS",
              "Value": "/headless/install"
            },
            {
              "Key": "NO_VNC_HOME",
              "Value": "/headless/noVNC"
            },
            {
              "Key": "VNC_COL_DEPTH",
              "Value": "24"
            },
            {
              "Key": "VNC_RESOLUTION",
              "Value": "1280x1024"
            },
            {
              "Key": "VNC_PW",
              "Value": "vncpassword"
            },
            {
              "Key": "VNC_VIEW_ONLY",
              "Value": "false"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "$HOME"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./src/common/install/",
            "$INST_SCRIPTS/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./src/centos/install/",
            "$INST_SCRIPTS/"
          ]
        },
        {
          "CmdLine": [
            "find $INST_SCRIPTS -name '*.sh' -exec chmod a+x {} +"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "$INST_SCRIPTS/tools.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LANG",
              "Value": "'en_US.UTF-8'"
            },
            {
              "Key": "LANGUAGE",
              "Value": "'en_US:en'"
            },
            {
              "Key": "LC_ALL",
              "Value": "'en_US.UTF-8'"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "$INST_SCRIPTS/tigervnc.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "$INST_SCRIPTS/no_vnc.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "$INST_SCRIPTS/firefox.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "$INST_SCRIPTS/chrome.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "$INST_SCRIPTS/icewm_ui.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./src/centos/icewm/",
            "$HOME/"
          ]
        },
        {
          "CmdLine": [
            "$INST_SCRIPTS/libnss_wrapper.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./src/common/scripts",
            "$STARTUPDIR"
          ]
        },
        {
          "CmdLine": [
            "$INST_SCRIPTS/set_user_permission.sh $STARTUPDIR $HOME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "1000"
        },
        {
          "CmdLine": [
            "/dockerstartup/vnc_startup.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "--wait"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}