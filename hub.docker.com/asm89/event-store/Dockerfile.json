{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu",
      "SourceCode": "FROM ubuntu",
      "Platform": "",
      "From": {
        "Image": "ubuntu"
      },
      "Commands": [
        {
          "Maintainer": "Alexander \"iam.asm89@gmail.com\"",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y git subversion"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y autoconf automake libtool gettext libglib2.0-dev libfontconfig1-dev mono-gmcs"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get install -y build-essential"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "(cd /var/local; curl -O http://download.mono-project.com/sources/mono/mono-3.1.2.tar.bz2)"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "(cd /var/local; tar -xjvf mono-3.1.2.tar.bz2)"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "(cd /var/local/mono-3.1.2; ./configure --prefix=/usr/local; make; make install)"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "git clone https://github.com/EventStore/EventStore.git /var/local/EventStore --depth=1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "(cd /var/local/EventStore; ./build.sh full configuration=release)"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "EVENTSTORE_OUT",
              "Value": "/var/local/EventStore/bin/eventstore/release/anycpu"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "EVENTSTORE_BIN",
              "Value": "/var/local/EventStore/bin/eventstore/release/anycpu"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "EVENTSTORE_DB",
              "Value": "/opt/eventstore/db"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "EVENTSTORE_LOG",
              "Value": "/opt/eventstore/logs"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p $EVENTSTORE_BIN"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p $EVENTSTORE_LOG"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p $EVENTSTORE_DB"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "LD_LIBRARY_PATH",
              "Value": "$EVENTSTORE_BIN"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "2113"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "1113"
          ]
        },
        {
          "CmdLine": [
            "mono-sgen",
            "/var/local/EventStore/bin/eventstore/release/anycpu/EventStore.SingleNode.exe",
            "--log=/opt/eventstore/logs",
            "--db=/opt/eventstore/db"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "--ip=0.0.0.0",
            "--http-prefix=http://*:2113/"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}