{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:sid",
      "SourceCode": "FROM debian:sid",
      "Platform": "",
      "From": {
        "Image": "debian:sid"
      },
      "Commands": [
        {
          "Maintainer": "Martin Rumanek \u003cmartin@rumanek.cz\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "REFRESHED_AT",
              "Value": "2015-07-14"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get -y  update \u0026\u0026 apt-get -y install unzip curl libtiff-tools imagemagick sox ffmpeg libsox-fmt-mp3"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL --no-verbose https://archive.apache.org/dist/tomcat/tomcat-8/v8.0.26/bin/apache-tomcat-8.0.26.tar.gz -o /tmp/tomcat.tar.gz \u0026\u0026     curl -sL --no-verbose http://ftp-devel.mzk.cz/jre/jdk-7u75-linux-x64.tar.gz -o /tmp/java.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /usr/local/java"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/local/java/jdk1.7.0_75"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CATALINA_HOME",
              "Value": "/usr/local/tomcat"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "tar xzf /tmp/java.tar.gz --directory=/usr/local/java"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "tar xzf /tmp/tomcat.tar.gz --directory=/usr/local/ \u0026\u0026 mv /usr/local/apache-tomcat-* /usr/local/tomcat"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$CATALINA_HOME/bin:$JAVA_HOME/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -sL --no-verbose https://github.com/moravianlibrary/MEditor/archive/master.zip -o /tmp/meditor.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL  http://ftp-devel.mzk.cz/meditor/master/meditor.war -o $CATALINA_HOME/webapps/meditor.war"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -sL https://jdbc.postgresql.org/download/postgresql-9.4-1201.jdbc41.jar -o $CATALINA_HOME/lib/postgresql-9.4-1201.jdbc41.jar"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "unzip /tmp/meditor.zip -d /tmp/meditor/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "unzip -o /tmp/meditor/MEditor-master/resources/djatoka/dist/djatoka.war -d $CATALINA_HOME/webapps/djatoka"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /root/.meditor"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /tmp/meditor/MEditor-master/resources/djatoka /root/.meditor/djatoka"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /tmp/meditor/MEditor-master/resources/xml /root/.meditor/xml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /tmp/meditor/MEditor-master/resources/convertAudio /root/.meditor/convertAudio"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "djatoka.properties",
            "$CATALINA_HOME/webapps/djatoka/WEB-INF/classes/djatoka.properties"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "log4j.properties",
            "$CATALINA_HOME/webapps/djatoka/WEB-INF/classes/log4j.properties"
          ]
        },
        {
          "Env": [
            {
              "Key": "DJATOKA_HOME",
              "Value": "/root/.meditor/djatoka"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LIBPATH",
              "Value": "$DJATOKA_HOME/lib"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "LD_LIBRARY_PATH",
              "Value": "$LIBPATH/Linux-x86-64"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KAKADU_HOME",
              "Value": "$DJATOKA_HOME/bin/Linux-x86-64"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KAKADU_LIBRARY_PATH",
              "Value": "-DLD_LIBRARY_PATH=$LIBPATH/Linux-x86-64"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JAVA_OPTS",
              "Value": "-Dfile.encoding=UTF8 -Djava.awt.headless=true -Dfile.encoding=UTF8 -XX:MaxPermSize=256m -Xms1024m -Xmx3072m -Dkakadu.home=$KAKADU_HOME -Djava.library.path=$LIBPATH/Linux-x86-64 $KAKADU_LIBRARY_PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "keytool -genkey -alias tomcat  -dname \"CN=localhost, OU=mzk, S=cz, C=cz\" -keyalg RSA -storepass somekey -keypass somekey"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "rewrite.config",
            "$CATALINA_HOME/conf/Catalina/localhost/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "server.xml",
            "$CATALINA_HOME/conf/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "tomcat-users.xml",
            "/tmp/tomcat-users.xml"
          ]
        },
        {
          "CmdLine": [
            "touch /root/.meditor/configuration.properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "ldap.properties",
            "/root/.meditor/ldap.properties"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8843"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "docker-entrypoint.sh",
            "/"
          ]
        },
        {
          "CmdLine": [
            "/docker-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "catalina.sh",
            "run"
          ],
          "Name": "cmd",
          "PrependShell": false
        },
        {
          "Env": [
            {
              "Key": "hostanme",
              "Value": "localhost"
            }
          ],
          "Name": "env"
        }
      ]
    }
  ]
}