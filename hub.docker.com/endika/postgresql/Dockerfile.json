      "Name": "",
      "BaseName": "endika/base",
      "SourceCode": "FROM endika/base",
      "Platform": "",
      "From": {
        "Image": "endika/base"
      },
      "Commands": [
        {
          "Maintainer": "me@endikaiglesias.com",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "ODOO_PASS",
              "Value": "'welcome'"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "aptitude install -y postgresql-9.3"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/etc/init.d/postgresql start"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "postgres"
        },
        {
          "CmdLine": [
            "/etc/init.d/postgresql start \u0026\u0026     psql --command \"CREATE USER odoo WITH PASSWORD '$ODOO_PASS';ALTER USER odoo WITH SUPERUSER;\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm /var/run/postgresql/.s.PGSQL.5432.lock"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/postgresql",
            "/var/log/postgresql",
            "/var/lib/postgresql"
