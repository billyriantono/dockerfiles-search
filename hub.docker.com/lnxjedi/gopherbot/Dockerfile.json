{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "amazonlinux:latest",
      "SourceCode": "FROM amazonlinux:latest",
      "Platform": "",
      "From": {
        "Image": "amazonlinux:latest"
      },
      "Commands": [
        {
          "CmdLine": [
            "yum -y update \u0026\u0026   yum -y install     git     jq     gcc     make     openssh-clients     procps     tar     python3     unzip     zip \u0026\u0026   amazon-linux-extras install ruby2.4 \u0026\u0026   yum clean all \u0026\u0026   rm -rf /var/cache/yum"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Key": "username",
          "Name": "arg",
          "Value": "daemon"
        },
        {
          "Key": "nonprivuser",
          "Name": "arg",
          "Value": "nobody"
        },
        {
          "Key": "groupname",
          "Name": "arg",
          "Value": "nobody"
        },
        {
          "Key": "installdir",
          "Name": "arg",
          "Value": "/opt"
        },
        {
          "Key": "version",
          "Name": "arg",
          "Value": "v2.0.0-snapshot"
        },
        {
          "Key": "goversion",
          "Name": "arg",
          "Value": "1.13.5"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "${PATH}:${HOME}/go/bin:/usr/local/go/bin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "HOME",
              "Value": "/home/robot"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "USER",
              "Value": "${username}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "GROUP",
              "Value": "${groupname}"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "cd /usr/local \u0026\u0026   curl -L https://dl.google.com/go/go${goversion}.linux-amd64.tar.gz | tar xzf - \u0026\u0026   mkdir -p ${installdir} \u0026\u0026   mkdir -p ${HOME} \u0026\u0026   chown ${username}:${groupname} ${HOME} \u0026\u0026   chmod 0750 ${HOME}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "https://api.github.com/repos/lnxjedi/gopherbot/commits/master",
            "/commit"
          ]
        },
        {
          "CmdLine": [
            "cd ${installdir} \u0026\u0026   curl -L https://github.com/lnxjedi/gopherbot/releases/download/${version}/gopherbot-linux-amd64.tar.gz | tar xzvf - \u0026\u0026   chown ${nonprivuser}:${groupname} ${installdir}/gopherbot/gopherbot \u0026\u0026   chmod u+s ${installdir}/gopherbot/gopherbot"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "${HOME}"
        },
        {
          "Name": "user",
          "User": "${USER}:${GROUP}"
        },
        {
          "CmdLine": [
            "/opt/gopherbot/gopherbot",
            "-plainlog"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}