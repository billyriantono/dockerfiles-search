{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "buildpack-deps:jessie-curl",
      "SourceCode": "FROM buildpack-deps:jessie-curl",
      "Platform": "",
      "From": {
        "Image": "buildpack-deps:jessie-curl"
      },
      "Commands": [
        {
          "Maintainer": "Mihkel Sokk \u003cmihkelsokk@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "RENDERER_ACCESS_KEY",
              "Value": "2467"
            },
            {
              "Key": "CONCURRENCY",
              "Value": "1"
            },
            {
              "Key": "WINDOW_WIDTH",
              "Value": "1024"
            },
            {
              "Key": "WINDOW_HEIGHT",
              "Value": "768"
            },
            {
              "Key": "NODE_ENV",
              "Value": "production"
            },
            {
              "Key": "ELECTRON_VERSION",
              "Value": "1.4.10"
            },
            {
              "Key": "ELECTRON_ENABLE_STACK_DUMPING",
              "Value": "true"
            },
            {
              "Key": "ELECTRON_ENABLE_LOGGING",
              "Value": "true"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "/app"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".fonts.conf",
            "/root/.fonts.conf"
          ]
        },
        {
          "CmdLine": [
            "sed -i 's/main/main contrib/g' /etc/apt/sources.list \u0026\u0026     curl -sL https://deb.nodesource.com/setup_7.x | bash - \u0026\u0026     apt-get upgrade -y \u0026\u0026     apt-get install -y     libasound2     libgconf2-4     libgtk2.0-0     libnss3     libxss1     libxtst6     unzip     xvfb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget \"https://github.com/atom/electron/releases/download/v${ELECTRON_VERSION}/electron-v${ELECTRON_VERSION}-linux-x64.zip\" -O electron.zip \u0026\u0026     unzip electron.zip \u0026\u0026 rm electron.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "package.json",
            "/app/package.json"
          ]
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y nodejs \u0026\u0026     sed -i '/\\\"electron\\\"\\:/d' ./package.json \u0026\u0026     npm install --production --no-optional \u0026\u0026     apt-get remove -y unzip nodejs \u0026\u0026 apt-get clean \u0026\u0026 rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "xvfb-run -a -e /dev/stdout --server-args=\"-screen 0 ${WINDOW_WIDTH}x${WINDOW_HEIGHT}x24\" ./electron --disable-gpu src/server.js"
          ],
          "Name": "cmd",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "/app"
          ]
        }
      ]
    }
  ]
}