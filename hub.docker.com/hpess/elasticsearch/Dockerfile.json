  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "hpess/jre:master",
      "SourceCode": "FROM hpess/jre:master",
      "Platform": "",
      "From": {
        "Image": "hpess/jre:master"
      },
      "Commands": [
        {
          "Maintainer": "Karl Stoney \u003ckarl.stoney@hp.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "ES_PKG_NAME",
              "Value": "elasticsearch-1.6.0"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "cd /opt \u0026\u0026     wget --quiet https://download.elasticsearch.org/elasticsearch/elasticsearch/$ES_PKG_NAME.tar.gz \u0026\u0026     tar xzf $ES_PKG_NAME.tar.gz \u0026\u0026     rm -f $ES_PKG_NAME.tar.gz \u0026\u0026     mv $ES_PKG_NAME elasticsearch \u0026\u0026     /opt/elasticsearch/bin/plugin -install mobz/elasticsearch-head \u0026\u0026     /opt/elasticsearch/bin/plugin -install lmenezes/elasticsearch-kopf \u0026\u0026     mkdir -p /storage/data \u0026\u0026     mkdir -p /storage/log \u0026\u0026     mkdir -p /storage/work \u0026\u0026     chown -R docker:docker /opt/elasticsearch \u0026\u0026     chown -R docker:docker /storage"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum -y -q install cronie \u0026\u0026     yum -y -q clean all \u0026\u0026     mkdir -p /var/lock/subsys \u0026\u0026     sed -i '/session    required   pam_loginuid.so/c\\#session    required   pam_loginuid.so' /etc/pam.d/crond"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -f /etc/cron.daily/* \u0026\u0026     rm -f /etc/cron.hourly/* \u0026\u0026     rm -f /etc/cron.monthly/* \u0026\u0026     rm -f /etc/cron.weekly/* \u0026\u0026     rm -f /etc/cron.d/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"* - nofile 65535\" \u003e\u003e /etc/security/limits.conf \u0026\u0026     echo \"* - memlock unlimited\" \u003e\u003e /etc/security/limits.conf \u0026\u0026     echo vm.max_map_count=262144 \u003e /etc/sysctl.d/max_map_count.conf \u0026\u0026     echo vm.swappiness=0 \u003e /etc/sysctl.d/swappiness.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ES_HEAP_SIZE",
              "Value": "1g"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MAX_OPEN_FILES",
              "Value": "65535"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MAX_LOCKED_MEMORY",
