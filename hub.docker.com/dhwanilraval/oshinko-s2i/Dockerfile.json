{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos/python-27-centos7:latest",
      "SourceCode": "FROM centos/python-27-centos7:latest",
      "Platform": "",
      "From": {
        "Image": "centos/python-27-centos7:latest"
      },
      "Commands": [
        {
          "Maintainer": "Trevor McKay tmckay@redhat.com",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "RADANALYTICS_PYSPARK",
              "Value": "1.0"
            }
          ],
          "Name": "env"
        },
        {
          "Labels": [
            {
              "Key": "io.k8s.description",
              "Value": "\"Platform for building a radanalytics pyspark app\""
            },
            {
              "Key": "io.k8s.display-name",
              "Value": "\"radanalytics pyspark\""
            },
            {
              "Key": "io.openshift.expose-services",
              "Value": "\"8080:http\""
            },
            {
              "Key": "io.openshift.s2i.scripts-url",
              "Value": "\"image:///usr/libexec/s2i\""
            },
            {
              "Key": "io.openshift.tags",
              "Value": "\"builder,radanalytics,pyspark\""
            }
          ],
          "Name": "label"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "CmdLine": [
            "yum install -y tar java \u0026\u0026     yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /opt \u0026\u0026     curl https://archive.apache.org/dist/spark/spark-2.1.0/spark-2.1.0-bin-hadoop2.7.tgz |         tar -zx \u0026\u0026     ln -s spark-2.1.0-bin-hadoop2.7 spark"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y golang \u0026\u0026 yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            ".",
            "/go/src/github.com/radanalyticsio/oshinko-s2i"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./common/spark-conf/*",
            "/opt/spark/conf/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./common/generate_container_user",
            "/opt/app-root/etc/"
          ]
        },
        {
          "CmdLine": [
            "cp /go/src/github.com/radanalyticsio/oshinko-s2i/pyspark/s2i/bin/* $STI_SCRIPTS_PATH \u0026\u0026     chmod -R g+rw /opt/spark/conf \u0026\u0026     chmod g+r /opt/app-root/etc/generate_container_user \u0026\u0026     chown -R 1001:0 /opt/spark/conf \u0026\u0026     chown -R 1001:0 /go/src/github.com/radanalyticsio"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "GOPATH",
              "Value": "/go"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APP_ROOT",
              "Value": "/opt/app-root"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APP_FILE",
              "Value": "app.py"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:/opt/spark/bin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "SPARK_HOME",
              "Value": "/opt/spark"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "user",
          "User": "1001"
        },
        {
          "CmdLine": [
            "cd /go/src/github.com/radanalyticsio/oshinko-s2i/pyspark \u0026\u0026     make utils \u0026\u0026     cp -rp utils/* $APP_ROOT/src \u0026\u0026     rm -rf /go/src/github.com/radanalyticsio/oshinko-s2i"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "source /opt/app-root/etc/scl_enable \u0026\u0026 pip install numpy"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "$STI_SCRIPTS_PATH/usage"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}