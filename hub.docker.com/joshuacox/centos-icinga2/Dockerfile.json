          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "groupadd -r icingaweb2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "usermod -a -G icingaweb2 apache"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
