{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.4",
      "SourceCode": "FROM alpine:3.4",
      "Platform": "",
      "From": {
        "Image": "alpine:3.4"
      },
      "Commands": [
        {
          "Maintainer": "jasl8r@alum.wpi.edu",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "MATTERMOST_VERSION",
              "Value": "3.5.1"
            },
            {
              "Key": "MATTERMOST_HOME",
              "Value": "\"/opt/mattermost\""
            },
            {
              "Key": "MATTERMOST_UPDATED",
              "Value": "20181205"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MATTERMOST_DATA_DIR",
              "Value": "\"${MATTERMOST_HOME}/data\""
            },
            {
              "Key": "MATTERMOST_BUILD_DIR",
              "Value": "\"${MATTERMOST_HOME}/build\""
            },
            {
              "Key": "MATTERMOST_RUNTIME_DIR",
              "Value": "\"${MATTERMOST_HOME}/runtime\""
            },
            {
              "Key": "MATTERMOST_INSTALL_DIR",
              "Value": "\"${MATTERMOST_HOME}/mattermost\""
            },
            {
              "Key": "MATTERMOST_CONF_DIR",
              "Value": "\"${MATTERMOST_HOME}/config\""
            },
            {
              "Key": "MATTERMOST_LOG_DIR",
              "Value": "\"/var/log/mattermost\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk --no-cache add bash gettext     mysql-client postgresql-client     openssh     ca-certificates"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "assets/build/",
            "${MATTERMOST_BUILD_DIR}/"
          ]
        },
        {
          "CmdLine": [
            "bash ${MATTERMOST_BUILD_DIR}/install.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "assets/runtime/",
            "${MATTERMOST_RUNTIME_DIR}/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "entrypoint.sh",
            "/sbin/entrypoint.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod 755 /sbin/entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "80/tcp"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "${MATTERMOST_DATA_DIR}",
            "${MATTERMOST_LOG_DIR}"
          ]
        },
        {
          "Name": "workdir",
          "Path": "${MATTERMOST_INSTALL_DIR}"
        },
        {
          "CmdLine": [
            "/sbin/entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "app:start"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}