{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "node:8-alpine",
      "SourceCode": "FROM node:8-alpine",
      "Platform": "",
      "From": {
        "Image": "node:8-alpine"
      },
      "Commands": [
        {
          "Maintainer": "Jeremy Shimko \u003cjeremy@reactioncommerce.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "APP_SOURCE_DIR",
              "Value": "/opt/src"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "$APP_SOURCE_DIR"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            ".",
            "$APP_SOURCE_DIR"
          ]
        },
        {
          "CmdLine": [
            "$APP_SOURCE_DIR/.docker/scripts/install.sh \u0026\u0026     $APP_SOURCE_DIR/.docker/scripts/cleanup.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "NODE_ENV",
              "Value": "production"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "3000"
          ]
        },
        {
          "CmdLine": [
            "node",
            "dist/index.js"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}