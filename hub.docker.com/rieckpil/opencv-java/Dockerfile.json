{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:16.04",
      "SourceCode": "FROM ubuntu:16.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:16.04"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "= \"mail@philipriecks.de\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y     python2.7     openjdk-8-jdk     ant     git     cmake     wget unzip     gcc g++ \u0026\u0026    apt-get clean \u0026\u0026     rm -rf /var/lib/apt/lists/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/java-8-openjdk-amd64/"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "export JAVA_HOME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "OPEN_CV_VERSION",
              "Value": "3.4.3"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "wget https://github.com/opencv/opencv/archive/${OPEN_CV_VERSION}.zip \u0026\u0026     unzip ${OPEN_CV_VERSION}.zip \u0026\u0026     rm ${OPEN_CV_VERSION}.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd opencv-${OPEN_CV_VERSION} \u0026\u0026     mkdir build \u0026\u0026 cd build \u0026\u0026     cmake -D BUILD_SHARED_LIBS=off .. \u0026\u0026     make -j8"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "OPEN_CV_LIB",
              "Value": "/opencv-${OPEN_CV_VERSION}/build/lib"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "export OPEN_CV_LIB"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}