{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:jessie",
      "SourceCode": "FROM debian:jessie",
      "Platform": "",
      "From": {
        "Image": "debian:jessie"
      },
      "Commands": [
        {
          "Maintainer": "hervenicol",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "DEBIAN_FRONTEND",
              "Value": "noninteractive"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update   \u0026\u0026 apt-get install -y php5-fpm php5-mysql php5-curl \u0026\u0026 apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -e 's/listen = .*/listen = 9000/'         -e '/catch_workers_output/s/^;//'         -e 's/www-data/root/g'         -e '/clear_env/s/^;//'         -i /etc/php5/fpm/pool.d/www.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "9000"
          ]
        },
        {
          "Labels": [
            {
              "Key": "description",
              "Value": "\"Jessie / php5 FPM\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "/usr/sbin/php5-fpm",
            "--nodaemonize",
            "--force-stderr",
            "--allow-to-run-as-root"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}