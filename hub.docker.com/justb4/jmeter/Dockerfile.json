{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.9",
      "SourceCode": "FROM alpine:3.9",
      "Platform": "",
      "From": {
        "Image": "alpine:3.9"
      },
      "Commands": [
        {
          "Maintainer": "Just van den Broecke\u003cjust@justobjects.nl\u003e",
          "Name": "maintainer"
        },
        {
          "Key": "JMETER_VERSION",
          "Name": "arg",
          "Value": "\"5.1.1\""
        },
        {
          "Env": [
            {
              "Key": "JMETER_HOME",
              "Value": "/opt/apache-jmeter-${JMETER_VERSION}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JMETER_BIN",
              "Value": "${JMETER_HOME}/bin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JMETER_DOWNLOAD_URL",
              "Value": "https://archive.apache.org/dist/jmeter/binaries/apache-jmeter-${JMETER_VERSION}.tgz"
            }
          ],
          "Name": "env"
        },
        {
          "Key": "TZ",
          "Name": "arg",
          "Value": "\"Europe/Amsterdam\""
        },
        {
          "CmdLine": [
            "apk update \t\u0026\u0026 apk upgrade \t\u0026\u0026 apk add ca-certificates \t\u0026\u0026 update-ca-certificates \t\u0026\u0026 apk add --update openjdk8-jre tzdata curl unzip bash \t\u0026\u0026 apk add --no-cache nss \t\u0026\u0026 rm -rf /var/cache/apk/* \t\u0026\u0026 mkdir -p /tmp/dependencies  \t\u0026\u0026 curl -L --silent ${JMETER_DOWNLOAD_URL} \u003e  /tmp/dependencies/apache-jmeter-${JMETER_VERSION}.tgz  \t\u0026\u0026 mkdir -p /opt  \t\u0026\u0026 tar -xzf /tmp/dependencies/apache-jmeter-${JMETER_VERSION}.tgz -C /opt  \t\u0026\u0026 rm -rf /tmp/dependencies"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:$JMETER_BIN"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "entrypoint.sh",
            "/"
          ]
        },
        {
          "Name": "workdir",
          "Path": "${JMETER_HOME}"
        },
        {
          "CmdLine": [
            "/entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}