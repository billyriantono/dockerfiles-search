{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:centos6",
      "SourceCode": "FROM centos:centos6",
      "Platform": "",
      "From": {
        "Image": "centos:centos6"
      },
      "Commands": [
        {
          "Name": "workdir",
          "Path": "/install"
        },
        {
          "CmdLine": [
            "mkdir -p /opt/ruby-2.2.3/ \u0026\u0026     curl -sSL https://s3.amazonaws.com/pkgr-buildpack-ruby/current/centos-6/ruby-2.2.3.tgz | tar xzC /opt/ruby-2.2.3/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /opt/ruby-2.2.3 /opt/ruby"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "/opt/ruby/bin:${PATH}"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "gem install os test-unit --no-ri --no-rdoc \u0026\u0026     gem update --system --no-ri --no-rdoc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rpm -Uvh http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /go \u0026\u0026 yum install -y openssh-server openssh-clients golang"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum -y groupinstall \"Development Tools\""
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "GOROOT",
              "Value": "\"/usr/lib/golang\""
            },
            {
              "Key": "GOPATH",
              "Value": "\"/go\""
            },
            {
              "Key": "PATH",
              "Value": "\"${PATH}:${GOPATH}\""
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "scripts/mkgit-centos6.sh",
            "."
          ]
        },
        {
          "CmdLine": [
            "sh mkgit-centos6.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "service sshd start"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}