{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:18.10",
      "SourceCode": "FROM ubuntu:18.10",
      "Platform": "",
      "From": {
        "Image": "ubuntu:18.10"
      },
      "Commands": [
        {
          "Key": "ZEPPELIN_VERSION",
          "Name": "arg",
          "Value": "\"0.8.1\""
        },
        {
          "Key": "SPARK_VERSION",
          "Name": "arg",
          "Value": "\"2.4.3\""
        },
        {
          "Key": "HADOOP_VERSION",
          "Name": "arg",
          "Value": "\"2.7\""
        },
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"mirkoprescha\""
            }
          ],
          "Name": "label"
        },
        {
          "Labels": [
            {
              "Key": "zeppelin.version",
              "Value": "${ZEPPELIN_VERSION}"
            }
          ],
          "Name": "label"
        },
        {
          "Labels": [
            {
              "Key": "spark.version",
              "Value": "${SPARK_VERSION}"
            }
          ],
          "Name": "label"
        },
        {
          "Labels": [
            {
              "Key": "hadoop.version",
              "Value": "${HADOOP_VERSION}"
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "apt-get -y update \u0026\u0026    apt-get -y install curl less \u0026\u0026    apt-get install -y openjdk-8-jdk \u0026\u0026    apt-get -y install vim"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Key": "SPARK_ARCHIVE",
          "Name": "arg",
          "Value": "http://artfiles.org/apache.org/spark/spark-${SPARK_VERSION}/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION}.tgz"
        },
        {
          "CmdLine": [
            "mkdir /usr/local/spark \u0026\u0026    mkdir /tmp/spark-events    # log-events for spark history server"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SPARK_HOME",
              "Value": "/usr/local/spark"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:${SPARK_HOME}/bin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -s ${SPARK_ARCHIVE} | tar -xz -C  /usr/local/spark --strip-components=1"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "spark-defaults.conf",
            "${SPARK_HOME}/conf/"
          ]
        },
        {
          "CmdLine": [
            "mkdir /usr/zeppelin \u0026\u0026    curl -s http://mirror.softaculous.com/apache/zeppelin/zeppelin-${ZEPPELIN_VERSION}/zeppelin-${ZEPPELIN_VERSION}-bin-all.tgz | tar -xz -C /usr/zeppelin"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo '{ \"allow_root\": true }' \u003e /root/.bowerrc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ZEPPELIN_PORT",
              "Value": "8080"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "$ZEPPELIN_PORT"
          ]
        },
        {
          "Env": [
            {
              "Key": "ZEPPELIN_HOME",
              "Value": "/usr/zeppelin/zeppelin-${ZEPPELIN_VERSION}-bin-all"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ZEPPELIN_CONF_DIR",
              "Value": "$ZEPPELIN_HOME/conf"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ZEPPELIN_NOTEBOOK_DIR",
              "Value": "$ZEPPELIN_HOME/notebook"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p $ZEPPELIN_HOME   \u0026\u0026 mkdir -p $ZEPPELIN_HOME/logs   \u0026\u0026 mkdir -p $ZEPPELIN_HOME/run"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /work"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/work"
        },
        {
          "CmdLine": [
            "/usr/local/spark/sbin/start-history-server.sh; $ZEPPELIN_HOME/bin/zeppelin-daemon.sh start  \u0026\u0026 bash"
          ],
          "Name": "entrypoint",
          "PrependShell": true
        }
      ]
    }
  ]
}