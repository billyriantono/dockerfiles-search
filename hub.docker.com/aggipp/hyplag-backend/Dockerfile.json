{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "builder",
      "BaseName": "maven:3.6-jdk-8-alpine",
      "SourceCode": "FROM maven:3.6-jdk-8-alpine as builder",
      "Platform": "",
      "As": "builder",
      "From": {
        "Image": "maven:3.6-jdk-8-alpine"
      },
      "Commands": [
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Name": "workdir",
          "Path": "/hyplag-build"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "pds-backend-batch/",
            "./pds-backend-batch/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "pds-backend-converter-grobid/",
            "./pds-backend-converter-grobid/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "pds-backend-converter-jats2tei/",
            "./pds-backend-converter-jats2tei/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "pds-backend-converter-pdf2tei/",
            "./pds-backend-converter-pdf2tei/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "pds-backend-core/",
            "./pds-backend-core/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "pds-backend-util/",
            "./pds-backend-util/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "pom.xml",
            "."
          ]
        },
        {
          "CmdLine": [
            "mvn clean install -DskipTests"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "openjdk:8-jre-slim",
      "SourceCode": "FROM openjdk:8-jre-slim",
      "Platform": "",
      "From": {
        "Image": "openjdk:8-jre-slim"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"vincent.stange@uni-konstanz.de\""
            }
          ],
          "Name": "label"
        },
        {
          "CmdLine": [
            "apt-get update   \u0026\u0026 apt-get --no-install-recommends install -y libxml2   \u0026\u0026 apt-get install -y openssh-server curl vim dnsutils net-tools iputils-ping iproute2 jq build-essential python   \u0026\u0026 apt-get clean   \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*   \u0026\u0026 mkdir /var/run/sshd"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "sed -ri 's/^PermitRootLogin\\s+.*/PermitRootLogin yes/' /etc/ssh/sshd_config     \u0026\u0026 sed -ri 's/UsePAM yes/#UsePAM yes/g' /etc/ssh/sshd_config"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /root/.ssh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "ssh_config/authorized_keys",
            "/root/.ssh/authorized_keys"
          ]
        },
        {
          "CmdLine": [
            "chmod 600 /root/.ssh/authorized_keys"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/hyplag"
        },
        {
          "Chown": "",
          "From": "builder",
          "Name": "copy",
          "SourcesAndDest": [
            "/hyplag-build/pds-backend-core/target/pds-backend-core-*.jar",
            "backend.jar"
          ]
        },
        {
          "Chown": "",
          "From": "builder",
          "Name": "copy",
          "SourcesAndDest": [
            "/hyplag-build/pds-backend-batch/target/pds-backend-batch-*.jar",
            "batch.jar"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "/pds-backend-core/src/main/resources/config/application.docker.yaml",
            "application.yaml"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "/hyplag-grobid/grobid-home",
            "grobid-home"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "/pds-backend-core/lib",
            "lib"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "CmdLine": [
            "/usr/sbin/sshd -E /var/log/ssh.log \u0026\u0026 java -XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap -Xdebug -agentlib:jdwp=transport=dt_socket,address=50505,server=y,suspend=n -Xms1G -Xmx8G -jar backend.jar --spring.config.location=file:application.yaml"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}