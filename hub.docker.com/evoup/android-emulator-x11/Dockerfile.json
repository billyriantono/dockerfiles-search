  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:jessie",
      "SourceCode": "FROM debian:jessie",
      "Platform": "",
      "From": {
        "Image": "debian:jessie"
      },
      "Commands": [
        {
          "Maintainer": "yinjia \u003cevoex123@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Name": "expose",
          "Ports": [
            "5037",
            "5554",
            "5555"
          ]
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y curl default-jre-headless lib32stdc++6 unzip \u0026\u0026     apt-get clean"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "ANDROID_HOME",
              "Value": "\"/opt/android-sdk-linux\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ANDROID_SDK_HOME",
              "Value": "\"${ANDROID_HOME}\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "\"${PATH}:${ANDROID_SDK_HOME}/tools:${ANDROID_SDK_HOME}/platform-tools\""
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "cd /tmp \u0026\u0026     curl -O https://dl.google.com/android/android-sdk_r24.4.1-linux.tgz \u0026\u0026     cd /opt \u0026\u0026 tar xzf /tmp/*.tgz \u0026\u0026 rm /tmp/*.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"y\" | android update sdk --no-ui --force -a --filter android-23,sys-img-x86-android-23"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"n\" | android create avd --force -n nexus -t android-23 -b default/x86 -c 512M"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "avd/config.ini",
            "$ANDROID_HOME/.android/avd/nexus.avd/"
          ]
        },
        {
          "CmdLine": [
            "cd /tmp \u0026\u0026 curl -O https://dl.google.com/android/repository/platform-tools-latest-linux.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /tmp \u0026\u0026 unzip platform-tools-latest-linux.zip \u0026\u0026 mv platform-tools /opt/android-sdk_linux/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -f /tmp/*.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "emulator64-x86",
            "@nexus"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
