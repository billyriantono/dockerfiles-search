{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:15.10",
      "SourceCode": "FROM ubuntu:15.10",
      "Platform": "",
      "From": {
        "Image": "ubuntu:15.10"
      },
      "Commands": [
        {
          "Maintainer": "Jeremy SEBAN \u003cjeremy@seban.eu\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 8842ce5e \u0026\u0026     echo \"deb http://ppa.launchpad.net/bitcoin/bitcoin/ubuntu wily main\" \u003e /etc/apt/sources.list.d/bitcoin.list"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y bitcoind nginx nodejs ruby ruby-dev build-essential libxml2 libxml2-dev zlib1g-dev \u0026\u0026     apt-get clean \u0026\u0026 rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "APP_HOME",
              "Value": "/srv/app"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "RAILS_ENV",
              "Value": "production"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "rm -rf /etc/nginx/sites-* /etc/nginx/conf.d"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./config/dockerized/nginx.conf",
            "/etc/nginx/nginx.conf"
          ]
        },
        {
          "CmdLine": [
            "mkdir -p $APP_HOME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "$APP_HOME"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "./Gemfile*",
            "$APP_HOME/"
          ]
        },
        {
          "CmdLine": [
            "echo \"gem: --no-rdoc --no-ri\" \u003e ~/.gemrc"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "gem install bundler \u0026\u0026 bundle install --without development"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "80",
            "8333"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./config/dockerized/entrypoint.rb",
            "/entrypoint"
          ]
        },
        {
          "CmdLine": [
            "/entrypoint"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "chmod +x /entrypoint"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/data"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            ".",
            "$APP_HOME"
          ]
        },
        {
          "CmdLine": [
            "bundle exec rake assets:precompile"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}