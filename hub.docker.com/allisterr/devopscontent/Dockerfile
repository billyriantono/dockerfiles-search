FROM python:3.7

ENV PYTHONUNBUFFERED 1

ARG DJANGO_VERSION=2.2.7
ARG PSYCOPG_VERSION=2.8.4
ARG MYSQL_VERSION=1.4.5
ARG UWSGI_VERSION=2.0.18
ARG GUNICORN_VERSION=19.9.0

LABEL Description="Python 3.7 with Django $DJANGO_VERSION, mysqlclient $MYSQL_VERSION, psycopg2 $PSYCOPG_VERSION, Gunicorn $GUNICORN_VERSION and uWSGI UWSGI_VERSION."

RUN pip install Django==$DJANGO_VERSION
RUN pip install psycopg2==$PSYCOPG_VERSION
RUN pip install mysqlclient==$MYSQL_VERSION
RUN pip install uwsgi==$UWSGI_VERSION
RUN pip install gunicorn==$GUNICORN_VERSION
