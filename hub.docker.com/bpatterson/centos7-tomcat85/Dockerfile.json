{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "bpatterson/centos7-jdk8:latest",
      "SourceCode": "FROM bpatterson/centos7-jdk8:latest",
      "Platform": "",
      "From": {
        "Image": "bpatterson/centos7-jdk8:latest"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "name",
              "Value": "\"CentOS7 with Apache Tomcat 8\""
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "APACHE_TOMCAT_DOWNLOAD_URL",
              "Value": "https://www-us.apache.org/dist/tomcat/tomcat-8/v8.5.38/bin/apache-tomcat-8.5.38.tar.gz"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "APACHE_TOMCAT_INSTALL_DIR",
              "Value": "/usr/local/apache-tomcat-8.5.38"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl \t-L \t-v \t\"${APACHE_TOMCAT_DOWNLOAD_URL}\" \t| tar -xz -C /usr/local"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cat ${APACHE_TOMCAT_INSTALL_DIR}/conf/server.xml | \tsed 's/appBase=\"webapps\"/appBase=\"\\/tomcat\\/webapps\"/' | \tsed 's/directory=\"logs\"/directory=\"\\/tomcat\\/logs\"/' \u003e \t/tmp/server.xml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp /tmp/server.xml ${APACHE_TOMCAT_INSTALL_DIR}/conf/server.xml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm /tmp/server.xml"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /tomcat/webapps/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /tomcat/logs/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "entrypoint.sh",
            "/"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8009",
            "8080"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/tomcat/webapps",
            "/tomcat/logs"
          ]
        },
        {
          "CmdLine": [
            "/entrypoint.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}