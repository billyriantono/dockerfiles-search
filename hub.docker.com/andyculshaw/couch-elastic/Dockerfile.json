{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu:14.04",
      "SourceCode": "FROM ubuntu:14.04",
      "Platform": "",
      "From": {
        "Image": "ubuntu:14.04"
      },
      "Commands": [
        {
          "Maintainer": "Andy Culshaw \u003candy.culshaw@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "apt-get -qq update"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get -y install curl apt-utils librtmp0 python-pip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "CB_VERSION",
              "Value": "2.2.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CB_RELEASE_URL",
              "Value": "http://packages.couchbase.com/releases"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CB_PACKAGE",
              "Value": "couchbase-server-community_${CB_VERSION}_x86_64.deb"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CB_USERNAME",
              "Value": "Administrator"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CB_PASSWORD",
              "Value": "couchbase"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ES_PKG_NAME",
              "Value": "elasticsearch-0.90.4.deb"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -LO $CB_RELEASE_URL/$CB_VERSION/$CB_PACKAGE"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "dpkg -i $CB_PACKAGE"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm $CB_PACKAGE"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "ln -s /opt/couchbase/bin/couchbase-cli /usr/local/bin/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /cb-data/ /cb-index"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown couchbase:couchbase /cb-data /cb-index"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/cb-data"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/cb-index"
          ]
        },
        {
          "CmdLine": [
            "apt-get -y install openjdk-7-jre"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -LO https://download.elasticsearch.org/elasticsearch/elasticsearch/$ES_PKG_NAME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "dpkg -i $ES_PKG_NAME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm $ES_PKG_NAME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /es-data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "chown elasticsearch:elasticsearch /es-data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/es-data"
          ]
        },
        {
          "CmdLine": [
            "/usr/share/elasticsearch/bin/plugin -install mobz/elasticsearch-head"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /usr/share/elasticsearch/plugins/head /usr/share/elasticsearch/plugins/_site"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /usr/share/elasticsearch/plugins/head"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /usr/share/elasticsearch/plugins/_site /usr/share/elasticsearch/plugins/head"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/usr/share/elasticsearch/bin/plugin -install transport-couchbase -url http://packages.couchbase.com.s3.amazonaws.com/releases/elastic-search-adapter/1.2.0/elasticsearch-transport-couchbase-1.2.0.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "elasticsearch.yml",
            "/etc/elasticsearch/elasticsearch.yml"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "couchbase-start",
            "/usr/local/bin/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "elasticsearch-start",
            "/usr/local/bin/"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "init-script",
            "/usr/local/bin/"
          ]
        },
        {
          "CmdLine": [
            "chmod +x /usr/local/bin/couchbase-start /usr/local/bin/elasticsearch-start /usr/local/bin/init-script"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "21100:21299",
            "4369",
            "8091",
            "8092"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "9091",
            "9200",
            "9300"
          ]
        },
        {
          "CmdLine": [
            "init-script"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}