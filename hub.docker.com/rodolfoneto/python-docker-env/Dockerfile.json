{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ubuntu",
      "SourceCode": "FROM ubuntu",
      "Platform": "",
      "From": {
        "Image": "ubuntu"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "ZEPPELIN_VERSION",
              "Value": "zeppelin-0.8.1"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ZEPPELIN_INST_PATH",
              "Value": "/usr/share/zeppelin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 \tapt-get install -y wget npm yarn"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 \tapt-get install -y openjdk-8-jdk \u0026\u0026 \tapt-get install -y ant \u0026\u0026 \tapt-get clean \u0026\u0026 \trm -rf /var/lib/apt/lists/* \u0026\u0026 \trm -rf /var/cache/oracle-jdk8-installer;"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 \tapt-get install -y ca-certificates-java \u0026\u0026 \tapt-get clean \u0026\u0026 \tupdate-ca-certificates -f \u0026\u0026 \trm -rf /var/lib/apt/lists/* \u0026\u0026 \trm -rf /var/cache/oracle-jdk8-installer;"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "CmdLine": [
            "wget http://ftp.unicamp.br/pub/apache/zeppelin/${ZEPPELIN_VERSION}/${ZEPPELIN_VERSION}-bin-netinst.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p $ZEPPELIN_INST_PATH \u0026\u0026 \t\ttar xzvf ${ZEPPELIN_VERSION}-bin-netinst.tgz -C $ZEPPELIN_INST_PATH --strip-components 1 \u0026\u0026 \t\trm -vfr ${ZEPPELIN_VERSION}-bin-netinst.tgz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mv /usr/lib/jvm/java-1.8.0-openjdk-amd64 /usr/lib/jvm/java-1.8-openjdk"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "SHELL",
              "Value": "/bin/bash \t\tJAVA_HOME /usr/lib/jvm/java-1.8-openjdk \t\tPATH $PATH:$JAVA_HOME/bin:$SHELL"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "export SHELL \u0026\u0026 \t\texport JAVA_HOME"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "WORKDIR",
              "Value": "/home/test"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "entrypoint.sh",
            "$WORKDIR/entrypoint.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "zeppelin-site.xml",
            "$ZEPPELIN_INST_PATH/conf/zeppelin-site.xml"
          ]
        },
        {
          "Name": "workdir",
          "Path": "$WORKDIR"
        },
        {
          "CmdLine": [
            "\"$WORKDIR/entrypoint.sh\" \u0026\u0026 /bin/bash"
          ],
          "Name": "entrypoint",
          "PrependShell": true
        }
      ]
    }
  ]
}