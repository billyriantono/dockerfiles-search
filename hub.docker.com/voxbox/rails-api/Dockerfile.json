{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "ruby:latest",
      "SourceCode": "FROM ruby:latest",
      "Platform": "",
      "From": {
        "Image": "ruby:latest"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "io.voxbox.build-date",
              "Value": "${BUILD_DATE}"
            },
            {
              "Key": "io.voxbox.name",
              "Value": "rails-api"
            },
            {
              "Key": "io.voxbox.vendor",
              "Value": "voxbox.io"
            },
            {
              "Key": "maintainer",
              "Value": "matteo@voxbox.io"
            },
            {
              "Key": "io.voxbox.vcs-url",
              "Value": "https://github.com/matteolc/docker-rails-api.git"
            },
            {
              "Key": "io.voxbox.vcs-ref",
              "Value": "${VCS_REF}"
            },
            {
              "Key": "io.voxbox.license",
              "Value": "MIT"
            }
          ],
          "Name": "label"
        },
        {
          "Key": "APP_NAME",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "ADMIN_SECRET",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "USER_SECRET",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "RAILS_ENV",
          "Name": "arg",
          "Value": null
        },
        {
          "Env": [
            {
              "Key": "APP_HOME",
              "Value": "app"
            },
            {
              "Key": "APP_NAME",
              "Value": "${APP_NAME:-app}"
            },
            {
              "Key": "ADMIN_SECRET",
              "Value": "${ADMIN_SECRET:-12345678}"
            },
            {
              "Key": "USER_SECRET",
              "Value": "${USER_SECRET:-12345678}"
            },
            {
              "Key": "RAILS_ENV",
              "Value": "${RAILS_ENV:-development}"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026 apt-get install -y   build-essential   sudo   curl   wget   git"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "gem install       bundler       rails       foreman       --no-rdoc --no-ri"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Key": "ROLLBAR_ACCESS_TOKEN",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "DB_USER",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "DB_SECRET",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "DB_HOST",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "GIT_USER_EMAIL",
          "Name": "arg",
          "Value": null
        },
        {
          "Key": "GIT_USER_NAME",
          "Name": "arg",
          "Value": null
        },
        {
          "Env": [
            {
              "Key": "DB_USER",
              "Value": "${DB_USER:-$APP_NAME}"
            },
            {
              "Key": "DB_SECRET",
              "Value": "${DB_SECRET:-demo}"
            },
            {
              "Key": "DB_HOST",
              "Value": "${DB_HOST:-db}"
            },
            {
              "Key": "GIT_USER_EMAIL",
              "Value": "${GIT_USER_EMAIL:-\"you@example.com\"}"
            },
            {
              "Key": "GIT_USER_NAME",
              "Value": "${GIT_USER_NAME:-\"Your Name\"}"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "${APP_NAME}"
        },
        {
          "CmdLine": [
            "git config --global       user.email ${GIT_USER_EMAIL} \u0026\u0026     git config --global       user.name ${GIT_USER_NAME}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"ROLLBAR_ACCESS_TOKEN=${ROLLBAR_ACCESS_TOKEN}\" \u003e .env \u0026\u0026     echo \"ADMIN_SECRET=${ADMIN_SECRET}\" \u003e\u003e .env \u0026\u0026     echo \"USER_SECRET=${USER_SECRET}\" \u003e\u003e .env \u0026\u0026     echo \"DB_USER=${DB_USER}\" \u003e\u003e .env \u0026\u0026     echo \"DB_SECRET=${DB_SECRET}\" \u003e\u003e .env \u0026\u0026     echo \"DB_HOST=${DB_HOST}\" \u003e\u003e .env"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rails new .     -m https://raw.github.com/matteolc/rails_api_template/master/rails_api_generator.rb     -d postgresql     --skip-yarn     --skip-action-cable     --skip-sprockets     --skip-spring     --skip-coffee     --skip-javascript     --skip-turbolinks     --skip-bundle     --api"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}