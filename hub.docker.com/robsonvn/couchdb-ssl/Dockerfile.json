{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "debian:jessie-slim",
      "SourceCode": "FROM debian:jessie-slim",
      "Platform": "",
      "From": {
        "Image": "debian:jessie-slim"
      },
      "Commands": [
        {
          "Maintainer": "Robson Nascimento robsonvnasc@gmail.com",
          "Name": "maintainer"
        },
        {
          "Key": "version",
          "Name": "arg",
          "Value": "2.1.1"
        },
        {
          "Env": [
            {
              "Key": "COUCHDB_VERSION",
              "Value": "$version"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "adduser --system --no-create-home --shell /bin/bash --group --gecos \"CouchDB Administrator\" couchdb"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "apt-get update -y \u0026\u0026 apt-get install -y --no-install-recommends   build-essential   pkg-config   libicu-dev   libmozjs185-dev   libcurl4-openssl-dev   git   tar   wget   curl   openssl   libssl-dev   ncurses-dev"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/src \u0026\u0026 wget http://www-us.apache.org/dist/couchdb/source/$COUCHDB_VERSION/apache-couchdb-$COUCHDB_VERSION.tar.gz \u0026\u0026 tar zxvf apache-couchdb-$COUCHDB_VERSION.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/src \u0026\u0026 wget http://erlang.org/download/otp_src_18.2.tar.gz \u0026\u0026 tar -xzvf otp_src_18.2.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/src/otp_src_18.2/ \u0026\u0026 ./configure \u0026\u0026 make \u0026\u0026 make install"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "erl -eval 'erlang:display(erlang:system_info(otp_release)), halt().'  -noshell"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /usr/src/apache-couchdb-$COUCHDB_VERSION \u0026\u0026 ./configure --disable-docs \u0026\u0026 make release"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cp -R /usr/src/apache-couchdb-$COUCHDB_VERSION/rel/couchdb /opt/ \u0026\u0026 apt-get purge -y --auto-remove \u0026\u0026 rm -rf /usr/src/otp_src_* \u0026\u0026 rm -rf /usr/src/apache-couchdb-$COUCHDB_VERSION* \u0026\u0026 mkdir /opt/couchdb/data"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "local.ini",
            "/opt/couchdb/etc/local.d/"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "startup.sh",
            "/opt/couchdb/startup.sh"
          ]
        },
        {
          "CmdLine": [
            "chown -R couchdb:couchdb /opt/couchdb/ \u0026\u0026 chmod +x /opt/couchdb/startup.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/opt/couchdb"
        },
        {
          "Name": "expose",
          "Ports": [
            "4369",
            "5984",
            "6984",
            "9100"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/couchdb/data"
          ]
        },
        {
          "CmdLine": [
            "/bin/bash"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        },
        {
          "CmdLine": [
            "/opt/couchdb/startup.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}