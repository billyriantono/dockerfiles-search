{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "mikewright/docker-dev-base:latest",
      "SourceCode": "FROM mikewright/docker-dev-base:latest",
      "Platform": "",
      "From": {
        "Image": "mikewright/docker-dev-base:latest"
      },
      "Commands": [
        {
          "Maintainer": "Mike Wright \u003cmkwright@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "CmdLine": [
            "sudo apt-get update \u0026\u0026     sudo apt-get install -y perl curl build-essential python libssl-dev git \u0026\u0026     sudo docker-cleanup"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "NODE_VERSION",
              "Value": "5.7.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "NPM_VERSION",
              "Value": "3"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "NODE_PATH",
              "Value": "/usr/lib/node_modules/"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "NODE_HOME",
              "Value": "$HOME/node"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -sSL https://nodejs.org/dist/v$NODE_VERSION/node-v$NODE_VERSION-linux-x64.tar.gz -o $HOME/node.tar.gz \u0026\u0026     mkdir -p $HOME/node \u0026\u0026     cd $HOME \u0026\u0026 tar -C $HOME/node --strip-components 1 -xzf node.tar.gz \u0026\u0026     rm -f $HOME/node.*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:$HOME/node/bin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "NPM_VERSION",
              "Value": "3.7.5"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "npm_install",
              "Value": "$NPM_VERSION"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -L https://npmjs.org/install.sh | sudo sh \u0026\u0026     mkdir -p $HOME/.npm-user \u0026\u0026     npm config set prefix '~/.npm-user'"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$HOME/.npm-user/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "vimrc.bundles.local",
            "$HOME/.vimrc.bundles.local"
          ]
        },
        {
          "CmdLine": [
            "update-vim"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    }
  ]
}