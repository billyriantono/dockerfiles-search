  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "lloydcotten/debian-tomcat:8-jre8",
      "SourceCode": "FROM lloydcotten/debian-tomcat:8-jre8",
      "Platform": "",
      "From": {
        "Image": "lloydcotten/debian-tomcat:8-jre8"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "ERDDAP_VERSION",
              "Value": "1.68"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ERDDAP_CONTENT_URL",
              "Value": "http://coastwatch.pfeg.noaa.gov/erddap/download/erddapContent.zip"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ERDDAP_WAR_URL",
              "Value": "http://coastwatch.pfeg.noaa.gov/erddap/download/erddap.war"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -fSL \"$ERDDAP_CONTENT_URL\" -o erddapContent.zip \u0026\u0026   unzip erddapContent.zip -d $CATALINA_HOME \u0026\u0026   rm erddapContent.zip"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "curl -fSL \"$ERDDAP_WAR_URL\" -o /root/erddap.war \u0026\u0026   mv /root/erddap.war $CATALINA_HOME/webapps/"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "files/javaopts.sh",
            "$CATALINA_HOME/bin/javaopts.sh"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "files/setup.xml",
            "$CATALINA_HOME/content/erddap/setup.xml"
          ]
        },
        {
          "Env": [
            {
              "Key": "ERDDAP_SCRATCH",
              "Value": "/erddap"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "DATASET_SRC",
              "Value": "/data"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p $ERDDAP_SCRATCH $DATASET_SRC"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8080",
            "8443"
          ]
        },
        {
          "CmdLine": [
            "catalina.sh",
            "run"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
