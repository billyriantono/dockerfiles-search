{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "builder",
      "BaseName": "alpine:latest",
      "SourceCode": "FROM alpine:latest AS builder",
      "Platform": "",
      "As": "builder",
      "From": {
        "Image": "alpine:latest"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk add --update go libc-dev curl git make bash"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "GOPATH",
              "Value": "/go"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MTAIL_SRC",
              "Value": "/go/src/github.com/google/mtail"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MTAIL_VERSION",
              "Value": "v3.0.0-rc29"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p \"${MTAIL_SRC%/mtail}\"     \u0026\u0026 curl -L \"https://github.com/google/mtail/archive/$MTAIL_VERSION.tar.gz\" \u003e /tmp/mtail.tar.gz     \u0026\u0026 tar -C \"${MTAIL_SRC%/mtail}\" -zxf /tmp/mtail.tar.gz     \u0026\u0026 mv \"${MTAIL_SRC%/mtail}/mtail-${MTAIL_VERSION#v}\" \"$MTAIL_SRC\"     \u0026\u0026 rm -f /tmp/mtail.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "PATH=\"$PATH:$GOPATH/bin\" make -C \"$MTAIL_SRC\"  \u0026\u0026 make -C \"$MTAIL_SRC\" install"
          ],
          "Name": "run",
          "PrependShell": true
        }
      ]
    },
    {
      "Name": "",
      "BaseName": "alpine:latest",
      "SourceCode": "FROM alpine:latest",
      "Platform": "",
      "From": {
        "Image": "alpine:latest"
      },
      "Commands": [
        {
          "CmdLine": [
            "apk add --update bash"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "builder",
          "Name": "copy",
          "SourcesAndDest": [
            "/go/src/github.com/google/mtail/usr/local/bin/mtail",
            "/usr/bin/mtail"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "mtail-entrypoint.sh",
            "/mtail-entrypoint.sh"
          ]
        },
        {
          "CmdLine": [
            "chmod a+x /mtail-entrypoint.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/var/spool/mtail"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/mtail"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "9197"
          ]
        },
        {
          "CmdLine": [
            "/mtail-entrypoint.sh"
          ],
          "Name": "entrypoint",
          "PrependShell": false
        }
      ]
    }
  ]
}