        {
          "Env": [
            {
              "Key": "KAFKA_VERSION",
              "Value": "0.8.2.1"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk --no-cache add openjdk8-jre bash   \u0026\u0026 mkdir /opt   \u0026\u0026 wget -O - http://ftp.riken.jp/net/apache/kafka/${KAFKA_VERSION}/kafka_2.10-${KAFKA_VERSION}.tgz | tar zx -C /opt   \u0026\u0026 ln -s /opt/kafka_2.10-${KAFKA_VERSION} /opt/kafka   \u0026\u0026 mkdir /opt/kafka/kafka-logs   \u0026\u0026 chown -R root:root /opt/kafka_2.10-${KAFKA_VERSION}   \u0026\u0026 sed -i       -e 's/^\\(log.dirs\\)=.*/\\1=\\/opt\\/kafka\\/kafka\\-logs/g'       -e 's/^\\(log.retention.hours\\)=.*/\\1=24/g'       -e 's/^\\(log.cleaner.enable\\)=.*/\\1=true/g'       /opt/kafka/config/server.properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/usr/lib/jvm/default-jvm/jre"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "9092"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/kafka"
        },
        {
          "Chown": "",
          "Name": "add",
