{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "jboss/wildfly:14.0.1.Final",
      "SourceCode": "FROM jboss/wildfly:14.0.1.Final",
      "Platform": "",
      "From": {
        "Image": "jboss/wildfly:14.0.1.Final"
      },
      "Commands": [
        {
          "Maintainer": "\"Michael Biarnes Kiefer\" \"mbiarnes@redhat.com\"",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "JBOSS_BIND_ADDRESS",
              "Value": "0.0.0.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KIE_REPOSITORY",
              "Value": "https://repository.jboss.org/nexus/content/groups/public-jboss"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KIE_VERSION",
              "Value": "7.17.0.Final"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KIE_CLASSIFIER",
              "Value": "wildfly14"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KIE_CONTEXT_PATH",
              "Value": "business-central"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "KIE_SERVER_PROFILE",
              "Value": "standalone-full"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JAVA_OPTS",
              "Value": "-Xms256m -Xmx2048m -Djava.net.preferIPv4Stack=true -Dfile.encoding=UTF-8"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "curl -o $HOME/$KIE_CONTEXT_PATH.war $KIE_REPOSITORY/org/kie/business-central/$KIE_VERSION/business-central-$KIE_VERSION-$KIE_CLASSIFIER.war \u0026\u0026 unzip -q $HOME/$KIE_CONTEXT_PATH.war -d $JBOSS_HOME/standalone/deployments/$KIE_CONTEXT_PATH.war \u0026\u0026  touch $JBOSS_HOME/standalone/deployments/$KIE_CONTEXT_PATH.war.dodeploy \u0026\u0026  rm -rf $HOME/$KIE_CONTEXT_PATH.war"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "etc/start_drools-wb.sh",
            "$JBOSS_HOME/bin/start_drools-wb.sh"
          ]
        },
        {
          "CmdLine": [
            "chown jboss:jboss $JBOSS_HOME/bin/start_drools-wb.sh"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "jboss"
        },
        {
          "Name": "expose",
          "Ports": [
            "8001"
          ]
        },
        {
          "Name": "workdir",
          "Path": "$JBOSS_HOME/bin/"
        },
        {
          "CmdLine": [
            "./start_drools-wb.sh"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}