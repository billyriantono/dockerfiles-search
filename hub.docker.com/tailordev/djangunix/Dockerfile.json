{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "python:3.4",
      "SourceCode": "FROM python:3.4",
      "Platform": "",
      "From": {
        "Image": "python:3.4"
      },
      "Commands": [
        {
          "Maintainer": "Julien Maupetit \u003cjulien@tailordev.fr\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "PYTHONUNBUFFERED",
              "Value": "1"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "useradd --create-home django"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir /home/django/app \u0026\u0026     chown django:django /home/django/app"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/home/django/app"
          ]
        },
        {
          "CmdLine": [
            "apt-get update \u0026\u0026     apt-get install -y --no-install-recommends gettext nginx supervisor \u0026\u0026     rm -rf /var/lib/apt/lists/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rm -fr /etc/nginx/sites-enabled/* \u0026\u0026     rm -fr /etc/nginx/sites-available/*"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "conf/nginx/django",
            "/etc/nginx/sites-available/django"
          ]
        },
        {
          "CmdLine": [
            "ln -s /etc/nginx/sites-available/django /etc/nginx/sites-enabled/django"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "echo \"daemon off;\" \u003e\u003e /etc/nginx/nginx.conf"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/nginx/sites-available"
          ]
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "conf/supervisor/django.conf",
            "/etc/supervisor/conf.d/django.conf"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/etc/supervisor/conf.d"
          ]
        },
        {
          "CmdLine": [
            "mkdir /home/django/run \u0026\u0026     chown django:django /home/django/run"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /usr/local/etc/gunicorn"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "conf/gunicorn/django.py",
            "/usr/local/etc/gunicorn/django.py"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/usr/local/etc/gunicorn"
          ]
        },
        {
          "CmdLine": [
            "pip install gunicorn"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Expression": "COPY . /home/django/app/",
          "Name": "onbuild"
        },
        {
          "Name": "workdir",
          "Path": "/home/django/app"
        },
        {
          "Expression": "RUN pip install -r requirements.txt",
          "Name": "onbuild"
        },
        {
          "Name": "expose",
          "Ports": [
            "80"
          ]
        },
        {
          "Env": [
            {
              "Key": "PROJECT_NAME",
              "Value": "foo"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "supervisord",
            "-n"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
