{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.8",
      "SourceCode": "FROM alpine:3.8",
      "Platform": "",
      "From": {
        "Image": "alpine:3.8"
      },
      "Commands": [
        {
          "Maintainer": "FAN VINGA\u003cfanalcest@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "ADMIN_NAME",
              "Value": "admin"
            },
            {
              "Key": "ADMIN_PASSWORD",
              "Value": "password"
            },
            {
              "Key": "PASSWORD_SALT",
              "Value": "salt"
            },
            {
              "Key": "PROTOCOL",
              "Value": "wss"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk --no-cache add git nodejs nodejs-npm       \u0026\u0026     git clone https://github.com/hack-chat/main --depth 1 \u0026\u0026     cd main/server \u0026\u0026 npm install \u0026\u0026 cd /main             \u0026\u0026     ln -s /main/client /app                               \u0026\u0026     rm -rf .git clientSource documentation"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "config.json",
            "/main/server/config/config.json"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "nginx.conf",
            "/etc/nginx/nginx.conf"
          ]
        },
        {
          "CmdLine": [
            "mkdir /main/origconf \u0026\u0026     mv /main/client/client.js /main/origconf \u0026\u0026     mv /main/server/config/config.json /main/origconf \u0026\u0026    ln -s /tmp/client.js /main/client/client.js \u0026\u0026     ln -s /tmp/config.json /main/server/config/config.json"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "workdir",
          "Path": "/main/server"
        },
        {
          "Name": "expose",
          "Ports": [
            "6060"
          ]
        },
        {
          "Name": "user",
          "User": "chat"
        },
        {
          "Env": [
            {
              "Key": "USER",
              "Value": "chat"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "cp /main/origconf/* /tmp \u0026\u0026     sed -i \"s|ws://|${PROTOCOL}://|g\"             /tmp/client.js   \u0026\u0026     sed -i \"s/ADMIN_NAME/${ADMIN_NAME}/g\"         /tmp/config.json \u0026\u0026     sed -i \"s/ADMIN_PASSWORD/${ADMIN_PASSWORD}/g\" /tmp/config.json \u0026\u0026     sed -i \"s/PASSWORD_SALT/${PASSWORD_SALT}/g\"   /tmp/config.json \u0026\u0026     node main.js"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}