{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:7",
      "SourceCode": "FROM centos:7",
      "Platform": "",
      "From": {
        "Image": "centos:7"
      },
      "Commands": [
        {
          "Maintainer": "Gayan Rodrigo madushan.gayan@gmail.com",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "JAVA_VER",
              "Value": "11.0.1"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum update -y"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum install -y wget"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "wget https://download.java.net/java/GA/jdk11/13/GPL/openjdk-${JAVA_VER}_linux-x64_bin.tar.gz -O /opt/jdk${JAVA_VER}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /opt; tar -xzvf jdk${JAVA_VER}.tar.gz; rm jdk${JAVA_VER}.tar.gz"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "cd /opt/jdk-${JAVA_VER}; alternatives --install /usr/bin/java java /opt/jdk-${JAVA_VER}/bin/java 2"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "yum clean all"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "JAVA_HOME",
              "Value": "/opt/jdk-${JAVA_VER}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JRE_HOME",
              "Value": "$JAVA_HOME/jre"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$JAVA_HOME/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "export PATH"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/bin/bash"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}