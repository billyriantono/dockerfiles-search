            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "echo \"deb http://ppa.launchpad.net/nginx/stable/ubuntu `lsb_release -cs` main\" \u003e /etc/apt/sources.list.d/nginx.list"
          ],
          "Name": "run",
          "PrependShell": true
