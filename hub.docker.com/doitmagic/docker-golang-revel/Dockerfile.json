          "CmdLine": [
            "apt-get update -qq     \u0026\u0026 apt-get install -yq cmake                            fceux                            gcc                            libboost-all-dev                            libjpeg-dev                            libsdl2-dev                            make                            unzip                            wget                            zlib1g-dev                            supervisor                            git                            curl                            mercurial"
