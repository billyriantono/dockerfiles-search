{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "alpine:3.3",
      "SourceCode": "FROM alpine:3.3",
      "Platform": "",
      "From": {
        "Image": "alpine:3.3"
      },
      "Commands": [
        {
          "Maintainer": "Leo Schweizer \u003cleonhard.schweizer@gmail.com\u003e",
          "Name": "maintainer"
        },
        {
          "Env": [
            {
              "Key": "ACHA_VERSION",
              "Value": "0.2.5"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ACHA_IP",
              "Value": "0.0.0.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "ACHA_PORT",
              "Value": "80"
            }
          ],
          "Name": "env"
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "known_hosts",
            "/root/.ssh/known_hosts"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            ".acha"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/root/.ssh"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "$ACHA_PORT"
          ]
        },
        {
          "Chown": "",
          "Name": "add",
          "SourcesAndDest": [
            "https://github.com/someteam/acha/releases/download/${ACHA_VERSION}/acha-uber-${ACHA_VERSION}.jar",
            "/acha.jar"
          ]
        },
        {
          "CmdLine": [
            "apk --no-cache --update add java-cacerts openjdk7-jre \u0026\u0026 \trm /usr/lib/jvm/java-1.7-openjdk/jre/lib/security/cacerts \u0026\u0026 \tln -s /etc/ssl/certs/java/cacerts /usr/lib/jvm/java-1.7-openjdk/jre/lib/security/cacerts"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "java -jar /acha.jar --ip 0.0.0.0 --port $ACHA_PORT --dir .acha ${ACHA_PRIVATE_KEY:+ --private-key ${ACHA_PRIVATE_KEY}}"
          ],
          "Name": "cmd",
          "PrependShell": true
        }
      ]
    }
  ]
}