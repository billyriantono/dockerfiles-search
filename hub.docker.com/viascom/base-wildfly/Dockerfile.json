{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "viascom/base-java:8",
      "SourceCode": "FROM viascom/base-java:8",
      "Platform": "",
      "From": {
        "Image": "viascom/base-java:8"
      },
      "Commands": [
        {
          "Labels": [
            {
              "Key": "maintainer",
              "Value": "\"technical@viascom.ch\""
            }
          ],
          "Name": "label"
        },
        {
          "Env": [
            {
              "Key": "WILDFLY_VERSION",
              "Value": "10.1.0.Final"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "WILDFLY_HOME",
              "Value": "/opt/wildfly"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MANAGEMENT_USERNAME",
              "Value": "admin"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MANAGEMENT_PASSWORD",
              "Value": "admin"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "apk add --no-cache curl tar bash"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "mkdir -p /opt/wildfly"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "adduser -D -h /opt/wildfly wildfly"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "wildfly"
        },
        {
          "Name": "workdir",
          "Path": "/opt/wildfly"
        },
        {
          "CmdLine": [
            "curl -O -sSL http://download.jboss.org/wildfly/$WILDFLY_VERSION/wildfly-$WILDFLY_VERSION.tar.gz \u0026\u0026     tar -xzf wildfly-$WILDFLY_VERSION.tar.gz \u0026\u0026     mv wildfly-$WILDFLY_VERSION/* $WILDFLY_HOME \u0026\u0026     rm wildfly-$WILDFLY_VERSION.tar.gz \u0026\u0026     rm -rf wildfly-$WILDFLY_VERSION"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "expose",
          "Ports": [
            "8080",
            "9990"
          ]
        },
        {
          "CmdLine": [
            "$WILDFLY_HOME/bin/add-user.sh ${MANAGEMENT_USERNAME} ${MANAGEMENT_PASSWORD} --silent"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "/opt/wildfly/bin/standalone.sh",
            "-b",
            "0.0.0.0",
            "-bmanagement",
            "0.0.0.0"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}