{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "centos:centos7",
      "SourceCode": "FROM centos:centos7",
      "Platform": "",
      "From": {
        "Image": "centos:centos7"
      },
      "Commands": [
        {
          "Env": [
            {
              "Key": "CB_VERSION",
              "Value": "4.5.0"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CB_RELEASE_URL",
              "Value": "http://packages.couchbase.com/releases"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CB_PACKAGE",
              "Value": "couchbase-server-enterprise-4.5.0-centos7.x86_64.rpm"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$PATH:/opt/couchbase/bin:/opt/couchbase/bin/tools:/opt/couchbase/bin/install"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "yum install -y  hostname  initscripts  openssl  pkgconfig  sudo  tar  wget  lsof netstat curl"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "useradd -m couchbase"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "CmdLine": [
            "rpm --install $CB_RELEASE_URL/$CB_VERSION/$CB_PACKAGE"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Name": "user",
          "User": "couchbase"
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "./docker-entrypoint.sh",
            "/"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/couchbase/var"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "11207",
            "11210",
            "11211",
            "18091",
            "18092",
            "18093",
            "8091",
            "8092",
            "8093",
            "8094"
          ]
        },
        {
          "CmdLine": [
            "/docker-entrypoint.sh"
