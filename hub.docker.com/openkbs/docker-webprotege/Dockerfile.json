{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "openkbs/jre-tomcat",
      "SourceCode": "FROM openkbs/jre-tomcat",
      "Platform": "",
      "From": {
        "Image": "openkbs/jre-tomcat"
      },
      "Commands": [
        {
          "Maintainer": "DrSnowbird \u003cDrSnowbird@openkbs.org\u003e",
          "Name": "maintainer"
        },
        {
          "Key": "WEBPROTEGE_VERSION",
          "Name": "arg",
          "Value": "${WEBPROTEGE_VERSION:-3.0.0}"
        },
        {
          "Env": [
            {
              "Key": "WEBPROTEGE_VERSION",
              "Value": "${WEBPROTEGE_VERSION}"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "JAVA_OPTS",
              "Value": "\"$JAVA_OPTS -Dfile.encoding=UTF-8\""
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CATALINA_HOME",
              "Value": "${CATALINA_HOME:-/tomcat}"
            }
          ],
          "Name": "env"
        },
        {
          "Key": "WEBPROTEGE_SRV_DATA",
          "Name": "arg",
          "Value": "/srv/webprotege"
        },
        {
          "Env": [
            {
              "Key": "WEBPROTEGE_DATA",
              "Value": "/data/webprotege"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "CATALINA_WEBAPPS",
              "Value": "${CATALINA_HOME}/webapps"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "INSTALL_DIR",
              "Value": "${CATALINA_WEBAPPS}/ROOT"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "TARGET_URL",
              "Value": "https://github.com/protegeproject/webprotege/releases/download/v${WEBPROTEGE_VERSION}/webprotege-${WEBPROTEGE_VERSION}.war"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "workdir",
          "Path": "${CATALINA_WEBAPPS}"
        },
        {
          "CmdLine": [
            "echo ${CATALINA_HOME}     \u0026\u0026 mkdir -p ${WEBPROTEGE_DATA}     \u0026\u0026 mkdir -p ${WEBPROTEGE_SRV_DATA}     \u0026\u0026 cp -r ROOT ROOT.save     \u0026\u0026 rm -rf ROOT/*     \u0026\u0026 wget -q -O webprotege.war ${TARGET_URL}     \u0026\u0026 unzip -q webprotege.war -d ${CATALINA_WEBAPPS}/ROOT     \u0026\u0026 rm webprotege.war     \u0026\u0026 sed -i 's/#mongodb.host=localhost/mongodb.host=mongodb/g' ${CATALINA_WEBAPPS}/ROOT/WEB-INF/classes/webprotege.properties"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Chown": "",
          "From": "",
          "Name": "copy",
          "SourcesAndDest": [
            "config/webprotege.properties",
            "${CATALINA_WEBAPPS}/ROOT/webprotege.properties"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "${WEBPROTEGE_DATA}"
          ]
        },
        {
          "Name": "volume",
          "Volumes": [
            "${CATALINA_WEBAPPS}"
          ]
        },
        {
          "Name": "expose",
          "Ports": [
            "8080"
          ]
        },
        {
          "CmdLine": [
            "/entry.sh",
            "run"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}