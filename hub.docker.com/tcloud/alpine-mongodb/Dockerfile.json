{
  "MetaArgs": null,
  "Stages": [
    {
      "Name": "",
      "BaseName": "tcloud/alpine-base",
      "SourceCode": "FROM tcloud/alpine-base",
      "Platform": "",
      "From": {
        "Image": "tcloud/alpine-base"
      },
      "Commands": [
        {
          "Maintainer": "tcloud",
          "Name": "maintainer"
        },
        {
          "Name": "user",
          "User": "root"
        },
        {
          "Env": [
            {
              "Key": "MONGODB_HOME",
              "Value": "/opt/mongodb"
            }
          ],
          "Name": "env"
        },
        {
          "Env": [
            {
              "Key": "MONGODB_VERSION",
              "Value": "3.2.7"
            }
          ],
          "Name": "env"
        },
        {
          "CmdLine": [
            "mkdir -p ${MONGODB_HOME} \u0026\u0026 \tcd ${MONGODB_HOME} \u0026\u0026 \tcurl -L https://fastdl.mongodb.org/linux/mongodb-linux-x86_64-${MONGODB_VERSION}.tgz | tar xzf - -C ${MONGODB_HOME} --strip-components=1 \u0026\u0026 \tls -lh ${MONGODB_HOME}"
          ],
          "Name": "run",
          "PrependShell": true
        },
        {
          "Env": [
            {
              "Key": "PATH",
              "Value": "$MONGODB_HOME/bin:$PATH"
            }
          ],
          "Name": "env"
        },
        {
          "Name": "expose",
          "Ports": [
            "27017",
            "28017"
          ]
        },
        {
          "Name": "workdir",
          "Path": "/opt/mongodb"
        },
        {
          "Name": "volume",
          "Volumes": [
            "/opt/mongodb/conf",
            "/var/lib/mongodb",
            "/data",
            "/log"
          ]
        },
        {
          "CmdLine": [
            "/opt/mongodb/bin/mongod --config /etc/mongod.conf"
          ],
          "Name": "cmd",
          "PrependShell": false
        }
      ]
    }
  ]
}